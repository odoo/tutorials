<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_template_form_kit" model="ir.ui.view">
        <field name="name">product.template.form.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='product_tooltip']" position="after">
                <group>
                    <field name="modular_types" widget="many2many_tags" />
                </group>
            </xpath>

        </field>
    </record>

</odoo>
