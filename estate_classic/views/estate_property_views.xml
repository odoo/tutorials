<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Advertisements</field>
        <field name="res_model">estate_classic.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_state': True, 'search_default_current': True}</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate_classic.property.list</field>
        <field name="model">estate_classic.property</field>
        <field name="arch" type="xml">
            <list decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state=='offer_accepted'" decoration-muted="state=='cancelled'">
                <field name="name" string="Title"/>
                <field name="state"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_classic.property.view.form</field>
        <field name="model">estate_classic.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_sell_property" type="object" string="Sold" invisible="state == 'sold' or state=='cancelled'"/>
                        <button name="action_cancel_sell_property" type="object" string="Cancel" invisible="state=='sold' or state=='cancelled'"/>
                        <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold"/>
                    </header>
                    <h1>
                        <field name="name" placeholder="My new house"/>
                    </h1>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" string=" " options="{'color_field': 'color'}"/>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" string=" " readonly="state in ('offer_accepted', 'sold', 'cancelled')"/>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate_classic.property.view.kanban</field>
        <field name="model">estate_classic.property</field>
        <field name="arch" type="xml">
            <kanban records_draggable="False" default_group_by="property_type_id">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div>
                                <field name="name"/>
                            </div>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'"> 
                                Best Offer: <field  name="best_offer"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold'">
                                Selling Price: <field  name="selling_price"/>
                            </div>
                            <div>
                                 <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_classic.property.view.search</field>
        <field name="model">estate_classic.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" />
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <filter string="Available" name="state" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    <filter string="House Type" name="property_type_id" context="{'group_by':'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
