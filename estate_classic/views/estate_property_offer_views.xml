<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate_classic.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate_classic.property.offer.view.list</field>
        <field name="model">estate_classic.property.offer</field>
        <field name="arch" type="xml">
            <list editable="top" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept_offer" type="object" icon="fa-check" string="Accept" invisible="status"/>
                <button name="action_refuse_offer" type="object" icon="fa-close" string="Refuse" invisible="status"/>
            </list>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate_classic.property.offer.view.form</field>
        <field name="model">estate_classic.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
