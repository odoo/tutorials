<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <record id="email_template_offer_accepted" model="mail.template">
        <field name="name">Offer Accepted Notification</field>
        <field name="model_id" ref="estate.model_estate_property_offer"/>
        <field name="subject">Your Offer Has Been Accepted!</field>
        <field name="email_from">${(object.company_id.email_formatted or user.email_formatted)}</field>
        <field name="email_to">${object.partner_id.email}</field>
        <field name="body_html">
            <![CDATA[
                <p>Dear ${object.partner_id.name},</p>
                <p>Congratulations! Your offer of <strong>${object.price}</strong> has been accepted for the property <strong>${object.property_id.name}</strong>.</p>
                <p>Our team will contact you soon for further process.</p>
                <p>Best regards,</p>
                <p>Your Company Name</p>
            ]]>
        </field>
    </record>

    <record id="email_template_offer_rejected" model="mail.template">
        <field name="name">Offer Rejected Notification</field>
        <field name="model_id" ref="estate.model_estate_property_offer"/>
        <field name="subject">Your Offer Has Been Rejected</field>
        <field name="email_from">${(object.company_id.email_formatted or user.email_formatted)}</field>
        <field name="email_to">${object.partner_id.email}</field>
        <field name="body_html">
            <![CDATA[
                <p>Dear ${object.partner_id.name},</p>
                <p>Unfortunately, your offer of <strong>${object.price}</strong> for the property <strong>${object.property_id.name}</strong> has been declined.</p>
                <p>We appreciate your interest and invite you to explore other available properties.</p>
                <p>Best regards,</p>
                <p>Your Company Name</p>
            ]]>
        </field>
    </record>

</data>
</odoo>
