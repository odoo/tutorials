<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_flights_tree" model="ir.ui.view">
        <field name="name">flights.tree</field>
        <field name="model">flights</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="airline_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="view_flights_form" model="ir.ui.view">
        <field name="name">flights.form</field>
        <field name="model">flights</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="airline_id"/>
                        <field name="status" statusbar_visible='true' widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_flights" model="ir.actions.act_window">
        <field name="name">Flights</field>
        <field name="res_model">flights</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
