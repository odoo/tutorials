<?xml version="1.0"?>
<odoo>
    <!-- Form -->
    <record id="sale_branch_view_form" model="ir.ui.view">
        <field name="name">sale.branch.view.form</field>
        <field name="model">sale.branch</field>
        <field name="arch" type="xml">
            <form string="Sale Branch">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field readonly="True" name="sequence_id"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sale_branch_view_list" model="ir.ui.view">
        <field name="name">sale.branch.view.list</field>
        <field name="model">sale.branch</field>
        <field name="arch" type="xml">
            <list string="Sale Branch">
                <field name="name"/>
                <field name="sequence_id"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sale_branch_action" model="ir.actions.act_window">
        <field name="name">Sale Branch</field>
        <field name="res_model">sale.branch</field>
        <field name="view_mode">list,form</field>
    </record>    
</odoo>