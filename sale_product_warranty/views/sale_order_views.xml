<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.product.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']/div[@name='so_button_below_order_lines']" position="after">
                <div class="float-end d-flex gap-1 mb-2" style="padding-right: 5px;">
                    <button string="Add Warranty" name="action_open_add_warranty_wizard" type="object" class="btn btn-secondary" invisible = "not show_warranty_button"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
