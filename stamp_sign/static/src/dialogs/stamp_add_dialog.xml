<?xml version="1.0"?>
<templates>
    <t t-name="stamp_sign.StampDialog">
        <Dialog>
            <Stamp t-props="nameAndSignatureProps" />
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-if="props.onConfirmAll"
                    t-on-click="props.onConfirmAll" t-att-disabled="footerState.buttonsDisbaled">Sign
                    all</button>
                <button class="btn btn-secondary" t-on-click="props.onConfirm"
                    t-att-disabled="footerState.buttonsDisabled">Sign</button>
                <button class="btn btn-secondary" t-on-click="props.close">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
