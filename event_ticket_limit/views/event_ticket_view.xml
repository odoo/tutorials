<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Added field Event form view -->
    <record id="event_event_ticket_view_form_from_event_inherit" model="ir.ui.view">
        <field name="name">event.event.ticket.view.form.from.event.inherit</field>
        <field name="model">event.event.ticket</field>
        <field name="inherit_id" ref="event.event_event_ticket_view_tree_from_event" />
        <field name="arch" type="xml">
            <xpath expr='//field[@name="seats_max"]' position="before">
                <field name="seats_max_per_buyer"/>
            </xpath>
        </field>
    </record>

    <!-- Added field Event-type form view -->
    <record id="event_type_ticket_view_tree_from_type_inherit" model="ir.ui.view">
        <field name="name">event.type.ticket.view.list.from.type.inherit</field>
        <field name="model">event.type.ticket</field>
        <field name="inherit_id" ref="event.event_type_ticket_view_tree_from_type" />
        <field name="arch" type="xml">
            <xpath expr='//field[@name="seats_max"]' position="before">
                <field name="seats_max_per_buyer"/>
            </xpath>
        </field>
    </record>

</odoo>
