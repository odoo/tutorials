<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Book
            </p>
            <p>
                Create books, register payments and keep track of the discussions with your customers.
            </p>
        </field>
    </record>

    <record id="library_current_book_rent_action" model="ir.actions.act_window">
        <field name="name">Book rent</field>
        <field name="res_model">library.book.rent</field>
        <field name="view_mode">list</field>
        <field name="domain">[('book_id', '=', active_id)]</field>
    </record>

    <record id="library_book_views_list" model="ir.ui.view">
        <field name="name">library.book.views.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="library books">
                <field name="name"/>
                <field name="author_name"/>
                <field name="purchase_price"/>
                <field name="selling_price"/>
                <field name="rent_price"/>
                <field name="quantity" />
            </list>
        </field>
    </record>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Library Book">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(library.library_current_book_rent_action)d" class="oe_stat_button" icon="fa-book" invisible="not borrower_count">
                            <field name="borrower_count" string="Borrowers" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                            <field name="book_tag_ids" widget="many2many_tags" options="{'color_field' : 'color'}"/>
                        <group>
                            <field name="author_name"/>
                            <field name="purchase_price"/>
                            <field name="selling_price"/>
                            <field name="rent_price"/>
                            <field name="quantity" />
                        </group>
                    </group>
                    <button name="action_open_rent_wizard" type="object" invisible="not quantity">
                        Rent Book
                    </button>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
