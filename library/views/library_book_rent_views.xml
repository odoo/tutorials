<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_book_rent_action" model="ir.actions.act_window">
        <field name="name">Book rent</field>
        <field name="res_model">library.book.rent</field>
        <field name="view_mode">list</field>
    </record>

    <record id="library_book_rent_view_list" model="ir.ui.view">
        <field name="name">library.book.rent.view.list</field>
        <field name="model">library.book.rent</field>
        <field name="arch" type="xml">
            <list string="Book Rent" editable="bottom">
                <field name="customer_id" readonly="1"/>
                <field name="book_id" readonly="1"/>
                <field name="rent_duration"/>
                <field name="rent_start_date"/>
                <field name="rent_end_date"/>
                <field name="total_rent"/>
            </list>
        </field>
    </record>

    <record id="library_book_rent_view_form" model="ir.ui.view">
        <field name="name">library.book.rent.view.form</field>
        <field name="model">library.book.rent</field>
        <field name="arch" type="xml">
            <form string="Book Rent" editable="bottom">
                <group>
                    <field name="book_id" readonly="1"/>
                    <field name="customer_id"/>
                    <field name="rent_duration"/>
                    <field name="rent_start_date"/>
                    <field name="rent_end_date"/>
                    <field name="total_rent"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
