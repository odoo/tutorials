<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="library_book_member_action" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_library_member', '=', True)]</field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.library.book</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page name="library_details" string="Library Details">
                    <group>
                        <field name="is_library_member" string="Library Member"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
