<odoo>
    <template id="estate_property_detail_template" inherit_id="estate.estate_property_detail_template">
        <xpath expr="//p/t[@t-esc='property.salesperson_id.name']" position="after">
            <p t-if="property.auction_start==True">
                <a t-attf-href="/properties/#{property.id}/offer/new" class="btn btn-primary">
                    Create Offer
                </a>
            </p>
        </xpath>
        <xpath expr="//t[@t-esc='property.name']" position="before">
            <t t-if="property.auction_start">
                <div id="auction_countdown" t-att-data-auction-end="property.auction_end_date">countdown</div>
            </t>
        </xpath>
    </template>

    <template id="estate_property_view_template" inherit_id="estate.estate_property_view_template">
        <xpath expr="//div[contains(@class, 'action_buttons')]" position="replace">
            <div class="d-flex w-100 action_buttons justify-content-end">
                <form method="GET" action="/properties" class="mb-10 me-auto">
                    <input type="text" name="search_property" t-att-value='search_property' placeholder="search property" class="form-control d-inline w-auto"/>
                    <select name="sale_mode" class="form-control d-inline w-auto">
                    <option value="">Select Mode</option>
                    <option value="auction">Auction</option>
                    <option value="regular">Regular</option>
                    </select>
                    <input type="date" name="filter_date" t-att-value='filter_date' class="form-control d-inline w-auto"/>
                    <button type="submit" class="btn btn-primary">search</button>
                </form>
            </div>
        </xpath>
    </template>
</odoo>
