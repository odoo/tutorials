<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_cd" model="ir.ui.view">
        <field name="name">invoice.move.form.inherit.cd</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_l10n_in_custom_duty_wizard" class="oe_highlight"
                    string="Bill of Entry" type="object" data-hotkey="w"
                    invisible="l10n_journal_entry_custom_duty or state != 'posted' or l10n_in_gst_treatment not in ['overseas','special_economic_zone','deemed_export'] or move_type != 'in_invoice'" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_l10n_in_bill_of_entry" class="oe_stat_button" type="object"
                    icon="fa-list-alt" invisible="not l10n_journal_entry_custom_duty">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Bill Of entry</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
