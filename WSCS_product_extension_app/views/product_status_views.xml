<odoo>
    <record id="action_product_status" model="ir.actions.act_window">
        <field name="name">Product Status</field>
        <field name="res_model">product.status</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_product_status_tree" model="ir.ui.view">
        <field name="name">product.status.tree</field>
        <field name="model">product.status</field>
        <field name="arch" type="xml">
            <list string="Product Status">
                <field name="name"/>
                <field name="sequence"/>
                <field name="status_change_up_group_id"/>
                <field name="status_change_down_group_id"/>
            </list>
        </field>
    </record>
    <record id="view_product_status_form" model="ir.ui.view">
        <field name="name">product.status.form</field>
        <field name="model">product.status</field>
        <field name="arch" type="xml">
            <form string="Product Status">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                    <group string="Status Change Groups">
                        <field name="status_change_up_group_id"/>
                        <field name="status_change_down_group_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
