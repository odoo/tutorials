<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.list</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']"  position="after">
                <field name="product_status_id"/>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="customer_reference"/>
                <field name="hs_code"/>
            </xpath>
            <xpath expr="//group[@name='packaging']" position="after">
                <group string="Pallet Specs">
                    <field name="pallet_spec_ids"/>
                </group>
            </xpath>
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <div name="landed_cost_uom">
                    <group>
                        <field
                            name="landed_cost"
                            class="oe_inline"
                            widget="monetary"
                            options="{
                                'currency_field': 'cost_currency_id',
                                'field_digits': True,
                            }"
                        />
                        <span groups="uom.group_uom">
                            per
                            <field name="uom_name" class="oe_inline"/>
                        </span>
                    </group>
                </div>
                <field name="margin_percent"/>
            </xpath>
        </field>
    </record>
</odoo>
