<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_account_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="replace">
                <list string="Properties" decoration-success="state in ['offer_received', 'offer_accepted']" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                    <field name="name" string="Title"/>
                    <field name="postcode"/>                    
                    <field name="bedrooms"/>
                    <field name="total_area"/>
                    <field name="selling_price"/>
                </list>
            </xpath>
        </field>
    </record>
    <record id="estate_account_action" model="ir.actions.act_window">
        <field name="name">Estate Accounting</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <record id="estate_property_invoice" model="ir.ui.view">
        <field name="name">estate.property.invoice</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_to_invoice_property" type="object" string="INVOICE" class="oe_highlight" invisible="state in ('new', 'offer_received', 'offer_accepted', 'cancelled', 'invoiced')"/>
            </xpath>
        </field>
    </record>
L</odoo>
