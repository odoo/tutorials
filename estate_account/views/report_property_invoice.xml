<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_offers_invoice" inherit_id="estate.report_property_offers">
        <xpath expr="//div[@class='page']" position="inside">
            <!-- Invoice Section - Displayed only when the property is sold -->
            <t t-if="property.state == 'sold'">
                <h3>Invoice Information</h3>
                <p><strong>Invoice Status:</strong> Invoice has already been created for this sold property.</p>
            </t>
        </xpath>
    </template>
</odoo>
