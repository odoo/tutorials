<odoo>
    <record id="estate_account_property_view_form" model="ir.ui.view">
        <field name="name">estate.account.property.form</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="%(estate_property_invoices_action)d" type="action"
                        icon="fa-pencil-square-o" string="Invoices" class="oe_stat_button" invisible="invoice_count == 0"/>/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
