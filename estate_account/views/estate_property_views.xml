<?xml version="1.0"?>
<odoo>
       <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form.inherit.estate_account</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='main_fields']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="action" name="%(estate_account.estate_property_account_move_action_statbutton)d"
                        invisible="move_count == 0">
                        <field string="Invoices" name="move_count" widget="statinfo"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
