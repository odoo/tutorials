<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_account_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="%(estate_property_invoices_action)d" type="action"
                        icon="fa-pencil-square-o" string="Invoices" class="oe_stat_button" invisible="state not in ['sold']"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
