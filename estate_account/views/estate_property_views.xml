<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="account_move_action_statbutton" model="ir.actions.act_window">
        <field name="name">Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('invoice_property_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_view_form_invoice" model="ir.ui.view">
        <field name="name">estate.property.view.form.inherit.invoice</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="real_estate.estate_property_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button type="action" name="%(estate_account.account_move_action_statbutton)d"
                        class="oe_stat_button" icon="fa-pencil-square-o"
                        invisible="state != 'sold'">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Invoice</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
