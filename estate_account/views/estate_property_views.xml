<odoo>
    <record id="estate_account_property_view_form" model="ir.ui.view">
        <field name="name">estate.account.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel_action']" position="after">
                <button name="button_invoice_action" type="object" string="INVOICE"
                    invisible="state == 'canceled' or state == 'new' or state == 'offer_received' or state == 'offer_accepted' or state == 'invoiced'"
                    class="btn-primary"
                />
            </xpath>
        </field>
    </record>
</odoo>
