<odoo>
    <!-- List View for estate.property -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name" />
                <field name="tag_ids" widget="many2many_tags" />
                <field name="postcode" />
                <field name="bedroom" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <!-- <field name="selling_price"/> -->
            </list>
        </field>
    </record>

    <!-- Form View for estate.property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <!-- Title Section -->
                    <div class="oe_title">
                        <field name="name" />
                    </div>

                    <!-- Chapter-7 Tags -->
                    <group>
                        <field name="tag_ids" widget="many2many_tags"></field>
                    </group>
                    <!-- Main Details -->
                    <group>
                        <group>
                            <field name="property_type_id"></field>
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <!-- Tabs for Additional Details -->
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                            </group>
                            <group>
                                <field name="bedroom" />
                                <field name="living_area" />
                            </group>
                            <group>
                                <field name="facades" />
                                <field name="garage" />
                            </group>
                            <group>
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"></field>
                                <field name="buyer_id"></field>
                            </group>
                        </page>
                        <page string="Offers">
                                <field id="offers" name="offer_ids">
                                    <list string="offers" editable="bottom">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="status" />
                                    </list>
                                </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for estate.property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" />
                <field name="property_type_id"></field>
                <field name="postcode" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="bedroom" />
                <field name="living_area" />
                <field name="facades" />
                <!-- Filters -->
                <filter name="available_properties" string="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter name="group_by_postcode" string="Postcode" domain="[]" context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>
    <!-- Menu Item for estate.property -->
    <menuitem id="menu_real_estate" name="Real Estate">
        <menuitem id="menu_properties" name="Properties">
            <!-- <menuitem id="menu_properties_type" name="Property Types" action="action_estate_property_type" sequence="1" /> -->
            <menuitem id="menu_properties_action" name="Manage Properties" action="action_estate_property" sequence="2" />
        </menuitem>
    </menuitem>
    <!-- Action for estate.property model -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_estate_property_search" />
    </record>
</odoo>
