<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_inherit_sale_rental" model="ir.ui.view">
        <field name="name">product.template.form.inherit.sale.rental</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='pricing']" position="attributes">
                <attribute name="string">Pricing</attribute>
                <attribute name="invisible">recurring_invoice or not rent_ok</attribute>
            </xpath>
            <xpath expr="//page[@name='pricing']" position="inside">
                <div class="text-info text-center align-center" invisible="is_pricelist_on">
                    Activate pricelist setting if you want to set specific price rules
                </div>
            </xpath>
            <xpath expr="//page[@name='pricing']/group" position="before">
                <div class="p-2">
                    <label for="list_price" string="Rental Price"/>
                    <field colspan="2" name="list_price" string="Rental Price"/>
                    per day
                </div>
            </xpath>
            <xpath expr="//page[@name='pricing']/group" position="attributes">
                <attribute name="invisible">not is_pricelist_on</attribute>
            </xpath>
            <xpath expr="//field[@name='product_pricing_ids']/list" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
            <xpath expr="//field[@name='product_variant_ids']" position="replace"/>
            <xpath expr="//field[@name='product_pricing_ids']/list" position="inside">
                <field name="min_quantity"/>
            </xpath>
        </field>
    </record>
</odoo>
