<odoo>
    <template id="website_calendar_index_topbar_inherit" inherit_id="website_appointment.website_calendar_index_topbar">
        <xpath expr="//t[@t-call='website.website_search_box_input']" position="before">
            <form method="get" class="d-flex ms-3 gap-2">

                <select class="form-select" name="appointment_mode" onchange="this.form.submit();">
                    <option value="">All Types</option>
                    <option value="online" t-att-selected="filters.get('appointment_mode') == 'online'">Online</option>
                    <option value="offline" t-att-selected="filters.get('appointment_mode') == 'offline'">Offline</option>
                </select>

                <select class="form-select" name="schedule_based_on" onchange="this.form.submit();">
                    <option value="">Schedules By All</option>
                    <option value="user" t-att-selected="filters.get('schedule_based_on') == 'user'">User</option>
                    <option value="resource" t-att-selected="filters.get('schedule_based_on') == 'resource'">Resource</option>
                </select>

                <select class="form-select" name="has_payment_step" onchange="this.form.submit();">
                    <option value="">Payment Step</option>
                    <option value="true" t-att-selected="filters.get('has_payment_step') == 'true'">Required</option>
                    <option value="false" t-att-selected="filters.get('has_payment_step') == 'false'">Not Required</option>
                </select>
            </form>
        </xpath>
    </template>
</odoo>
