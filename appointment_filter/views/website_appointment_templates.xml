<odoo>
    <template id="website_calendar_index_topbar_inherit"
        inherit_id="website_appointment.website_calendar_index_topbar">
        <xpath expr="//t[@t-call='website.website_search_box_input']" position="before">
            <div class="container">
                <div class="d-flex align-items-center flex-wrap gap-3 w-100">

                    <div class="dropdown">
                        <a href="#" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
                            <t t-if="filters.get('appointment_mode')">
                                <t t-esc="filters.get('appointment_mode').capitalize()" />
                            </t>
                            <t t-else="">All Types</t>
                        </a>
                        <div class="dropdown-menu">
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', appointment_mode='')"
                                class="post_link cursor-pointer dropdown-item">All Types</span>
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', appointment_mode='online')"
                                class="post_link cursor-pointer dropdown-item">Online</span>
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', appointment_mode='offline')"
                                class="post_link cursor-pointer dropdown-item">Offline</span>
                        </div>
                    </div>

                    <div class="dropdown">
                        <a href="#" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
                            <t t-if="filters.get('schedule_based_on')">
                                <t t-esc="filters.get('schedule_based_on').capitalize()" />
                            </t>
                            <t t-else="">All</t>
                        </a>
                        <div class="dropdown-menu">
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', schedule_based_on='')"
                                class="post_link cursor-pointer dropdown-item">All</span>
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', schedule_based_on='user')"
                                class="post_link cursor-pointer dropdown-item">User</span>
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', schedule_based_on='resource')"
                                class="post_link cursor-pointer dropdown-item">Resource</span>
                        </div>
                    </div>

                    <div class="dropdown">
                        <a href="#" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
                            <t t-if="filters.get('has_payment_step')">
                                <t t-esc="filters.get('has_payment_step').capitalize()" />
                            </t>
                            <t t-else="">Payment Step</t>
                        </a>
                        <div class="dropdown-menu">
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', has_payment_step='')"
                                class="post_link cursor-pointer dropdown-item">Any</span>
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', has_payment_step='true')"
                                class="post_link cursor-pointer dropdown-item">Required</span>
                            <span
                                t-att-data-post="'/appointment?%s' % keep_query('*', has_payment_step='false')"
                                class="post_link cursor-pointer dropdown-item">Not Required</span>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
