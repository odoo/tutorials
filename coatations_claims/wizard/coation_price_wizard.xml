<odoo>
    <record id="action_coation_price_wizard" model="ir.actions.act_window">
        <field name="name">Price selection Wizard</field>
        <field name="res_model">coatation.price.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

        <record id="view_coatation_price_wizard_form" model="ir.ui.view">
            <field name="name">coatation.price.wizard.form</field>
            <field name="model">coatation.price.wizard</field>
            <field name="arch" type="xml">
                <form string="Select Negotiated Price">
                    <group>
                        <field name="type_of_price"/>
                        <field name="order_line_id"/>
                        <field name="customer_id"/>
                        <field name="coation_id" domain="domain_ids" invisible="type_of_price not in ['coatation']" string="Available coatations"/> 
                        <field name="recommended_selling_price" invisible="type_of_price not in ['coatation']"/>
                        <field name="last_sales_order_unit_price" invisible="type_of_price not in ['last']"/>
                    </group>

                    <footer>
                        <button string="Select Price" type="object" name="action_select_price" class="btn-primary"/>
                        <button string="Cancel" type="object" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>
