<odoo>
    <record id="view_order_line_form" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[hasclass('oe_title')]" position="before">
                <div>
                    <widget name="web_ribbon" title="To be approved" bg_color="text-bg-danger"/>
                 </div>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='price_tax']" position="after">
                 <field name="type_of_price"/>    
                 <field name="coation_ids" decoration-danger="type_of_price == 'regular'"/>
                 <button name="%(action_coation_price_wizard)d" type='action' string="Select Price" invisible="state in ['sale','sent']" />
            </xpath>
        </field>
    </record>
</odoo>
