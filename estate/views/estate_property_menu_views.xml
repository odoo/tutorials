<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root Menu Item-->
    <menuitem
        id="estate_menu_root"
        name="Real Estate"
        web_icon="estate,static/description/icon.png"
    />

    <!-- Advertisements Sub-Menu -->
    <menuitem
        id="estate_menu_advertisement"
        name="Advertisements"
        parent="estate_menu_root"
    />
    <menuitem
        id="estate_menu_advertisement_property"
        parent="estate_menu_advertisement"
        action="estate_property_action"
    />

    <!-- Settings Sub-Menu -->
    <menuitem
        id="estate_menu_setting"
        name="Settings"
        parent="estate_menu_root"
        groups="estate.estate_group_manager"
    />
    <menuitem
        id="estate_menu_property_type"
        parent="estate_menu_setting"
        action="estate_property_type_action"
    />
    <menuitem
        id="estate_menu_property_tag"
        parent="estate_menu_setting"
        action="estate_property_tag_action"
    />
</odoo>
