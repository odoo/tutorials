<!-- the form view -->
  <record id="estate_tag_view_form" model="ir.ui.view">
    <field name="name">estate.tag.view.form</field>
    <field name="model">estate.property.tags</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
    <form string="Test">
        <sheet>
