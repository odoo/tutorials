<?xml version="1.0"?>
<odoo>

<!-- the list view -->
 <record id="estate_tag_view_list" model="ir.ui.view">
    <field name="name">estate.tag.view.list</field>
    <field name="model">estate.property.tags</field>
    <field name="type">list</field>
    <field name="arch" type="xml">

        <list string="Tests" editable="bottom">
            <field name="name"/>  
            <field name="properties"/>       
        </list>
    </field>
 </record>

<!-- the form view -->
  <record id="estate_tag_view_form" model="ir.ui.view">
    <field name="name">estate.tag.view.form</field>
    <field name="model">estate.property.tags</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
    <form string="Test">
        <sheet>
            <group>
            <field name="name" />
            </group>
        </sheet>
    </form>
    </field>
 </record>

<!-- search view -->
 <record id="estate_tag_view_search" model="ir.ui.view">
    <field name="name">estate.tag.view.search</field>
    <field name="model">estate.property.tags</field>
    <field name="type">search</field>
    <field name="arch" type="xml">

        <search string="Tests">
            <field name="name"/>
        </search>
    </field>
 </record>

</odoo>
