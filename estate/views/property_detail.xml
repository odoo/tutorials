<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_detail" name="Estate Property Detail">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="row">
                    <!-- Property Image -->
                    <div class="col-md-6">
                        <div class="ratio ratio-4x3">
                            <t t-if="property.image">
                                <img t-att-src="image_data_uri(property.image)"
                                    class="img-fluid rounded shadow-sm" alt="Property Image"/>
                            </t>
                            <t t-else="">
                                <img t-att-src="'/estate/static/src/img/default.png'"
                                    class="img-fluid rounded shadow-sm" alt="Default Property Image"/>
                            </t>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h2><t t-esc="property.name"/></h2>
                        <p class="text-muted"><t t-esc="property.description or 'No description available'"/></p>
                        <div class="mb-2">
                            <strong>Expected Price:</strong>
                            <span t-field="property.expected_price"/>₹
                        </div>
                        <div class="mb-2">
                            <strong>Bedrooms:</strong>
                            <span t-field="property.bedrooms"/>
                        </div>
                        <div class="mb-2">
                            <strong>Garden Area: </strong>
                            <span t-field="property.garden_area"/> sqm
                        </div>
                        <div class="mb-2">
                            <strong>Garden Orientation: </strong>
                            <span t-field="property.garden_orientation"/>
                        </div>
                        <div class="mb-2">
                            <strong>Living Area:</strong>
                            <span t-field="property.living_area"/> m²
                        </div>
                        <div class="mb-2">
                            <strong>State:</strong>
                            <span t-field="property.state"/>
                        </div>
                        <div class="mb-2">
                            <strong>Salesperson:</strong>
                            <span t-field="property.salesperson_id.name"/>
                        </div>
                        <div class="mb-2">
                            <strong>Avilable from:</strong>
                            <span t-field="property.date_availability"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>    
