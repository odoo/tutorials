<odoo>
    <record id="estate.house_type_action" model="ir.actions.act_window">
        <field name="name">House Type</field>
        <field name="res_model">estate.house.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate.house_type_form" model="ir.ui.view">
        <field name="name">estate.house_type_form</field>
        <field name="model">estate.house.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button type="action" name="estate.house_offer_action" class="oe_stat_button" icon="fa-envelope">
                            Offers Counts <field name="offer_count" />
                        </button>
                    </header>
                    <field name="name" />
                    <notebook>
                        <page string="Properties">
                            <field name="house_ids">
                                <list>
                                    <field name="name" string="title" />
                                    <field name="expected_price" />
                                    <field name="state" string="status" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate.house_type_tree" model="ir.ui.view">
        <field name="name">House Types</field>
        <field name="model">estate.house.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="offer_count" />
            </list>
        </field>
    </record>
</odoo>
