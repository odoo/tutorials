<odoo>
    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <!-- Property Image and Description -->
                    <div class="col-md-8">
                        <div class="card p-4 shadow-sm">
                            <h2 class="mb-3">🏡 <t t-esc="property.name"/></h2>
                            
                            <p class="text-muted">📌 <strong>Status:</strong> <t t-esc="dict(property.fields_get(allfields=['state'])['state']['selection'])[property.state]"/></p>

                            <t t-if="property.image">
                                <img t-att-src="'/web/image/estate.property/%s/image' % property.id"
                                 class="img-fluid rounded shadow-lg"
                                 style="max-width: 80%; height: 400px; object-fit: cover;" 
                                 alt="Property Image"/>
                            </t>
                            <br></br>
                            <p class="text-justify">📝 <t t-esc="property.description"/></p>
                        </div>
                    </div>

                    <!-- Property Details -->
                    <div class="col-md-4">
                        <div class="card p-4 shadow-sm">
                            <h4 class="mb-3 text-primary">📌 Property Details</h4>
                            <ul class="list-unstyled">
                                <li><strong>Type:</strong> <t t-esc="property.property_type_id.name"/></li>
                                <li><strong>Bedrooms:</strong> <t t-esc="property.bedrooms"/></li>
                                <li><strong>Postcode:</strong> <t t-esc="property.postcode"/></li>
                                <li><strong>Availability:</strong> <t t-esc="property.date_availability"/></li>
                                <li><strong>Size:</strong> <t t-esc="property.living_area"/> sqm</li>
                                <li><strong>Facades:</strong> <t t-esc="property.facades"/></li>
                            </ul>

                            <!-- Garden Details (Displayed Only If Available) -->
                            <t t-if="property.garden">
                                <hr/>
                                <h5 class="text-success">🌳 Garden Details</h5>
                                <ul class="list-unstyled">
                                    <li><strong>Garden Area:</strong> <t t-esc="property.garden_area"/> sqm</li>
                                    <li><strong>Orientation:</strong> <t t-esc="dict(property.fields_get(allfields=['garden_orientation'])['garden_orientation']['selection'])[property.garden_orientation]"/></li>
                                </ul>
                            </t>
                            
                            <hr/>
                            <h4 class="mb-3 text-primary ">💰 Price Details</h4>
                            <ul class="list-unstyled">
                            <li><strong>Expected Price:</strong> <span class="text-success">$<t t-esc="property.expected_price"/></span></li>
                            <li><strong>Best Price:</strong> <span class="text-danger">$<t t-esc="property.best_price"/></span></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Back Button -->
                <div class="row mt-4">
                    <div class="text-center">
                        <a href="/properties" class="btn btn-primary btn-lg">Back to List</a>
                    </div>
                </div>
                <br></br>
            </div>
        </t>
    </template>
</odoo>
