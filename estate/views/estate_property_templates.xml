<odoo>
    <record id="estate.property_listing_action" model="ir.actions.act_url">
        <field name="name">Available Properties</field>
        <field name="type">ir.actions.act_url</field>
        <field name="url">/properties</field>
        <field name="target">self</field>
    </record>

    <template id="property_listing_template" name="Available Properties">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2 class="text-center">
                    Avalible Properites
                </h2>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <img t-if="property.image" t-att-src="'data:image/png;base64,' + property.image.decode('utf-8')" class="img-fluid rounded mb-3" alt="Property Image" style="max-height: 200px; width: 100%; object-fit: cover;" />

                                    <h4 t-out="property.name" class="text-primary"/>
                                    <p class="text-muted" t-out="property.description"/>
                                    <p>
                                        <strong>Bedrooms:</strong>
                                        <t t-out="property.bedrooms"/>
                                    </p>
                                    <p>
                                        <strong>Living Area:</strong>
                                        <t t-out="property.living_area"/>
                                        ft²
                                    </p>
                                    <p>
                                        <strong>Facades:</strong>
                                        <t t-out="property.facades"/>
                                    </p>
                                    <p t-if="property.garage">
                                        <strong>Garage:</strong> Yes</p>
                                    <p t-if="property.garden">
                                        <strong>Garden:</strong> Yes 
                                        (Area: <t t-out="property.garden_area"/> ft²)
                                    </p>
                                    <p>
                                        <strong>Total Area:</strong>
                                        <t t-out="property.total_area"/> ft²
                                    </p>
                                    <strong>Price: $<t t-out="property.expected_price"/>
                                    </strong>
                                    <br/>

                                    <a t-att-href="'/property/details?property_id=' + str(property.id)" class="btn btn-primary mt-2">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_template" name="Property Details">
        <t t-call="website.layout">
            <t t-set="title">Property Details</t>
            <div class="container mt-5">
                <div class="row">
                    <!-- Image Section -->
                    <div class="col-lg-5">
                        <div class="card shadow-sm">
                            <img t-if="property.image" t-att-src="'data:image/png;base64,' + property.image.decode('utf-8')" class="card-img-top rounded" alt="Property Image" style="max-height: 350px; object-fit: cover;"/>
                            <div class="card-body">
                                <h3 class="text-center text-primary" t-out="property.name"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-7">
                        <div class="card shadow-sm p-4">
                            <h4 class="mb-3 text-success">Property Information</h4>
                            <ul class="list-unstyled">
                                <h4 class="mt-4 text-success">Tags</h4>
                                <div class="d-flex flex-wrap gap-2">
                                    <t t-foreach="property.property_tag_ids" t-as="tag">
                                        <span class="badge bg-secondary" t-out="tag.name"/>
                                    </t>
                                </div>

                                <h4 class="mt-4 text-success">Description</h4>
                                <p class="text-muted" t-out="property.description"/>
                                <li>
                                    <strong>Property Type:</strong>
                                    <t t-out="property.property_type_id.name"/>
                                </li>
                                <li>
                                    <strong>Salesperson:</strong>
                                    <t t-out="property.user_id.name"/>
                                </li>
                                <li>
                                    <strong>Company:</strong>
                                    <t t-out="property.company_id.name"/>
                                </li>
                                <li>
                                    <strong>Partner:</strong>
                                    <t t-out="property.partner_id.name"/>
                                </li>
                                <li>
                                    <strong>Postal Code:</strong>
                                    <t t-out="property.postcode"/>
                                </li>
                                <li>
                                    <strong>Availability Date:</strong>
                                    <t t-out="property.date_availability"/>
                                </li>
                            </ul>

                            <h4 class="mt-4 text-success">Pricing</h4>
                            <ul class="list-unstyled">
                                <li>
                                    <strong>Expected Price:</strong>
                                    <span class="text-primary">
                                        $ <t t-out="property.expected_price"/>
                                    </span>
                                </li>
                                <li>
                                    <strong>Best Offer:</strong>
                                    <span class="text-danger">
                                        $ <t t-out="property.best_price"/>
                                    </span>
                                </li>
                            </ul>

                            <h4 class="mt-4 text-success">Property Features</h4>
                            <div class="d-flex flex-wrap gap-2">
                                <ul class="list-unstyled">
                                <li>
                                    <strong>
                                        State: <t t-out="property.state"/>
                                    </strong>
                                </li>
                                <li>
                                    <strong>
                                        Bedrooms: <t t-out="property.bedrooms"/>
                                    </strong>
                                </li>
                                <li>
                                    <strong>
                                        Living Area: <t t-out="property.living_area"/> ft²
                                    </strong>
                                </li>
                                <li>
                                    <strong>
                                        Facades: <t t-out="property.facades"/>
                                    </strong>
                                </li>
                                <li>
                                    <strong>
                                        Garage: <t t-out="'Yes' if property.garage else 'No'"/>
                                    </strong>
                                </li>
                                <li>
                                    <strong>
                                        Garden: <t t-out="'Yes' if property.garden else 'No'"/>
                                    </strong>
                                </li>
                                <li>
                                <t t-if="property.garden">
                                    <ul class="list-unstyled mt-2">
                                        <li>
                                            <strong>Garden Area:</strong>
                                            <t t-out="property.garden_area"/> ft²
                                        </li>
                                        <li>
                                            <strong>Garden Orientation:</strong>
                                            <t t-out="property.garden_orientation"/>
                                        </li>
                                    </ul>
                                </t>
                                </li>
                                <li>
                                <p class="mt-4">
                                    <strong>Total Area:</strong>
                                    <t t-out="property.total_area"/> ft²
                                </p>
                                </li>
                                </ul>
                            </div>

                            <div class="text-center mt-4">
                                <a href="/properties" class="btn btn-outline-primary btn-lg">← Back to Listings</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>