    <template id="property_listing_template" name="Available Properties">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h2 class="text-center text-uppercase text-primary fw-bold mb-4">
                    Available Properties
                </h2>
                <div class="row g-4 mb-4">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="card property-card shadow-lg border-0 overflow-hidden">
                                <!-- Property Image -->
                                <div class="position-relative">
                                    <img t-if="property.image"
                                         t-att-src="'data:image/png;base64,' + property.image.decode('utf-8')"
                                         class="card-img-top img-fluid property-image"
                                         alt="Property Image" />

                                    <!-- Price Tag -->
                                    <span class="badge bg-primary position-absolute top-0 end-0 m-2 p-2 fs-6">
                                        $ <t t-out="property.expected_price"/>
                                    </span>
                                </div>

                                <div class="card-body">
                                    <h4 class="text-dark fw-bold">
                                        <t t-out="property.name"/>
                                    </h4>
                                    <p class="text-muted small">
                                        <t t-out="property.description"/>
                                    </p>

                                    <div class="row text-muted small">
                                        <div class="col-6">
                                            <strong>üõè Bedrooms:</strong>
                                            <t t-out="property.bedrooms"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>üìè Living Area:</strong>
                                            <t t-out="property.living_area"/> ft¬≤</div>
                                        <div class="col-6">
                                            <strong>üè† Facades:</strong>
                                            <t t-out="property.facades"/>
                                        </div>
                                        <div class="col-6" t-if="property.garage">
                                            <strong>üöó Garage:</strong> Yes</div>
                                        <div class="col-6" t-if="property.garden">
                                            <strong>üå≥ Garden:</strong> Yes
                                            (<t t-out="property.garden_area"/> ft¬≤)
                                        </div>
                                        <div class="col-12">
                                            <strong>üìê Total Area:</strong>
                                            <t t-out="property.total_area"/> ft¬≤</div>
                                    </div>

                                    <!-- View Details Button -->
                                    <a t-att-href="'/property/details/' + str(property.id)"
                                       class="btn btn-primary w-100 mt-3 d-flex justify-content-center align-items-center">
                                        View Details <i class="fa fa-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>

            <!-- Custom CSS -->
            <style>
                .property-card {
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                    border-radius: 10px;
                }
                .property-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
                }
                .property-image {
                    height: 200px;
                    object-fit: cover;
                    border-radius: 10px 10px 0 0;
                }
            </style>
        </t>
    </template>

