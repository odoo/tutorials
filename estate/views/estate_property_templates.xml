<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="property_list" name="Property List">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1 class="text-center">Available Properties</h1>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <t t-esc="property.name"/>
                                    </h5>
                                    <t t-if="property.image">
                                        <img t-att-src="image_data_uri(property.image)"
                                            class="card-img-top img-fluid" alt="Property Image"/>
                                    </t>
                                    <p class="card-text">
                                        <strong>Expected Price:</strong> 
                                        <t
                                            t-esc="property.expected_price"/> USD<br/>
                                        <strong>
                                        Bedrooms:</strong> 
                                        <t t-esc="property.bedrooms"/><br/>
                                        <strong>
                                        State:</strong> 
                                        <t t-esc="property.state"/>
                                    </p>
                                    <a t-att-href="'/property/' + str(property.id)"
                                        class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <t t-if="pager">
                    <div class="d-flex justify-content-center mt-4">
                        <t t-call="website.pager">
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
