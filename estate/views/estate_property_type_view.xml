<!-- Estate Property Type Views -->
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div name="button_box" position="before">
                        <button name="%(estate_property_offer_action)d"
                            type="action" class="oe_stat_button" icon="fa-money">
                            <field name="offers_count" widget="statinfo" string="Offers" />
                        </button>
                    </div>
                    <group>
                        <h1>
                            <field name="name" string="Property Type" />
                        </h1>
                    </group>
                    <notebook>
                        <page name="Properties" string="Associated Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name" string="Property Name" />
                                    <field name="expected_price" string="Expected Price" />
                                    <field name="state" string="Status" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Property Type" />
            </list>
        </field>
    </record>
</odoo>
