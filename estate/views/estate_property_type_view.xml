<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id='estate_property_action_1' model='ir.actions.act_window'>
            <field name='name'>Properties Type</field>
            <field name='res_model'>estate.property.type</field>
            <field name='view_mode'>list,form</field>
        </record>

        <!-- estate property type list view -->
        <record id='estate_property_type_view' model='ir.ui.view'>
            <field name='name'>estate.property.type.list</field>
            <field name='model'>estate.property.type</field>
            <field name='arch' type='xml'>

                <list>
                    <field name='name'></field>
                    <field name='sequence' widget='handle'/>
                    <field name='offer_count' />
                </list>
            </field>
        </record>

        <!-- estate property type form view -->
        <record id='estate_property_type_form_view' model='ir.ui.view'>
            <field name='name'>estate.property.type.form.view</field>
            <field name='model'>estate.property.type</field>
            <field name='arch' type='xml'>
                <form>
                    <group>
                        <div class='oe_title'>
                            <div class='oe_edit_only'>
                                <label for='name'/>
                            </div>
                            <h1 class='mb32'>
                                <field name='name' class='mb16'/>
                            </h1>
                        </div>
                    </group>
                    <div class='oe_button_box' name='button_box'>
                        <button class='oe_stat_button' name='%(estate_property_action_3)d' type='action' icon='fa-money'>
                            <!-- <button name='action_open_offers' type='object' class='oe_stat_button'> -->
                            <div class='o_stat_info'>
                                <span class='o_stat_value'>
                                    <field name='offer_count'/>
                                </span>
                                <span class='o_stat_text'>
                                        Offers
                                </span>
                            </div>
                        </button>
                    </div>
                    <notebook>
                        <page string='Properties'>
                            <field id='property_type' name='property_ids'>
                                <list editable='bottom'>
                                    <field name='name'></field>
                                    <field name='expected_price'></field>
                                    <field name='state'></field>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
    </data>
</odoo>