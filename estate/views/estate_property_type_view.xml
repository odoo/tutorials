<odoo>

    <record id="action_estate_property_type_view" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- Estate Property Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_estate_property_offer_model)d" type="action"
                            class="oe_stat_button" icon="fa-money">
                            <field name="offer_ids" widget="statinfo" string="Offers" />
                        </button>
                    </div>
                    <h1>
                        <field name="name" />
                    </h1>
                    <notebook>
                        <page string="titles">
                            <field name="property_ids">
                                <list>
                                    <field name="name" />
                                    <field name="expected_price" />
                                    <field name="state" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Estate Property list View -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Estate Properties">
                <field name="name" />
                <field name="property_ids" />
                <field name="sequence" widget="handle" />
                <!-- Other fields can go here -->

            </list>

        </field>
    </record>

    <!-- Estate Property Search View -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Estate Properties">
                <field name="name" />
                <field name="property_ids" />
                <!-- Other fields for searching -->
            </search>
        </field>
    </record>

</odoo>