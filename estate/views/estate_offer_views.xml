<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="estate_offer_form" model="ir.ui.view">
        <field name="name">estate.name</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>

    <record id="estate_offer_list" model="ir.ui.view">
        <field name="name">estate.name</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="List">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status"/>
            </list>
        </field>
    </record>

</odoo>