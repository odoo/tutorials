<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_offers_action" model="ir.actions.act_window">
        <field name="name">Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!-- Offer List View -->
    <record id="estate_property_offers_view_list" model="ir.ui.view">
        <field name="name">Offer Lists</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list editable="bottom"
                decoration-danger="status == 'refused'"
                decoration-success="status == 'accepted'"
            >
                <field name="partner_id" />
                <field name="price" />
                <field name="validity" />
                <field name="date_deadline" />
                <button
                    type="object"
                    name="accept_offer"
                    icon="fa-check"
                    title="accept"
                    invisible="status in ('accepted','refused') "
                />
                <button
                    type="object"
                    name="reject_offer"
                    icon="fa-times text-danger"
                    title="reject"
                    invisible="status in ('accepted','refused') "
                />
            </list>
        </field>
    </record>
</odoo>
