<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu for Estate -->
    <menuitem id="estate_menu_root" name="Estate" web_icon="estate,static/description/deal.png">
        <!-- Estate Management Section -->
        <menuitem id="estate_menu_management" name="Estate Management">
            <menuitem id="estate_menu_properties" name="Properties"
                action="estate_property_action" />
        </menuitem>
        <!-- Settings Section -->
        <menuitem id="estate_settings" name="Settings" groups="estate.estate_group_manager">
            <menuitem id="estate_property_type" name="Property Types"
                action="property_type_action" />
            <menuitem id="estate_property_tags" name="Property Tags"
                action="property_tags_action" />
        </menuitem>
        <!-- Website Section -->
        <menuitem id="estate_menu_website" name="Website">
            <menuitem id="estate_property_menu_website" name="View Properties"
                action="open_url_action" />
        </menuitem>
    </menuitem>
</odoo>
