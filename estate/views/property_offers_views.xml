<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_offers_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">property.offers</field>
        <field name="view_mode">list</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!--    Property Offers list view-->
    <record id="property_offers_view_list" model="ir.ui.view">
        <field name="name">property.offers.view.list</field>
        <field name="model">property.offers</field>
        <field name="arch" type="xml">
            <list string="Offers" editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                <field name="partner_id" />
                <field name="price" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" string="Accept" type="object" icon="fa-check" invisible="status in ['accepted','refused'] or property_id.state in ['offer_accepted', 'sold', 'cancelled']" />
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times" invisible="status in ['accepted','refused'] or property_id.state in ['offer_accepted', 'sold', 'cancelled']" />
                <field name="status" invisible="status in ['accepted','refused'] or property_id.state in ['offer_accepted', 'sold', 'cancelled']" />
            </list>
        </field>
    </record>
</odoo>
