<odoo>
    <record id="estate_list_view_tree" model="ir.ui.view">
        <field name="name">estate.main.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="status=='offer accepted' or status=='offer received'" decoration-muted="status=='sold'"
             decoration-bf="status=='offer accepted'">
                <field name="name" string="title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="true"/>
            </list>
        </field>
    </record>

    <record id="estate_form_view_form" model="ir.ui.view">
        <field name="name">estate.main.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 class="oe_title">
                        <field name="name" class="mb16"/>
                    </h1>
                    <header>
                        <button name="action_cancel" type="object" string="Cancel" invisible="status in ['cancelled','sold']"/>
                        <button name="action_sold" type="object" string="Sold" invisible="status in ['cancelled','sold']"/>
                        <field name="status" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                    </header>
                    
                    <field name="estate_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group>
                                    <field name="estate_type_id" string="Property type" options="{'no_create': true}"/>
                                    <field name="postcode"/>
                                    <field name="date_availability"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>    
                                    <field name="expected_price"/>
                                    <field name="best_offer"/>
                                    <field name="selling_price"/>
                                </group>
                            </div>
                        </div>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="garden == False"/>
                                    <field name="garden_orientation" invisible="garden == False"/>
                                    <field name="total_area" invisible="garden == False"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="estate_offer_ids" widget="one2many_tags" readonly="selling_price > 0"/>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="partner_id" string="buyer"/>
                                    <field name="user_id" string="salesman"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_offer_list_view_tree" model="ir.ui.view">
        <field name="name">estate.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                <field name="price"/>
                <field name="partner_id" string="Partner"/>
                <field name="property_type_id"/>
                <button name="action_accepted" title="accepted" type="object" icon="fa-check" invisible="status"/>
                <button name="action_refused" title="refused" type="object" icon="oi-close" invisible="status"/>
            </list>
        </field>
    </record>

    <record id="estate_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="estate search">
                <field name="name" string="title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter string="available" name="available" domain="[('status', 'in', ['new', 'offer received'])]"/>
                <field name="living_area" string="At least living area of"
                    filter_domain="[('living_area', '>=', self)]"/>
                <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban records_draggable="0" default_group_by="status">
                <field name="status"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card">
                            <div>
                                <field name="name"/>
                            </div>
                            <div>
                                <field name="expected_price"/>
                            </div>
                            <div>
                                <t t-if="record.status.raw_value != 'new'"><field name="best_offer"/></t>
                            </div>
                            <div t-if="record.status.raw_value == 'offer accepted' or record.status.raw_value == 'sold'">
                                <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="estate_tag_ids"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Property action</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
