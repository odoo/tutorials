<odoo>
    <data>
        <!-- Property Offer List View -->
        <record id="estate_property_Offer_view_list" model="ir.ui.view">
            <field name="name">estate.property.Offer.view.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Property Offers" editable="bottom"
                    decoration-success="status == 'accepted'"
                    decoration-danger="status == 'refused'">
                    <field name="partner_id" />
                    <field name="price" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_confirm" title="Accept" type="object" icon="fa-check"
                        invisible="status == 'accepted' or status == 'refused'" />
                    <button name="action_refuse" title="Refuse" type="object" icon="fa-times"
                        invisible="status == 'accepted' or status == 'refused'" />
                </list>
            </field>
        </record>

        <!-- Property Offer Form View -->
        <record id="estate_property_offer_view_form" model="ir.ui.view">
            <field name="name">estate.property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property Offer">
                    <sheet>
                        <group>
                            <group>
                                <field name="price" />
                                <field name="partner_id" />
                            </group>
                            <group>
                                <field name="validity" />
                                <field name="date_deadline" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Property Offer Actions -->
        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>