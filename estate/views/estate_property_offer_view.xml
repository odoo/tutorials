<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Estate Properties Offer" editable='top'
                decoration-success="status == 'accepted'"
                decoration-danger="status =='refused'">
                <field name="price"/>
                <field name="property_type_id"/>
                <field name="partner_id" string="Partner"/>
                <field name="date_deadline" string='Deadline'/>
                <field name="validity" string='Validity (days)'/>
                <button name="action_accept" type="object" icon="fa-check" invisible="status in ('accepted', 'refused')"/>
                <button name="action_reject" type="object" icon="fa-times" invisible="status in ('accepted', 'refused')"/>
                <field name="status" string='Status'/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer__view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offers">
                <sheet>
                    <group>
                        <field name="price" string='Price'/>
                        <field name="partner_id" string='Partner'/>
                        <field name="date_deadline" string='Deadline'/>
                        <field name="validity" string='Validity (days)'/>
                        <field name="status" string='Status'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_stat_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
