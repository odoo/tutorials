<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_tags_action" model="ir.actions.act_window"> <!-- Action-->
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_tags_view_form" model="ir.ui.view"> <!-- Form view-->
        <field name="name"> Estate.property.tags.form </field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Estate Property Tags">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/> <!--for tag color-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_proprty_tags_list" model="ir.ui.view"> <!-- List view-->
        <field name="name">estate.property.tags.view </field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="Estate Property Tags" editable="top" multi_edit="1" open_form_view="True" default_order="name"> <!-- order from UI-->
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>
