<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_offer_wizard" model="ir.ui.view">
        <field name="name">estate.offer.wizard.form</field>
        <field name="model">estate.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="action_make_offer" string="Make an Offer" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_estate_offer_wizard" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_estate_offer_wizard"/>
        <field name="target">new</field>
        <field name="context">{'default_property_ids': active_ids}</field>
    </record>
</odoo>
