<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_config_settings_view_form" model="ir.ui.view">
        <field name="name">estate.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Estate" name="estate">
                    <block title="Estate Settings">
                        <setting help="Activate this option to allow invoicing for property sales.">
                            <field name="module_estate_account" />
                        </setting>
                        <setting help="Enable this option to activate the auction system for properties.">
                            <field name="module_estate_auction_automation" />
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
