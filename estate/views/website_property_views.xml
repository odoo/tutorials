<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="estate.property_listing_template" name="Property Listing">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="text-center mb-5">
                    <h1 class="display-4 fw-bold text-primary">Discover Our Properties</h1>
                </div>
                <div class="row g-4">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="card shadow-lg border-0 h-100">
                                <div class="card-img-top position-relative">
                                    <t t-if="property.property_image">
                                        <img t-att-src="image_data_uri(property.property_image)"
                                            class="img-fluid w-100" style="height: 250px; object-fit: cover; border-top-left-radius: 1rem; border-top-right-radius: 1rem;" alt="Property Image"/>
                                    </t>
                                    <t t-else="">
                                        <div class="d-flex justify-content-center align-items-center bg-light" style="height: 250px; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                                            <span class="text-secondary">No Image Available</span>
                                        </div>
                                    </t>
                                    <div class="position-absolute top-0 start-0 m-2 d-flex flex-wrap">
                                        <t t-foreach="property.tag_ids" t-as="tag">
                                            <span class="badge bg-success me-1 mb-1"> <t t-esc="tag.name"/> </span>
                                        </t>
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-dark fw-bold"><t t-esc="property.name"/></h5>
                                    <p class="text-muted mb-2"><i class="fa fa-map-marker-alt "></i><t t-esc="property.postcode"/></p>
                                    <p class="mb-3">Expected Price: <strong class="text-primary">$<t t-esc="property.expected_price"/></strong></p>
                                    <p class="mb-3">Available From: <t t-esc="property.date_availability"/></p>
                                    <p class="mb-4 flex-grow-1">Type: <span class="badge bg-info text-dark"><t t-esc="property.property_type_id.name"/></span></p>
                                    <a t-att-href="'/property/' + str(property.id)"
                                        class="btn btn-outline-primary w-100 mt-auto">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="d-flex justify-content-center mt-4 mb-3">
                    <t t-call="website.pager"/>
                </div>
            </div>
        </t>
    </template>
</odoo>
