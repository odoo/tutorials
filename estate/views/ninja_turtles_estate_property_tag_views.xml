<?xml version="1.0"?>
<odoo>
    <record id="ninja_turtles_estate_property_tag_view_tree" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.property.tag.tag</field>
        <field name="model">ninja.turtles.estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="ninja_turtles_property_tag_view_form" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.property.tag.form</field>
        <field name="model">ninja.turtles.estate.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="action_ninja_turtles_estate_property_tag" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">ninja.turtles.estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
