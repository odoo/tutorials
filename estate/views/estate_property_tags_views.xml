<?xml version="1.0"?>
<odoo>
    <record id="estate_tag_view_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_tag_list_view" model="ir.ui.view">
        <field name="name">estate.property.tag.list</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="Property Tag List" editable="bottom">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="estate_tag_form_view" model="ir.ui.view">
        <field name="name">estate.property.tag.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
