<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Properties Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property tag
            </p><p>
                Use options specified in form to list property tag
            </p>
        </field>
    </record>

    <record id="estate_property_tags_view_list" model="ir.ui.view">
        <field name="name">estate.property.tag.list</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="Property Tags" > <!-- editable="bottom" --> 
                <field name="name"></field>
            </list>
        </field>
    </record>

</odoo>
