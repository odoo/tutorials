<?xml version="1.0"?>
<odoo>

    <record id="estate.property_tags_view_tree" model="ir.ui.view">
        <field name="name">Property Tags List</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <list string="Properties" editable="top">
                <field name="name" string="Title"/>
                <field name="color" string="Color"/>
            </list>
        </field>
    </record>


    <record id="estate.property_tags_model_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>