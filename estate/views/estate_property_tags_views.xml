<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Estate property Tags action -->
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">property tag</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property tag
            </p>
            <p>
                Use options specified in form to list property tag
            </p>
        </field>
    </record>

    <!-- List view  -->
    <record id="estate_property_tags_view_list" model="ir.ui.view">
        <field name="name">estate.property.tags</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <list string="Channel" sample="1" editable="bottom">
                <field name="name" string="Name"/>
                <field name="color" string="Color"/>
            </list>
        </field>
    </record>

</odoo>
