<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_details_template" name="Property Detail Page">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <t t-if="property.image">
                            <img t-att-src="image_data_uri(property.image)" class="img-fluid rounded shadow-sm" alt="Property Image"/>
                        </t>
                        <t t-else="">
                            <div class="d-flex justify-content-center align-items-center bg-light" 
                                 style="height: 300px; border-radius: 1rem;">
                                <span class="text-secondary">No Image Available</span>
                            </div>
                        </t>
                    </div>
                    <div class="col-md-6">
                        <h1 class="fw-bold" t-out="property.name"/>
                        <p class="fs-5 text-muted" t-out="property.description"/>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Postcode:</strong><t t-out="property.postcode"/>
                            </li>
                            <li class="list-group-item">
                                <strong>Expected Price:</strong>
                                <span class="text-success fw-bold">$<t t-out="property.expected_price"/></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Total Area:</strong><t t-out="property.total_area"/> sq ft
                            </li>
                            <li class="list-group-item">
                                <strong>Available From:</strong><t t-out="property.date_availability"/>
                            </li>
                        </ul>
                        <a href="/properties" class="btn btn-secondary mt-3">Back to Listings</a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
