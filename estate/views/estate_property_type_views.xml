<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- This is the action for Property Type -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- This is the form view for Property Type -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <h1 class="mb32">
                            <field name="name"/>
                        </h1>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- This is the list view for Property Type -->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Property Types"/>
            </list>
        </field>
    </record>
</odoo>
