<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Estate proprty type action -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">property type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property type
            </p>
            <p>
                Use options specified in form to list property type
            </p>
        </field>
    </record>


    <!-- Estate property type form view -->
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate_property_type.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="estate_property_type_form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="estate.estate_property_offer_action" type="action" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" string="Offers Made" widget="statinfo"/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" string="Name"/>
                    </h1>
                    <notebook>
                        <page name="property_list_form" string="Property">
                            <field name="property_ids">
                                <list>
                                    <field name="name" String="Title"></field>
                                    <field name="expected_price" string="Expected price"></field>
                                    <field name="status" readonly="1" string="Status"></field>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
    