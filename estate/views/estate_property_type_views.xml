<?xml version="1.0"?>
<odoo>

    <record id="estate_settings_property_type_action" model="ir.actions.act_window">
        <field name="name">Properties Settings</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- LIST VIEW -->

    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="model">estate.property.type</field>

        <field name="arch" type="xml">
            <list string="Property Type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->

    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property">
                
                <sheet>
                    <header>
                        <button name="%(estate_property_offers_action)d"
                                class="oe_stat_button"
                                icon="fa-money"
                                type="action"
                        >
                                <field name="offer_type_count"/>
                        </button>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>

                    <notebook>
                        <page description="Properties">
                            <field name="property_ids"  string="">
                                <list>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state" string="Status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
