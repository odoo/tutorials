<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- views  -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- list view  -->
    <record id="estate_property_type_views_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="property Type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- form view  -->
    <record id="estate_property_type_views_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="action"
                            name="%(estate.estate_property_offer_action)d"
                            string="Offers"
                            class="oe_stat_button">
                            <div class="o_stat_info">
                                <field name="offer_count" class="o_stat_value"/>
                                <span class="o_stat_text">Offers</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <h1>
                            <field name="name" placeholder="Property Type"/>
                        </h1>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
