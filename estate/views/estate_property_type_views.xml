<?xml version="1.0"?>
<odoo>
    <!-- Action -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>

    </record>

    <!-- List View -->
    <record id="estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">

            <list>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>


                <sheet>
                    <div>
                        <button name="%(action_estate_property_offer)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-money"
                            string="Offers"
                            context="{'search_default_property_type_id': id}">
                            <field string="Offers" name="offer_count" widget="statinfo" />
                        </button>
                    </div>

                    <group>

                        <field name="name" />
                    </group>
                    <field name="property_ids">
                        <list>
                            <field name="name" />
                            <!-- <field name="expected_price"/> -->
                            <!-- <field name="state"/> -->
                        </list>
                    </field>
                </sheet>
            </form>

        </field>
    </record>

  
    <menuitem id="estate_property_type_menu_root" name="Property Types" parent="estate_menu_root" />
    <menuitem id="estate_property_type_menu_action" action="estate_property_type_action"
        parent="estate_property_type_menu_root" />
</odoo>