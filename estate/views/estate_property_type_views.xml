<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Configuration/Estate/Property/Types Menu -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Define a new property type</p>
        </field>
    </record>

    <!-- Configuration/Estate/Property/Types List-->
    <record id="estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Configuration/Estate/Property/Types Form -->
    <record id="estate_property_type_from" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box" name="button_box" invisible="offer_count &lt;= 0">
                    <button type="action" name="%(estate.estate_property_offer_view_action)d" icon="fa-dollar" class="oe_stat_button">
                        <field string="Offers" name="offer_count" widget="statinfo"/>
                    </button>
                </div>
                <field name="name" widget="text"/>
                <notebook>
                    <page string="Properties">
                        <list>
                            <field name="property_ids"/>
                        </list>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>