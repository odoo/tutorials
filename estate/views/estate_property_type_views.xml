<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form View  -->
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property type form">
                <sheet>
                    <div name="button_box">
                        <button class="oe_stat_button" type="action" name="%(estate_property_offer_action)d" icon="fa-money" invisible="offer_count == 0">
                            <field string="Offers" name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" />
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" readonly="1">
                                <list>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price" string="Expected Price"/>
                                    <field name="state" string="State"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="estate_property_type_view_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>

