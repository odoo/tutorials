<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <!-- This is the action for stat button-->
    <record id="action_property_type_offers" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_id.property_type_id', '=', active_id)]</field>
        <field name="context">{'default_property_id.property_type_id': active_id}</field>
    </record>

    <!-- This is the action for Property Type -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- This is the form view for Property Type -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <!-- Stat Button Section -->
                     <div class="oe_button_box" name="button_box">
                        <button name="%(action_property_type_offers)d"
                            type="action"
                            icon="fa-money"
                            string="Offers"
                            class="oe_stat_button">
                            <field name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <div>
                                <field name="property_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- This is the list view for Property Type -->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Property Types"/>
            </list>
        </field>
    </record>
</odoo>
