<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.types.list</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="estate_properties_types_form" model="ir.ui.view">
        <field name="name">estate.property.types.form</field>
        <field name="model">estate.property.types</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Property Types">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer_action)d" type="action" string="Offers" icon="fa-envelope" context="{'default_property_type_id': id}" class="oe_stat_button">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
