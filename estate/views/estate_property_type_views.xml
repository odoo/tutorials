<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View for Property Types -->
    <record id="view_estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View for Property Type with Related Properties -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="o_stat_btn_box">
                        <button name="%(action_estate_property_offer)d" type="action"
                                class="oe_stat_button o_stat_btn_with_border" icon="fa-money">
                            <field name="offer_count" widget="statinfo" string=" Offers"/>
                        </button>
                    </div>
                     <h1>
                        <field name="name" nolabel="1"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list editable="bottom">
                                    <field name="name" string="Name"/>
                                    <field name="expected_price" width="100%"/>
                                    <field name="state" string="Status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
