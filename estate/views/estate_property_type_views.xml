<odoo>
    <!-- Action -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active_filter': True}</field>
    </record>

    <!-- List View -->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="offer_ids" string="Properties"/>
                <field name="offer_count" string="Offers"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(estate.action_estate_property_offer)d" class="oe_stat_button" icon="fa-envelope">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <!-- <page string="Offers">
                            <field name="offer_ids">
                                <list>
                                    <field name="offer_price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_estate_property_type_search" model="ir.ui.view">
        <field name="name">estate.property.type.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Active" name="active_filter" domain="[('status','=','active')]"/>
            </search>
        </field>
    </record>
</odoo>