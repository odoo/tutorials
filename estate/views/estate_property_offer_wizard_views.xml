<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_estate_property_offer_wizard" model="ir.actions.act_window">
        <field name="name">Create Offer</field>
        <field name="res_model">estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="estate_property_offer_wizard_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.wizard.view.form</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer Form View">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
