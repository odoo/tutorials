<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_detail_template" name="Property Detail Page">
        <t t-call="website.layout">
            <t t-set="title" t-value="property.name"/>

            <div class="container mt-5">
                <div class="row">
                    <!-- Left Section: Property Image -->
                    <div class="col-md-8 position-relative">
                        <div class="ratio ratio-16x9">
                            <img t-if="property.image_upload"
                                t-att-src="'/web/image/estate.property/' + str(property.id) + '/image_upload'"
                                class="img-fluid rounded"
                                style="max-height: 600px; object-fit: cover; border-radius: 10px;"
                                alt="Property Image"/>

                            <img t-elif="property.image_url"
                                t-att-src="property.image_url"
                                class="img-fluid rounded w-100 h-100"
                                style="object-fit: cover;"
                                alt="Property Image"/>
                        </div>
                    </div>

                    <!-- Right Section: Property Details -->
                    <div class="col-md-4">
                        <h2 class="mb-3">
                            <t t-esc="property.name"/>
                        </h2>
                        <p class="text-muted">
                            <t t-esc="property.description"/>
                        </p>

                        <div class="mt-3 mb-3">
                            <t t-if="property.tag_type_ids">
                                <t t-foreach="property.tag_type_ids" t-as="tag">
                                    <span class="badge bg-primary me-2">
                                        <t t-esc="tag.name"/>
                                    </span>
                                </t>
                            </t>
                        </div>

                        <p><strong>Expected Price:</strong> ₹<t t-esc="property.expected_price"/></p>
                        <t t-if="property.selling_price">
                            <p><strong>Selling Price:</strong> ₹<t t-esc="property.selling_price"/></p>
                        </t>
                        <p><strong>Best Offer Price:</strong> ₹<t t-esc="property.best_price"/></p>

                        <!-- Property Status Badge -->
                        <p>
                            <strong>Status:</strong>
                            <span t-if="property.state == 'new'"
                                style="background-color: #007bff; color: white; padding: 3px 6px; border-radius: 4px;">
                                New</span>
                            <span t-if="property.state == 'offer_received'"
                                style="background-color: #ffc107; color: black; padding: 3px 6px; border-radius: 4px;">Offer
                                Received</span>
                            <span t-if="property.state == 'offer_accepted'"
                                style="background-color: #28a745; color: white; padding: 3px 6px; border-radius: 4px;">Offer
                                Accepted</span>
                            <span t-if="property.state == 'sold'"
                                style="background-color: #dc3545; color: white; padding: 3px 6px; border-radius: 4px;">
                                Sold</span>
                            <span t-if="property.state == 'cancelled'"
                                style="background-color: #6c757d; color: white; padding: 3px 6px; border-radius: 4px;">
                                Cancelled</span>
                        </p>
                        <p>
                            <strong>Availability Date:</strong>
                            <t t-esc="property.availability_date"/>
                        </p>
                    </div>
                </div>

                <!-- Property Specifications Table -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>Living Area</strong>
                                    </td>
                                    <td><t t-esc="property.living_area"/> sqm</td>
                                </tr>
                                <t t-if="property.garden">
                                    <tr>
                                        <td>
                                            <strong>Garden Area</strong>
                                        </td>
                                        <td><t t-esc="property.garden_area"/> sqm</td>
                                    </tr>
                                </t>
                                <tr>
                                    <td>
                                        <strong>Total Area</strong>
                                    </td>
                                    <td><t t-esc="property.total_area"/> sqm</td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Bedrooms</strong>
                                    </td>
                                    <td>
                                        <t t-esc="property.bedrooms"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Facades</strong>
                                    </td>
                                    <td>
                                        <t t-esc="property.facades"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Garage</strong>
                                    </td>
                                    <td>
                                        <t t-if="property.garage">Yes</t>
                                        <t t-else="">No</t>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Seller</strong>
                                    </td>
                                    <td>
                                        <t t-esc="property.seller_id.name"/>
                                    </td>
                                </tr>
                                <t t-if="property.state == 'sold'">
                                    <tr>
                                        <td>
                                            <strong>Buyer</strong>
                                        </td>
                                        <td>
                                            <t t-esc="property.buyer_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
