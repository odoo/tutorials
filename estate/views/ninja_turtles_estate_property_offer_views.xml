<?xml version="1.0"?>
<odoo>
    <!-- List view for offers -->
    <record id="ninja_turtles_estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.property.type.list</field>
        <field name="model">ninja.turtles.estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_type_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form view for offers -->
    <record id="ninja_turtles_estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.property.offer.form</field>
        <field name="model">ninja.turtles.estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                </group>
                <!-- TODO: why I'm I adding this? should it be removed?-->
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>