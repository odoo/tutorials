<?xml version="1.0"?>
<odoo>
    <record id="property_type_action_model" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">property_type</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="property_type_list" model="ir.ui.view">
        <field name="name">Property Type List</field>
        <field name="model">property_type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="property_type_form" model="ir.ui.view">
        <field name="name">Property Type Forms</field>
        <field name="model">property_type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name" placeholder="Property Type"/>
                    <list>
                        <field name="property_ids"/>
                    </list>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
