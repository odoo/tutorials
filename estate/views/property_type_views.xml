<?xml version="1.0"?>
<odoo>
    <record id="property_type_action_model" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="property_type_list" model="ir.ui.view">
        <field name="name">Property Type List</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="property_type_form" model="ir.ui.view">
        <field name="name">Property Type Forms</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate.property_offer_action_model)d" type="action" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>

                    </div>
                    <field name="name" placeholder="Property Type"/>
                    <field name="property_ids"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
