<odoo>
    <record id="property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>  <!-- Name to show in the UI -->
        <field name="res_model">property.type</field>  <!-- Model name should be correct -->
        <field name="view_mode">list,form,search</field>
    </record>


    <!--    Property type list view-->
    <record id="property_type_view_list" model="ir.ui.view">
        <field name="name">property.type.list</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- property type form view -->
    <record id="property_type_view_form" model="ir.ui.view">
        <field name="name">property.type.form</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate.property_offers_action)d" type="action"
                                class="oe_stat_button" icon="fa-star">
                            <div class="o_stat_info">
                                <field name="offer_count" class="o_stat_value"/>
                                <span class="o_stat_text">Offers</span>
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
