<?xml version="1.0"?>
<odoo>
    
    <!-- Action to see the property -->
    <record id="property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Action to see the offers -->
    <record id="action_type_offers" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="context">{'default_property_type_id': active_id}</field>
    </record>

    <record id="estate_type_view_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="estate.action_type_offers"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-book">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <group>
                                <field name="property_type_ids" string="Types">
                                    <list>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids"/>
                                <field name="offer_count"/>
                            </group>
                        </page>
                    </notebook>     
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_type_view_tree" model="ir.ui.view">
        <field name="name">estate.type.tree</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>
</odoo>
