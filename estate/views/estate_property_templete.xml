<odoo>
    <template id="estate_property_template">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
                    <h1 class="fw-bold">Available Properties</h1>
                    <form method="get" action="/properties" class="d-flex">
                        <input type="date" name="listed_date" class="form-control" t-att-value="listed_date" />
                        <button type="submit" class="btn btn-primary ms-2">Listed After</button>
                    </form>
                </div>

                <t t-if="properties">
                    <div class="row g-4">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm rounded-3 h-100 d-flex flex-column">
                                    <img t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                        class="card-img-top rounded-top" alt="Property Image" />
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title text-truncate"
                                            style="max-width: 100%; font-size: 1.25rem; font-weight: 600;">
                                            <t t-esc="property.name" />
                                        </h5>
                                        <p class="text-muted flex-grow-1">
                                            <t t-esc="property.description[:100] + ('...' if len(property.description) > 100 else '')" />
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center mt-auto">
                                            <a t-att-href="'/property/' + str(property.id)"
                                                class="btn btn-info fw-bold">View Details</a>
                                            <span class="fw-bold text-primary fs-5">₹ <t t-esc="property.expected_price" /></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <div t-if="pager" class="d-flex justify-content-center mt-4">
                        <t t-call="website.pager" />
                    </div>
                </t>
                <t t-else="">
                    <p class="text-center text-muted mt-4">No properties available at the moment.</p>
                </t>
            </div>
        </t>
    </template>


    <template id="property_details_template">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5 p-4 bg-light rounded shadow">
                <div class="row g-4 align-items-start">
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm">
                            <img
                                t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                class="card-img-top rounded" alt="Property Image" />
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <h1 class="fw-bold mb-3">
                            <t t-esc="property.name" />
                        </h1>

                        <div class="mb-3">
                            <span class="fs-4 fw-bold text-primary">₹ <t t-esc="property.expected_price" /></span>
                        </div>

                        <p class="text-muted">
                            <t t-esc="property.description" />
                        </p>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <strong>Property Type:</strong>
                                <t t-esc="property.property_type_id.name" />
                            </div>
                            <div class="col-md-6">
                                <strong>Bedrooms:</strong>
                                <t t-esc="property.bedrooms" />
                            </div>
                            <div class="col-md-6">
                                <strong>Living Area:</strong> <t t-esc="property.living_area" /> sqft </div>
                            <div class="col-md-6">
                                <strong>Garden Area:</strong> <t t-esc="property.garden_area" /> sqft </div>
                            <div class="col-md-6">
                                <strong>State:</strong>
                                <t t-esc="property.state" />
                            </div>
                            <div class="col-md-6">
                                <strong>Postcode:</strong>
                                <t t-esc="property.postcode" />
                            </div>
                            <div class="col-md-6">
                                <strong>Available From:</strong>
                                <t t-esc="property.date_availability" />
                            </div>
                            <div class="col-md-6">
                                <strong>Best Price:</strong> ₹ <t t-esc="property.best_price" />
                            </div>
                            <div class="col-md-6">
                                <strong>Final Selling Price:</strong> ₹ <t t-esc="property.selling_price" />
                            </div>
                        </div>

                        <div class="mt-3">
                            <strong>Property Tags:</strong>
                            <t t-foreach="property.property_tag_ids" t-as="tag">
                                <span class="badge bg-info text-dark me-1">
                                    <t t-esc="tag.name" />
                                </span>
                            </t>
                        </div>

                        <a href="mailto:agent@example.com" class="btn btn-success btn-lg mt-4 w-100">
                            Contact Agent
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="menu_properties" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="parent_id" ref="website.main_menu" />
    </record>
</odoo>
