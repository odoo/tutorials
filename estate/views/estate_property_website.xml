<odoo>
    <template id="property_listing_template" name="Property Listing">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <!-- Loop through properties and display each one -->
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="property-card">
                                <t t-if="property.image">
                                    <img
                                        t-att-src="'/web/image/estate.property/%s/image' % property.id"
                                        class="card-img-top img-fluid" alt="Property Image" />
                                </t>
                            </div>
                        </div>
                    </t>
                    <h3>
                        <t t-esc="property.name" />
                    </h3>
                    <p>
                        <t t-esc="property.description" />
                    </p>
                    <p>Price: <t t-esc="property.price" /></p>
                    <p>Status: <t t-esc="property.state" /></p>
                </div>

