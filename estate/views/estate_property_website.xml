<odoo>
    <template id="property_list_template" name="Property Listing">
        <t t-call="website.layout">
            <div class="container">
            <br></br>
                <h2 class="text-center mb-4">Available Properties</h2>

                <!-- Filter Form: Date Picker for 'Listed After' -->
                <div class="row mb-4">

                    <!-- Date Filter on the Left -->
                    <div class="col-md-6">
                        <form method="GET" action="/properties" class="d-flex">
                            <input type="date" name="listed_after" class="form-control w-50"
                                t-att-value="listed_after if listed_after else ''" />
                            <button type="submit" class="btn btn-primary ms-2">Listed After</button>
                        </form>
                    </div>

                    <!-- Search Bar on the Right -->
                    <div class="col-md-6 d-flex justify-content-end">
                        <form method="GET" action="/properties" class="d-flex">
                            <input type="text" name="search" class="form-control w-50"
                                placeholder="Enter property name..."
                                t-att-value="search if search else ''" />
                            <button type="submit" class="btn btn-primary ms-2">Search</button>
                        </form>
                    </div>

                </div>


                <div class="row mb-4">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <t t-if="property.image">
                                    <img
                                        t-att-src="'/web/image/estate.property/%s/image' % property.id"
                                        class="card-img-top img-fluid" alt="Property Image" />
                                </t>
                                <div class="card-body">
                                    <h3 class="card-title">
                                        <t t-esc="property.name" />
                                    </h3>
                                    <p class="card-text">
                                        <t t-esc="property.description" />
                                    </p>
                                    <p><strong>Price:</strong> $<t t-esc="property.expected_price" /></p>
                                    <p>
                                        <strong>Status:</strong>
                                        <t t-esc="property.state" />
                                    </p>
                                    <a t-att-href="'/property/%s' % property.id"
                                        class="btn btn-primary">
                                        View Details â†’
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Pagination: Odoo Website Pager -->
                <div class="row mt-4">
                    <div class="col d-flex justify-content-center">
                        <t t-call="website.pager">
                            <t t-set="pager" t-value="pager" />
                        </t>
                    </div>
                </div>
                <br />
            </div>
        </t>
    </template>
</odoo>
