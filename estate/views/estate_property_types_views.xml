<?xml version="1.0"?>
<odoo>
    <record id="test_model_ptypes_view_form" model="ir.ui.view">
        <field name="name">test.model.ptypes.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(test_model_offer_action)d" type="action" class="oe_stat_button" icon="fa-money">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="offer_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Offers
                                </span>
                            </div>
                        </button>
                    </div>
                    <h1><field name="name"/></h1>
                    <group>        
                        <field name="property_ids" string="Properties">
                            <list>
                                <field name="name"/>
                                <field name="expected_price"/>
                                <field name="state"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_model_ptypes_view_list" model="ir.ui.view">
        <field name="name">test.model.ptypes.view.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type = "xml">
            <list multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="name"/>
                <field name="offer_ids"/>
                <field name="offer_count"/>
            </list>
        </field>
    </record>

    <record id="test_model_ptypes_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
