<odoo>
    <record id="estate_property_types_view_list" model="ir.ui.view">
        <field name="name">Estate property List View</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <list string="estate type list">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="estate_property_types_view_form" model="ir.ui.view">
        <field name="name">Estate property Form view</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <form string="estate type form">
                <sheet>
                <div class="oe_button_box" name="button_box">
                    <button type="action" name="estate.estate_property_offer_action" class="oe_stat_button" icon="fa-money">
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="offer_count"/>
                            </span>
                            <span class="o_stat_text">
                                Offers
                            </span>
                        </div>
                    </button>
                </div>
                    <h1>
                        <field name="name" string="Title"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list string="estate form">
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_types_menu_actions" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an property type to start playing.
            </p>
        </field>
    </record>
</odoo>
