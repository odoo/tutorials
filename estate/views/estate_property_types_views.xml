<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">House</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- list view -->
    <record id="estate_property_types_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="House">
                <field name="name"></field>
            </list>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_types_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="House">
                <group>
                    <h1>
                        <field name="name"/>
                    </h1>
                </group>
            </form>
        </field>
    </record>

</odoo>
