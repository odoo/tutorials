<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">House</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- list view -->
    <record id="estate_property_types_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_types_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offers_action)d"
                            class="oe_stat_button"
                            type="action"
                            icon="fa-dollar"
                            string="Offers">
                            <field name="offer_count" widget="statinfo" />
                        </button>
                    </div>
                    
                <group>
                    <h1>
                        <field name="name"/>
                    </h1>
                </group>

                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name" />
                                    <field name="expected_price" />
                                    <field name="state" string="Status" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
