<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_types_view_form" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <group>
                                <field name="property_ids" nolabel="1">
                                    <list>
                                        <field name="name" width="200" />
                                        <field name="expected_price" width="200" />
                                        <field name="state" string="Status" width="200" />
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_types_view_tree" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <list string="Types">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="estate_property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
