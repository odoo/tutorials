<?xml version="1.0"?>
<odoo>

     <!-- estate property type action-->
    <record id="estate_property_type_action" model="ir.actions.act_window"> <!--Id of the action-->
        <field name="name">Property Types</field> <!--name of action-->
        <field name="res_model">estate.property.type</field> <!--models reference models/estate_property_type.py > _name-->
        <field name="view_mode">list,form</field> <!-- shows default list, form, kanban views-->
    </record>

    <record id="estate_property_type_view_list" model="ir.ui.view">
        <field name="name">Estate Property type List View</field> 
        <field name="model">estate.property.type</field> <!--model name-->
        <field name="arch" type="xml">
            <list> 
                <!--fields to show as a colomn in list view-->
                <field name="name" string="Name"/>
                <field name="sequence" widget="handle" /> <!-- widget=handle is used to reorder the sequence in list view-->
            </list>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">Estate Property type Form View</field> 
        <field name="model">estate.property.type</field> <!--model name-->
        <field name="arch" type="xml">
            <form> 
                <sheet> 
                    <div class="oe_button_box oe_right">
                        <!-- <button name="get_all_property_offers_related" class="oe_stat_button" icon="fa-money tet" type="object" >
                            12
                            Offer
                        </button> -->
                    </div>
                    <field name="name" string="Name"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
