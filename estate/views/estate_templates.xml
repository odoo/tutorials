<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate.my_template">
        <h1>Hello, <t t-out="my_variable"/>!</h1>
    </template>

   <template id="estate.property_list_view" name="Property List View">
        <t t-call="website.layout">
        <link rel="stylesheet" type="text/css" href="/estate/static/src/scss/property_css.css"/>
            <div class="container mt-5">
                <h1 class="text-center">Property Details</h1>
                <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
                    <t t-foreach="properties" t-as="property" t-key="property.id">
                        <div class="col">
                            <div class="card h-100 property-card">
                                <t t-if="property.image">
                                    <img t-att-src="image_data_uri(property.image)" 
                                        class="card-img-top" alt="Property Image" 
                                        style="max-height: 200px; object-fit: cover;"/>
                                </t>
                                <t t-else="">
                                    <img t-att-src="'/estate/static/src/img/placeholder.png'" 
                                        class="card-img-top" alt="No Image Available" 
                                        style="max-height: 200px; object-fit: cover;"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="property.name" /></h5>
                                    <p class="card-text text-muted">
                                        <span class="price">₹<t t-esc="property.expected_price" /></span><br/>
                                        <span class="type">Type: <t t-esc="property.property_type_id.name" /></span><br/>
                                        <span class="status">Status: <t t-esc="property.status" /></span>
                                    </p>
                                </div>
                                <div class="card-footer text-center">
                                    <a t-att-href="'/estate/property/%s' % property.id"  class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_page" name="Property Detail Page">
        <t t-call="website.layout">
            <div class="container mt-5">

                <t t-if="request.params.get('error_message')">
                    <div class="alert alert-danger" role="alert">
                        <t t-esc="request.params.get('error_message')" />
                    </div>
                </t>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <t t-if="property.status not in ['sold', 'cancelled']">
                            <a t-att-href="'/estate/property/%s/sold' % property.id" 
                            class="btn btn-success me-2">Mark as Sold</a>
                            <a t-att-href="'/estate/property/%s/cancelled' % property.id" 
                            class="btn btn-danger">Cancelled</a>
                        </t>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <img t-att-src="image_data_uri(property.image)" 
                            class="img-fluid rounded shadow" 
                            alt="Property Image" 
                            style="max-height: 400px; object-fit: cover; width: 100%;"/>
                    </div>

                    <div class="col-md-6">
                        <h1 class="mb-3"><t t-esc="property.name" /></h1>
                        <p><strong>Price:</strong> ₹<t t-esc="property.expected_price" /></p>
                        <p><strong>Selling Price:</strong> ₹<t t-esc="property.selling_price or 'N/A'" /></p>
                        <p><strong>Best Offer:</strong> ₹<t t-esc="max(property.offer_ids.mapped('price') or [0])" /></p>
                        <p><strong>Type:</strong> <t t-esc="property.property_type_id.name" /></p>
                        <p><strong>Status:</strong> <t t-esc="property.status" /></p>
                        <p><strong>Description:</strong></p>
                        <p><t t-esc="property.description" /></p>
                        <a href="/estate/property" class="btn btn-primary mt-3">Back to Listings</a>
                    </div>
                </div>

                <div class="mt-5">
                    <h3>Offers</h3>
                    <t t-if="property.offer_ids">
                        <table class="table table-hover table-striped table-bordered mt-3 shadow-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center">Partner</th>
                                    <th class="text-center">Offer Price</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Deadline</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="property.offer_ids" t-as="offer">
                                    <tr>
                                        <td class="text-center"><t t-esc="offer.partner_id.name" /></td>
                                        <td class="text-center">₹<t t-esc="offer.price" /></td>
                                        <td class="text-center">
                                            <span t-att-class="'badge ' + ('bg-success' if offer.status == 'accepted' else 'bg-danger' if offer.status == 'refused' else 'bg-secondary')">
                                                <t t-esc="dict(accepted='Accepted', refused='Refused').get(offer.status, 'Pending')" />
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="offer.deadline.strftime('%Y-%m-%d') if offer.deadline else 'N/A'" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <p>No offers available for this property.</p>
                    </t>
                </div>
            </div>
        </t>
    </template>

</odoo>
