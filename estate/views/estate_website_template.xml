<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="list_properties_template" name="list properties">
        <t t-call="web.frontend_layout" class="my-6">
            <h3 class="text-center m-4 text-primary">Properties</h3>
            <form method="get" action="/properties">
                        <div class="row justify-content-center py-2">
                            <div class="col-md-4 d-flex">
                                <input type="date" name="date_listed" class="form-control"/>
                                <button type="submit" class="btn btn-primary">Listed After</button>
                            </div>
                        </div>
            </form>
            <t t-if="not properties">
                <div class="oe_structure">
                     <h1 class="text-center">Nothing to display</h1>
                </div>
            </t>
            <t t-if="properties">
                <div class="container">
                    <div class="row">

                        <t t-foreach="properties" t-as="property">
                            <div class="col-12 col-sm-6 col-md-4">

                                <div class="card m-2 shadow">
                                    <img  t-att-src="'/web/image/estate.property/' + str(property.id) + '/image'" class="card-img-top" alt="..."/>
                                    <div class="card-body">
                                    <h5 class="card-title"><t t-esc="property.name"/></h5>
                                    <p class="card-text">₹ <span t-field="property.expected_price"/></p>
                                    <a t-att-href="'/properties/%s' % property.id" class="btn btn-primary">More Details</a>
                                </div>
                                </div>

                            </div>
                        </t>

                    </div>
                    <div t-if="pager" class="o_portal_pager d-flex justify-content-center m-4">
                            <t t-call="website.pager"/>
                    </div>
                </div>
            </t>

        </t>
    </template>

    <template id="property_detail_template" name="properties details">
            <t t-call="web.frontend_layout" class="my-6">
                <h3 class="text-center m-4 text-primary">Property Details</h3>
                <t t-if="not property">
                    <div class="oe_structure">
                        <h1 class="text-center">Nothing to display</h1>
                    </div>
                </t>
                <t t-if="property">
                    <div class="container">

                        <div class="card my-3 shadow">
                            <div class="row g-0">
                                <div class="col-md-4">
                                <img t-att-src="'/web/image/estate.property/' + str(property.id) + '/image'" class="img-fluid rounded-start" alt="property_img"/>
                                </div>
                                <div class="col-md-8">
                                <div class="card-body mx-4">
                                    <h3 class="card-title"><t t-esc="property.name"/></h3>
                                    <h3 class="card-title">₹ <span t-field="property.expected_price"/> </h3>
                                    <p class="card-text"><t t-esc="property.description"/></p>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <strong>Property Type:</strong> <t t-esc="property.property_type_id.name"/>
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Property Tags:</strong>
                                            <t t-foreach="property.tag_ids" t-as="tag">
                                                <span class="badge text-bg-info"><t t-esc="tag.name"/></span>
                                            </t>
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Bedrooms:</strong>
                                            <t t-esc="property.bedrooms" />
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Living Area:</strong> <t t-esc="property.living_area" /> sqft
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Garden Area:</strong> <t t-esc="property.garden_area" /> sqft
                                        </li>
                                        <li class="list-group-item">
                                            <strong>State:</strong>
                                            <t t-esc="property.state" />
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Postcode:</strong>
                                            <t t-esc="property.postcode" />
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Available From:</strong>
                                            <t t-esc="property.date_availability" />
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Best Price:</strong> ₹ <t t-esc="property.best_price" />
                                        </li>
                                        <li class="list-group-item">
                                            <strong>Final Selling Price:</strong> ₹ <t t-esc="property.selling_price" />
                                        </li>
                                    </ul>

                                </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </t>

            </t>
    </template>

    <record id="menu_properties" model="website.menu">
            <field name="name">Properties</field>
            <field name="url">/properties</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">60</field>
    </record>
</odoo>
