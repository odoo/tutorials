<odoo>
    <template id="property_listing_page" name="Estate Property Listing">
        <t t-call="web.layout">
            <div class="container">
                <h2>Estate Properties</h2>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h2 class="card-title">
                                        <t t-esc="property.name"/>
                                    </h2>
                                    <p class="card-text">
                                        <strong>Price:</strong>
                                        <t t-esc="property.expected_price"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_page" name="Property Detail View">
        <t t-call="web.layout">
            <div class="container my-5">
                <!-- Title -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="text-primary">
                        <t t-esc="property.name" />
                    </h1>
                </div>
                <!-- Basic Property Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>
                                    <i class="fa fa-map-marker-alt text-danger"></i> Postcode:</strong>
                                <span>
                                    <t t-esc="property.postcode" />
                                </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>
                                    <i class="fa fa-calendar-alt text-primary"></i> Date Availability:</strong>
                                <span>
                                    <t t-esc="property.date_availability" />
                                </span>
                            </li>

                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>
                                    <i class="fa fa-dollar-sign text-warning"></i> Expected Price:</strong>
                                <span class="text-success fw-bold">
                                    <t t-esc="property.expected_price" />
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
