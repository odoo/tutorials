<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="message_temp" name="message show">
        <t t-call="web.frontend_layout">
            <div>
                <div class="oe_structure">
                     <h1 class="container mt32"><t t-esc="message"/></h1>
                </div>
            </div>
        </t>
    </template>

    <template id="list_properties_template" name="list properties">
        <t t-call="web.frontend_layout" class="my-6">
            <h3 class="text-center m-4">Properties</h3>
            <t t-if="not properties">
                <div class="oe_structure">
                     <h1 class="text-center">Nothing to display</h1>
                </div>
            </t>
            <t t-if="properties">
                <div class="container">
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-12 col-sm-6 col-md-4">

                                <div class="card m-2 shadow-md">
                                    <img  t-att-src="'/web/image/estate.property/' + str(property.id) + '/image'" class="card-img-top" alt="..."/>
                                    <div class="card-body">
                                    <h5 class="card-title"><t t-esc="property.name"/></h5>
                                    <p class="card-text"><t t-esc="property.expected_price"/> ₹</p>
                                    <a t-att-href="'/properties/%s' % property.id" class="btn btn-primary">More Details</a>
                                </div>
                                </div>

                            </div>
                        </t>
                    </div>
                </div>
            </t>

        </t>
    </template>

    <template id="property_detail_template" name="properties details">
            <t t-call="web.frontend_layout" class="my-6">
                <h3 class="text-center m-4">Property Details</h3>
                <t t-if="not property">
                    <div class="oe_structure">
                        <h1 class="text-center">Nothing to display</h1>
                    </div>
                </t>
                <t t-if="property">
                    <div class="container">

                        <div class="card m-2 shadow-md">
                            <img  t-att-src="'/web/image/estate.property/' + str(property.id) + '/image'" class="card-img-top" alt="..."/>
                            <div class="card-body">
                            <h5 class="card-title"><t t-esc="property.name"/></h5>
                            <p class="card-text"><t t-esc="property.expected_price"/> ₹</p>
                        </div>
                        </div>

                    </div>
                </t>

            </t>
    </template>

    <record id="menu_properties" model="website.menu">
            <field name="name">Properties</field>
            <field name="url">/properties</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">60</field>
    </record>
</odoo>
