<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list</field>
        <!-- domain to call fields only those are accepted and refused -->
        <field name="domain">[('status', 'in', ('accepted', 'refused'))]</field>
    </record>

    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate_property_offer_list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-success="status == 'accepted'"
                decoration-danger="status == 'refused'">
                <field name="price" />
                <field name="partner_id" string="Partner" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_set_status_accepted" type="object"
                    class="oe_stat_button" icon="fa-check" title="Accepted"
                    invisible="status in ('accepted','refused')" />
                <button name="action_set_status_refused" type="object"
                    class="oe_stat_button" icon="fa-remove" title="Refused"
                    invisible="status in ('accepted','refused')" />
                <!-- column_invisible field  -->
                <field name="status" column_invisible="1" />
            </list>
        </field>
    </record>
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer_form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Create Offer">
                <group>
                    <field name="price" />
                    <field name="partner_id" string="Partner" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <field name="status" />
                </group>
            </form>
        </field>
    </record>

</odoo>
