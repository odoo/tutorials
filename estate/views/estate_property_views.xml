<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Real Estate </field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_state': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create a Property in your Records.
            </p><p>
              Odoo helps you track all your records.
            </p>
          </field>
    </record>


    <!-- showing column headings -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field> 
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Real Estate" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state in ('offer_accepted')" decoration-muted="state in ('sold')">
                <field name="name"/>
                <field name="postcode" string="Postcode"/>
                <field name="property_type_id"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="state" invisible="1" column_invisible="True"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" archivable="false" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle"><field name="expected_price"/></span>
                            </div>
                            <div>
                              <field name="tag_ids"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- showing forms in records -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Properties">
                <header>
                    <button name="sold_button" class="oe_highlight" type="object" string="SOLD" invisible=" state =='sold' or state =='canceled'" />
                    <button name="cancel_button" type="object" string="CANCEL" invisible=" state =='sold' or state =='canceled'"/>
                    <button name="%(estate_property_tag_action)d" type="action" string="Tags"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <field name="tag_ids" string="Tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create_edit': True, 'no_create':True}"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From" options="{'hide_label': true}"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group> 
                    <notebook>

                        <!-- Description Tab -->
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="state"/>
                                <!-- <field name="property_type_id"/> -->
                                <field name="total_area"/>
                            </group>
                        </page>

                        <!-- Offers Tab -->
                        <page string="Offers">
                            <sheet>
                                <field name="offer_ids" readonly="state == 'offer_accepted' or state =='sold' or state =='canceled'">
                                    <tree open_form_view="True" editable="True" decoration-success="status in ('accepted')" decoration-danger="status in ('refused')">
                                        <field name="price"/>
                                        <field name="partner_id" string="Partner"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <button name="action_refuse_offer" type="object" string="Refuse" icon="fa-close" title="Refuse Offer"/>
                                        <button name="action_accept_offer" type="object" string="Accept" icon="fa-check" title="Accept Offer"/>
                                        <field name="status" string="Status"/>
                                    </tree>
                                    <!-- <form>
                                        <group>
                                            <field name="partner_id" string="Partner"/>
                                            <field name="price"/>
                                            <field name="status" string="Status"/>
                                            <field name="validity"/>
                                            <field name="date_deadline"/>
                                        </group>
                                    </form> -->
                                </field>
                            </sheet>
                        </page>

                        <!-- Others Info Tab -->
                        <page string="Other Info">
                            <group>
                                <field name="seller_id"/>
                                <field name="buyer_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="offer_ids"/>
                    <field name="seller_id"/>
                    <field name="buyer_id"/>
                </div> -->
                <!-- <div class="o_attachment_preview"/> -->
            </form>
        </field>
    </record>

    <!-- for search -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Data">

                <!-- Search tab -->
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="facades" string="Facades"/>
                <field name="property_type_id"/>
                <!-- Adding filters -->
                <filter string="Include archived" name="archived" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <!-- <filter string="Available" name="state" domain="[state in ('offer_received', 'offer_accepted')]"/>
                <separator/> -->
                <!-- <filter string="Selling Price" name="selling_price" domain="[('living_area', '&gt;', 15000)]"/> -->
                <field name="living_area" string ="Living Area(sqm)" filter_domain="[('living_area', '&gt;', self)]"/>

                <separator/>
                <!-- <filter string="Sold" name="state" domain="[('state', '=', 'sold')]"/>
                <separator/> -->
                <filter string="Available" name="state" domain="['|',('state', '=', 'new'), ('state', '=', 'offer_received')]"/>

                <!-- Added groups -->
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
