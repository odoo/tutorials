<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-muted="state == 'sold'"
                decoration-info="state == 'offer_received'"
                decoration-success="state == 'offer_accepted'"
                decoration-bf="state == 'offer_accepted'">
                <header>
                    <button name="%(estate_property_offer_wizard_action)d" type="action" string="Add Offer"/>
                </header>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="living_area"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <header>
                        <button name="action_sell_property" type="object" string="Sell" class="btn-primary"
                            invisible="state == 'sold' or state == 'cancelled'"/>
                        <button name="action_cancel_property" type="object" string="Cancel"
                            invisible="state == 'sold' or state == 'cancelled'"/>
                        <field name="state" widget="statusbar"
                            statusbar_visible="new,offer_received, offer_accepted, sold"/>
                    </header>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags"
                            options="{'color_field' : 'color'}"/>
                    </group>
                    <group>
                        <group>
                            <field string="Property Type" name="property_type_id"
                                options="{'no_create': true}"/>
                            <field string="Postcode" name="postcode"/>
                            <field string="Date Availability" name="date_availability"/>
                        </group>
                        <group>
                            <field string="Expected Price" name="expected_price"/>
                            <field string="Selling Price" name="selling_price"/>
                            <field string="Best offer" name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field string="Description" name="description"/>
                                    <field string="Bedrooms" name="bedrooms"/>
                                    <field string="Living Area" name="living_area"/>
                                    <field string="Facades" name="facades"/>
                                    <field string="Total Area" name="total_area"/>
                                </group>
                                <group>
                                    <field string="Garage" name="garage"/>
                                    <field string="Garden" name="garden"/>
                                    <field string="Garden orientation" name="garden_orientation"
                                        invisible="not garden"/>
                                    <field string="Garden Area" name="garden_area"
                                        invisible="not garden"/>
                                    <field string="Active" name="active"/>
                                    <field string="Company" name="company_id"/>
                                </group>
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="state == 'offer_accepted' or state == 'sold' or state == 'cancelled'"/>
                        </page>

                        <page string="Other info">
                            <group>
                                <field string="Salesperson" name="salesperson_id"/>
                                <field string="Buyer" name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"
                    filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades" string="Facades"/>
                <filter name="Available"
                    domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name="Budget Friendly"
                    domain="['&amp;', ('expected_price', '&lt;', 10000), '|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="Postcode" name="postcode_group" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div>
                            <h2>
                                <field name="name" />
                            </h2>
                            <div> Expected Price: 
                                <field name="expected_price" string="Expected Price"/>
                            </div>
                            <div>
                                <t t-if="record.state.raw_value == 'offer_received'"> Best Price: 
                                    <field name="best_price" string="Best Price"/>
                                </t>
                            </div>
                            <div>
                                <t t-if="record.state.raw_value == 'sold'"> Selling Price: 
                                    <field name="selling_price"/>
                                </t>
                            </div>
                            <div>
                                <field name="tag_ids"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">
            {
            "search_default_Available":1
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new property!
            </p>
            <p>
                Click on "New" to create a brand new listing.
            </p>
        </field>
    </record>
</odoo>
