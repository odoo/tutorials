<odoo>
        <record id="estate_property_id" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_available': 1}</field>
        </record>

        <record id="estate_property_type_id" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form</field>
        </record>

         <record id="estate_property_tag_id" model="ir.actions.act_window">

            <field name="name">Property Tag</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">list,form</field>
        </record>

         <record id="estate_property_detail_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Channel"   decoration-success="state in ('offer_received', 'offer_accepted')" 
                    decoration-bf="state == 'offer_accepted'" 
                    decoration-muted="state == 'sold'">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                     <field name="living_area"/>
                     <field name="expected_price"/>
                     <field name="selling_price"/>
                     <field name="date_availability" optional="hidden"/>
                </list>
            </field>
        </record>
   
        <record id="estate_property_detail_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property Info">
                    <header>
                        <button name="action_sell_property" type="object" string="Mark As Sold" class="oe_highlight" invisible="state in ('sold','cancelled')"/>
                        <button name="action_cancel_property_selling" type="object" string="Cancel" invisible="state in ('sold','cancelled')"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted, sold"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                                <h1 class="mb32">
                                    <field name="name"/>
                                </h1>
                            </div>

                            <group>
                                 <field name="tag_ids"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>

                        <group>
                             <group>
                                <field name="status"/>
                            </group>
                            
                            <group>
                                <field name="property_type_id"/>
                            </group>
                            
                            <group>
                                <field name="postcode"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                            </group>
                            
                            <group>
                                <field name="best_price"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                            
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="active"/>
                                    <field name="state"/>
                                    <field name="total_area"/>
                                    
                                </group>
                            </page>


                            <page string="Offer">
                                <field name="offer_ids"  readonly="state in ('offer_accepted', 'sold', 'cancelled')" >
                                    <list editable="bottom" decoration-danger="status in ('refused')" 
                                        decoration-success="status in ('accepted')"
                                    >
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <button name="action_offer_confirm" title="Accept" states="draft" type="object" icon="fa-check" 
                                           invisible="status in ('accepted','refused')"
                                        />
                                        <button name="action_offer_refuse" title="Refuse" states="draft" type="object" icon="fa-times"
                                             invisible="status in ('accepted','refused')"
                                        />
                                        <field name="date_deadline"/>
                                    </list>
                                </field>
                            </page>

                              <page string="Other Info">
                                <group>
                                    <field name="user_id"/>
                                    <field name="partner_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_detail_view_search" model="ir.ui.view">
               <field name="name">estate.property.search</field>
                <field name="model">estate.property</field>
                <field name="arch" type="xml">
                    <search string="Property Search">
                    
                        <field name="name"/>
                        <field name="postcode"/>
                        <field name="expected_price"/>
                        <field name="living_area"
                            filter_domain="[ ('living_area', '>=', self)]"
                        />
                        <field name="facades"/>
                        <separator/>
                        <filter string="Available" name="available" domain="
                        ['|',('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                        <group expand="1" string="Group By">
                            <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                        </group>                                  
                    </search>
             </field>
        </record>
</odoo>

