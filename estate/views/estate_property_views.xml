<odoo>
        <record id="estate_property_id" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="estate_property_type_id" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form</field>
        </record>

         <record id="estate_property_tag_id" model="ir.actions.act_window">

            <field name="name">Property Tag</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">list,form</field>
        </record>

         <record id="estate_property_detail_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Channel">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                     <field name="living_area"/>
                     <field name="expected_price"/>
                     <field name="selling_price"/>
                     <field name="date_availability"/>
                </list>
            </field>
        </record>
   
        <record id="estate_property_detail_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property Info">
                    <header>
                        <button name="action_sell_property" type="object" string="Sold"/>
                         <button name="action_cancel_property_selling" type="object" string="Cancel"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                                <h1 class="mb32">
                                    <field name="name"/>
                                </h1>
                            </div>

                            <group>
                                 <field name="tag_ids" widget="many2many_tags"/>
                            </group>

                        <group>
                             <group>
                                <field name="status"/>
                            </group>
                            
                            <group>
                                <field name="property_type_id"/>
                            </group>
                            
                            <group>
                                <field name="postcode"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                            </group>
                            
                            <group>
                                <field name="best_price"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="active"/>
                                    <field name="state"/>
                                    <field name="total_area"/>
                                    
                                </group>
                            </page>


                            <page string="Offer">
                                <field name="offer_ids">
                                    <list>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                        <button name="action_offer_confirm" string="Accept" states="draft" type="object" icon="fa-check"/>
                                        <button name="action_offer_refuse" string="Refuse" states="draft" type="object" icon="fa-times"/>
                                    </list>
                                </field>
                            </page>

                              <page string="Other Info">
                                <group>
                                    <field name="user_id"/>
                                    <field name="partner_id"/>
                                    
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_detail_view_search" model="ir.ui.view">
               <field name="name">estate.property.search</field>
                <field name="model">estate.property</field>
                <field name="arch" type="xml">
                    <search string="Property Search">
                        <field name="name"/>
                        <field name="postcode"/>
                        <field name="expected_price"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <separator/>
                        <filter string="Available" name="available" domain="
                        ['|',('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                        <group expand="1" string="Group By">
                            <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                        </group>                                  
                    </search>
             </field>
        </record>
</odoo>

