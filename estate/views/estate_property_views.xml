<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- ====================================
                Action
    ==================================== -->
    <record id="estate_model_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_filter_by_state': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
            </p>
            <p>
                Create invoices, register payments and keep track of the discussions with your customers.
            </p>
        </field>
    </record>

    <!-- ====================================
                List View
    ==================================== -->
    <record id="estate_model_list_view" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list 
                decoration-success="status in ('offer_received','offer_accepted')" 
                decoration-bf="status == 'offer_accepted'"
                decoration-danger="status == 'cancelled'" 
                decoration-muted="status == 'sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="status" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>
            </list>
        </field>
    </record>

    <!-- ====================================
                Form View
    ==================================== -->
    <record id="estate_model_form_view" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <form string="Real State">
            <header>
                <button name="action_property_sold" type="object" string="Sold" invisible="status in ('sold', 'cancelled')"></button>
                <button name="action_property_cancel" type="object" string="Cancel" invisible="status in ('sold', 'cancelled')"></button>
                <field name="status" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
            </header>
            <sheet>
                <group>
                    <h1><field name="name" placeholder="Property Name"/></h1>
                    <field name="company_id"></field>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>
                    <field name="property_type_id" options="{'no_create':true, 'no_one':true}"></field>
                </group>
                <group>
                    <group>
                            <field name="postcode"/>
                            <field name="date_availability" />
                    </group>
                    <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </page> 
                    <page string="Offers">
                        <field name="offer_ids" readonly="status in ('sold', 'offer_accepted', 'cancelled')"/>
                    </page>
                    <page string="Other Info">
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <chatter/>
        </form>
        </field>
    </record>


    <!-- ====================================
                Filter and Group by View
    ==================================== -->
    <record id="estate_model_search" model="ir.ui.view">    
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <search string="Search">
            <field name="name"/>
            <field name="postcode"/>
            <field name="expected_price"/>
            <field name="bedrooms"/>
            <field name="living_area" string="Living Area(sqm)" filter_domain="[('living_area','&gt;=', self)]"/>
            <field name="facades"/>
            <filter name="bedrooms_2" string="2 Bedrooms" domain="[('bedrooms', '=', 2)]"/>
            <group expand="1" string="Postcode">
                <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
            </group>
            <filter string="Available" name="filter_by_state" domain="['|',('status', '=', 'new'),('status','=','offer received')]"/>
            <filter string="Archive" name="archived" domain="[('active','=', False)]" />
        </search>
    </field>
    </record>


    <!-- ====================================
                Kanban View
    ==================================== -->
    <record id="estate_model_kanban_view" model="ir.ui.view">
    <field name="name">estate.property.view.kanban</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <kanban default_group_by="status" records_draggable='False'>
            <field name="status"/>
            <templates>
                <t t-name="card">
                    <div class="oe_kanban_global_click">
                        <strong>
                            Name : <field name="name" string="Name"/>
                        </strong>
                        <div>
                            Expected Price : <field name="expected_price" string="Expected Price"/>
                        </div>
                        <t t-if="record.status.raw_value == 'offer_received'">
                            Best Price : <field name="best_price" string="Best Price"/>
                        </t>
                        <t t-if="record.status.raw_value == 'offer_accepted'">
                            Selling Price : <field name="selling_price" string="Selling Price"/>
                        </t>
                        <div>
                            <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'color_field': 'color'}"/>    
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>


</odoo>
