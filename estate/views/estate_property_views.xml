<odoo>
    <data>
        <record id="estate_model_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_available': 1}</field>
        </record>

        <record id="estate_model_action_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <header>
                        <!-- <button type="object" name="action_sold_property" invisible="state=='sold' or state=='cancel'">SOLD</button>
                        <button type="object" name="action_cancel_property" invisible="state=='sold' or state=='cancel'">CANCEL</button> -->
                        <button type="object" string="SOLD" name="action_sold_property" class="oe_highlight" modifiers="{'invisible': [('state', 'in', ['cancelled', 'sold'])]}"/>
                        <button type="object" name="action_cancel_property" string="CANCEL" class="oe_highlight" modifiers="{'invisible': [('state', 'in', ['sold', 'cancelled'])]}"/>
                        <!-- status bar, chatper-11 exercise-2 -->
                        <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable': True}"/>
                        <!-- <field name="state" widget="statusbar" options="{'clickable': True}"/> -->

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <div class="oe_title">
                                    <h1>
                                        <field name="name" class="oe_inline" />
                                    </h1>
                                </div>
                                <!-- ch-11 ex-5 -->
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="state" string="Status" />
                                <!-- <field name="property_type_id" /> -->
                                <!-- ch-11 ex-5 -->
                                <field name="property_type_id" widget="many2one" />
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="best_price" />
                                <field name="selling_price" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="living_area" />
                                    <field name="fascades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" invisible="not garden" />
                                    <field name="garden_orientation" invisible="not garden" />
                                    <field name="total_area" />
                                </group>
                            </page>
                            <page string="Offers">
                                <field id="offers" name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')">
                                    <list editable="bottom" default_order="price desc" decoration-success="status =='accepted'" decoration-danger="status =='refused'" edit="True">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                        <button name="action_accept_offer" type="object" help="Accept" title="accept" class="oe_highlight" confirm="are you sure" icon="fa-check" invisible="status=='accepted' or status=='refused'" />
                                        <button name="action_refuse_offer" type="object" help="Refuse" title="refuse" class="btn-danger" confirm="are you sure" icon="fa-times" invisible="status=='accepted' or status=='refused'"/>
                                        <field name="status" readonly="1" />
                                    </list>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="property_seller_id" />
                                    <field name="property_buyer_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>

        </record>

        <!-- List View -->
        <record id="estate_model_action_list_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Name" decoration-success="state=='offer_recieved'" decoration-info="state=='offer_accepted'" decoration-muted="state=='sold'">
                    <field name="name" />
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    <field name="property_type_id" />
                    <field name="postcode" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <!-- ch-11 -->
                    <field name="date_availability" optional="hide" />
                </list>
            </field>
        </record>

        <record id="estate_model_action_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="property_type_id" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="fascades" />

                    <!-- ch-11 -->
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                    <filter string="Available" name="available" domain="['|', ('state','=','new'), ('state','=','offer_received')]" />
                    <!-- <filter string="Available" name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'offered_rec')]"></filter> -->
                    <group string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>