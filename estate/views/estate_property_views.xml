<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_sold" string="Sold" type="object" invisible="state in ['sold', 'canceled']"/>                    />
                    <button name="action_cancel" string="Cancel" type="object" invisible="state == 'canceled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Property Name"/></h1>
                    </div> 

                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability" />
                            <field name = "best_offer"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="state"/>
                                <field name = "total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                                <field name="offer_ids" readonly="state in ['offer_accepted', 'sold', 'canceled']" editable="bottom">
                                    <tree editable="bottom"
                                         decoration-danger="status == 'refused'"
                                        decoration-success="status == 'accepted'">
                                        <field name="status"  column_invisible="1"/>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <field name="property_type_id"/>
                                        <button name="action_accept" type="object" icon="fa-check" string="Accept" invisible="status != 'new'"/>
                                        <button name="action_refuse" type="object" icon="fa-times" string="Refuse" invisible="status != 'new'"/>
                                    </tree>
                                </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="seller_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
