<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- this is the  properties field action-->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available_properties': 1}</field>
    </record>

    <!-- this the property list view-->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="status in ('offer_received','offer_accepted')"
                decoration-bf="status == 'offer_accepted'"
                decoration-muted="status == 'sold'">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="tag_ids" widget="many2many_tags" string="Tags"
                    options="{'color_field': 'color'}" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="create_date" optional="hide" />
            </list>
        </field>
    </record>

    <!-- this the property form view -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="description">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" class="oe_highlight"
                        invisible="status not in ('offer_received', 'offer_accepted')" />
                    <button name="action_set_cancelled" type="object" string="Cancel"
                        class="btn-secondary"
                        invisible="status in ('sold', 'cancelled')" />
                    <field name="status" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold,cancelled " />
                </header>
                <sheet>
                    <h1 class="mb32">
                        <field name="name" placeholder="Enter property name..." />
                    </h1>
                    <group>
                        <group>
                            <field name="status" />
                            <field name="tag_ids" widget="many2many_tags" string="Property tags"
                                options="{'color_field': 'color'}" />
                            <field name="property_type_id" widget="many2one"
                                options="{'no_create': True, 'no_create_edit': True}" />
                            <field name="postcode" />
                            <field name="create_date" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" readonly="1" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>

                        <!-- this is description field-->
                        <page string="description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" readonly="1" />
                            </group>
                        </page>

                        <!-- this is the offer view-->
                        <page string="offers">
                            <field name="offer_ids"
                                readonly="status in ('offer_accepted', 'sold', 'cancelled')" />
                        </page>

                        <!-- this is the other info field-->
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id" string="Salesperson" />
                                <field name="buyer_id" string="Buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- This is the property search view and filter creation-->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties">
                <!-- <field name="context">{'search_default_available': 1}</field> -->
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="create_date" />
                <field name="status" />

                <!-- filters-->
                <filter string="Available Properties" name="available_properties"
                    domain="[('status', 'in', ['new', 'offer_received'])]" />
                <filter name="sold_property" string="Sold Property"
                    domain="[('status', 'in', ['sold', 'offer_accepted'])]" />
                <field name="living_area"
                    filter_domain="[('living_area', '>=', self)]" />

                <!-- Group By-->
                <group expand="0" string="Group by">
                    <filter string="Postcode" name="group_by_postcode"
                        context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>
