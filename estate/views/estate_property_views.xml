<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>
    </record>

    <record id="estate_property_offers_print_action" model="ir.actions.report">
        <field name="name">Property Offers Report</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.estate_property_offers_report</field>
    </record>

    <!-- list view for property -->
    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="expected_price" widget="monetary"/>
                <field name="selling_price" widget="monetary"/>
                <field name="date_availability" invisible='1' optional='show'/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>

    <!-- form view for display singal property -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">

                <header>
                    <button name="action_do_sold" type="object" string="Sold" class="oe_highlight" invisible="state in ('sold' , 'cancelled')" />
                    <button name="action_do_cencelled" type="object" string="Cancelled" class="oe_secondary" invisible="state in ('sold' , 'cancelled')" />
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>

                <sheet>
                    <!-- stat button for create offer report -->
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offers_print_action)d"
                                string="Print"
                                type="action"
                                icon="fa-list">
                        </button>
                    </div> -->

                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="state not in('cancelled')"/>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" invisible="state not in('sold')"/>
                    <group>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar" string=""/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="living_area"/>
                                <field name="total_area" readonly="1"/>
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                        </page>

                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- search view for estate property -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" string="living area >= "/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="tag_ids" />
                <separator/>
                <filter name="available" string="Available" domain="['|',('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- kanban view for estate property -->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <!-- mention field which accessed whitin templates tag -->
                <field name="state"/>
                <field name="name"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="image"/>
                <templates >
                    <t t-name="card">
                        <div class="oe_kanban_card">
                            <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="state not in('cancelled')" style="z-index: 1;"/>
                            <widget name="web_ribbon" title="Sold" bg_color="bg-success" invisible="state not in('sold')" style="z-index: 1;"/>

                            <div class="d-flex align-items-center justify-content-center " style="width: 100%; height: 50%; overflow: hidden; object-fit: cover;">
                                <field name="image" widget="image" class="oe_avatar" string="" style="width: 100%; height: 100%; object-fit: cover;"/>
                            </div>
            
                            <div class="oe_kanban_details">
                                <span class="fw-bold fs-5" t-esc="record.name.value"/>
                                <div>
                                    Expected Price: <span t-esc="record.expected_price.value"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer_received'">
                                    Best Offer: <span t-esc="record.best_price.value"/>
                                </div>
                                <div t-elif="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold'">
                                    Selling Price: <span t-esc="record.selling_price.value"/>
                                </div>
                                <div><field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/></div>
                            </div>
                        </div>
                    </t>
                    <t t-name="menu">
                        <a t-if="widget.editable" role="menuitem" type="delete" class="dropdown-item" >Delete</a>
                        <a t-if="widget.editable" role="menuitem" type="set_cover" class="dropdown-item" data-field="image">Set Cover</a>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
