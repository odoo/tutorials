<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Description">
                <header>
                    <button name="action_sold" type="object" string="SOLD" invisible="status in ('sold','cancelled')"/>
                    <button name="action_cancel" type="object" string="CANCEL" invisible="status in ('sold','cancelled')"/>
                    <field name="status" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>

                            <field name="tag_ids" widget="many2many_tags" nolabel="1"/>

                            <group>
                                <field name="property_type_id" string="Property Type"/>
                                <field name="best_offer" string="Best Offer"/>
                            </group>

                            <newline/>

                            <group>
                                <field name="status" string="Status" />
                                <field name="expected_price" string="Expected Price"/>
                            </group>

                            <group>
                                <field name="postcode" string="Postcode"/>
                                <field name="selling_price" string="Selling Price"/>
                            </group>
                            <group>
                                <field name="date_availability" string="Available From"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" string="Description"/>
                                    <field name="bedrooms" string="Bedrooms"/>
                                    <field name="living_area" string="Living Area(sqm)"/>
                                    <field name="facades" string="Facades"/>
                                    <field name="is_garage" string="Garage"/>
                                    <field name="is_garden" string="Garden"/>
                                    <field name="garden_area" string="Garden Area(sqm)"/>
                                    <field name="garden_orientation" string="Garden Orientation"/>
                                    <field name="total_area" string="Total Area(sqm)" />
                                </group>
                            </page>

                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" nolabel="1"/>
                                </group>
                            </page>

                            <page string="Other Info">
                                <group>
                                    <field name="seller_id" string="Salesman"/>
                                    <field name="buyer_id" string="Buyer"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="tag_ids" widget="many2many_tags" nolabel="1"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban>

                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div>
                                <b>Name: <field name="name" string="Title"/></b>
                            </div>
                            <div>Postcode: <field name="postcode"/>
                            </div>
                            <div>Bedrooms: <field name="bedrooms"/>
                            </div>
                            <div>Living Area: <field name="living_area"/>
                            </div>
                            <div>Expected Price: <field name="expected_price"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_account_report_search" model="ir.ui.view">
        <field name="name">estate search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <filter string="Available" name="available" domain="([ ('status', 'in', ('new','offer received'))])"/>
                <filter string="Availablity by Date" name="date_availability" domain="[('date_availability','&gt;',datetime.datetime.now())]"/>
                <filter string="Postcode" name="group_by_postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>

    <record id="estate_properties_view" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
