<odoo>
    <!-- Action Definition -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List View Definition -->
    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Property Details">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="best_price"/>
                <field name="state"/>
                <field name="property_type_id"/>
                <field name="property_tag_id" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Form View Definition -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Details">
                <header>
                    <button name="action_set_sold" type="object" string="Sold"/>
                    <button name="action_cancel_property" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="property_type_id"/>
                        <field name="property_tag_id" widget="many2many_tags"/>
                        <field name="best_price"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <!-- Description Page -->
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage" widget="boolean_toggle"/>
                                <field name="garden" />
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>

                        <!-- Other Information Page -->
                        <page string="Other Information">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <!-- Offer Page -->
                        <page string="Offer Page">
                            <field name="offer_ids"/> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View Definition -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="state"/>
                <field name="expected_price"/>
                <field name="property_tag_id" widget="many2many_tags"/>
                <filter name="available_garden" string="Property With Garden" 
                        domain="[('garden', '=', True)]"/>
                <filter name="group_by_postcode" string="Group by Postcode" 
                        context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>
