<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban,search</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="property_type_id" records_draggable="False">
                <field name="state"/>
                <field name="bedrooms"/>
                <field name="garden"/>
                <field name="garage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="d-flex justify-content-between">
                                <strong><field name="name"/></strong>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                            <div>
                                <t t-if="record.state.raw_value == 'new'">
                                    <span class="text-muted">Expected: </span>
                                    <field name="expected_price" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                </t>
                                <t t-if="record.state.raw_value == 'offer_received'">
                                    <span class="text-muted">Best: </span>
                                    <field name="best_price" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                </t>
                                <t t-if="record.state.raw_value == 'offer_accepted'">
                                    <span class="text-muted">Selling: </span>
                                    <field name="selling_price" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                </t>
                            </div>
                            <div>
                                <span><i class="fa fa-home"/> <field name="living_area"/> cmÂ²</span>
                                <span class="ms-2"><i class="fa fa-bed"/> <field name="bedrooms"/></span>
                                <t t-if="record.garage.raw_value">
                                    <span class="ms-2"><i class="fa fa-car"/> Garage</span>
                                </t>
                                <t t-if="record.garden.raw_value">
                                    <span class="ms-2"><i class="fa fa-tree"/> Garden</span>
                                </t>
                            </div>
                            <div>
                                <i class="fa fa-map-marker-alt"/> <field name="postcode"/>
                            </div>
                            <div class="o_kanban_footer">
                                <span t-if="record.state.raw_value == 'sold'" class="badge bg-danger">Sold</span>
                                <span t-elif="record.state.raw_value == 'new'" class="badge bg-light">New</span>
                                <span t-elif="record.state.raw_value == 'offer_received'" class="badge bg-warning">Offer Received</span>
                                <span t-elif="record.state.raw_value == 'offer_accepted'" class="badge bg-success">Offer Accepted</span>
                                <div class="d-flex justify-content-between">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Property" decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'" decoration-success="state == 'offer_received'">
                <field name="name" />
                <field name="property_type_id" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                <field name="postcode" optional="hide" />
                <field name="bedrooms" optional="hide" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="hide" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="sell_property" type="object" string="Sold"
                            class="btn-primary" invisible="state == 'sold'"
                            data-hotkey="s" />
                    <button name="sell_property" type="object" string="Sold"
                            invisible="state != 'sold'" data-hotkey="s" />
                    <button name="cancelled_property" type="object" string="Cancel"
                            invisible="state == 'sold'" data-hotkey="x" />
                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold" invisible="state == 'sold'" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                        <field name="image" widget="image" class="oe_avatar" />
                    </h1>
                    <p>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    </p>
                    <group>
                        <group>
                            <field name="property_type_id" widget="many2one" options="{'no_create': True, 'no_open': True}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="garden == False" />
                                <field name="total_area" />
                                <field name="garden_orientation" invisible="garden == False" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="user_id" />
                                <field name="buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_views_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
                <search string="Property filter">
                    <field name="name" />
                    <field name="property_type_id" />
                    <field name="tag_ids" widget="many2many_tags" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                    <field name="facades" />
                    <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                    <filter string="Postcode" name="group_by_postcode" context="{'group_by': 'postcode'}" />
                </search>
        </field>
    </record>
</odoo>
