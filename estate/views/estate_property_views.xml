<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define the List View -->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Properties">
                <field name="name" string="Property Name" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area" />
                <field name="expected_price" string="Expected Price" />
                <field name="selling_price" string="Selling Price" />
                <field name="date_availability" string="Available From" />
            </list>
        </field>
    </record>

    <!-- Define the Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <!-- Header Section -->
                <header>
                    <button name="set_sold" string="Sold" type="object"
                        class="btn btn-outline-primary o_form_button_create" />
                    <button name="cancel_property" string="Cancel" type="object"
                        class="btn btn-outline-primary o_form_button_create btn-danger" />

                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold, cancle"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" string="Property Name" required="1" />
                    </h1>
                    <groupt>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </groupt>
                    <!-- Basic Information in Flex Layout -->
                    <group class="mb32">
                        <!-- First Row -->
                        <group>
                            <field name="state" string="Status" />
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}" string="Property Type" />
                            <field name="postcode" string="Postcode" />
                            <field name="date_availability" string="Available From" />
                        </group>
                        <!-- Second Row -->
                        <group>
                            <field name="expected_price" string="Expected Price" required="1" />
                            <field name="best_price" string="Best Offer" readonly="1" />
                            <field name="selling_price" string="Selling Price" readonly="1" />
                        </group>
                    </group>
                    <!-- Tabs Section -->
                    <notebook>
                        <!-- Description Tab -->
                        <page string="Description">
                            <group>
                                <field name="description" string="Description" />
                            </group>
                            <group>
                                <field name="bedrooms" string="Bedrooms" />
                                <field name="living_area" string="Living Area" />
                                <field name="facades" string="Facades" />
                            </group>
                            <group>
                                <field name="garage" string="Garage" widget="checkbox" />
                            </group>
                            <group>
                                <field name="garden" string="Garden" widget="checkbox" />
                                <field name="garden_area" string="Garden Area" />
                                <field name="garden_orientation" string="Garden Orientation" />
                            </group>
                            <group>
                                <!-- Add Total Area Field -->
                                <field name="total_area" string="Total Area" readonly="1" />
                            </group>
                        </page>
                        <!-- Offers Tab-->
                        <page string="Offers">
                            <field name="offer_ids" widget="one2many_list"
                                options="{'no_create': True}">
                                <list>
                                    <field name="price" string="Price" />
                                    <field name="partner_id" string="Partner" />
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                    <button name="accept_offer" type="object"
                                        help="Accept" icon="fa-check" />
                                    <button name="refuse_offer" type="object"
                                        help="Refuse" icon="fa-times" />
                                    <field name="status" string="Status" />
                                </list>
                            </field>
                        </page>
                        <!-- Other info Tab-->
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id" string="Salesperson" />
                                <field name="buyer_id" string="Buyer" readonly="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define the Search View -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Estate Properties">
                <!-- Filter for Available Properties -->
                <filter
                    name="filter_available"
                    string="Available Properties"
                    domain="[('state', 'in', ['new', 'offer_received'])]"
                />

                <!-- Group By Postcode -->
                <group expand="0" string="Group By">
                    <filter name="group_by_postcode" string="Postcode"
                        context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>