<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list name="estate_property_list">
                <field name="name" width="30%"/>
                <field name="postcode" width="10%"/>
                <field name="bedrooms" width="10%"/>
                <field name="living_area" width="10%"/>
                <field name="expected_price" width="10%"/>
                <field name="selling_price" width="10%"/>
                <field name="property_type_id" width="10%"/>
                <field name="date_availability" width="10%"/>
            </list>
        </field>
    </record>

     <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form name="estate_property_form" string="Estate Property">
                <header>
                    <button name="action_set_sold" type="object" string="SOLD"/>
                    <button name="action_set_cancle" type="object" string="CANCEL"/>
                </header>
                <sheet>
                    <group>
                        <h1 class="mb32">
                            <field name="name" class="mb16"></field>
                        </h1>
                    </group>
                        <field name="tag_ids" widget="many2many_tags" class="mb16"/>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="property_type_id"></field>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page name="Offers" string="Offers">
                                <field name="offer_ids"/>
                        </page>
                        <page name="other_info" string="Other Info">
                            <group>
                                <field name="salesperson_id"></field>
                                <field name="buyer_id"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search estate">
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area" string="living Area (sqm)"></field>
                <field name="facades"></field>
                <field name="property_type_id" string="Property Type id"></field>
                <filter name="available_property" string="Available" domain="[('status', 'in', ['offer_received', 'new'])]"></filter>
                <filter name="groupby_postcode" string="Postcode" context="{'group_by': 'postcode'}"></filter>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
