<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available_properties': True}</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="state in ('Offer Received', 'Offer Accepted')" decoration-bf="state == 'Offer Accepted'" decoration-muted="state == 'Sold'" >
                <field name="name" string="Title" />
                <field name="type_id" string="Property Type" />
                <field name="postcode" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" string="Available from" optional="true" />
                <field name="state" string="Status" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sold_property" type="object" string="SOLD" invisible="state in ('Sold', 'Cancelled')" />
                    <button name="cancel_property" type="object" string="CANCEL" invisible="state in ('Sold', 'Cancelled')" />
                    <field name="state" string="Status" widget="statusbar" statusbar_visible="New, Offer Received, Offer Accepted, Sold" options="{'clickable':'1'}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Title" /></h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    <group>
                        <group>
                            <field name="type_id" no_create="true" />
                            <field name="postcode" />
                            <field name="date_availability" string="Available from" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group col="2">
                                <group colspan="1">
                                    <field name="description"/>
                                    <field name="bedrooms" />
                                    <field name="living_area" string="Living Area (sqm)" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" string="Garden Area (sqm)" invisible="not garden" />
                                    <field name="garden_orientation" invisible="not garden" />
                                    <field name="total_area" string="Total Area (sqm)" />
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('Sold', 'Offer Accepted', 'Cancelled')" />
                        </page>
                        <page string="Other Info">
                            <group col="2">
                                <group colspan="1">
                                    <field name="salesperson_id" string="Salesman" />
                                    <field name="buyer_id" string="Buyer" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)"
                filter_domain="[('living_area', '&gt;=', self)]" />
                <field name="selling_price" />
                <field name="facades" />

                <filter name="available_properties" string="Available"
                    domain="['|',
                        ('state', '=', 'New'),
                        ('state', '=', 'Offer Received')
                    ]" />

                <filter name="inactive_properties" string="Inactive"
                    domain="[
                        ('active', '=', False)
                    ]" />
                
                <filter name="postcode_group" string="Postcode" context="{'group_by': 'postcode'}" />

                <!-- Filter on availability date - <filter name="available" string="Available" domain="[('date_availability', '&lt;=', context_today())]" /> -->
            </search>
        </field>
    </record>
</odoo>
