<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_available_properties': 1}</field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <b><field name="name"/></b>
                            <div>Expected Price: <field name="expected_price"/></div>
                            <t t-if="record.state.raw_value == 'offer_received'">
                                <div>Best Offer: <field name="best_offer"/></div>
                            </t>
                            <t t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold'">
                                <div>Selling Price: <field name="selling_price"/></div>
                            </t>
                            <div><field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="my_property_list_view" model="ir.ui.view">
        <field name="name">list view</field>
        <field name="model">estate.property</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list string="Properties"
                decoration-success="state in ('offer_accepted', 'offer_received')"
                decoration-bf="state == 'offer_accepted'"
                decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="property_type_id" widget="many2one"/>
                <field name="living_area" string="Living Area(sqm)"></field>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From" optional="True" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">form view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" class="oe_highlight" invisible="state in ('cancelled', 'sold')"/>
                    <button name="action_cancel_property" type="object" string="Cancel" class="oe_secondary" invisible="state in ('cancelled', 'sold')"/>
                </header>
                <header>
                     <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                   <div class="oe_title">
                        <h1 class="mb16">
                            <field name="name"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True}"/>
                            <field name="property_type_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                            <field name="best_offer"/>
                            <field name="date_availability"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" help="True"/>
                                <field name="bedrooms" help="No. of bedrroms in the property"/>
                                <field name="living_area" help="living area in sqm"/>
                                <field name="facades" help="facaes in the property"/>
                                <field name="garage" help="garage in the property"/>
                                <field name="garden" help="if there is garden in the property"/>
                                <field name="garden_area" help="size of the garden as sqm"  invisible="not garden"/>
                                <field name="garden_orientation" help="facing of the garden"  invisible="not garden"/>
                                <field name="total_area" help="Total Area calculated by adding living area and garden area"/>
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids" readonly="state in('sold', 'cancelled', 'offer_accepted')">
                            </field>
                        </page> 

                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id" help="The one who is responsible for selling the property"/>
                                <field name="buyer_id" help="The one who will buy or bought the property"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]"/>

                <filter name="filter_available_properties" string="Available Properties" 
                        domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>

                <filter name="group_by_postcode" string="Group by Postcode" context="{'group_by': 'postcode'} " domain="[]"/>
            </search>
        </field>
    </record>
</odoo>
