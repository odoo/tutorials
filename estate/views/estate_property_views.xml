<odoo>
    <data>
        <record id="estate_property_list" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Estate Property"
                      decoration-success="offer_ids"
                      decoration-bf="is_offer_excepted"
                      decoration-muted="state=='sold'">
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="bedrooms" optional="hide"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" optional="hide"/>
                </list>
            </field>
        </record>
        <!-- Kanban View -->
        <record id="estate_property_kanban" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <!--                I prefer grouping properties by state :)-->
                <kanban default_group_by="state" records_draggable="0">
                    <field name="state"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="offer_ids"/>
                    <field name="type_id"/>
                    <templates>
                        <t t-name="card">
                            <field name="name" class="fw-bolder"/>
                            <div>Expected Price:
                                <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'received'">Best Offer:
                                <field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'accepted'">Selling Price:
                                <field name="selling_price"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" type="object" class="oe_stat_button" string="Sold"
                                invisible="state =='sold'"/>
                        <button name="action_cancel" type="object" class="oe_stat_button" string="Cancel"
                                invisible="state =='cancelled'"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"
                               statusbar_visible="new,received,accepted,sold" invisible="state == 'sold'"/>
                    </header>
                    <sheet string="Property">
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Property Title"/>
                            </h1>
                            <p>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </p>
                        </div>
                        <group>
                            <group>
                                <field name="type_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="best_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="property_description" string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="total_area"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                </group>
                            </page>
                            <page name="offers" string="Offers">
                                <field name="offer_ids" readonly="state in ['accepted', 'sold', 'cancelled']">
                                    <list editable="bottom"
                                          decoration-success="state == 'accepted'"
                                          decoration-danger="state == 'refused'">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="date_deadline"/>
                                        <field name="validity"/>
                                        <button name="action_accept" type="object" class="oe_stat_button"
                                                icon="fa-check" string=" " invisible="state=='accepted'"/>
                                        <button name="action_refuse" type="object" class="oe_stat_button"
                                                icon="fa-close" string=" " invisible="state=='refused'"/>
                                        <field name="state" column_invisible="1"/>
                                        <field name="property_type_id"/>
                                    </list>
                                </field>
                            </page>
                            <page name="other_info" string="Other info">
                                <group>
                                    <field name="salesman_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Title"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <filter name="is_available"
                            string="Available"
                            domain="[('state','in',['new','received'])]"/>
                    <filter name="is_not_available"
                            string="Not Available"
                            domain="[('state','not in',['new','received'])]"/>
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"
                           string="Living area more than"/>
                    <group expand="1" string="Group By">
                        <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Estate Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="estate_property_search"/>
            <field name="context">{'search_default_is_available': True}</field>
        </record>
    </data>
</odoo>
