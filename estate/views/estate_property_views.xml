<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_my_pipeline" model="ir.actions.act_window">
        <field name="name">My Pipeline</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
<!-- List View Section-->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-danger="state == 'cancelled'"
                decoration-success="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title" readonly="1"/>
                <field name="tags_ids" widget="many2many_tags"
                    options="{'color_field': 'color'}"/>
                <field name="postcode" string="Postcode" readonly="1"/>
                <field name="bedrooms" string="Bedrooms" readonly="1"/>
                <field name="living_area" string="Living Area" readonly="1"/>
                <field name="expected_price" string="Expected Price" readonly="1"/>
                <field name="selling_price" string="Selling Price" readonly="1"/>
                <field name="date_availability" string="Available From" optional="hide" readonly="1"/>   
            </list>
        </field>
    </record>
<!-- Form View Section-->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
            <!-- Section Head-->
                <header>
                    <button name="action_set_status_sold" type="object" string="Sold" 
                     class="oe_highlight" invisible="state == 'sold' or state == 'cancelled'"/>
                    <button name="action_set_status_cancel" type="object" string="Cancel" 
                     class="oe_highlight" invisible="state == 'sold' or state == 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" string="Property Name"/>
                    </h1>
                    <group>
                        <field name='tags_ids' widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <!-- Basic Information-->
                    <group>
                        <!-- Group 1-->
                        <group>
                            <field name="state" string="State"/>
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}" string="Property Type"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <!-- Group 2-->
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="selling_price" string="Selling Price"/>
                            <field name="best_price" string="Best Selling Price"/>
                        </group>
                    </group>
                    <!-- Tab Selection-->
                    <notebook>
                        <!-- Description-->
                        <page string='Description'>
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden" widget="checkbox"/>
                                <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                <field name="garden_orientation" string="Garden Orientation" invisible="not garden"/>
                                <field name="total_area" readonly="1" invisible="not garden"/>
                            </group>
                        </page>
                        <!-- Offers-->
                        <page string='Offers'>
                            <field name='offer_ids' widget="one2many_list"
                                options="{'no_create': True}"
                                readonly="state in ['offer_accepted', 'sold', 'cancelled']" >
                                <list>  
                                    <field name="price" string='Price' sum="Total"/>
                                    <field name='partner_id' string='Partner'/>
                                    <field name='validity' string='Validity(days)'/>
                                    <button name="action_status_accepted" states="draft" type="object" icon="fa-check" invisible="status == 'accepted'"/>
                                    <button name="action_status_refused" states="draft" type="object" icon="fa-close" invisible="status == 'refused'"/>
                                    <field name='date_deadline' string='Deadline'/>
                                    <field name='status' string='Status'/>
                                </list> 
                            </field>
                        </page>
                        <!-- Other Info-->
                        <page string='Other info'>
                            <group>
                                <field name='salesman_id'/>
                                <field name='partner_id'/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
<!-- Search View-->
    <record id="estate_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Search Title"/>
                <field name="postcode" string="Search Postcode"/>
                <field name="expected_price" string="Search Expected Price"/>
                <field name="bedrooms" string="Search Bedrooms"/>
                <field name="living_area" string="Search Living Area(sqm)"/>
                <field name="facades" string="Search Facades"/>
                <separator/>
                <filter name="state" string="Available" domain="[('state', 'in', ('new', 'offer received', 'offer accepted', 'sold', 'cancelled'))]"/>
                <group>
                    <filter string="Postcode" name= 'groupby_postcode' context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search> 
        </field>  
    </record>
</odoo>
