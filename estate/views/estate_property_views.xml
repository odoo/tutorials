<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="esate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="selling_price" />
                <field name="date_availability" />
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_sold" type="object" string="Sold" class="oe_highlight" />
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>
                    <group>
                        <group>
                            <field name="state" string="Status" />
                            <field name="property_type_id" string="Property Type" />
                            <field name="tag_type_id" widget="many2many_tags" string="Property Tags" />
                            <field name="postcode" string="Postcode" />
                            <field name="date_availability" string="Available From" />
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price" />
                            <field name="selling_price" string="Selling Price" />
                            <field name="total_area" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description" />
                                <field name="bedrooms" string="Bedrooms" />
                                <field name="living_area" string="Living Area (sqm)" />
                                <field name="facades" string="Facades" />
                            </group>
                            <group string="Extra Features">
                                <field name="garage" string="Garage" />
                                <field name="garden" string="Garden" />
                                <field name="garden_area" string="Garden Area (sqm)" />
                                <field name="orientation" />
                            </group>
                        </page>

                        <page string="Offers">
                            <group>
                                <field name="offer_ids" />
                            </group>
                            <group>
                                <field name="best_price" readonly="1" />
                            </group>
                        </page>

                        <page string="Other Info">
                            <group>
                                <field name="seller_id" string="Salesman" />
                                <field name="buyer_id" string="Buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="orientation" />
                <field name="facades" string="Facades" />
                <filter name="filter_by_bedrooms" string="3+ Bedrooms"
                    domain="[('bedrooms', '>=', 3)]" />
                <filter name="filter_by_living_area" string="Large Living Area"
                    domain="[('living_area', '>', 100)]" />
                <filter name="filter_by_postcode" string="Area 4000+"
                    domain="[('postcode', '>=', '4000')]" />
                <filter name="filter_by_facades" string="More than 2 Facades"
                    domain="[('facades', '>', 2)]" />
                <filter name="available_property" string="Available Property"
                    domain="[('state', 'in', ['new', 'offer_received'])]" />
            </search>
        </field>
    </record>
</odoo>
