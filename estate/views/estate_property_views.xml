<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available_property_filter': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Properties
            </p>
            <p>
                Create your properties here.
            </p>
        </field>
    </record>

    <!-- List View -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
            decoration-success="state in ['offer_received', 'offer_accepted']" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'" decoration-danger="state == 'canceled'">
                <field name="name" string="Name" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"/>
                <field name="state" string="Status" />
                <field name="property_type_id" string="Property Type"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="buyer_id" string="Buyer"/>
                <field name="salesperson_id"/>
                <field name="date_availability" optional="hide"/>

            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <group invisible="state in ['sold', 'canceled']">
                        <button name="action_set_sold" type="object" string="Sold"
                            class="btn-primary"
                            invisible="state in ['sold', 'canceled']"/>
                        <button name="action_set_canceled" type="object" string="Cancel"
                            class="btn-secondary" invisible="state in ['sold', 'canceled']"/>
                    </group>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                
                    <group>
                        <group>
                            <field name="tag_ids" string = "Tag" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type_id"
                                options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability" optional="show"
                                modifiers="{'invisible': true}"/>
                            <field name="expected_price" string="Expected Price" required="True"/>
                            <field name="selling_price" />
                            <field name="best_price" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="garden"/>
                                    <field name="garden_orientation"
                                        modifiers="{'invisible': [('garden', '=', False)]}"
                                        invisible="garden == False" />
                                    <field name="living_area" string="Living Area (sqm)"/>
                                    <field name="garden_area" string="Garden Area (sqm)"
                                        modifiers="{'invisible': [('garden', '=', False)]}"
                                        invisible="garden == False"/>
                                    <field name="total_area" readonly="1"/>
                                </group>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="garage"/>
                                    <field name="facades"/>
                                </group>

                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                eadonly="state in ['offer_accepted', 'sold', 'canceled']">
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="property_type_id"/>
                                <field name="buyer_id" readonly="True"/>
                                <field name="tag_ids" widget="many2many_tags"
                                    options="{'color_field': 'color'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="True" on_create="quick_create" quick_create_view="estate.quick_create_property_form">
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="row">
                            <div class="col-8">
                                <field class="fw-bolder" name="name"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </div>
                        <div class="row">
                            <div>
                            Expected Price : <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value === 'offer_received'">
                            Best Price : <field name="best_price"/>
                            </div>
                            <div t-if="['offer_accepted', 'sold'].includes(record.state.raw_value)">
                            Selling Price: <field name="selling_price"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="quick_create_property_form" model="ir.ui.view">
        <field name="name">Estate Create Form</field>
        <field name="model">estate.property</field>
        <field name="priority">17</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="property_type_id" string="Property Type" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="expected_price" string="Expected Price"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode"/>
                <field name="buyer_id"/>
                <field name="tag_ids"/>
                <filter string="Available" name="available_property_filter" domain="['|',('state','=','new'),('state','=','offer_received')]" />
                <field name="living_area"
                filter_domain="['|',('living_area', '=', self), ('living_area', '>', self)]"/>
                <group string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    <field name="property_type_id" string="Property Type"
                        options="{'no_create': True, 'no_create_edit': True}"/>
                    <filter string="Buyer" name="buyer" context="{'group_by':'buyer_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
