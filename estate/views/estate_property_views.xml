<?xml version="1.0"?>

<odoo>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by='property_type_id' records_draggable='False'>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <strong>
                                <field name="name"/>
                                <field name="state" column_invisible="True"/>
                            </strong>

                            <div>
                                <span>Expected Price: </span>
                                <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value=='offer received'">

                                <div>
                                    <span>Best Price: </span>
                                    <field name="best_price"/>
                                </div>
                            </div>
                            <div t-if="record.state.raw_value=='offer accepted'">

                                <div>
                                    <span>Selling Price: </span>
                                    <field name="selling_price"/>
                                </div>
                            </div>

                            <div>
                                <field name="tags_ids"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Property" decoration-success="state=='offer received' or state=='offer accepted'" decoration-muted="state=='sold'" decoration-bf="state=='offer accepted'">
                <field name="name" width="200px"/>
                <field name="postcode" width="100px"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price" />
                <field name="date_availability" optional= "hide"/>
                <field name="property_type_id" width="200px"/>
                <field name="tags_ids" width="200px" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property Details">
                <header>
                    <button name="sold_button_action" type="object" string="SOLD" invisible="state == 'sold' or state == 'cancelled'"/>
                    <button name="cancel_button_action" type="object" string="CANCEL" invisible="state == 'sold' or state == 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted, sold"/>
                </header>
                <sheet>
                    <group>

                        <field name="name"/>
                        <group>
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type_id" options="{'no_create': true, 'no_open': true}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="garden == False"/>
                                <field name="garden_orientation" invisible="garden == False"/>
                                <field name="state"/>


                                <field name="total_area"/>
                            </group>
                        </page>

                        <page string="Offers">
                            <group>
                                <field name="offer_ids" readonly="state == 'offer_accepted' or state == 'sold' or state == 'cancelled'"/>
                            </group>
                        </page>

                        <page string="Other Info">
                            <group>
                                <field name="partner_id"/>
                                <field name="users_id"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '&gt;', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <separator />
                <filter name="date_availability" string="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" help="A property is available either if it is new or if the offer has only been received"/>
                <separator />
                <group string="Group By">
                    <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name"> Estate property action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="estate_property_view_kanban"/>
        <field name="context">{'search_default_date_availability': True}</field>
    </record>

</odoo>