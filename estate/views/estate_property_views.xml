<odoo>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name = "context">{'search_default_availible_property': 1}</field>
    </record>


    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate_property_list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="state == 'offer_received' or state == 'offer_accepted'"
                decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                <field name="date_availability" optional="hide"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="selling_price"/>
                <field name = "date_availability" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                <button name = "action_property_sold" type="object" string = "SOLD"  class="btn btn-primary" invisible="state == 'sold' or state == 'canceled'" /> 
                <button name = "action_property_cancel" type="object" string = "CANCEL"  class="btn btn-secondary"  invisible="state == 'sold' or state == 'canceled'"/> 
                <field name="state"  type ="object" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,cancelled"/>
                </header>
                <sheet>
                    <h1 class="mb32">   
                    <field name="name" class="mb16" />
                    </h1>   
                    <field name="tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>         
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" options="{'no_create': true, 'no_edit': true, 'no_open': true}"/>
                            <field name="postcode" />
                            <field string="Available From" name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" class="mb16" />
                                <field name="bedrooms" class="mb16" />
                                <field name="living_area" class="mb16" string="Living Area (sqm)"/>
                                <field name="facades" class="mb16" />
                                <field name="garage" class="mb16" />
                                <field name="garden" class="mb16" />
                                <field string="Garden Area (sqm)" name="garden_area" invisible="garden == False" class="mb16" />
                                <field name="garden_orientation" invisible="garden == False" class="mb16" />
                                <field name="total_area"  />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" string="Offers" class="mb16" readonly="state in ('offer_accepted','cancelled','sold')"/>   
                        </page> 
                      
                        <page string="Other Info">
                            <group>
                                <field name = "user_id" string = "Salesperson"/>
                                <field name = "buyer_id" string = "Buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties Search">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area(sqrm)" filter_domain="[('living_area', '>=', self)]"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Availible From"/>
                <filter name="availible_property" string="Avalible Property" domain="[('state', 'in', ('offer_received','new'))]"/>
                <group string="Group By">
                    <filter name="postcode" context="{'group_by': 'postcode'}"/>        
                </group>
            </search>
        </field>
    </record>
        
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id"  records_draggable='0'>
               <field name = "state" />
                <templates>
                    <t t-name="card">
                        <h3>
                            <field name="name" />
                        </h3>
                        <div class="flex-row">
                            <text>Expected price:</text>
                            <field name="expected_price" />
                        </div>
                        <t t-if="record.state.raw_value == 'offer_received'">
                            <div class="flex-row">
                                <text>Best offer:</text>
                                <field name="best_price" />
                            </div>
                        </t>
                        <t t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold' ">
                            <div class="flex-row">
                                <text>Selling price:</text>
                                <field name="selling_price" />
                            </div>
                        </t>
                        <footer class="d-flex justify-content-between align-items-center">
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
