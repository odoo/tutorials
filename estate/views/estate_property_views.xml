<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- action window for managing property -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List view -->
    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Properties">
                <field name="name" string="Title"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area(sqrm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Properties Form">
                <sheet>
                    <h1>
                        <field name="name" placeholder="Name" class="mb16"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags"/>
                   
                    <group col="2">
                        <group>                     
                            <field name="property_type_id" string="Property Type"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group >
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" class="mb16"/>
                                <field name="bedrooms" class="mb16"/>
                                <field name="living_area" string="Living Area (sqm)" class="mb16"/>
                                <field name="facades" class="mb16"/>
                                <field name="garage" class="mb16"/>
                                <field name="garden" class="mb16"/>
                                <field name="garden_area" string="Garden Area (sqm)" class="mb16"/>
                                <field name="garden_orientation" class="mb16"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" string="Offers" class="mb16"/>   
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id" string="Salesperson" class="mb16"/>
                                <field name="partner_id" string="Buyer" class="mb16"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search Feature -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties Search">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area(sqrm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Availible From"/>
                <filter name="availible_property" string="Avalible Property" domain="[('state', 'in', ('offer_received','new'))]"/>
                <group expand="1" string="Group By">
                    <filter name="postcode" context="{'group_by': 'postcode'}"/>        
                </group>
            </search>
        </field>
    </record>
</odoo>
