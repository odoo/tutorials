<?xml version="1.0"?>
<odoo>

    <!--Search-->

    <record id="estate_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="estate_property_type_id"/>
                <separator/>
                <filter string="Available" name="active" domain="['&amp;',
                                                                    ('active', '=', True),
                                                                    '|', ('state', '=', 'new'),
                                                                                ('state', '=', 'offer received')]"/>
                <group expand="1" string="Postcode" name="Group by">
                    <filter string="PostCode" name="postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>


    <!--Tree view-->
    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Property"
                decoration-success="state=='offer received' or state=='offer accepted'" 
                decoration-bf="state=='offer accepted'" 
                decoration-muted="state=='sold'">
                <field name="name"/>
                <field name="state" invisible="1" nolabel="1"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="estate_property_type_id"/>
            </tree>
        </field>
    </record>

    <!--Form view-->

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <header>
                        <group invisible="state == 'sold'">
                            <button name="action_sold" string="Sold" type="object"/>
                            <button name="action_cancel" string="Cancel" type="object"/>
                        </group>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group>
                            <h1 class="mb32">
                                <field name="name" class="mb16"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <group>
                                <field name="postcode"/>
                                <field name="date_availability" optional="hide"/>
                                <field name="estate_property_type_id" options="{'no_create_edit': True, 'no_quick_create': True}"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="best_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="state"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="garden == False"/>
                                    <field name="garden_orientation" invisible="garden == False"/>
                                    <field name="active"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="user_id"/>
                                    <field name="buyer"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids"  readonly="state in ['offer accepted', 'sold', 'canceled']"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>




    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="estate_search"/>
        <field name="context">{'search_default_active': True}</field>
    </record>
</odoo>
