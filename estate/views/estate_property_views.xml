<?xml version="1.0"?>
<odoo>
    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list name="estate_property_list" decoration-bf="state == 'offer_accepted'" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-muted="state == 'sold'">
                <field name="name" width="30%"></field>
                <field name="postcode" width="10%"></field>
                <field name="bedrooms" width="10%"></field>
                <field name="living_area" width="10%"></field>
                <field name="expected_price" width="10%"></field>
                <field name="selling_price" width="10%"></field>
                <field name="date_availability" width="10%" optional="hide"></field>
                <field name="property_type_id" width="10%"></field>
                <field name="tag_ids" widget="many2many_tags" width="10%"></field>
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form name="estate_property_form" string="Estate Property">
                <header>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['sold', 'cancelled']"></button>
                    <button name="action_sold" type="object" string="Sold" invisible="state in ['sold', 'cancelled']"></button>
                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold"></field>
                </header>
                <h1 class="mb32">
                    <field name="name" class="mb16"></field>
                </h1>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" nolabel="1"></field>
                <group>
                    <group>
                        <field name="property_type_id" options="{'no_create' : true}"></field>
                        <field name="postcode" string="Postcode"></field>
                        <field name="date_availability"></field>
                    </group>
                    <group>
                        <field name="expected_price"></field>
                        <field name="selling_price"></field>
                        <field name="best_price"></field>
                    </group>
                </group>
                <notebook>
                    <page name="description" string="Description">
                        <group>
                            <field name="description"></field>
                            <field name="bedrooms"></field>
                            <field name="living_area"></field>
                            <field name="facades"></field>
                            <field name="garage"></field>
                            <field name="garden"></field>
                            <field name="garden_area" invisible="garden == False"></field>
                            <field name="garden_orientation" invisible="garden == False"></field>
                            <field name="state"></field>
                            <field name="total_area"></field>
                        </group>
                    </page>
                    <page name="offers" string="Offers">
                        <group>
                            <field name="offer_ids" nolabel="1" readonly="state in ['offer_accepted', 'sold', 'cancelled']"></field>
                        </group>
                    </page>
                    <page name="other_info" string="Other Info">
                        <group>
                            <field name="salesperson_id"></field>
                            <field name="buyer_id"></field>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search estate">
                <field name="name" string="Title"></field>
                <field name="postcode" string="Postcode"></field>
                <field name="expected_price" string="Expected Price"></field>
                <field name="bedrooms" string="Bedrooms"></field>
                <field name="living_area" string="living Area (sqm)" filter_domain="[('living_area', '>=', self)]"></field>
                <field name="facades" string="Facades"></field>
                <field name="property_type_id" string="Property Type id"></field>
                <filter name="available_property" string="Available" domain="[('state', 'in', ['offer_received', 'new'])]"></filter>
                <filter string="Postcode" name="groupby_postcode" context="{'group_by': 'postcode'}"></filter>
            </search>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban string="Search estate" default_group_by="property_type_id" records_draggable="false">
                <templates>
                    <t t-name="card">
                        <field name="name"></field>
                        <div>
                            Expected Price: <field name="expected_price"></field>
                        </div>
                        <field name="state" invisible="1"></field>
                        <div>
                            <t t-if="record.state.raw_value == 'offer_received'" name="state">
                                Best Offer: <field name="best_price" string="Best Offer"></field>
                            </t>
                        </div>
                        <div>
                            <t t-if="record.state.raw_value == 'offer_accepted'" name="state">
                                Selling Price: <field name="selling_price"></field>
                            </t>
                        </div>
                        <field name="tag_ids"></field>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available_property' : True}</field>
    </record>
</odoo>
