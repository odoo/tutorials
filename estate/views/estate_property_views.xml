<odoo>
    <!-- List View -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate_property_list_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="property_name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="property_state"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate_property_form_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="property_name"/>
                            <field name="description"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="property_state"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate_property_search_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <filter name="low_price" string="Price &lt; 1000" domain="[('expected_price', '&lt;', 1000)]"/>
                <filter name="new" string="State: New" domain="[('property_state', '&#61;', 'new')]"/>
                <filter name="offered" string="State: Offer Recevied" domain="[('property_state', '&#61;', 'offer recevied')]"/>
                <group name="postcode" string="By Postcode">
                    <filter name="group_by_postcode" string="Group by Postcode" domain="[]" context="{'group_by': 'postcode'}"/>
                </group>


                <field name="property_name"/>
                <field name="date_availability"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>        <!-- Fixed view_mode from list to tree -->
    </record>

</odoo>
