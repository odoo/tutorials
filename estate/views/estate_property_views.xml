<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Action -->
    <record id="estate_model_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List View -->
    <record id="estate_model_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_model_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <form string="Real State">
            <header>
                <button name="action_property_sold" type="object" string="Sold"></button>
                <button name="action_property_cancel" type="object" string="Cancel"></button>
                <field name="status" widget="statusbar" statusbar_visible="new,offer received, offer accepted, sold, cancelled"/>
            </header>
            <sheet>
                <group>
                    <h1><field name="name" placeholder="Property Name"/></h1>
                    <field name="tag_ids" widget="many2many_tags"></field>
                    <field name="property_type_id"></field>
                </group>
                <group>
                    <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                    </group>
                    <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </page> 
                    <page string="Offers">
                            <field name="offer_ids">
                                <list>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="action_property_offer_accept" type="object" string="Accept" icon="fa-check"></button> 
                                    <button name="action_property_offer_refused" type="object" string="Refuse" icon="fa-times"></button>
                                    <field name="status"/>
                                </list>
                            </field>
                    </page>
                    <page string="Other Info">
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <!-- Filter and Group by -->
    <record id="estate_model_search" model="ir.ui.view">    
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <search string="Search">
            <field name="name"/>
            <field name="postcode"/>
            <field name="expected_price"/>
            <field name="bedrooms"/>
            <field name="living_area"/>
            <field name="facades"/>
            <filter name="bedrooms_2" string="2 Bedrooms" domain="[('bedrooms', '=', 2)]"/>
            <group expand="1" string="Postcode">
                <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
            </group>
            <filter string="Available" name="filter_by_state" domain="['|',('status', '=', 'new'),('status','=','offer received')]"/>
        </search>
    </field>
</record>


</odoo>
