<?xml version="1.0"?>
<odoo>
    <record id="my_property_list_view" model="ir.ui.view">
        <field name="name">Estate Property List View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="selling_price"/>
                <field name="tag_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="my_form_view" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <form string="Test">
            <sheet>
                <header>
                    <button name="is_Cancelled" type="object" string="Cancel"/>
                    <button name="is_Sold" type="object" string="Sell"/>
                </header>
                <group>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <group>
                        <field string="Property Type" name="property_type_id"/>
                        <field string="Postcode" name="postcode"/>
                        <field string="Date Availability" name="date_availability"/>
                    </group>
                    <group>
                        <field string="Expected Price" name="expected_price"/>
                        <field string="Selling Price" name="selling_price"/>
                        <field string="Best offer" name="best_price"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <group>
                                <field string="Description" name="description"/>
                                <field string="Bedrooms" name="bedrooms"/>
                                <field string="Living Area" name="living_area"/>
                                <field string="Facades" name="facades"/>
                                <field string="Total Area" name="total_area"/>
                            </group>
                            <group>
                                <field string="Garage" name="garage"/>
                                <field string="Garden" name="garden"/>
                                <field string="Garden orientation" name="garden_orientation"/>
                                <field string="Garden Area" name="garden_area"/>
                                <field string="Active" name="active"/>
                                <field string="State" name="state"/>
                            </group>
                        </group>
                    </page>

                    <page string="Offers">
                        <group>
                            <field name="offer_ids"/>
                        </group>
                    </page>

                    <page string="Other info">
                        <group>
                            <field string="Salesperson" name="salesperson_id"/>
                            <field string="Buyer" name="buyer_id"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <record id="search_bar" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Title" />
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="facades" string="Facades" />
                <filter name="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name="Budget Friendly" domain="['&amp;', ('expected_price', '&lt;', 10000), '|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="Postcode" name="postcode_group" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Listed Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
