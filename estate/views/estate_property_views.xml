<odoo>
    <!-- Define the Action for estate.property -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>  <!-- Name to show in the UI -->
        <field name="res_model">estate.property</field>  <!-- Model name should be correct -->
        <field name="view_mode">list,form,search</field>

    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Property Name">
                <field name="name" />
                <field name="tags_ids" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="available_from" />
            </list>
        </field>
    </record>

    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tags_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode" string="Postcode" />
                            <field name="available_from" string="Available From" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <list>
                                    <field name="partner_id"/>
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_type_id" />
                <filter string="Available Properties" name="available_properties_filter"
                    domain="[('state', 'in', ['new', 'offer_received'])]" />
                <group string="Group By">
                    <filter string="Postcode" name="postcode_name" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>
