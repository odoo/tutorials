<?xml version="1.0"?>
<odoo>
    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list name="estate_property_list">
                <field name="name" width="30%"></field>
                <field name="postcode" width="10%"></field>
                <field name="bedrooms" width="10%"></field>
                <field name="living_area" width="10%"></field>
                <field name="expected_price" width="10%"></field>
                <field name="selling_price" width="10%"></field>
                <field name="date_availability" width="10%"></field>
                <field name="property_type_id" width="10%"></field>
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form name="estate_property_form" string="Estate Property">
                <h1 class="mb32">
                    <field name="name" class="mb16"></field>
                </h1>
                <group>
                    <group>
                        <field name="property_type_id"></field>
                        <field name="postcode" string="Postcode"></field>
                        <field name="date_availability"></field>
                    </group>
                    <group>
                        <field name="expected_price"></field>
                        <field name="selling_price"></field>
                    </group>
                </group>
                <notebook>
                    <page name="description" string="Description">
                        <group>
                            <field name="description"></field>
                            <field name="bedrooms"></field>
                            <field name="living_area" string="Living Area (sqm)"></field>
                            <field name="facades"></field>
                            <field name="garage"></field>
                            <field name="garden"></field>
                            <field name="garden_area"></field>
                            <field name="garden_orientation"></field>
                            <field name="state"></field>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search estate">
                <field name="name" string="Title"></field>
                <field name="postcode" string="Postcode"></field>
                <field name="expected_price" string="Expected Price"></field>
                <field name="bedrooms" string="Bedrooms"></field>
                <field name="living_area" string="living Area (sqm)"></field>
                <field name="facades" string="Facades"></field>
                <field name="property_type_id" string="Property Type id"></field>
                <filter string="State" name="state" domain="[('state', 'in', ['offer_received', 'new'])]"></filter>
                <filter string="Postcode" name="groupby_postcode" context="{'group_by': 'postcode'}"></filter>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
