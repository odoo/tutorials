<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_date_availability': True}</field>
    </record>

    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Property List" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state == 'offer_accepted'" decoration-danger="state == 'cancelled'" decoration-muted="state == 'sold'" >
                <field name="name" string="Title"/>
                <field name="property_type_id" />
                <field name="postcode" string="Postcode"/>
                <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'color_field': 'color'}" />
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area" />
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide" />
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" invisible="state=='sold' or state=='cancelled'" class="btn-primary" />
                    <button name="action_set_cancelled" type="object" string="Cancel" invisible="state=='sold' or state=='cancelled'" />
                    <field name="state" widget="statusbar" statusbar_visible="new, offer_received, offer_accepted, sold" />
                </header>
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name" class="mb16"/>
                    </h1>
                    <group>
                        <group class="mb32">
                            <field name="tag_ids" string="Tags" widget="many2many_tags" options="{'color_field': 'color', }" />
                            <field name="property_type_id" options="{'no_create': true}" />
                            <field name="postcode" />
                            <field name="date_availability" string="Available From" />
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="More Info">
                            <group>
                               <group>
                                    <field string="Description" name="description"/>
                                    <field string="Bedrooms" name="bedrooms"/>
                                    <field string="Garden" name="garden"/>
                                    <field string="Garden Orientation" name="garden_orientation" invisible="not garden" />
                                    <field string="Garden Area (sqm)" name="garden_area" invisible="not garden" />
                                </group>
                                <group>
                                    <field name="facades"/>
                                    <field string="Garage" name="garage"/>
                                    <field string="Living Area (sqm)" name="living_area"/>
                                    <field string="Total Area (sqm)" name="total_area" />
                                    <field string="Visible" name="active" invisible="1" />
                               </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" widget="one2many_list" readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                        </page>
                        <page string="Other Info">
                            <group>
                               <group>
                                    <field string="Salesman" name="salesperson_id"/>
                                    <field string="Buyer" name="buyer_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0" class="o_kanban_view">
                <field name="state" />
                
                <templates>
                    <progressbar field="state" colors='{"offer_received": "success", "offer_accepted": "warning", "cancelled": "danger"}'/>
                    
                    <t t-name="card">
                        <div class="o_kanban_card">
                                <strong style="font-size: 18px;">
                                    <field name="name" />
                                </strong>
            
                            <div>
                                <strong>Expected Price:</strong> <field name="expected_price" widget="monetary"/>
                            </div>
            
                            <t t-if="record.state.raw_value == 'offer_received'">
                                <strong>Best Offer:</strong> <field name="best_price" widget="monetary"/>
                            </t>
            
                            <t t-if="record.state.raw_value == 'offer_accepted'">
                                <strong>Selling Price:</strong> <field decoration-primary="1" name="selling_price" widget="monetary"/>
                            </t>
            
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
            
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field string="Title" name="name"/>
                <field string="Postcode" name="postcode"/>
                <field string="Expected Price" name="expected_price"/>
                <field string="Bedrooms" name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '>=', self)]" />
                <field string="Facades" name="facades"/>
                
                <filter string="Available" name="date_availability" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" help="Available Properties" />
                <separator/>
                <filter string="Garden" name="garden" domain="[('garden', '=', 'True')]"/>
                <separator/>
                <filter string="Garage" name="garage" domain="[('garage', '=', 'True')]" />

                <filter string="State" name="state" context="{'group_by':'state'}" />
                <separator/>
                <filter string="Garder Orientation" name="garden_orientation" context="{'group_by':'garden_orientation'}" />
                <separator/>
                <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'}" />
            </search>
        </field>
    </record>
    
</odoo>
