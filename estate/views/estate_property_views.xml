<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_active': True}</field>
        </record>

        <record id="estate_property_list" model="ir.ui.view">
            <field name="name">property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Properties" decoration-success="status in ('offer_received' , 'offer_accepted')" decoration-bf="status == 'offer_accepted'" decoration-danger="status == 'cancelled'"  decoration-muted="status == 'sold'">
                    <field name="name" />
                    <field name="property_ids"/>
                    <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="postcode" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="date_avaibility" optional = "hide"/>
                </list>
            </field>
        </record>

        <record id="estate_property_kanban" model="ir.ui.view">
            <field name="name">property.list.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="property_ids" records_draggable="false">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card">
                                <div class="oe_kanban_details">
                                    <div class="d-flex justify-content-between">
                                        <h3><field name="name" /></h3>
                                        <field name="image" widget="image" class="col-4 text-end" 
                                            options="{'size':  [45, 45]}"
                                            style="transition: transform 0.3s ease; cursor: pointer; width: 45px; height: 45px;" 
                                            onmouseover="this.style.transform='scale(1.5)'" 
                                            onmouseout="this.style.transform='scale(1)'"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_details">
                                    <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <text>Expected Price:  </text>
                                    <field name="expected_price" />
                                </div>
                                <div class="oe_kanban_details" invisible = "selling_price == 0">
                                    <text>Selling Price:  </text>
                                    <field name="selling_price"/>
                                </div>
                                <div class="oe_kanban_details" invisible = "status not in ('offer_received')">
                                    <text>Best Price:  </text>
                                    <field name="best_offer"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="estate_prperty_view_form" model="ir.ui.view">
            <field name="name">Property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <header>
                        <button name="action_sold" type="object" string="Sold" invisible = "status in ('sold','cancelled')" />
                        <button name="action_cancelled" type="object" string="Cancel" invisible = "status in ('sold','cancelled')"/>
                        <field name="status" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                    </header>
                    <sheet>
                        <div invisible="status !='sold'">
                            <widget name="web_ribbon" title="sold" bg_color="text-bg-success"/>
                        </div>
                        <div invisible="status !='cancelled'">
                            <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger"/>
                        </div>
                        <group>
                            <group>
                                <h1>
                                    <field name="name" />
                                </h1>
                                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="property_ids" options="{'no_create': True, 'no_open': True}"/>
                                <field name="postcode" />
                                <field name="expected_price" />
                            </group>
                            <group>
                                <field name="date_avaibility" />
                                <field name="selling_price" />
                                <field name="best_offer" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                </group>
                                <group>
                                    <group>
                                        <field name="bedrooms" />
                                        <field name="facades" />
                                        <field name="garage" />
                                    </group>
                                    <group>
                                        <field name="living_area" />
                                        <field name="garden" />
                                        <field name="garden_area" invisible = "garden == 0"/>
                                        <field name="garden_orientation" invisible = "garden == 0"/>
                                        <field name="total_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" readonly="status in ('sold','offer_accepted','cancelled')"/>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <field name="sales_person_ids" />
                                    <field name="buyer_id" />
                                    <field name="company_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter open_attachments="True"/>
                </form>
            </field>
        </record>

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search.view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="property_ids" />
                    <field name="tags_ids" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                    <field name="facades" />

                    <filter name="active" string="Available"
                        domain="['|',('status', '=', 'new'), ('status', '=', 'offer_received')]"/>
                    <filter name="not_active" string="Unavailable" 
                        domain="['|',('status', '=', 'sold'), ('status', '=', 'cancelled')]" />
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
