<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Estate proprty action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property
            </p><p>
                Use options specified in form to list property
            </p>
            </field>
    </record>

    <!-- Estate proprty type action -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">property type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property type
            </p><p>
                Use options specified in form to list property type
            </p>
            </field>
    </record>

    <!-- Estate property Tags action -->
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">property tag</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property tag
            </p><p>
                Use options specified in form to list property tag
            </p>
        </field>
    </record>

    <!-- list view -->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living area(sqm)"/>
                <field name="expected_price" string="Expected price"/>
                <field name="selling_price" string="Selling price"/>
                <field name="date_availability" string="Available from"></field>
            </list>
        </field>
    </record>

    <!-- list view of offer -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="partner_id" string="Buyer"/>
                <field name="property_id" string="Property"/>
                <field name="price" string="Price"/>
                <field name="status" string="Status" class="oe_background_grey"/>

            </list> 
        </field>
    </record>



    <!-- form view -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_property_form">
                <sheet>
                    <group name="Basics">
                        <h1><field name="name" label="Property Name" placeholder="Property Name"/></h1>
                    </group>

                    <group>
                        <group name="Basics_2" >
                            <field name="postcode"></field>
                            <field name="date_availability"></field>
                            <field name="property_type_id"></field>
                            <field name="salesman_id"></field>
                        </group>
                        <group name="Basics_3" >
                            <field name="expected_price"></field>
                            <field name="selling_price"></field>
                            <field name="buyer_id"></field>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page name="Description" string="Description">
                            <group name="Features" string="Room Features">
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="garage"></field>
                                <field name="facades"></field>
                                <field name="garden"></field>
                                <field name="garden_area"></field>
                                <field name="garden_orientation"></field>
                            </group>
                        </page>

                        <page name="Offers" >
                            <group >
                                <field name="offer_ids" nolabel="1"  />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- search view -->
    <record id="view_delivery_carrier_search" model="ir.ui.view">
        <field name="name">estate property search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Delivery Carrier">
                    <field name="name" string="Name"/>
                    <field name="description"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'search_default_group_by':True}"/>
                    </group>
            </search>
            </field>
    </record>

</odoo>

