<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_available' : True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Start creating new property</p>
        </field>
    </record>

     <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state == 'offer_received' or state == 'offer_accepted'" decoration-bf="state == 'offer_accepted'" decoration-muted = "state == 'sold'">
                <header>
                    <button name="%(estate.estate_offer_wizard)d" type="action" title="offer action" string="Make offer"/>
                </header>
                <field string= "Title" name="name" optional='hide'/>
                <field string= "Postcode" name="postcode" optional='hide'/>
                <field string= "Bedrooms" name="bedrooms"/>
                <field string= "Living Area (sqm)" name="living_area"/>
                <field string= "Expected Price" name="expected_price"/>
                <field name='state'/>
                <field string= "Selling Price" name="selling_price"/>
                <field string= "Available From" name="date_availability" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- expected price, best price, selling price and tags. Pay attention: 
    the best price is only displayed when an offer is received, while the selling price is only displayed 
    when an offer is accepted. -->

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by = 'state' records_draggable="False">
                <field name="state"/>
                <template>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <h3>
                                    <field name="name"/>
                                </h3>
                            </div>
                            <div>
                               Expected price : <field name='expected_price'/>
                            </div>
                            <t t-if="record.state.raw_value == 'offer_received'">
                                <div>
                                Best offer price : <field name="best_offer_price"/>
                                </div>
                            </t>
                            <t t-if="record.state.raw_value  == 'offer_accepted'">
                                <div>
                                Selling price : <field name="selling_price"/>
                                </div>
                            </t>
                            <div>
                                <field name="tag_id" widget="many2many_tags"/>
                            </div>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>

    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Title">
                <header>
                    <button name="action_sold" type="object" class="oe_highlight" string="Sold" title="sold" invisible="state=='sold' or state == 'cancelled'" />
                    <button name="action_cancel" type="object" string="Cancel" title="cancel" invisible="state=='sold' or state == 'cancelled'"/>
                    <button name="%(estate_property_tags_action)d"  type="action" string="Tags" title="tags"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                <h1>
                    <field name="name"/>
                </h1>
                <group>
                    <field name="tag_id" widget="many2many_tags" options="{'color_field':'color'}" context="{'default_tag_id': 'Hello'}"/>
                </group>
                    <group>
                        <group>
                            <field string="Property Type" name="property_type_id" options="{'no_create':'True','no_create_edit':'True'}"/>
                            <field  name="postcode" string="Postcode"/>
                            <field string= "Available From" name="date_availability"/>
                        </group>
                        <group>
                            <field string= "Expected Price" name="expected_price"/>
                            <field string= "Selling Price" name="selling_price"/>
                            <field name="best_offer_price" string="Best Offer"/>  
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades"/>
                                <field name='state'/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <sheet>
                                <field name="offer_ids" readonly="state == 'sold' or state=='cancelled' or state=='offer_accepted'" >
                                    <tree decoration-danger ="status == 'refused'" decoration-success = "status == 'accepted'"> 
                                        <field name="price"/>
                                        <field name="status"/>
                                        <field name="validity"/>
                                        <field name="partner_id"/>
                                        <field name="status" column_invisible="True"/>
                                        <button name="action_offer_accept" type='object' icon="fa-check" invisible="status" title="check"/>
                                        <button name="action_offer_refuse" type='object' icon="fa-remove" invisible="status" title="refuse"/>
                                        <field name="date_deadline"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="price"/>
                                                <field name="validity"/>
                                                <field name="partner_id"/>
                                                <field name="date_deadline"/>
                                            </group>
                                        </sheet>
                                    </form>
        
                                </field>
                            </sheet>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" string="Buyer Id"/>
                                <field name="seller_id" string="Seller Id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field string= "Title" name="name"/>
                <field string= "Postcode" name="postcode"/>
                <field string= "Bedrooms" name="bedrooms"/>
                <field string= "Expected Price" name="expected_price"/>
                <field string= "Facade" name="facades"/>
                <field name="living_area" string="Living area" filter_domain="[('living_area', '>=', self)]"/>
                <filter name="available" string="Available"  domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name ="Specious" domain="[('bedrooms', '>', '2')]"/>
                <group expand="1" string="Group By">
                        <filter string="Postcode0.00" name="postcode" context="{'group_by':'postcode'}"/>
                        <filter string="Date availability Date" name="date_availability" date="date_availability"/>
                        <filter string= "Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'} "/>
                </group>

                <searchpanel>
                    <field name="property_type_id" string="Property Type"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>
