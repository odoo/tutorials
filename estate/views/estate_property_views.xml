<odoo>
    <!-- Property Action Menu -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Properties List View -->
    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Property">
                <field name="name" />
                <field name="property_type_id" />
                <field name="description" />
                <field name="postcode" />
                <field name="date_availability" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />
                <field name="active" />
                <field name="state" />
                <field name="property_tag_ids" />
            </list>
        </field>
    </record>

    <!-- Properties Form View -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_set_sold_status" type="object" string="Sold" />
                    <button name="action_set_cancelled_status" type="object" string="Cancel" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>

                    <group>
                        <h5>
                            <field name="property_tag_ids" widget="many2many_tags" />
                        </h5>
                    </group>

                    <group>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>

                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" />
                                    <field name="garden_orientation" />
                                    <field name="active" />
                                    <field name="state" />
                                    <field name="total_area" />
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="property_offer_ids">
                                    <list string="Offer List">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                        
                                        <!-- Action Buttons -->
                                        <button name="action_set_offer_status_accepted" type="object" icon="fa-check" help="Accept Property Offer." />
                                        <button name="action_set_offer_status_refused" type="object" icon="fa-times" help="Refuse Property Offer." />
                                        
                                        <field name="status" />

                                    </list>
                                </field>
                            </page>

                            <page string="Other Info">
                                <group>
                                    <field name="salesman" />
                                    <field name="buyer" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Properties Search View -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name" />
                <field name="description" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />

                <separator />

                <!-- Today's availability filter -->
                <filter string="Availability" name="date_availability"
                    domain="[('date_availability', '>=', context_today())]" />

                <!-- Available with NEW or OFFER RECEIVED state filter -->
                <filter string="New or Offer Received" name="state"
                    domain="[('date_availability', '>=', context_today()), '|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />

                <!-- Group By postcode -->
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode"
                        context="{'group_by': 'postcode', 'residual_visible': True}" />
                </group>
            </search>
        </field>

    </record>

</odoo>
