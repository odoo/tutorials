<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context"> {'search_default_availability': True}</field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example" default_group_by="property_type_id" group_create="false">
                <!-- Grouping settings -->
                <field name="property_type_id"/>
                <field name="state"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="tag_ids"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <strong>Expected:</strong>
                                    <field name="expected_price"/>
                                </div>

                                <div t-if="record.state.raw_value == 'offer_received'">
                                    <strong>Best Offer:</strong>
                                    <field name="best_price"/>
                                </div>

                                <div t-if="record.state.raw_value == 'offer_accepted'">
                                    <strong>Selling Price:</strong>
                                    <field name="selling_price"/>
                                </div>

                                <div>
                                    <strong>State:</strong>
                                    <field name="state"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="state == 'offer_received' or state == 'offer_accepted'" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" class="btn-primary" invisible="state == 'sold' or state == 'cancelled'" />

                    <button name="action_set_cancelled" type="object" string="Cancel" class="btn-secondary" invisible="state == 'sold' or state == 'cancelled'" />
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />

                </header>
                <sheet>
                    <field name="name" />
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="date_availability" optional="show" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_price" readonly="1" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="state" />
                                <field name="property_type_id" options="{'no_create': True, 'no_open': True}" />
                            </group>
                        </page>

                        <page string="Sales Info">
                            <group>
                                <field name="salesperson_id" />
                                <field name="buyer_id" />
                                <field name="note" />
                            </group>
                        </page>
                        <page string="offers">
                            <field name="offer_ids" />
                        </page>
                        <page string="Tags">
                            <group>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Estate Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                <field name="state" />

                <filter name="availability" string="Available" domain="[('state', '=', 'new')]" />

                <!-- <filter name="available_properties" string="Available Properties" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]" /> -->

                <filter name="group_postcode" string="Group by Postcode" context="{'group_by': 'postcode'}" />
                <filter name="group_salesperson_id" string="Group by Sales Person" context="{'group_by': 'salesperson_id'}" />
            </search>
        </field>
    </record>

</odoo>