<?xml version="1.0"?>
<odoo>
  <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" groups_draggable="False" records_draggable="False">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <span>Name: </span>
                            <field name="name"/>
                            <br/>
                            <span>Expected Price: </span>
                            <field name="expected_price"/>
                            <br/>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <span>Best Price: </span>
                                <field name="best_price"/>
                            </div>
                            <br/>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                <span>Selling Price: </span>
                                <field name="selling_price"/>
                            </div>
                            <br/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property" decoration-success="state in ['offer_accepted', 'offer_received']"
            decoration-bf="state == 'offer_accepted'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="property_type_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

     <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <form string="property">
            <header>
                <button name="action_set_sold" string="Sold" type="object" class="oe_highlight_button" invisible="state in ['sold','cancelled'] or not can_be_sold"/>
                <button name="action_set_cancelled" string="Cancel" type="object" class="oe_highlight_button" invisible="state in ['sold','cancelled']"/>
                <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
            </header>
                <sheet>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="%(estate.report_estate_property_offers)d" type="action" icon="fa-print">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                        Print
                                    </span>
                                </div>
                    </button>
                </div>
                <h1>
                <field name="name"/>
                </h1>
                <field name="tag_ids" widget="many2many_tags" options= "{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="can_be_sold"/>
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible = "not garden"/> 
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="state"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string = "Offers">
                             <field name="offer_ids" readonly="state in['offer_accepted','sold', 'cancelled']"/>
                        </page>
                        <page string = "Other Info">
                           <group>
                             <field name="user_id"/>
                             <field name="partner_id"/>
                           </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id= "estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <filter string="Available" name="available" domain="['|',('state', '=', 'new'), ('state', '=', ' offer_received')]"/>
                <filter string="Archive" name="archieve" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
