<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property 
            </p><p>
                Use options specified in form to list property
            </p>
        </field>
    </record>

    <!-- list view -->
    <record id="estate_property_view" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="state == 'offer accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="property Type"></field>
                <field name="postcode" string="Postcode" />
                <field name="tag_ids" string="Tags" widget="many2many_tags"></field>
                <field name="bedrooms" string="Badrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="selling_price" string="Selling Prize"/>
                <field name="date_availability" string="Available From" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- search view -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Badrooms"/>
                <field name="facades" string="Facades"/> 
                <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]"/>

                <filter name="available" string="Available" domain="[('state', 'in', ['new', 'offer received'])]"/>

                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="action_to_sold" class="btn btn-primary" type="object" string="SOLD" invisible="state in ['new', 'offer received', 'sold', 'cancelled']"/>
                    <button name="action_to_cancel" type="object" string="CANCEL" invisible="state in ['new', 'offer received', 'sold', 'cancelled']"/>

                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <h1><field name="name" placeholder="New Property Name"/></h1>
                    </group>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <group>
                        <group>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="property_type_id" options="{'no_create': 'true'}"/>
                        </group>

                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="date_availability" string="Avaiable From"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                        </group>
                        
                    </group>
                    <notebook>
                        <page name="Description" string="Description">
                            <group name="Features" string="Room Features">
                                <field name="description" string="Description"></field>
                                <field name="bedrooms" string="Bedrooms"></field>
                                <field name="living_area" string="Living Area (sqm)"></field>
                                <field name="garage" string="Garage"></field>
                                <field name="facades" string="Facades"></field>
                                <field name="garden" string="Garden"></field>
                                <field name="garden_area" string="Garden Area (sqm)" invisible="garden == False"></field>
                                <field name="garden_orientation" string="Garden Orientation" invisible="garden == False"></field>
                                <field name="total_area"></field>
                            </group>
                        </page>
                        <page name="Offers" string="Offers">
                                <field name="offer_ids" 
                                readonly="state in ['offer accepted', 'sold','cancelled']" 
                                
                                ></field>
                        </page>

                        <page name="Other Info" string="Other Info">
                            <group name="Information" string="Information">
                                <field name="salesperson_id" string="Salesperson"></field>
                                <field name="buyer_id" string="Buyer"></field>
                            </group>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
   </record>

   <!-- Kanban View -->

   <record id="estate_property_view_kanban" model="ir.ui.view">
    <field name="name">estate_property</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <kanban default_group_by="property_type_id" records_draggable="0">
            <field name="state"></field>
            <templates>
                <t t-name="card" >
                    <div>
                        <div>
                            <text>Property Name : </text>
                            <field name="name"></field>
                        </div>
                        <div>
                            <text>Expected Price : </text>
                            <field name="expected_price"></field>
                        </div>
                        <div t-if="record.state.raw_value=='offer received'">
                            <text>Best Price : </text>
                            <field name="best_price"></field>
                        </div>
                        <div t-if="record.state.raw_value=='offer accepted'">
                            <text>Selling Price : </text>
                            <field name="selling_price"></field>
                        </div>
                        <div>
                            <field name="tag_ids"></field>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
   </record>

</odoo>
