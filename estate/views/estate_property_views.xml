<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'"
                decoration-success="state in ['offer_accepted', 'offer_received']">
                <header>
                    <button name="action_set_sold" class="oe_highlight" type="object" string="Sold"
                        confirm="You are about to edit multiple entries" />
                    <button name="action_cancel" type="object" string="Cancel"
                        confirm="You are about to edit multiple entries" />
                </header>
                <field name="name" />
                <field name="property_type_id" />
                <field widget="many2many_tags" name="property_tag_ids" options="{'color_field': 'color'}" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="garden_area" invisible="not garden" />
                <field name="total_area" />
                <field name="expected_price" />
                <field name="selling_price" invisible="state in ['new', 'offer_received', 'cancelled']" />
                <field name="date_availability" optional="hide" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">
                <templates>
                    <field name="property_type_id" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="best_offer" />
                    <field name="state" />
                    <t t-name="card">
                        <field name="name" class="fw-bold fs-5" />
                        <div> Expected price: <field name="expected_price" /></div>
                        <div t-if="record.state.raw_value == 'sold'">
                            <div>Selling price: <field name="selling_price" /></div>
                        </div>
                        <div t-if="record.state.raw_value == 'offer_received'">
                            <div> Best offer: <field name="best_offer" /></div>
                        </div>
                        <div t-if="record.state.raw_value == 'offer_accepted'">
                            <div> Accepted offer: <field name="best_offer" /></div>
                        </div>
                        <field
                            widget="many2many_tags" name="property_tag_ids" options="{'color_field': 'color'}" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />
                    <button name="action_set_sold" class="oe_highlight" type="object" string="Sold"
                        invisible="state in ['cancelled', 'sold']" />
                    <button name="action_cancel" type="object" string="Cancel"
                        invisible="state in ['cancelled', 'sold']" />
                </header>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" placeholder="Property Name, e.g. House in Brussels" />
                            </h1>
                        </div>
                        <field widget="many2many_tags" name="property_tag_ids" options="{'color_field': 'color'}" />
                    </group>
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="property_type_id" options="{'no_create': true}" />
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                </group>
                                <group>
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" invisible='not garden' />
                                    <field name="garden_orientation" invisible='not garden' />
                                    <field name="total_area" />
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ['cancelled', 'offer_accepted', 'sold']" />
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesperson_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property">
                <field name="name" string="Title" />
                <field name="property_type_id" string="Property Type" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '>=', self)]" />
                <field name="garden_area" string="Garden Area (sqm)" />
                <field name="total_area" string="Total Area (sqm)" />
                <field name="facades" string="Facades" />
                <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]" />
                <filter string="Archived" name="not_active" domain="[('active', '=', False)]" />
                <group expand="1" string="Group By">
                    <filter string="Property Type" name="property_type_id" context="{'group_by':'property_type_id'}" />
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                    <filter string="Facades" name="facades" context="{'group_by':'facades'}" />
                    <separator />
                    <filter string="Has Garden" name="garden" context="{'group_by':'garden'}" />
                    <filter string="Has Garage" name="garage" context="{'group_by':'garage'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available': True}</field>
    </record>
</odoo>
