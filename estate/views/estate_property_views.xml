<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Property"
                decoration-success="state in ('offer_received', 'offer_accepted')"
                decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'"
            >
                <header>
                    <!-- <button name="new" type="object" string="New" class="oe_highlight" /> # no
                    use as we have not make any action for new  -->
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" />
                    <button name="action_sold" type="object" string="Sold" class="oe_highlight" />
                </header>
                <field name="name" />
                <field name="property_type_id" />
                <field name="tag_type_ids" widget="many2many_tags" string="Tags"
                    options="{'color_field': 'color'}" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="selling_price" />
                <field name="date_availability" optional="hide" />
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property"
                decoration-success="state in ('offer_received', 'offer_accepted')"
                decoration-muted="state == 'sold'" decoration-bold="state == 'offer_accepted'">
                <header>
                    <button name="action_sold" type="object" string="Sold" class="oe_highlight"
                        invisible="state != 'offer_accepted'" />
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight"
                        invisible="state in ('sold','cancelled')" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>
                    <group>
                        <group>
                            <field name="state" string="Status" />
                            <field name="property_type_id"
                                options="{'no_create': True, 'no_create_edit': True}"
                                string="Property Type" />
                            <field name="tag_type_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" string="Property Tags" />
                            <field name="postcode" string="Postcode" />
                            <field name="date_availability" string="Available From" />
                        </group>
                        <group>
                            <field name="expected_price"
                            />
                            <field name="selling_price"
                            />
                            <field name="best_price" readonly="1" />
                            <field name="total_area" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description" />
                                <field name="bedrooms" string="Bedrooms" />
                                <field name="living_area" string="Living Area (sqm)" />
                                <field name="facades" string="Facades" />
                            </group>
                            <group string="Extra Features">
                                <field name="garage" string="Garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="orientation" invisible="not garden" />
                            </group>
                        </page>

                        <page string="Offers">
                            <!-- Offer Management -->
                            <group>
                                <field name="offer_ids"
                                    readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                            </group>
                            <group>
                                <field name="best_price" readonly="1" />
                            </group>
                        </page>

                        <page string="Other Info">
                            <group>
                                <field name="seller_id" string="Salesman" />
                                <field name="buyer_id" string="Buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <filter name="available" string="Available" domain="[('state', '=', 'new')]"
                    help="Show only available properties" />
                <field name="living_area" string="Living Area"
                    filter_domain="[('living_area', '>=', self)]" />
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="orientation" />
                <field name="facades" string="Facades" />
                <filter name="filter_by_bedrooms" string="3+ Bedrooms"
                    domain="[('bedrooms', '>=', 3)]" />
                <filter name="filter_by_living_area" string="Large Living Area"
                    domain="[('living_area', '>', 100)]" />
                <filter name="filter_by_postcode" string="Area 4000+"
                    domain="[('postcode', '>=', '4000')]" />
                <filter name="filter_by_facades" string="More than 2 Facades"
                    domain="[('facades', '>', 2)]" />
                <filter name="available_property" string="Available Property"
                    domain="[('state', 'in', ['new', 'offer_received'])]" />
            </search>
        </field>
    </record>

    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <field name="state"/>  <!-- Needed for conditional display -->
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="tag_type_ids"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <h2>
                                <field name="name"/>
                            </h2>
                            <div>
                                <strong>Expected Price : <t> </t>
                                </strong>
                                <field
                                    name="expected_price"/> ₹ </div>
                            
                            <!-- Best price only when an offer is received -->
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <strong>Best Offer : </strong>
                                <field name="best_price" /> ₹ </div>

                            <!-- Selling price only when an offer is accepted -->
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                <strong>Selling Price : </strong>
                                <field name="selling_price"/> ₹ </div>

                            <!-- Display Tags -->
                            <!-- <div>
                                <t t-foreach="record.tag_type_ids.value" t-as="tag">
                                    <span class="badge badge-secondary" t-esc="tag" />
                                </t>
                            </div> -->
                            <t>
                                <field name="tag_type_ids" widget="many2many_tags"
                                    options="{'color_field':'color'}"/>
                            </t>
                            <t t-if="record.state.raw_value == 'new'">
                                <span class="badge badge-primary">New Property!</span>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
