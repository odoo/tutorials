<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name"/>
                <field name="description"/>
                <field name="state"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="living_area"/>
                <field name="garage" />
                <field name="garden" />
                <field name="bedrooms" optional="hide"/>
                <field name="facades" optional="hide"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="views_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Config">
                <field name="name" string="Property Name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                <filter string="Postcode" name="groupby_postcode" context="{'group_by': 'postcode'}"/>    
            </search>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
            <header>
                <button name="action_sold" type="object" string="Sold" class = "oe_stat_button"/>
                <button name="action_cancel" type="object" string="Cancel" class = "oe_stat_button"/>
                <button name="action_back_to_draft" type="object" string="Back to Draft" class = "oe_stat_button" invisible="state!='sold'"/>
                <field name="state" widget="statusbar"/>
            </header>  
                <sheet>
                 <widget name="web_ribbon" title="Sold" bg_color="text-bg-success" invisible="state != 'sold'"/>
                <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="state != 'cancelled'"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <group name="name" string="Name">
                                <field name="description" />
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="total_area"/>    
                                <field name="best_price"/>    
                            </group>
                        </page>
                        <page name="offers" string="Offers">
                            <field name="offer_ids"/>
                        </page>
                        <page name="other" string="Other Info">
                            <group name="name" string="Name">
                                <field name="user_id" />
                                <field name="partner_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
     <record id="action_estate_property_tree" model="ir.actions.act_window">
        <field name="name">Property List</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="domain"></field>
        <field name="search_view_id" ref="views_estate_property_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Property</p>
            <p>Configure at least one Property.</p>
        </field>
    </record>
    <record id="estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <kanban>
            <field name="name"/>
            <field name="expected_price"/>
            <field name="state"/>
            <templates>
                <t t-name="card">
                    <div class="o_kanban_record">
                        <div class="fw-bold" style="font-size: 18px; color: #333;">
                            <field name="name"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <field name="expected_price"/> â‚¬
                        </div>
                        <div>
                            <strong>State: </strong>
                            <field name="state"/>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
        </field>
    </record>
</odoo> 
