<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available_property_filter': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Properties
            </p>
            <p>
                Create your properties here.
            </p>
        </field>
    </record>

    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">state.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="state in ['offer_received', 'offer_accepted']" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_price" optional="hide"/>
                <field name="date_availability" optional="hide"/>
                <field name="salesperson_id" optional="hide"/>
                <field name="buyer_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <group invisible="state in ['sold', 'canceled']">
                        <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" invisible="state in ['sold', 'canceled']"/>
                        <button name="action_sold" type="object" string="Mark as Sold" class="btn-primary" invisible="state in ['sold', 'canceled']"/>
                    </group>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                    <div>
                        <group>
                            <group>
                                <field name="property_type_id" string="Property Type" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="postcode" string="Postcode"/>
                            </group>
                            <group>
                                <field name="expected_price" string="Expected Price"/>
                                <field name="best_price" string="Best Price"/>
                                <field name="selling_price" string="Selling Price"/>
                            </group>
                            <group>
                                <field name="date_availability" string="Available from"/>
                            </group>
                        </group>
                    </div>
                    <notebook>
                        <page name="description" string="Description">
                            <group>
                                <group>
                                    <field name="description" string="Description"/>
                                    <field name="bedrooms" string="Bedrooms"/>
                                    <field name="living_area" string="Living Area (sqm)"/>
                                </group>
                                <group>
                                    <field name="garage" string="Garage"/>
                                    <field name="garden" string="Garden"/>
                                    <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                    <field name="garden_orientation" string="Garden Orientation" invisible="not garden"/>
                                    <field name="total_area" string="Total Area (sqm)"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ['offer_accepted', 'sold', 'canceled']"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="false" on_create="quick_create" quick_create_view="estate.quick_create_property_form">
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="row">
                            <div class="col-8">
                                <field class="fw-bolder" name="name"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </div>
                        <div class="row">
                            <div>
                            Expected Price : <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value === 'offer_received'">
                            Best Price : <field name="best_price"/>
                            </div>
                            <div t-if="['offer_accepted', 'sold'].includes(record.state.raw_value)">
                            Selling Price: <field name="selling_price"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="quick_create_property_form" model="ir.ui.view">
        <field name="name">Estate Create Form</field>
        <field name="model">estate.property</field>
        <field name="priority">17</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="property_type_id" string="Property Type" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="expected_price" string="Expected Price"/>
                </group>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.list.select</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search estates">
                <field name="name"/>
                <field name="state"/>
                <field name="postcode"/>
                <filter string="Available" name="available_property_filter" domain="['|',('state','=','new'),('state','=','offer_received')]"/>
                <field name="living_area" string="Living Area (sqm)" filter_domain="['|',('living_area', '=', self), ('living_area', '>', self)]"/>

                <group expand="1" string="Group By">
                    <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
