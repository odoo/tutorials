<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Custom list view-->
        <record id="estate_property_view_list" model="ir.ui.view">
            <field name="name">estate.property.view.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list name="properties" string="Properties" 
                      decoration-success="state in ['offerreceived', 'offeraccepted']"
                      decoration-bf="state == 'offeraccepted'" 
                      decoration-muted="state == 'sold'">
                    <header>
                        <button name="action_sold" type="object" string="Sold"/>
                        <button name="action_cancelled" type="object" string="Cancel"/>
                    </header>
                    <field name="name" width="15%"/>
                    <field name="reference" width="10%"/>
                    <field name="postcode" width="10%"/>
                    <field name="bedrooms" width="10%"/>
                    <field name="living_area" width="10%"/>
                    <field name="total_area" width="10%"/>
                    <field name="expected_price" width="10%"/>
                    <field name="selling_price" width="10%"/>
                    <field name="date_availability" width="15%"/>
                </list>
            </field>
        </record>

        <!-- Custom form view-->
        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.property.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button invisible = "state in ['sold', 'cancelled']" name="action_sold" type="object" string="Sold"/>
                        <button invisible = "state in ['sold', 'cancelled']" name="action_cancelled" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="reference"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <group>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                                <field name="property_type_id" options="{'no_create': true}"/>
                                <field name="state"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="active"/>
                                <field name="best_offer"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="description">
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field invisible="garden == False" name="garden_area"/>
                                    <field invisible="garden == False" name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page name="Offers">
                                <field name="offer_ids" nolabel='1' readonly="state in ['offeraccepted', 'sold', 'cancelled']"/>
                            </page>
                            <page name="Other info">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter open_attachments="True" reload_on_attachment= "True" reload_on_follower="True" reload_on_post="True"/>
                </form>
            </field>
        </record>

        <!-- Custom search view -->
        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">estate.property.view.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <filter string="Available" name="available" domain="[('state', 'in', ['new', 'offerreceived'])]"/>
                    <filter string="Postcode" name="postcode" context="{'group_by' : 'postcode'}"/>
                </search>
            </field>
        </record>

        <!-- Custom Kanban View -->
        <record id="estate_property_view_kanban" model="ir.ui.view">
            <field name="name">estate.property.view.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="property_type_id" records_draggable="False">
                    <field name="state"/>
                    <template>
                        <t t-name="kanban-box">
                            <div>
                                <field name="name"/>
                                <div>
                                    <field name="expected_price"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offerreceived'">
                                    <field name="best_offer"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offeraccepted'">
                                    <field name="selling_price"/>
                                </div>
                                <div>
                                    <field name="tag_ids"/>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>

        <!-- ACTIONS -->
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Real Estate</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_available': True}</field>
        </record>
    </data>
</odoo>
