<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate property test action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_state': True}</field>
    </record>

    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Entries" decoration-success="state == 'received' or state == 'accepted'" decoration-bf="state == 'accepted'" decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="property_type_id"/>
            </list>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Entries">
                <header>
                    <button name="action_estate_property_cancel" type="object" string="Cancel"/>
                    <button name="action_estate_property_sold" type="object" string="Sold" invisible="not (state == 'accepted')"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,received,accepted,sold" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <h1 class="mb32">
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="tags_ids" widget="many2many_tags" />
                        <field name="property_type_id"/>
                        <field name="postcode"/>
                        <field name="expected_price"/>
                        <field name="date_availability"/>
                        <field name="selling_price"/>
                        <field name="best_offer"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer"/>
                                <field name="salesperson"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban string="Entries" default_group_by="property_type_id" records_draggable="False">
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <field name="name"/>
                            <field name="expected_price"/>
                            <div t-if="record.state == 'received'">
                                <field name="selling_price" string="Best offer"/>
                            </div>
                            <div t-if="record.state == 'accepted'">
                                <field name="selling_price" string="Selling price"/>
                            </div>
                            <field name="tags_ids"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate">
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Epected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Minimum Living Area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" string="Facades" />
                <field name="property_type_id" />
                <separator/>
                <filter string="Archived" name="active" domain="[('active', '=', True)]"/>
                <filter string="Available" name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
