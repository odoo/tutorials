<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Search View-->
    <record id="estate_properties_search" model="ir.ui.view">
        <field name="name">estate_properties.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_type_id" />
                <filter
                    name="property_available"
                    string="Available"
                    domain="[('date_availability', '&lt;=', 'today()'), ('state', 'in', ['new', 'offer_received'])]"
                />
                <filter
                    name="groupby_postcode"
                    string="Postcode"
                    context="{'group_by': 'postcode'}"
                />
            </search>
        </field>
    </record>

    <!-- List View-->
    <record id="estate_properties_view_list" model="ir.ui.view">
        <field name="name">estate_properties.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="property_type_id" />
                <field name="buyer_id" />
                <field name="salesperson_id" />
                <field name="postcode" optional="show" />
                <field name="date_availability" optional="show" />
                <field name="expected_price" optional="show" />
                <field name="selling_price" optional="show" />
                <field name="bedrooms" optional="show" />
                <field name="living_area" optional="show" />
                <field name="facades" optional="hide" />
                <field name="garden" optional="hide" />
                <field name="garden_area" optional="hide" />
                <field name="garden_orientation" optional="hide" />
                <field name="state" optional="hide" />
            </list>
        </field>
    </record>

    <!-- Form View-->
    <record id="estate_properties_view_form" model="ir.ui.view">
        <field name="name">estate_properties.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <sheet>
                    <h1>
                        <field name="name" placeholder="Property name" />
                    </h1>
                    <group>
                        <group>
                            <field name="property_type_id" />
                        </group>
                        <group>
                            <field name="expected_price" />
                        </group>
                        <group>
                            <field name="postcode" />
                        </group>
                        <group>
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Default Action-->
    <record id="estate_properties_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
