<?xml version="1.0"?>
<odoo>

    <record id="estate_property_menu" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="estate_list">
                <field name="name" string="Title" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price" />
                <field name="selling_price" string="Selling Price" />
                <field name="date_availability" string="Available From" />
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate">
                <header>
                    <button name="set_sold_status" type="object" string="Sold" invisible="state == 'sold' or state == 'canceled'"/>
                    <button name="set_cancel_status" type="object" string="Cancel" invisible="state == 'sold' or state == 'canceled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                      <h1><field name="name" /></h1>
                    </div>
                    <group>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <group>
                            <field name="property_type_id" string="Property Type" options="{'no_create': false, 'can_write': false}"/>
                            <field name="postcode" string="Postcode" />
                            <field name="date_availability" string="Available From" />
                        </group>
                        <group>
                            <field name="best_price" string="Best Offer" />
                            <field name="expected_price" string="Expected Price" />
                            <field name="selling_price" string="Selling Price" />
                        </group>
                        <notebook>
                            <page name="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" string="Bedrooms" />
                                    <field name="living_area" string="Living Area (sqm)" />
                                    <field name="facades" string="Facades" />
                                    <field name="garage" string="Garage" />
                                    <field name="garden" string="Garden" />
                                    <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                    <field name="garden_orientation" string="Garden Orientation" invisible="not garden"/>
                                    <field name="active" string="Active" />
                                    <field name="state" string="Status" />
                                    <field name="total_area" string="Total Area (sqm)"/>
                                </group>
                            </page>
                            <page name="Offer">
                                <group>
                                    <field name="offer_ids" string="Offer" readonly="state == 'sold' or state == 'canceled'"/>
                                </group>
                            </page>
                            <page name="Other Info">
                                <group>
                                    <field name="buyer_id" string="Buyer" />
                                    <field name="salesperson" string="Salesperson" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="property_type_id"/>
                <field name="state"/>
                <field name="tag_ids" />
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]" />
                <filter string="Archived" name="active" domain="[('active', '=', False)]" />
                <filter string="New" name="state" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                    <filter string="Property Types" name="property_type_id" context="{'group_by':'property_type_id', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
