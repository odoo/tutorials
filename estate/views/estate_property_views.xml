<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Advertisements</field>
        <field name="res_model">x_estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">x_estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="x_name" string="Title"/>
                <field name="x_postcode"/>
                <field name="x_date_availability" string="Available From" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">x_estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="x_name" placeholder="My new house"/>
                    </h1>
                    <group>
                        <field name="x_property_tag_ids" widget="many2many_tags" string=" "/>
                    </group>
                    <group>
                        <group>
                            <field name="x_property_type_id"/>
                            <field name="x_postcode"/>
                            <field name="x_date_availability"/>
                        </group>
                        <group>
                            <field name="x_expected_price"/>
                            <field name="x_selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="x_description"/>
                                <field name="x_bedrooms"/>
                                <field name="x_living_area"/>
                                <field name="x_facades"/>
                                <field name="x_garage"/>
                                <field name="x_garden"/>
                                <field name="x_garden_area" invisible="not x_garden"/>
                                <field name="x_garden_orientation" invisible="not x_garden"/>
                                <field name="x_total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="x_offer_ids"/>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="x_user_id"/>
                                <field name="x_partner_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
