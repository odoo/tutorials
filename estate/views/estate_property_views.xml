<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Register a new property
            </p><p>
            Register properties, create offers and generate invoices with real estate agents.
            </p>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <b><field name="name" /></b>
                            <div>Expected Price: <field name="expected_price" /></div>
                            <t t-if="record.state.raw_value == 'offer_received'">
                                <div>Best Offer: <field name="best_price" /></div>
                            </t>
                            <t t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold'">
                                <div>Selling Price: <field name="selling_price" /></div>
                            </t>
                            <div><field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" /></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
                decoration-success="state in ('offer_received', 'offer_accepted')"
                decoration-bf="state == 'offer_accepted'"
                decoration-danger="state == 'cancelled'"
                decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="True" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />

                <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"></filter>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"></filter>

                <group string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}" />
                    <filter string="Property Type" name="property_type_id" context="{'group_by': 'property_type_id'}" />
                    <filter string="Property Tag" name="tag_ids" context="{'group_by': 'tag_ids'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_sold" type="object" string="Sold" class="oe_highlight" invisible="state != 'offer_accepted'" />
                    <button name="action_sold" type="object" string="Sold" invisible="state not in ('new','offer_received') or not active" />
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ('sold','cancelled') or not active" />
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable': False}" />
                </header>

                <sheet>
                    <field
                        name="image"
                        widget="image"
                        class="oe_avatar"
                        options="{'convert_to_webp': True}"
                    />

                    <widget name="web_ribbon" title="Sold" bg_color="text-bg-success" invisible="state != 'sold'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="state != 'cancelled'"/>

                    <div class="oe_title mb16">
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    </div>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': true}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>

                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>

                    <notebook>
                        <page name="Description">
                            <group>
                                <group>
                                    <field name="description" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" invisible="not garden" />
                                    <field name="garden_orientation" invisible="not garden" />
                                </group>

                                <group>
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="state" />
                                    <field name="total_area" />
                                </group>
                            </group>
                        </page>

                        <page name="Offers">
                            <field name="offer_ids"
                            readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                        </page>

                        <page name="Other Info">
                            <group>
                                <group>
                                    <field name="salesperson_id" />
                                    <field name="buyer_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter />
            </form>
        </field>
    </record>
</odoo>
