<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_is_available': True}</field>
    </record>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">ep.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list
                string="Estate property"
                decoration-success="offer_ids and state!='cancelled'"
                decoration-bf="state=='accepted'"
                decoration-muted="state=='sold'"
                decoration-danger="state=='cancelled'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hidden"/>
            </list>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">ep.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate property">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" invisible="state in ('sold', 'cancelled')"/>
                    <button name="action_set_cancelled" type="object" string="Cancel" invisible="state in ('sold', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,recieved,accepted,sold"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state not in ('new', 'recieved')"/>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_propety_search_view" model="ir.ui.view">
        <field name="name">ep.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades"/>
                <filter name="is_available" string="Available" domain="[('state', 'in', ['new', 'recieved'])]"/>
                <group expand="1" string="Group By">
                    <filter name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
   </record>
   <record id="veiw_users_form" model="ir.ui.view">
        <field name="name">inherited.res.users.form.estate.property</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Estate properties">
                    <field name="estate_property_ids" options="{'no_create': True}"/>
                </page>
            </xpath>
        </field>
    </record>
   <record id="estate_propety_kanban_view" model="ir.ui.view">
        <field name="name">ep.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" options="{'groups_draggable' False, 'records_draggable': False}">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <h3><field name="name"/></h3>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <div>
                                <label for="expected_price">Expected price: </label>
                                <field name="expected_price"/>
                            </div>
                            <div invisible="state in ('new', 'cancelled')">
                                <label for="best_offer">Best offer: </label>
                                <field name="best_offer"/>
                            </div>
                            <div invisible="state not in ('accepted', 'sold')">
                                <label for="selling_price">Selling price: </label>
                                <field name="selling_price"/>
                            </div>                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
