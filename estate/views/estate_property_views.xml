<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window"> 
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view" default_group_by="property_type_id" records_draggable="False">
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="tag_ids"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_details" draggable="false">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <t t-if="record.state.raw_value == 'offer_received'">
                                <div>
                                    Best Price: <field name="best_price"/>
                                </div>
                            </t>
                            <t t-if="record.state.raw_value == 'offer_accepted'">
                                <div>
                                    Selling Price: <field name="selling_price"/>
                                </div>
                            </t>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Properties" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold_offer'">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="property_type_id"/>
                <field name="state"/>
                <field name="active"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="My New House">
                <header>
                    <button name="action_sold" type="object" string="SOLD" class="btn-primary"  invisible="state in ('sold_offer', 'cancel_offer')"/>
                    <button name="action_cancel" type="object" string="CANCEL" class="btn-secondary" invisible="state in ('sold_offer', 'cancel_offer')"/>
                    <field name="state" widget="statusbar" statusbar_visible="new_offer,offer_received,offer_accepted,sold_offer"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="estate.estate_property_offer_report_action" type="action" string="Print" class="btn-primary" icon="fa-print"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="My new house"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="state"/>
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field string="Description" name="description"/>
                                    <field string="Bedrooms" name="bedrooms"/>
                                    <field string="Living Area (sqm)" name="living_area"/>
                                    <field string="Facades" name="facades"/>
                                    <field string="Garage" name="garage"/>
                                    <field string="Garden" name="garden"/>
                                    <field string="Garden Area (sqm)" name="garden_area" invisible="not garden"/>
                                    <field string="Total Area (sqm)" name="total_area"/>
                                    <field string="Garden Orientation" name="garden_orientation" invisible="not garden"/>
                                    <field string="Active" name="active"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('offer_accepted', 'sold_offer', 'cancel_offer')"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="saleperson_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="expected_price"/>
                <field name="facades"/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new_offer', 'offer_received'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
