<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Ttile"/>
                <field name="state" string="state"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price" optional="hide"/>
                <field name="bedrooms" string="Bedrooms" optional="hide"/>
                <field name="living_area" string="Living Area (sqm)" optional="hide"/>
                <field name="selling_price" string="Selling Price" optional="hide"/>
                <field name="date_availability" string="Availabe From"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state', 'in', ('new','offer_received'))]"/>
                <group expand="1" string="Postcode">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name" string="Ttile"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price" optional="hide"/>
                <field name="bedrooms" string="Bedrooms" optional="hide"/>
                <field name="living_area" string="Living Area (sqm)" optional="hide"/>
                <field name="facades" string="Facades"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_set_cancelled" type="object" string="Cancel"/>
                    <button name="action_set_sold" type="object" string="Sold"/>
                    <button name="action_set_new" type="object" string="Rest to New"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" string="Ttile"/>
                    </h1>
                    <div class='mb-3'>
                        <field name="property_tag_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="state" string="state"/>
                            <field name="property_type_id" string="Property Type"/>
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Availabe From"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="selling_price" string="Selling Price"/>
                            <field name="best_price" string="Best Offer"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area"/>
                                <field name="garden_orientation" string="Garden Orientation"/>
                                <field name="total_area" string="Total Area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name='property_offer_ids'/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id"/>
                                <field name="partner_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    # Define the action and the view modes
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>