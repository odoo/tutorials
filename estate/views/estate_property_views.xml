<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="tag_ids" widget="many2many_tags" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />

                <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"></filter>
                <group string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}" />
                    <filter string="Property Type" name="property_type_id" context="{'group_by': 'property_type_id'}" />
                    <filter string="Property Tag" name="tag_ids" context="{'group_by': 'tag_ids'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <sheet>
                    <div class="oe_title mb16">
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" />
                    </div>

                    <group>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>

                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>

                    <notebook>
                        <page name="Description">
                            <group>
                                <group>
                                    <field name="description" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" />
                                    <field name="garden_orientation" />
                                </group>

                                <group>
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="state" />
                                    <field name="total_area" />
                                </group>
                            </group>
                        </page>

                        <page name="Offers">
                            <field name="offer_ids" />
                        </page>

                        <page name="Other Info">
                            <group>
                                <group>
                                    <field name="salesperson" />
                                    <field name="buyer" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
