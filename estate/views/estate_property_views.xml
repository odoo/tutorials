<odoo>
    <!-- Action Definition -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available_property': True}</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"/>
                <p>
                    No properties exist. Please create a property to play with the pipeline.
                </p>
        </field>
    </record>

    <!-- List View Definition -->
    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Property Details" default_order="id desc" 
                 decoration-muted="state=='sold'"
                 decoration-success="state in ['offer_accepted','offer_received']">
                <header>
                <button name="%(action_add_offer)d" string="Add Offer" type="action" class="oe_highlight" />
                </header>
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="best_price"/>
                <field name="state" optional="hide"/>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="date_availability" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View Definition -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Details">
                <header>
                    <button name="action_set_sold" type="object" string="Sold" invisible="state in ['sold', 'cancelled']"/>
                    <button name="action_cancel_property" type="object" string="Cancel" invisible="state in ['sold', 'cancelled']"/>
                    <button name="estate.estate_property_report_action" type="action" string="Print Offer Report"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="property_type_id" options="{'no_create':True,'no_edit':False}" />
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <field name="best_price"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <!-- Description Page -->
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="image" />
                                <field name="garage" widget="boolean_toggle"/>
                                <field name="garden" />
                                <field name="garden_area" invisible="garden == False"/>
                                <field name="garden_orientation" invisible="garden == False"/>
                                <field name="total_area"/>
                            </group>
                        </page>

                        <!-- Other Information Page -->
                        <page string="Other Information">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <!-- Offer Page -->
                        <page string="Offer Page">
                            <field name="offer_ids" readonly="state in ['sold','cancelled','offer accepted']"/> 
                        </page>
                    </notebook>
                </sheet>
               <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View Definition -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="state"/>
                <field name="expected_price"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <filter name="available_property" string="Available Property" 
                        domain="[('state', '=', 'new')]"/>
                <filter name="group_by_postcode" string="Group by Postcode" 
                        context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View Definition -->
   <record id="estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="state"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="tag_ids"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                Expected Price: <field name="expected_price"/> 
                            </div>
                            <div t-if="record.best_price.raw_value &gt; 0">
                                Best Offer: <field name="best_price"/>
                            </div>
                            <div t-if="record.selling_price.raw_value &gt; 0">
                                Selling Price: <field name="selling_price"/>
                            </div>
                            <div t-if="record.tag_ids.raw_value.length">
                                Tags: <field name="tag_ids" options="{'color_field':'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
</record>
</odoo>
