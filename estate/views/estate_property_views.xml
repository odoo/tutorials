<?xml version="1.0"?>
<odoo>
    
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" > <!-- editable="bottom" --> 
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="property_type_id"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="expected_price"></field>
                <field name="selling_price"></field>
                <field name="date_availability"></field>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Details" > <!-- editable="bottom" --> 
                <sheet>
                    <!-- <group name="Name"> -->
                        <h1><field name="name" label="Property Name" placeholder="Property Name"/></h1>
                        <field name="property_tags_id" widget="many2many_tags" label="tags"></field>

                    <!-- </group> -->
                    <group>
                        <group>
                            <field name="property_type_id"></field>
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <!-- <field name="property_tags_id" widget="many2many_tags"></field> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="Description" string="Description">
                            <group name="Features">
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="garage"></field>
                                <field name="facades"></field>
                                <field name="garden"></field>
                                <field name="garden_area"></field>
                                <field name="garden_orientation"></field>
                            </group>
                        </page>
                        <page name="Offers">
                                <field name="offer_ids" />
                        </page>
                        <page name="Other Info" string="Other Info">
                            <group>
                                <field name="seller_id"></field>
                                <field name="buyer_id"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>

        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="Name" />
                <field name="expected_price" string="Expected Price" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area" />
                <field name="facades" string="Facades" />
                <field name="property_type_id" string="Type" />

                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                <filter string="Available" name="state" domain="[('state', 'in', ['new', 'offer_received'])]"/>

                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
