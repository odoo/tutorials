<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="real_estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <record id="real_estate_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties"
                decoration-success="state == 'received' or state == 'accepted'"
                decoration-bf="state == 'accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title" />
                <field name="property_type_id" />
                <field name="state" invisible="True" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" string="Available From" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_cancel_state" type="object" string="Cancel"
                        invisible="state in ('sold', 'canceled')" />
                    <button name="action_set_sold_state" type="object" string="Sold"
                        invisible="state in ('sold', 'canceled')" />
                    <field name="state" widget="statusbar"
                        options="{'clickable': '1', 'fold_field': 'fold'}"
                        statusbar_visible="new,received,accepted,sold" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="estate_property_tag_ids" widget="many2many_tags"
                        options="{'color_field': 'color'}" />
                    <group>
                        <group>

                            <field name="property_type_id" options="{'no_create': true}" />
                            <field name="postcode" />
                            <field name="date_availability" string="Available From" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" string="Living Area (sqm)" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" string="Garden Area (sqm)"
                                        invisible="not garden" />
                                    <field name="garden_orientation" invisible="not garden" />
                                    <field name="total_area" />
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="state == 'accepted' or state == 'canceled' or state == 'sold'" />
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="salesperson_id" />
                                    <field name="buyer_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_view_search" model="ir.ui.view">
        <field name="name">real.estate.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <filter string="Postcode" name="groupby_postcode" context="{'group_by': 'postcode'}" />
                <filter string="Available" name="available"
                    domain="[('state', 'in', ('new', 'received'))]" />
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)"
                    filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
            </search>
        </field>
    </record>
</odoo>
