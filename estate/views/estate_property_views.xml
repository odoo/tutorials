<?xml version="1.0"?>
<odoo>
    <record id="estate_property" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_state': True}</field>
    </record>

    <!-- List View of Property -->
    <record id="estate_porperty_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
                decoration-danger="state == 'cancelled'"
                decoration-success="state == 'sold'"
                decoration-warning="state == 'received'">
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="property_tag_ids" string="Tags" widget="many2many_tags"
                    options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form of Property -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_sold" type="object" string="Sold"
                        invisible="state in ('sold','canceled')"/>
                    <button name='action_cancel' type="object" string="Cancel"
                        invisible="state in ('sold','canceled')"/>
                    <button name="%(report_property_offers)d" string="Print Offers"
                        type="action" class="oe_highlight"/> 
                    <field name="state" widget="statusbar"
                        statusbar_visible="new, received, accepted, sold"/>
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>
                    <group>
                        <field name="property_tag_ids"
                            nolabel="1"
                            widget="many2many_tags"
                            options="{'color_field': 'color', 'no_create': True,
                            'no_open': True}"/>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                            <field name="date_deadline" string="Deadline"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Description -->
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" string="Garden Area (sqm)"
                                    invisible="not garden"/>
                                <field name="garden_orientation" string="Garden Orientation"
                                    invisible="not garden"/>
                                <field name="total_area" string="Total Area"/>
                            </group>
                        </page>
                        
                        <!-- Offers -->

                        <page string="Offers">
                            <group>
                                <field nolabel ="1" name="offer_ids"
                                    readonly="state in ('accepted', 'sold', 'canceled')">
                                    <!-- List View -->
                                    <list decoration-info="status == 'new'"
                                        decoration-success="status == 'accepted'"
                                        decoration-danger="status == 'refused'" editable="bottom">

                                        <field name="price" string="Price"/>
                                        <field name="partner_id" string="Partner"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <button name="action_accept"
                                            type="object"
                                            icon="fa-check"
                                            title="action_accept"
                                            invisible="status == 'accepted' or status == 'refused'"/>
                                        <button name="action_refuse"
                                            type="object"
                                            icon="fa-times"
                                            title="action_refuse"
                                            invisible="status == 'accepted' or status == 'refused'"/>
                                        <field name="status" string="Status" readonly="1"/>
                                    </list>
                                </field>
                            </group>
                        </page>

                        <!-- Other Info -->
                        <page string="Other Info">
                            <group>
                                <field name="user_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban view of property -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" group_create="false">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="expected_price"/>
                <field name="best_offer"/>
                <field name="selling_price"/>
                <field name="property_tag_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                <span>Expected Price: </span>
                                <strong>
                                    <field name="expected_price" widget="monetary"/>
                                </strong>
                            </div>
                            <t t-if="record.best_offer.raw_value">
                                <div>
                                    <span>Best Price: </span>
                                    <strong>
                                        <field name="best_offer" widget="monetary"/>
                                    </strong>
                                </div>
                            </t>
                            <t t-if="record.selling_price.raw_value">
                                <div>
                                    <span>Selling Price: </span>
                                    <strong>
                                        <field name="selling_price" widget="monetary"/>
                                    </strong>
                                </div>
                            </t>
                            <div>
                                <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search Filter of Property -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Property">
                <!-- Filter which displays available properties,
                i.e. the state should be ‘New’ or ‘Offer Received’.  -->
                <filter name="state" string="Available"
                    domain="['|', 
                        ('state', '=', 'new'),
                        ('state', '=', 'received')
                    ]"/>
                <!-- A search view -->
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"
                    filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades"/>
                <separator/>
                <!-- Group by Postcode -->
                <group expand='0' string="Group By" colspan='16'>
                    <filter string="Postcode" name='postcode'
                        context="{'group_by':'postcode'}"/>
                </group>
            </search>   
        </field>
    </record>

</odoo>
