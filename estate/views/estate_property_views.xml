<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Estate proprty action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_availability': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property
            </p>
            <p>
                Use options specified in form to list property
            </p>
        </field>
    </record>

    <!-- list view -->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" sample="1" decoration-muted="status == 'sold' " decoration-success="status=='offer_received' or status=='offer_accepted'" decoration-bf="status=='offer_accepted'">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode" string="Postcode"/>
                <field name="tag_ids" string="Property Tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living area(sqm)"/>
                <field name="expected_price" string="Expected price"/>
                <field name="selling_price" string="Selling price"/>
                <field name="date_availability" string="Availability date" type="date" optional="hide"></field>
            </list>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_property_form">
                <header>
                    <button name="action_sold" class="btn btn-primary" invisible='status != "offer_accepted" or status == "sold" or status == "canceled"' type="object" string="Sell"/>
                    <button name="action_sold" class="btn btn-secondary" invisible='status == "offer_accepted" or status == "sold" or status == "canceled"' type="object" string="Sell"/>
                    <button name="action_cancel" class="btn btn-secondary" invisible='status =="sold" or status == "canceled"' type="object" string="Cancel"/>
                    <field name="status" readonly="1" widget="statusbar" nolabel="1"></field>
                </header>
                <sheet>
                    <group name="Basics">
                        <h1>
                            <field name="name" label="Property Name" placeholder="Property Name" />
                        </h1>
                        <field name="image" widget="image" options="{'size': [70, 70]}"/>

                        <field name="tag_ids" widget="many2many_tags" placeholder="eg. Cozy, Quiet, Furnished, ..." options="{'color_field': 'color'}"/>

                    </group>

                    <group>
                        <group name="Basics_2">
                            <field name="postcode"></field>
                            <field name="date_availability"></field>
                            <field name="property_type_id" options="{'no_create': True}"></field>
                        </group>
                        <group name="Basics_3">
                            <field name="expected_price"></field>
                            <field name="best_offer" readonly="1"></field>
                            <field name="selling_price"></field>
                        </group>
                    </group>

                    <notebook>
                        <page name="Description" string="Description">
                            <group name="Features" string="Room Features">
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="garage"></field>
                                <field name="facades"></field>
                                <field name="garden"></field>
                                <field name="garden_area" invisible="garden==False"></field>
                                <field name="garden_orientation" invisible="garden==False"></field>
                                <field name="total_area" readonly="1"></field>
                            </group>
                        </page>

                        <page name="Offers">
                            <group >
                                <field name="offer_ids" nolabel="1" readonly="status=='sold' or status=='canceled' or status=='offer_accepted'"/>
                            </group>
                        </page>

                        <page name="Other Info">
                            <group >
                                <field name="salesman_id" widget="many2one_avatar_user" readonly="1"/>
                                <field name="buyer_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- search view -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate property search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Delivery Carrier">
                <field name="name" string="Name"/>
                <field name="description"/>
                <field name="living_area" string="LivingArea" filter_domain="[('living_area', '>=', self)]" />
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter name="availability" string="Availability" domain="[('status','!=','sold'),('status','!=','canceled')]" help="Filter by availability date" />
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'search_default_group_by':True}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- kanban view -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <field name="status" />
                <templates>
                    <t t-name="card">
                        <h3>
                            <field name="name" />
                        </h3>
                        <div class="flex-row">
                            <text>Expected price:</text>
                            <field name="expected_price" />
                        </div>
                        <t t-if="record.status.raw_value == 'offer_received'">
                            <div class="flex-row">
                                <text>Best offer:</text>
                                <field name="best_offer" />
                            </div>
                        </t>
                        <t t-if="record.status.raw_value == 'offer_accepted' or record.status.raw_value == 'sold' ">
                            <div class="flex-row">
                                <text>Selling price:</text>
                                <field name="selling_price" />
                            </div>
                        </t>
                        <footer class="d-flex justify-content-between align-items-center">
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                            <div>
                                <field name="salesman_id" widget="many2one_avatar_user"/>
                            </div>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_action_server" model="ir.actions.server">
        <field name="name">Make Offer</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action=records.action_make_offer()</field>
    </record>
</odoo>