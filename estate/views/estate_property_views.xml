<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Property" multi_edit="1" decoration-success="state == 'offer_received'" decoration-bf="state == 'offer_received'" decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="property_type_id" />
                <field name="description" optional="hide" />
                <field name="postcode" />
                <field name="date_availability" optional="hide" />
                <field name="expected_price" />
                <field name="selling_price" optional="hide" />
                <field name="bedrooms" sum="Total" />
                <field name="living_area" avg="Avg" />
                <field name="facades" optional="hide" />
                <field name="garage" optional="hide" />
                <field name="garden" optional="hide" />
                <field name="garden_area" />
                <field name="garden_orientation" optional="hide" />
                <field name="active" optional="hide" />
                <field name="state" />
                <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offer List" editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                
                <!-- Action Buttons -->
                <button name="action_set_offer_status_accepted" type="object" icon="fa-check" title="Accept Property Offer." invisible="status == 'accepted' or status == 'refused'" />
                <button name="action_set_offer_status_refused" type="object" icon="fa-times" title="Refuse Property Offer." invisible="status == 'accepted' or status == 'refused'" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_set_sold_status" type="object" string="Sold" 
                            invisible="state == 'sold' or state == 'cancelled' or state == 'new' or state == 'offer_received' or state == 'invoiced'" 
                            context="{'button_id': 'sold_button'}" 
                            class="btn-primary"
                    />
                    <button name="action_set_sold_status" type="object" string="Sold" 
                            invisible="state == 'sold' or state == 'cancelled' or state == 'offer_accepted'  or state == 'invoiced'" 
                            context="{'button_id': 'sold_button'}" 
                            class="btn-secondary"
                    />
                    <button name="action_set_cancelled_status" type="object" string="Cancel" 
                            invisible="state == 'sold' or state == 'cancelled' or state == 'invoiced'"  
                            context="{'button_id': 'cancelled_button'}" 
                    />
                    <button name="action_create_invoice" type="object" string="Invoice" 
                            invisible="state == 'cancelled' or state == 'new' or state == 'offer_received' or state == 'offer_accepted' or state == 'invoiced'" 
                            class="btn-primary"
                    />

                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable': True}" />
                </header>
                
                <sheet>
                    <group>
                        <h1>
                            <field name="name" placeholder="Property Name" />
                        </h1>
                    </group>

                    <group>
                        <h5>
                            <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Property Tag(s)" />
                        </h5>
                    </group>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': true}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>

                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" invisible="not garden" />
                                    <field name="garden_orientation" invisible="not garden" />
                                    <field name="active" />
                                    <field name="total_area" />
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="property_offer_ids" readonly="state == 'offer_accepted' or state == 'sold' or state == 'cancelled'">
                                    <list string="Offer List" editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                        
                                        <!-- Action Buttons -->
                                        <button name="action_set_offer_status_accepted" type="object" icon="fa-check" title="Accept Property Offer." invisible="status == 'accepted' or status == 'refused'" />
                                        <button name="action_set_offer_status_refused" type="object" icon="fa-times" title="Refuse Property Offer." invisible="status == 'accepted' or status == 'refused'" />
                                    </list>
                                </field>
                            </page>

                            <page string="Other Info">
                                <group>
                                    <field name="company_id" />
                                    <field name="salesman" />
                                    <field name="buyer" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="false">
              <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <t t-name="card">
                            <h3>
                                <field name="name" />
                            </h3>
                            <field name="expected_price" />
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <field name="best_offer" />
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                <field name="selling_price" />
                            </div>
                            <field name="property_tag_ids" options="{'color_field': 'color'}"  />
                        </t>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name" />
                <field name="description" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />

                <separator />

                <filter string="Availability" name="availability" domain="[('date_availability', '>=', context_today())]" />

                <filter string="New or Offer Received" name="new_received" domain="[('date_availability', '>=', context_today()), '|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />

                <group string="Group By">
                    <filter string="Postcode" name="postcode"
                        context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban,pivot</field>
        <field name="view_id" ref="estate_property_view_list" />
        <field name="context">{'search_default_availability': True}</field>
    </record>

</odoo>
