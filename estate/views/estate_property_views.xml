<?xml version="1.0"?>
<odoo>
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" 
            decoration-success="state in ['offer_accepted', 'offer_recieved']"
            decoration-bf="state in ['offer_accepted']"
            decoration-muted="state in ['sold']">
                <field name="name"/>
                <field name="tag_id" widget="many2many_tags"/>
                <field name="postcode"/>
                <field name="date_availability" optional="hide"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedroom"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
                <field name="property_type_id"/>
                <field name="seller_id"/>
                <field name="buyer_id"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate property">
                <header>
                    <button name="action_sold_property" type="object" string="sell" invisible="state in ['sold','canceled'] or not sell_sell"/>
                    <button name="action_cancel_property" type="object" string="cancel" invisible="state in ['sold','canceled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="new, offer_recieved, offer_accepted, sold" options="{'clickable': '1'}"/>
                    <field name="sell_sell" invisible="true"/>
                </header>
                <sheet>
                        <group>
                            <group>
                               <h1 style="width:200px"> <field name="name"/> </h1>
                            </group>
                            <seperator/>
                            <group>
                                <group>
                                    <field name="tag_id" widget="many2many_tags" options="{'color_field': 'color'}" groups="estate.estate_group_user"/>
                                    <field name="postcode"/>
                                    <field name="date_availability" />
                                    <field name="company_id"/>
                                </group>
                                <group>
                                    <field name="expected_price"/>
                                    <field name="property_type_id" options="{'no_create':true,'no_create_edit':true }" groups="estate.estate_group_user"/>
                                    <field name="selling_price"/>
                                    <field name="count"/>
                                </group>
                            </group>
                        </group>
                        <seperator/>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedroom"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="active"/>
                                    <field name="total"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="state"/>
                                    <field name="buyer_id"/>
                                    <field name="seller_id"/>
                                </group>
                            </page>
                            <page string="Offers">
                                    <field name="offer_id" readonly="state in ['offer_accepted', 'sold', 'offer_refused']"/>
                            </page>
                        </notebook>
                    </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">    
            <search string="search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedroom"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
                <field name="seller_id"/>
                <field name="buyer_id"/>
                <filter name="available" string="Available" domain="[('state', '!=', 'sold'), ('state', '!=', 'canceled')]"/>
                <filter string="appl fltr" name="applied filter" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_recieved')]"/>
                <group>
                    <filter string="postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" groups_draggable="False" records_draggable="False">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name" style="font-size: 20px"/></strong>
                            <div>
                                Expected Price: 
                                <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <field name="offer_id"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                Best Offer: 
                                <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="tag_id" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
