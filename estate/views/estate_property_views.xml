<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Properties yet added
            </p>
        </field>
    </record>

    <!-- List View -->
    <record id="estate_list_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="state in ('offer_received','offer_accepted')" decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area', '>=', 'self')]" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="True" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_set_sold" string="Sold" type="object" confirm="Are you sure you want to mark this property as sold?" invisible="state in ['sold','cancelled']" />

                    <button name='action_set_canceled' string='Cancel' type='object' confirm="Are you sure you want to mark this property as canceled?" invisible="state in ['sold','cancelled']" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" style="max-width: 150px; max-height: 150px;" nolabel='1' />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            <field name="property_type_id" options="{'no_create':True, 'no_open':True}"></field>
                            <field name="postcode" />
                        </group>

                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string='Description'>
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" string="Living Area (sqm)" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="garden != 1" />
                                <field name="garden_orientation" invisible="garden != 1" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string='Other info'>
                            <group>
                                <field name='salesman_id' />
                                <field name='buyer_id' />
                            </group>
                        </page>
                        <page string='Offers'>
                            <field name='offer_ids' readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="estate_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Search Title" />
                <field name="postcode" string="Search Postcode" />
                <field name="expected_price" string="Search Expected Price" />
                <field name="bedrooms" string="Search Bedrooms" />
                <field name="living_area" string="Search Living Area(sqm)" />
                <field name="facades" string="Search Facades" />
                <separator />
                <filter name="available" string="Available" domain="[('state', 'in', ('new', 'offer_received'))]" />
                <group>
                    <filter string="Postcode" name="groupby_postcode" context="{'group_by':'postcode', 'residual_visible':True}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View-->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="false">
                <field name="state" />
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bolder" />
                        <div> Expected Price : <field name="expected_price" />
                        </div>
                        <div t-if="record.state.raw_value == 'offer_received'"> Best Price : <field name="best_price" />
                        </div>
                        <div t-if="record.state.raw_value == 'offer_accepted'"> Selling Price: <field name="selling_price" />
                        </div>
                        <field name="tags_ids" widget="many2many_tags" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_url_action" model="ir.actions.act_url">
        <field name="name">Open External Website</field>
        <field name="url">/properties</field>
        <field name="target">new</field>
    </record>

</odoo>
