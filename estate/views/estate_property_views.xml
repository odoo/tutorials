<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_my_pipeline" model="ir.actions.act_window">
        <field name="name">My Pipeline</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List View -->
    <record id="estate_list_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Properties">
                    <field name="name" string="Property Name" width="20%"/>
                    <field name="postcode" string="Postcode" width="10%"/>
                    <field name="bedrooms" string="No. of Bedrooms" width="10%"/>
                    <field name="living_area" string="Area (sqm)" width="10%"/>
                    <field name="expected_price" string="Expected Price" width="20%"/>
                    <field name="selling_price" string="Selling Price" width="20%"/>
                </list>
            </field>
    </record>

    <!-- Single Form View -->
    <record id="estate_form_view" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name='action_set_sold' string='Sold' type='object'/>
                    <button name='action_set_canceled' string='Cancel' type='object'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name='tags_ids' widget="many2many_tags"/>
                            <field name="postcode"/>
                            <field name = "date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook >
                        <page string='Description'>
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                                <field name="state"/>
                            </group>
                        </page>
                        <page string='Other info'>
                            <group>
                            <field name='salesman_id'/>
                            <field name='buyer_id'/>
                            </group>
                        </page>
                        <page string='Offers'>
                            <field name='offer_ids'>
                                <list>
                                    <field name='buyer_id' string='Buyer' width='20%'/>
                                    <field name="price" string='Price' width='10%'/>
                                    <field name='property_id' string='Partner' width='10%'/>
                                    <field name='validity' string='Validity(days)' width='10%'/>
                                    <field name='date_deadline' string='Deadline' width='10%'/>
                                    <button name="action_offer_accepted" type="object" icon="fa-check" width='2%'/>
                                    <button name="action_offer_rejected" type="object" icon="fa-times" width='2%'/>
                                    <field name='status' string='Status'  width='10%'/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="estate_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" string="Search Title"/>
                <field name="postcode" string="Search Postcode"/>
                <field name="expected_price" string="Search Expected Price"/>
                <field name="bedrooms" string="Search Bedrooms"/>
                <field name="living_area" string="Search Living Area(sqm)"/>
                <field name="facades" string="Search Facades"/>
                <separator/>
                <filter name="state" string="Available" domain="[('state', 'in', ('new', 'offer received', 'offer accepted', 'sold', 'cancelled'))]"/>
                <group>
                    <filter string="Postcode" name="groupby_postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
