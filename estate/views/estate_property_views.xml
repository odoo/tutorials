<?xml version="1.0"?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <!-- SEARCH -->

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="property_type_id"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
                <field name="facades"/>

                <filter name="active" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="available" string="Available Properties" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received') ]"/>

                <group expand="0" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- LIST VIEV  -->

    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="model">estate.property</field>

        <field name="arch" type="xml">
            <list string="Property"
                multi_edit="1"
                decoration-success="state in ['offer_received', 'offer_accepted']" 
                decoration-bf="state in ['offer_accepted']" 
                decoration-muted="state=='sold'"
            >
                <field name="name"/>
                <field name="property_tag_ids" widget="many2many_tags"/>
                <field name="postcode" />
                <field name="date_availability" optional="True" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="bedrooms" />
            </list>
        </field>
    </record>

    <!-- KANBAN VIEV  -->

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="model">estate.property</field>

        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="false">
                <templates>
                    <t t-name="card">
                        <div>
                            <div class="fw-bold fs-4">
                                <field name="name"/> 
                            </div>
                            
                            <div>
                                <span> State: <field name="state"/> </span>
                            </div>

                            <div>
                                <span> Expected Price: <field name="expected_price"/> </span>
                            </div>

                            <div t-if="record.state.raw_value != 'new'">
                                <span> Best offer: <field name="best_offer"/> </span>
                            </div>

                            <div t-if="record.state.raw_value in ['offer_accepted','sold']">
                                <span> Selling Price: <field name="selling_price"/> </span>
                            </div>

                            <div>
                                <field name="property_tag_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                        
                    </t>
                </templates>

                <field name="property_type_id"/> 
            </kanban>
        </field>
    </record>


    <!-- FORM VIEV  -->

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_cancel_listing" type="object" string="Cancel"/>
                    <button name="action_sell_listing" type="object" string="Sold" invisible="state in ['sold', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,cancelled"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- DESCRIPTION TAB -->
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>

                                <field name="property_type_id" options="{'no_create': true, 'no_open': true}"/>
                                <field name="bedrooms"/>
        
                                <field name="facades"/>

                                <field name="garage"/>
                                <field name="garden"/>

                                <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                <field name="garden_orientation" string="Garden Orientation" invisible="not garden"/>

                                <field name="best_offer"/>
                                
                                <field name="living_area" string="Living Area (sqm)"/>
                               
                                <field name="total_area" string="Total area (sqm)"/>

                            </group>
                        </page>

                        <!-- OFFERS TAB -->
                        <page string="Offers">
                                <field name="property_offer_ids" readonly="state in ['offer_accepted', 'sold', 'cancelled']"/>
                        </page>

                        <!-- OTHER INFO TAB -->
                        <page string="Other Info">
                            <group>

                                <field name="user_id" string="Salesman"/>
                                <field name="partner_id" string="Buyer"/>

                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
