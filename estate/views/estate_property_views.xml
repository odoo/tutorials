<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
                <field name="state"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="living_area"/>
                <field name="garage" />
                <field name="garden" />
                <field name="bedrooms" optional="hide"/>
                <field name="facades" optional="hide"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="views_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Config">
                <field name="name" string="Property Name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                <filter string="Available" name="active" domain="[('active', '=', True)]"/>
                <filter string="Postcode" name="groupby_postcode" context="{'group_by': 'postcode'}"/>    
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <group name="name" string="Name">
                            <field name="description" />
                            <field name="bedrooms" />
                            <field name="living_area" />
                            <field name="facades" />
                            <field name="garage" />
                            <field name="garden" />
                            <field name="garden_area" />
                            <field name="garden_orientation" />
                            <field name="active"/>    
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="action_estate_property_tree" model="ir.actions.act_window">
        <field name="name">Property List</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="domain"></field>
        <field name="search_view_id" ref="views_estate_property_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property
            </p>
            <p>
                Configure at least one Property.
            </p>
        </field>
    </record>

</odoo> 
