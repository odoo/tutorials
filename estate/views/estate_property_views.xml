<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban,pivot,graph</field>
            <field name="context">{'search_default_avaibility': True}</field>
        </record>
        <record id="estate_property_list_view" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list multi_edit="1" decoration-success="status == 'offer_received' or status == 'offer_accepted'" decoration-bf="status == 'offer_accepted'" decoration-muted="status == 'sold'" decoration-danger="status == 'cancelled'">
                    <field name="name" />
                    <field name="postcode" />
                    <field name="status"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="expected_price" />
                    <field name="date_availability" optional="hide" />
                    <field name="selling_price"/>
                    <field name="is_garden" optional="hide"/>
                </list>
            </field>
        </record>
        <record id="estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                    <field name="facades"/>
                    <filter string="Status" name="status" domain="[('status','in',['new','offer_received'])]"/>
                    <separator />
                    <filter string="Garden" name="is_garden" domain="[('is_garden', '=', True)]"/>
                    <separator />
                    <filter string="Garage" name="is_garage" domain="[('is_garage', '=', True)]"/>
                    <separator />
                    <filter string="Avaibility" name="avaibility" domain="[('status', '=', 'new')]"/>
                    <group>
                        <filter string="Postcode" name="group_by_postcode" context="{'group_by': 'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate_property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <header>
                        <button name="action_sold" type="object" string="Sold" invisible="status in ['sold','cancelled']"/>
                        <button name="action_cancelled" type="object" string="Cancel" invisible="status in ['sold','cancelled']"/>
                        <field name="status" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" class="oe_title"/>
                        </h1>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <group>
                                <field name="property_type_id" options="{'no_create':true}"/>
                                <field name="postcode"/>
                                <field name="expected_price"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                                <field name="selling_price"/>
                                <field name="total_area"/>
                                <field name="best_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="is_garage"/>
                                    <field name="is_garden"/>
                                    <field name="garden_area" invisible="not is_garden"/>
                                    <field name="garden_orientation" invisible="not is_garden"/>
                                </group>
                            </page>
                            <page name="other_info" string="Other Info">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                            <page name="offer" string="Offers">
                                <field name="offer_ids" readonly="status in ['offer_accepted', 'sold', 'cancelled']"></field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="estate_property_view_kanban" model="ir.ui.view">
            <field name="name">estate.property.view.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="property_type_id" records_draggable="0">
                    <templates>
                        <field name="status" />
                        <t t-name="kanban-box">
                            <div class="flex">
                                <h2>
                                    <field name="name"/>
                                </h2>
                                <div>
                                    <div>
                                        <label for="expected_price">Expected Price :</label>
                                        <field name="expected_price"/>
                                    </div>
                                    <div t-if="record.status.raw_value == 'offer_received'">
                                        <label for="best_price">Best Price: </label>
                                        <field name="best_price"/>
                                    </div>
                                    <div t-if="record.status.raw_value == 'offer_accepted'">
                                        <label for="selling_price">Selling Price: </label>
                                        <field name="selling_price"/>
                                    </div>
                                    <field name="tag_ids" class="mt-2" options="{'color_field':'color'}"></field>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
