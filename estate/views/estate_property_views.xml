<?xml version="1.0"?>
<odoo>
    <!-- Action Window -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context"> {'search_default' : True}</field>
    </record>

    <!-- List View -->
    <record id="estate_properties_view_list" model="ir.ui.view">
        <field name="name">estate.list.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state in ('offer_accepted')" decoration-muted="state in ('sold')">
                <field name="name" string="Name"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode" string="Postcode"/> 
                <field name="bedrooms" string="Bedrooms"/>
                <field name="measurement_unit" string="Unit" widget="selection"/> 
                <field name="living_area" string="Living Area"/>
                <field name="garden_area" string="Garden Area"/>
                <field name="total_area" string="Total Area" /> 
                <field name="expected_price" string="Expected Price" />
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" options="{'hidden' : True}" string="Available From"/>
                <field name="tag_ids" string="Tags" widget="many2many_tags" options="{'color_field' : 'color'}"/>
                <field name="date_availability" string="Available From" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.form.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_property_sold" type="object" string="Sold" invisible="state in ('sold', 'cancelled')"/>
                    <button name="action_property_cancel" type="object" string="Cancelled" invisible="state in ('sold', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="new, sold, offer_received, offer_accepted" />
                </header>
                <sheet>
                    <h1>
                    <field name="name" string="Name"></field>
                    </h1>
                    <field name="tag_ids" string="Tags" widget="many2many_tags" options="{'color_field' : 'color'}"/>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" options="{'no_create' : True, 'no_edit' : True}"/>
                            <field name="postcode" string="Post Code"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price" />
                            <field name="best_price" string = "Best Offer"/>
                            <field name="selling_price" string="Selling Price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Property Details">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms" string="Bedrooms"/>
                                    <field name="measurement_unit" string="Unit of Measurement" widget="selection"/>
                                    <field name="living_area" string="Living Area"/>
                                    <field name="facades" string="Facades"/>
                                    <field name="is_garage" string="Garage"/>
                                    <field name="is_garden" string="Garden"/>
                                    <field name="garden_area" string="Garden Area" invisible="not is_garden"/>
                                    <field name="total_area" string="Total Area"/>
                                    <field name="garden_orientation" string="Garden Orientation" invisible="not is_garden"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="buyer_id" string="Buyer"/>
                                    <field name="seller_id" string="Salesman"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="is_garage"/>
                <field name="is_garden"/>
                <filter name="available" domain="[('state', 'in', ('new', 'offer_received'))]" string="Available"/>
                <filter name="date_availability"  domain="[('date_availability','&gt;',datetime.datetime.now())]" string="Availablity by Date"/>
                <group string="Group By" expand="1" >
                <filter name="group_by_postcode" context="{'group_by': 'postcode'}" string="Postcode"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                Best Offer: <field name="best_price"/>
                            </div>
                            <div t-if="record.selling_price.raw_value">
                                Selling Price: <field name="selling_price"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
