<?xml version="1.0"?>
<odoo>

<!--    for the table or the list of estates already created that will show all the records in the home page in the table   -->
<!--    🧠 Think of it as the overview page where multiple properties are listed.-->

    <record id="ninja_turtles_estate_view_tree" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.list</field>
        <field name="model">ninja.turtles.estate</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="status"/>
                <field name="property_type_id"/>
                <field name="salesperson_id"/>
                <field name="buyer_id"/>
            </list>
        </field>
    </record>


<!--    for the form view already   -->
<!--    🧠 Think of it as a detail page for one property.-->

    <record id="ninja_turtles_estate_view_form" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.form</field>
        <field name="model">ninja.turtles.estate</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <div class = "oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags"/>

                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="status"/>
                                <field name="active"/>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


<!--    for the search bar  -->
<!--    🔍 This defines what the search bar can search or filter.-->

    <record id="ninja_turtles_estate_view_search" model="ir.ui.view">
    <field name="name">ninja.turtles.estate.search</field>
    <field name="model">ninja.turtles.estate</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" string = "Title"/>
            <field name="postcode"/>
            <field name="expected_price"/>
            <field name="bedrooms"/>
            <field name="living_area"/>
            <field name="facades"/>
            <field name="property_type_id"/>
            <field name="salesperson_id"/>
            <field name="buyer_id"/>

            <separator/>

            <filter name="filter_available" string="Available" domain="['|', ('status', '=', 'new'), ('status', '=', 'offer received')]"/>
            <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
            <group expand="1" string="Group By">
                <filter name="group_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                <filter string="Property Type" name="group_type" context="{'group_by': 'property_type_id'}"/>
            </group>
        </search>
    </field>
</record>


    <!-- first action to make-->
    <!-- Action to open the list/form views -->
    <record id="action_ninja_turtles_estate" model="ir.actions.act_window">
        <field name="name">Ninja Turtles Estate</field>
        <field name="res_model">ninja.turtles.estate</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
