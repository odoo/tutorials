<?xml version="1.0"?>
<odoo>

<!--    for the table/list of estates already created that will show all the records in a separate page in a table   -->
<!--    ğŸ§  Think of it as the overview page where multiple properties are listed.-->
    <record id="ninja_turtles_estate_view_tree" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.list</field>
        <field name="model">ninja.turtles.estate</field>
        <field name="arch" type="xml">
            <list decoration-success="status in ('offer received', 'offer accepted')"
                  decoration-bf="status == 'offer accepted'"
                  decoration-danger="status == 'cancelled'"
                  decoration-muted="status == 'sold'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="date_availability" optional="show"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
            </list>
        </field>
    </record>

<!--    for the form view already   -->
<!--    ğŸ§  Think of it as a detail page for one property.-->
    <record id="ninja_turtles_estate_view_form" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.form</field>
        <field name="model">ninja.turtles.estate</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_mark_sold" string="Sold" type="object" class='btn btn-secondary'
                            invisible="status not in ('new', 'offer received')"/>
                    <button name="action_mark_sold" string="Sold" type="object" class='btn btn-primary'
                            invisible="status != 'offer accepted'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn btn-secondary"
                            invisible="status == 'sold' or status == 'canceled'"/>
                    <field name="status" widget="statusbar" readonly="1"
                           statusbar_visible="new,offer received,offer accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                   readonly="status == 'offer accepted' or status == 'sold' or status == 'cancelled'">
                                <list decoration-success="offer_status == 'accepted'"
                                      decoration-danger="offer_status == 'refused'"
                                      editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="action_accept" type="object" icon="fa-check" title="Accept Offer"
                                            invisible="offer_status == 'accepted' or offer_status == 'refused'"/>
                                    <button name="action_refuse" type="object" icon="fa-times" title="Refuse Offer"
                                            invisible="offer_status == 'accepted' or offer_status == 'refused'"/>
                                    <field name="offer_status" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="status"/>
                                <field name="active"/>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>

<!--    ğŸ” This defines what the search bar can search or filter.-->
    <record id="ninja_turtles_estate_view_search" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.search</field>
        <field name="model">ninja.turtles.estate</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="salesperson_id"/>
                <field name="buyer_id"/>
                <separator/>
                <filter name="date_availability" string="Available"
                        domain="['|', ('status', '=', 'new'), ('status', '=', 'offer received')]"/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter name="group_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                    <filter string="Property Type" name="group_type" context="{'group_by': 'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action to open the list/form views -->
    <record id="action_ninja_turtles_estate" model="ir.actions.act_window">
        <field name="name">Ninja Turtles Estate Properties</field>
        <field name="res_model">ninja.turtles.estate</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_date_availability': True}</field>
    </record>
</odoo>
