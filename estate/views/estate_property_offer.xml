<?xml version = "1.0" encoding = "UTF-8"?>
<odoo>
    <record id="propertyoffer_view_form" model="ir.ui.view">
        <field name='name'>estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string=" Estate property offer">
                <sheet>
                   <group>
                    <field name="price"/>
                    <field name="status"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="propertyoffer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="offer">
                     <field name="price"/>
                     <field name="status"/>
                     <field name="partner_id"/>
                     <field name="validity"/>
                     <field name="date_deadline"/>
            </tree>
        </field>
    </record>
</odoo>
