<!-- Estate Property Offer Views -->
<odoo>
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form.view</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <form string="Offers">
                <sheet>
                    <group>
                        <field name="partner_id" />
                        <field name="property_id" />
                        <field name="price" />
                        <field name="validity_days"/>
                        <field name="deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list.view</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id" />
                <field name="property_id" />
                <field name="price" />
                <field name="deadline" />
                <field name="offer_state" />
                <button name="action_offer_confirm" string="Confirm" type="object" icon="fa-check" invisible=" offer_state in ('accepted', 'refused')" />
                <button name="action_offer_cancel" string="Cancel" type="object" icon="fa-times" invisible=" offer_state in ('accepted', 'refused')" />
                <field name="validity_days"/>
            </list>
        </field>
    </record>
</odoo>
