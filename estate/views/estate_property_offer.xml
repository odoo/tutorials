<!-- Estate Property Offer Views -->
<odoo>
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer_form_view</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <form string="Offers">
                <sheet>
                    <group>
                        <field name="partner_id" />
                        <field name="property_id" />
                        <field name="price" />
                        <field name="validity_days"/>
                        <field name="deadline" />
                        <!-- <field name="offer_steate" /> -->

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate_property_offer_list_view</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id" />
                <field name="property_id" />
                <field name="price" />
                <field name="validity_days"/>
                <field name="deadline" />
                <field name="offer_state" />
            </list>
        </field>
    </record>
</odoo>
