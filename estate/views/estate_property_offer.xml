<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list editable="top" open_form_view="True">
                <field name="price" string="Price"/>
                <field name="partner_id" string="Partner"/>
                <field name="status" string="Status"/>
                <field name="validity" string="Validity(days)"/>
                <button name="action_offer_accept" type="object" icon="fa-check" invisible="status == 'accepted'"/>
                <button name="action_offer_reject" type="object" icon="fa-times" invisible="status == 'refused'"/>
                <field name="deadline" string="Deadline"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="status" string="Status"/>
                        <field name="validity" string="Validity(days)"/>
                        <field name="deadline" string="Deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
