<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" editable="bottom" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price"></field>
                <field name="partner_id"></field>
                <field name="validity"></field>
                <field name="date_deadline" width="150%"></field>
                <button name="action_set_accepted" type="object" icon="fa-check" title="Accepted Offer" invisible="status == 'refused' or status == 'accepted'"/>
                <button name="action_set_refused" type="object" icon="fa-times" title="Reject Offer" invisible="status == 'refused' or status == 'accepted'"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form name="estate_property_offer_form" string="Estate Property">
                <field name="price"></field>
                <field name="partner_id"></field>
                <field name="validity"></field>
                <field name="date_deadline"></field>
                <field name="status"></field>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
