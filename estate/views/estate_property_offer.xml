<!-- Estate Property Offer Views -->
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offers</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list.view</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list editable="bottom"
                decoration-success="state == 'accepted'"
                decoration-danger="state == 'refused'">
                <field name="partner_id" />
                <field name="property_id" />
                <field name="price" />
                <field name="deadline" />
                <field name="state" />
                <button name="action_offer_confirm"
                    string="Confirm"
                    type="object"
                    icon="fa-check"
                    invisible=" state in ('accepted', 'refused')" />
                <button name="action_offer_cancel"
                    string="Cancel"
                    type="object"
                    icon="fa-times"
                    invisible=" state in ('accepted', 'refused')" />
                <field name="validity_days" />
            </list>
        </field>
    </record>

</odoo>
