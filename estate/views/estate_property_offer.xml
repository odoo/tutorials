<?xml version="1.0"?>
<odoo>
<record id='estate_property_view_list' model='ir.ui.view'>
        <field name="name">ListView</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="List">
                <field name='price'/>
                <field name='partner_id'/>
                <field name='validity'/>
                <field name='date_deadline'/>
                <button name="action_accept" title="Accept" type="object" icon="fa-check"/>
                <button name="action_refuse" title="Refuse" type="object" icon="fa-times"/>
                <field name='status'/>
            </list>
        </field>
    </record>
    <record id="estate_property_offer_formview" model="ir.ui.view">
        <field name="name">estate.property.fromview</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form">
                <group>
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <field name="status" />
                </group>
            </form>
        </field>
    </record>
</odoo>
