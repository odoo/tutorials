<?xml version="1.0"?>
<odoo>

    <record id="test_property_action" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">test.property</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define new property
            </p>
        </field>
    </record>

    <record id="test_property_list_view" model="ir.ui.view">

        <field name="model">test.property</field>
        <field name="name">test.property</field>

        <field name="arch" type="xml"  >
            <list string="list of property"  sample='1'>
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="active"/>
                <field name="state"/>

            </list>
        </field>
        
    </record>  


    <record id="test_property_form_view" model="ir.ui.view">
        <field name="name">test.property</field>
        <field name="model">test.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                            <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="expected_price" />
                        </group>  
                         <group>
                            <field name="best_price" string="Best Price"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="sales_person_id" widget="many2one_avatar_user"/>
                        </group>
                        
                    </group>
                    <notebook>
                        <page string="Description">
                            
                            <group>
                                <field name="description"/>
                            </group>

                            <group>

                                <group>
                                    <field name="bedrooms"/>
                                </group>
                                
                            </group>
                            <group>

                                <group>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                </group>
                            </group>
                            <group>

                                <group>
                                    <field name="garden"/>
                                </group>
                               
                            </group>
                            <group>
                                <group>
                                    <field name="garden_orientation"/>
                                </group>
                                <group>
                                    <field name="property_types_id"/>
                                </group>
                            </group>
                            <group>
                                 <group>
                                    <field name="property_tags_id" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                </group>
                                <group>
                                    <field name="garden_area"/>
                                </group>  
                                <group>
                                    <field name="total_area" />
                                </group>
                            </group>
                            
                        </page>
                        <page name="Offer" string="Offers">
                                <group>
                                    <field name="property_offers_id" />
                                </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
   </record>



    <record id="test_property_view_search" model="ir.ui.view">
        <field name="name">test.property</field>
        <field name="model">test.property</field>
        <field name="arch" type="xml">
            <search string="test" >
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="description"/>
                    
                    <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                     <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>
        
        
    
</odoo>
