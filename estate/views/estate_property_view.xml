<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_estate_property_list" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                </list>
            </field>
        </record>

        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                <field name="name" placeholder="Enter the property name">
                    <attribute name="help">This is the name of the property.</attribute>
                </field>
                <field name="description" placeholder="Enter a brief description of the property">
                    <attribute name="help">Provide a detailed description of the property.</attribute>
                </field>
                <field name="postcode" placeholder="Enter the postcode">
                    <attribute name="help">Provide the postal code for the property location.</attribute>
                </field>

                </form>
            </field>
        </record>
        <record id="action_estate_property" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_estate_property_list"/>
        </record>
    </data>
</odoo>

