<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'offer_accepted' or state == 'offer_received'"
                decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="tag_ids" widget="many2many_tags"
                    options="{'no_create': false, 'color_field': 'color'}" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="hide" />
                <field name="property_type_id" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Add Detail">
                <header>
                    <button name="action_sold" type="object" string="SOLD"
                        invisible="state in ('sold', 'cancel')" class="oe_highlight" />
                    <button name="action_cancel" type="object" string="CANCEL"
                        invisible="state in ('sold', 'cancel')" class="oe_highlight" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new, offer_received, offer_accepted, sold"></field>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name"
                                readonly="state in ('offer_accepted', 'sold', 'cancel')" />
                        </h1>
                    </div>
                    <div>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"
                                options="{'no_create': true, 'color_field': 'color'}" />
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create' : true}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" options="{'type': 'number'}" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" invisible="not garden" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="state in ('sold', 'cancel', 'offer_accepted')">
                                <list editable="bottom" decoration-danger="status == 'refused'"
                                    decoration-success="status == 'accepted'">
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="date_deadline" />
                                    <button name="action_accepted" type="object" icon="fa-check"
                                        title="Accept Offer" invisible="status" />
                                    <button name="action_refused" type="object" icon="fa-times"
                                        title="Refused Offer" invisible="status" />
                                    <field name="validity" />
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman_id" widget="many2one_avatar" />
                                <field name="partner_id" widget="many2one_avatar" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="name" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)"
                    filter_domain="[('living_area', '&gt;', self)]" />
                <field name="facades" string="Facades" />
                <filter name="state" domain="[('state','=','new')]" />
                <filter name="total_area" />
                <group expand="1" string="group By">
                    <filter name="group_by_postcode" string="Poscode"
                        context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
