<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="status == 'offer_accepted' or status == 'offer_received'"
                decoration-bf="status == 'offer_accepted'" decoration-muted="status == 'sold'">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="tag_ids" widget="many2many_tags"
                    options="{'no_create': false, 'color_field': 'color'}" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="hide" />
                <field name="property_type_id" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Add Detail">
                <header>
                    <button name="action_sold" type="object" string="SOLD"
                        invisible="status in ('sold', 'cancel')" class="oe_highlight" />
                    <button name="action_cancel" type="object" string="CANCEL"
                        invisible="status in ('sold', 'cancel')" class="oe_highlight" />
                    <button name="estate.estate_property_wizard_action" type="action"
                        string="Add Offer" />
                    <field name="status" widget="statusbar"
                        statusbar_visible="new, offer_received, offer_accepted, sold"></field>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="estate.property_offer_report" type="action" string="print"
                            invisible="status != 'sold'"
                            class="oe_stat_button" icon="fa-print"></button>
                    </div>
                    <div>
                        <h1>
                            <field name="name"
                                readonly="status in ('offer_accepted', 'sold', 'cancel')" />
                        </h1>
                    </div>
                    <div>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"
                                options="{'no_create': true, 'color_field': 'color'}" />
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create' : true}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                            <field name="image" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" options="{'type': 'number'}" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" invisible="not garden" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="status in ('sold', 'cancel', 'offer_accepted')">
                                <list editable="bottom" decoration-danger="status == 'refused'"
                                    decoration-success="status == 'accepted'">
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="date_deadline" />
                                    <button name="action_accepted" type="object" icon="fa-check"
                                        title="Accept Offer" invisible="status" />
                                    <button name="action_refused" type="object" icon="fa-times"
                                        title="Refused Offer" invisible="status" />
                                    <field name="validity" />
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="company_id" />
                                <field name="salesman_id" widget="many2one_avatar" />
                                <field name="partner_id" widget="many2one_avatar" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="name" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)"
                    filter_domain="[('living_area', '&gt;', self)]" />
                <filter name="status" domain="[('status','=','new')]" />
                <filter name="total_area" />
                <filter name="Available" domain="[('status', 'not in', ['sold', 'cancel'])]" />
                <group expand="1" string="group By">
                    <filter name="group_by_postcode" string="Poscode"
                        context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <field name="status" />
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <b>
                                <field name="name"></field>
                            </b>
                            <div>Expected Price:<field name="expected_price" /></div>
                            <t t-if="record.status.raw_value == 'offer_received'">
                                <div>Best Offer: <field name="best_price" /></div>
                            </t>
                            <t
                                t-if="record.status.raw_value == 'offer_accepted' or record.status.raw_value == 'sold'">
                                <div>Selling Price: <field name="selling_price" /></div>
                            </t>
                            <div>
                                <field name="tag_ids" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                            </div>

                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_Available': 1}</field>
    </record>
</odoo>
