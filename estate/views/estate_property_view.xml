<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="property_type_id" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Add Detail">
                <header>
                    <button name="action_sold" type="object" string="SOLD" />
                    <button name="action_cancel" type="object" string="CANCEL" />
                    <field name="state" widget="statusbar"></field>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="type_ids" widget="many2many_tags" />
                            <field name="state" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <list editable="bottom">
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="date_deadline" />
                                    <button name="action_accepted" type="object" icon="fa-check"
                                        title="Accept Offer" />
                                    <button name="action_refused" type="object" icon="fa-times"
                                        title="Refused Offer" />
                                    <field name="status" />
                                    <field name="validity" />
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman_id" />
                                <field name="partner_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="property_type_id" />
                <field name="name" string="name" />
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="facades" string="Facades" />
                <filter name="state" domain="[('state','=','new')]" />
                <filter name="total_area" />
                <group expand="1" string="group By">
                    <filter name="group_by_postcode" string="Poscode"
                        context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
