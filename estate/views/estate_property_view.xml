<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_model_action" model="ir.actions.act_window"> <!-- Action-->
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_estate_model_list" model="ir.ui.view"> <!-- List View -->
        <field name="name">estate.model.list.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Properties">
                <field name="name" />
                <field name="tag_ids" widget="many2many_tags" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="date_availability" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />
                <field name="state" />
                <field name="active" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">  <!-- Form View -->
        <field name="name">estate.model.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="property_type_id" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                        <group>
                            <field name="postcode" />
                        </group>
                        <group>
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                        </group>
                        <group>
                            <field name="selling_price" />
                        </group>
                        <group>
                            <field name="bedrooms" />
                        </group>
                        <group>
                            <field name="facades" />
                        </group>
                        <group>
                            <field name="total_area" readonly="1" />
                            <field name="best_price" readonly="1" />
                        </group>
                        <group>
                            <field name="state" />
                            <field name="active" />
                        </group>
                    </group>

                    <notebook>
                        <page name="Description">
                            <group>
                                <field name="living_area" />
                                <field name="bedrooms" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="garden==False" />
                                <field name="garden_orientation" invisible="garden==False" />
                            </group>
                        </page>
                        <page name="Other Info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                            </group>
                        </page>
                        <page name="Offers">
                            <group>
                                <field name="offer_ids">
                                    <list>
                                        <field name="price" />
                                        <field name="status" />
                                        <field name="partner_id" />
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>