<!-- Estate Property Views -->
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_avalible': True}</field>
    </record>

    <!-- Estate Property Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_property_sold"
                        type="object"
                        string="Sold"
                        invisible="state in('sold', 'cancelled')" />
                    <button name="action_property_cancel"
                        type="object"
                        string="Cancel"
                        invisible="state in('sold', 'cancelled')" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,received,accepted,sold" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="property_tag_ids"
                            string="Property Tag"
                            widget="many2many_tags"
                            options="{'color_field': 'color'}" />
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type"
                                options="{'no_create': True}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="active" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="state in ('accepted', 'sold', 'cancelled')" />
                        </page>
                        <page string="Other Info.">
                            <group>
                                <field name="partner_id" string="Owner" />
                                <field name="salseperson_id" string="Salesperson" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Estate Property List View -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'accepted'"
                decoration-danger="state == 'cancelled'"
                decoration-muted="state == 'sold'"
                decoration-bf="state == 'accepted'">
                <field name="active" />
                <field name="name" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="bedrooms" />
                <field name="total_area" />
                <field name="state" />
                <field name="partner_id" string="Owner" />
                <field name="salseperson_id" string="Salesperson" />
                <field name="date_availability" />
            </list>
        </field>
    </record>

    <!-- Estate Property Search View -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="partner_id" />

                <!-- filters -->
                <filter name="low_price" string="Price &lt; 1000"
                    domain="[('expected_price', '&lt;', 1000)]" />
                <filter name="new" string="State: New" domain="[('state', '=', 'new')]" />
                <filter name="offered" string="State: received"
                    domain="[('state', '=', 'received')]" />
                <filter name="avalible" string="Avalible"
                    domain="['|', ('state', '=', 'new'), ('state', '=', 'recevied')]" />
                <filter name="livingArea" string="Living Area(feetÂ²)"
                    domain="[('living_area', '&lt;=', 'self')]" />

                <!-- group by -->
                <group name="postcode" string="By Postcode">
                    <filter name="group_by_postcode"
                        string="Group by Postcode" domain="[]"
                        context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>