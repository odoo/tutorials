<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_estate_property_list" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list decoration-success="state in ['offer received', 'offer accepted']" decoration-bf="state in ['offer accepted']" decoration-muted="state in ['sold']">
                    <field name="name" width="160px"/>
                    <field name="postcode" width="80px"/>
                    <field name="bedrooms"/>
                    <field name="tag_ids" width="120px"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" optional="true"/>
                    <field name="type_id" width="120px"/>
                </list>
            </field>
        </record>

        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="cancel_property" string="Cancel" type="object" invisible="state in ['sold', 'cancelled']"/>
                        <button name="sold_property" string="Sold" type="object" invisible="state in ['sold', 'cancelled']"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                    </header>
                    <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                </h1>
                                <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'color_field': 'color'}"/>
                            </div>
                        <group>
                            <group>
                                <field name="type_id" options="{'no_create': true}"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="total_area"/>
                                    <field name="state"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" readonly="state in ['offer accepted', 'sold', 'cancelled']"/>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="sales_person_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Title"/>
                    <field name="description" string="Description"/>
                    <field name="bedrooms" string="Bedrooms"/>
                    <field name="postcode" string="Postcode"/>
                    <field name="expected_price" string="Expected Price"/>
                    <field name="facades" string="Facades"/>
                    <field name="living_area" string="Living area (mÂ²)"/>
                    <field name="type_id" string="Property type"/>
                    <filter name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"/>
                    <field name="description" string="Name and description" filter_domain="['|', ('name', '=', self), ('description', '=', self)]"/>
                    <group expand="1" string="Group By">
                        <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_estate_property_kanban" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban default_group_by="type_id" disable_quick_create="1" group_create="false" records_draggable="false">
                    <field name='state'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div>
                                <label for="name">Name: </label>
                                <field name="name"/>
                                <div><br/></div>
                                <label for="expected_price">Expected price: </label>
                                <field name="expected_price"/>
                                <div><br/></div>
                                <div t-if="record.state.raw_value == 'offer received'">
                                    <label for="best_price">Best price: </label>
                                    <field name="best_price"/>
                                    <div><br/></div>
                                </div>
                                <div t-if="record.state.raw_value == 'offer accepted'">
                                    <label for="selling_price">Selling price: </label>
                                    <field name="selling_price"/>
                                    <div><br/></div>
                                </div>
                                <field name="tag_ids"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_estate_property" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="view_estate_property_list"/>
            <field name="context">{'search_default_available': 1}</field>
        </record>
    </data>
</odoo>
