<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Tree View -->
	<record id="view_estate_property_tree" model="ir.ui.view">
		<field name="name">estate.property.tree</field>
		<field name="model">estate_property</field>
		<field name="arch" type="xml">
			<tree string="Estate Properties" sample="1" decoration-bf="state=='offer accepted'" decoration-success="state=='offer received' or state=='offer accepted'" decoration-muted="state=='sold'">
				<field name="name" />
				<field name="postcode" />
				<field name="date_availability" optional="hidden" />
				<field name="expected_price" />
				<field name="selling_price" />
				<field name="bedrooms" />
				<field name="living_area" />
				<field name="facades" />
				<field name="garage" />
				<field name="garden" />
				<field name="garden_area" />
				<field name="garden_orientation" />
				<field name="state" />
			</tree>
		</field>
	</record>
	<record id="view_property_form" model="ir.ui.view">
		<field name="name">property.form</field>
		<field name="model">estate_property</field>
		<field name="arch" type="xml">
			<form string="Estate Properties">
				<header>
					<button name="action_cancel" type="object" invisible="state in ('cancelled', 'sold')" string="Cancel" class="btn btn-secondary" />
					<button name="action_sold" type="object" invisible="state in ('cancelled', 'sold')" string="Sold" class="btn btn-primary" />
					<field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold" />
				</header>
				<sheet>
					<header>
						<h1>
							<field name="name" />
						</h1>
					</header>
					<group>
						<field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
						<group>
							<!-- <field name="state"/> -->
							<field name="property_type_id" options="{'no_create': true}" />
							<field name="postcode" />
							<field name="date_availability" />
						</group>
						<group>
							<!-- <field name="tag_ids"/> -->
							<field name="expected_price" />
							<field name="best_offer" />
							<field name="selling_price" />
						</group>
					</group>
					<notebook>
						<page string="Description">
							<group>
								<field name="description" />
								<field name="bedrooms" />
								<field name="living_area" />
								<field name="facades" />
								<field name="garage" />
								<field name="garden" />
								<field name="garden_area" invisible="garden == False" />
								<field name="garden_orientation" invisible="garden == False" />
								<field name="total_area" />
								<field name="state" />
							</group>
						</page>
						<page string="Offer">
							<field name="offer_ids" readonly="state in ('offer accepted', 'sold','cancelled')" />
						</page>
						<page string="Other Info">
							<group>
								<field name="salesman_id" />
								<field name="buyer_id" />
							</group>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" />
					<field name="message_ids" />
					<field name="activity_ids" />
				</div>
			</form>
		</field>
	</record>
</odoo>
