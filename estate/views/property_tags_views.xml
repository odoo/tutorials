<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">property.tags</field>
        <field name="view_mode">list,form,search</field>
    </record>

    <!-- Property Tags list view-->
    <record id="property_type_view_list" model="ir.ui.view">
        <field name="name">property.tags.list</field>
        <field name="model">property.tags</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
            </list>
        </field>
    </record>

    <!-- property tags form view -->
    <record id="property_tags_view_form" model="ir.ui.view">
        <field name="name">property.tags.form</field>
        <field name="model">property.tags</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
