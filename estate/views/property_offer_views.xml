<?xml version="1.0"?>
<odoo>
    <record id="property_offer_action_model" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    <!-- List -->
    <record id="offer_list" model="ir.ui.view">
        <field name="name">offers List</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <list string = "offers" editable="top" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price" />
                <field name="partner_id" />
                <field name="status" optional="hide"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <button name="action_accept_offer" type="object" icon="fa-check" string="accept" invisible = "status in ['accepted', 'refused']"/>
                <button name="action_refuse_offer" type="object" icon="fa-times" string="refuse" invisible = "status in ['accepted', 'refused']"/>
            </list>
        </field>
    </record>
    <!-- Form -->
    <record id="offer_form" model="ir.ui.view">
        <field name="name">offers Form</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <form string="offer_Forms">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="date_deadline"/>
                        <field name="validity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
