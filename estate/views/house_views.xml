<odoo>
    <record id="house_action" model="ir.actions.act_window">
        <field name="name">Houses</field>
        <field name="res_model">estate.house</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">
            {
                'search_default_available': 1
            }
        </field>
    </record>

    <record id="estate_house_tree" model="ir.ui.view">
        <field name="name">estate_house_tree</field>
        <field name="model">estate.house</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='offer_received' or state=='offer_accepted'" decoration-bf="state=='offer_accepted'"
               decoration-muted="state=='sold'" >
                <field name="name" string="Title" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" string="Available From" optional="hide" />
                <field widget="many2many_tags" name="house_tag_ids" string="Tags" />
            </list>
        </field>
    </record>

    <record id="estate_house_form" model="ir.ui.view">
        <field name="name">estate_house_form</field>
        <field name="model">estate.house</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sell_property" type="object" string="Sell" />
                    <button name="cancel_property" type="object" string="Cancel" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />  
                    </h1>
                    <h3>
                        <field widget="many2many_tags" name="house_tag_ids" options="{'color_field': 'color'}" />
                    </h3>
                    <group>
                        <group>
                            <field name="house_type_id" options="{'can_create': false}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" string="Living Area (sqm)" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" string="Garden Area (sqm)" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" string="Total Area (sqm)" />
                            </group>
                        </page>
                        <page string="Offers">
                            <list>
                                <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')"
                                editable="bottom" />
                            </list>
                        </page>
                        <page string="Other Information">
                            <group>
                                <field name="buyer_id" />
                                <field name="seller_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate.house_kanban" model="ir.ui.view">
        <field name="name">house kanban</field>
        <field name="model">estate.house</field>
        <field name="arch" type="xml">
            <kanban default_group_by="house_type_id" records_draggable="false" >
                <field name="state" />
                <templates>
                    <t t-name="card">
                        <div>
                            <strong>
                                <field name="name" />
                            </strong>
                            <t t-if="record.state.raw_value == 'offer_received'">
                                <div>
                                    Best Price: <field name="best_price" />
                                </div>
                            </t>
                            <div>
                                Expected Price: <field name="expected_price" />
                            </div>
                            <t t-if="record.state.raw_value == 'offer_accepted'">
                                <div>
                                    Selling Price: <field name="selling_price" />
                                </div>
                            </t>
                            <div>
                                <field name="house_tag_ids" widget="many2many_tags" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_house_search" model="ir.ui.view">
        <field name="name">estate_house_search</field>
        <field name="model">estate.house</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                
                <filter name="available" string="Available"
                    domain = "['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name="estate_house_postcode_grouping_filter" string="Postcode"
                    context="{'group_by': 'postcode'}" />
            </search>
        </field> 
    </record>
</odoo>
