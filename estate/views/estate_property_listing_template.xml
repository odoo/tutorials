<odoo>
    <template id="estate_property_listing_template" name="Property Listing">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="text-center m-4 text-primary">Available Properties</h1>
                <form method="GET" action="/properties" class="d-flex justify-content-center mb-4">
                    <input type="date" name="listed_after" class="form-control w-25 mx-2"/>
                    <button type="submit" class="btn btn-primary mx-2">Listed after</button>
                </form>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4">
                            <div class="card m-2">
                                <img t-if="property.image" t-att-src="'/web/image/estate.property/' + str(property.id) + '/image'" class="card-img-top img-fluid"/>
                                <div class="card-body">
                                    <h5 class="card-title"><t t-out="property.name"/></h5>
                                    <p class="card-text"><t t-out="property.description"/> </p>
                                    <p class="card-text">Expected Price: <t t-out="property.expected_price"/></p>
                                    <a t-att-href="'/property/'+ str(property.id)" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="container d-flex justify-content-center align-items-center my-4">
                    <t t-call="website.pager" />
                </div>
            </div>
        </t>
    </template>
    <record id="menu_properties" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>
</odoo>
