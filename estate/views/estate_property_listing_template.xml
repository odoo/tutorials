<odoo>
    <record id="menu_properties" model="website.menu">
            <field name="name">Properties</field>
            <field name="url">/properties</field>
            <field name="parent_id" ref="website.main_menu"/>
    </record>

    <template id="estate_property_listing_template" name="Property Listings">
        <t t-call="website.layout">
            <div class="container">
                <div class="">
                    <h2>Available Properties</h2>
                </div>
                <form method="POST" action="/properties">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label for="listed_after">Listed After:</label>
                            <input type="date" id="listed_after" name="listed_after"
                                class="form-control" />
                        </div>
                        <!-- <div class="col-md-2">
                            <button type="submit" class="btn btn-primary mt-4">Listed After</button>
                        </div> -->
                        <div class="col-md-4 offset-md-2">
                            <label for="search">Search Property:</label>
                            <div class="input-group">
                                <input type="text" id="search" name="search"
                                    class="form-control" placeholder="Enter property name"
                                    t-att-value="search_query" />
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                </form>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <t t-if="property.image_1920">
                                    <img t-att-src="'data:image/png;base64,' + property.image_1920.decode('utf-8')" class="card-img-top" alt="Property Image" style="max-width: 100%; max-height: 200px; object-fit: cover;"/>
                                </t>
                                <div class="card-body text-center">
                                    <h5 t-esc="property.name"></h5>
                                    <p>Price: <t t-esc="property.expected_price" /> $</p>
                                    <a t-att-href="'/property/%s' % property.id"
                                        class="btn btn-primary d-flex justify-content-center mx-auto">
                                        View</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col d-flex justify-content-center">
                        <t t-call='website.pager'/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 mt-4">
                        <h2 t-esc="property.name"/>
                        <p class="text-muted">Price: <t t-esc="property.expected_price"/> $</p>
                        <t t-if="property.image_1920">
                            <img t-att-src="'/web/image/estate.property/%s/image_1920' % property.id"
                                class="img-fluid rounded shadow-sm mb-4"
                                alt="Property Image"/>
                        </t>
                        <p t-esc="property.description"/>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-3 shadow-sm" style="margin-top: 140px ">
                            <h4 class="mb-3">Property Details üè†</h4>
                            <p><strong>Type:</strong> <t t-esc="property.property_type_id.name"/> üèòÔ∏è</p>
                            <p><strong>Bedrooms:</strong> <t t-esc="property.bedrooms"/> üõèÔ∏è</p>
                            <p><strong>Postcode:</strong> <t t-esc="property.postcode"/> üìç</p>
                            <p><strong>Availability Date:</strong> <t t-esc="property.date_availability"/> üìÖ</p>
                            <p><strong>Size:</strong> <t t-esc="property.living_area"/> m¬≤ üìè</p>
                            <p><strong>Facades:</strong> <t t-esc="property.facades"/> üèõÔ∏è</p>
                        </div>
                    </div>
                </div>

                <div class="row mt-4 mb-4">
                    <div class="col text-center">
                        <a href="/properties" class="btn btn-secondary">Back to Listings</a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>