<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Real Estate (TOP MENU) -->
    <menuitem
        id="estate_property_menu_root"
        name="Real Estate"/>

    <!-- Advertisement (MAIN USER MENU) -->
    <menuitem
        id="estate_property_menu_advertisement"
        name="Advertisement"
        parent="estate_property_menu_root"
        sequence="1"/>

    <!-- Properties (Advertisement SUB-MENU) -->
    <menuitem
        id="estate_property_menu_properties"
        name="Properties"
        parent="estate_property_menu_advertisement"
        action="estate.estate_property_properties_action"
        sequence="1"/>

    <!-- Settings (MAIN USER MENU) -->
    <menuitem
        id="estate_property_menu_settings"
        name="Settings"
        parent="estate_property_menu_root"
        groups="estate_property_group_real_estate_manager"
        sequence="2"/>

    <!-- Property Types (Settings SUB MENU) -->
    <menuitem
        id="estate_property_type_menu_property_types"
        name="Property Types"
        parent="estate_property_menu_settings"
        action="estate.estate_property_type_action"
        sequence="1"/>

    <!-- Property Tag (Settings SUB MENU) -->
    <menuitem
        id="estate_property_tag_menu_property_tags"
        name="Property Tags"
        parent="estate_property_menu_settings"
        action="estate.estate_property_tag_action"
        sequence="2"/>

    <!-- Configuration (MAIN USER MENU) -->
    <menuitem
        id="estate_property_menu_configuration"
        name="Configuration"
        parent="estate_property_menu_root"
        sequence="3"/>

    <!-- Setting (Configuration SUB MENU) -->
    <menuitem
        id="estate_property_type_menu_setting"
        name="Setting"
        parent="estate_property_menu_configuration"
        action="estate.action_estate_config"
        sequence="1"/>
</odoo>
