<?xml version="1.0"?>
<odoo>
    <record id="estate_prperty_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>               
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>                 
                <field name="status"/>               
            </tree>
        </field>
    </record>

    <record id="estate_prperty_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>               
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>               
                        <field name="status"/>  
                    </group>
                </sheet>             
            </form>
        </field>
    </record>
</odoo>
