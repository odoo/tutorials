<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- List view for offers -->
  <record id="view_estate_property_offer_tree" model="ir.ui.view">
    <field name="name">estate.property.offer.tree</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <list>
        <field name="price"/>
        <field name="partner_id"/>
        <button name="action_accept_offer" type="object" icon="fa-check" string="Accept"/>
        <button name="action_refuse_offer" type="object" icon="fa-times" string="Refuse"/>
        <field name="validity"/>
        <field name="date_deadline"/>
      </list>
    </field>
  </record>

  <!-- Form view for offers -->
  <record id="view_estate_property_offer_form" model="ir.ui.view">
    <field name="name">estate.property.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="price"/>
            <field name="partner_id"/>
            <field name="validity"/>
            <field name="date_deadline"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
