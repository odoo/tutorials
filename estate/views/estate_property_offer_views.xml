<odoo>
    <data>
        <!-- Custom List view -->
        <record id="view_estate_property_offer_list" model="ir.ui.view">
            <field name="name">view.estate.property.offer.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list name="offer">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button invisible="status == 'accepted' or status == 'refused'" name="action_accepted" type="object" icon="fa-check" title="Accept"/>
                    <button invisible="status == 'accepted' or status == 'refused'" name="action_refused" type="object" icon="fa-times" title="Refuse"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="view_estate_property_offer_form" model="ir.ui.view">
            <field name="name">view.estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form name="estate_property_offer_form" string="Offers">
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
