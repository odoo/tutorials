<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_property_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("property_type_id", "=", active_id)]</field>
    </record>

    <!-- List View for Estate Property Offers -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Estate Properties Offers" decoration-danger="status == 'refuse'"
                decoration-success="status == 'accepted'">
                <field name="price" string="Price" sum="Total"/>
                <field name="partner_id" string="Partner"/>
                <field name="property_type_id"/>
                <field name="validity" string="Validity"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_status_accepted"
                    type="object"
                    icon="fa-check"
                    title="accept"
                    invisible="status in ['accepted', 'refuse']"/>
                <button name="action_status_refused"
                    type="object"
                    title="reject"
                    icon="fa-times"
                    invisible="status in ['accepted', 'refuse']"/>
            </list>
        </field>
    </record>
</odoo>
