<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers" editable="bottom" decoration-bf="status == 'accept'" decoration-success="status == 'accept'" decoration-danger="status == 'refuse'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="offer_deadline"/>
                <button name="action_accept" type="object" title="Accept" icon="fa-check" invisible="status == 'accept' or status == 'refuse'"/>
                <button name="action_reject" type="object" title="Refuse" icon="fa-times" invisible="status == 'accept' or status == 'refuse'"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <h1>
                            <field name="price"/>
                        </h1>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="offer_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id','=', active_id)]</field>
    </record>
</odoo>
