<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_property_offer_view_list" model="ir.ui.view">
            <field name="name">Estate Properties Offers</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list editable="bottom"
                    decoration-success="state == 'accepted'"
                    decoration-danger="state == 'refused'">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="date_deadline" />
                    <field name="validity" />
                    <button name="action_accept"
                        invisible="state in ('accepted', 'refused')"
                        string="Accept" type="object" icon="fa-check" />
                    <button name="action_refuse"
                        invisible="state in ('accepted', 'refused')"
                        string="Refuse" type="object" icon="fa-times" />
                </list>
            </field>
        </record>

        <record id="estate_property_offer_view_form" model="ir.ui.view">
            <field name="name">Estate Property Offer</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="price" />
                            <field name="partner_id" />
                            <field name="state" />
                            <field name="date_deadline" />
                            <field name="validity" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Estate Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="estate_property_offer_action_from_type" model="ir.actions.act_window">
            <field name="name">Estate Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record>
    </data>
</odoo>
