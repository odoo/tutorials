<?xml version="1.0"?>
<odoo>
    <record id="test_model_offer_view_tree" model="ir.ui.view">
        <field name="name">test.model.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type = "xml">
            <list string = "Channel">
                <field name = "price"/>
                <field name = "partner_id"/>
                <field name = "status"/>
                <field name = "validity"/>
                <field name = "date_deadline"/>
            </list>
        </field>
    </record>

    <record id="test_model_offer_view_form" model="ir.ui.view">
        <field name="name">test.model.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>        
                    <field name = "price"/>
                    <field name = "partner_id"/>
                    <field name = "status"/>
                    <field name = "validity"/>
                    <field name = "date_deadline"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
