<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_offer_listview" model="ir.ui.view">
        <field name="name">esate.property.listview</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="List">
                <field name="price" />
                <field name="partner_id" />
                <field name="status" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" string=" " type="object" icon="fa-check"/>
                <button name="action_refuse" string=" " type="object" icon="fa-times"/>
                <field name='status'/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_formview" model="ir.ui.view">
        <field name="name">estate.property.fromview</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form">
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                    </group>
                    <group>
                        <field name="validity" />
                        <field name="date_deadline" />
                    </group>
            </form>
        </field>
    </record>
</odoo>
