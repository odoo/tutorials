<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">view.estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" string="List Properties">
                <field name="price" width="10%"/>
                <field name="partner_id" width="10%"/>
                <field name="validity" width="10%"/>
                <field name="deadline_date" width="10%"/>
                <button name="action_order_accepted" title="Accepted" type="object" icon="fa-check" width="3%"/>
                <button name="action_order_refused" title="Refused" type="object" icon="fa-times" width="3%"/>
                <field name="status" width="10%"/>
            </list>
        </field>
    </record>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">view.estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form  name="estate_property_offer_form" string="Form property">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="deadline_date"/>
                    <button name="action_order_accepted" title="Accepted" type="object" icon="fa-check"/>
                    <button name="action_order_refused" title="Refused" type="object" icon="fa-times"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
