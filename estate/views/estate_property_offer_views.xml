<odoo>
    <record id='estate_property_offer_list_view' model='ir.ui.view'>
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offer List">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_offer_accept_btn" type="object" icon="fa-check" help="Accept Offer"/>
                <button name="action_offer_reject_btn" type="object" icon="fa-times" help="Reject Offer"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer Form">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id" />
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
