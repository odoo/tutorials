<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_list" model="ir.ui.view">
        <field name="name">Estate Property Offer View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <button name="action_accept" type="object" title="Accept" icon="fa-check" invisible="status == 'accept' or status == 'refuse'"/>
                <button name="action_reject" type="object" title="Refuse" icon="fa-times" invisible="status == 'accept' or status == 'refuse'"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="offer_deadline"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">Estate Property Offer View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <h1>
                            <field name="price"/>
                        </h1>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="offer_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
