<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="partner_id" string="Partner" width='10'/>
                <field name="price" string="Amount" width="10"/>
                <field name="validity_days" string="Validity (days)" width="20"/>
                <field name="deadline" string="Deadline" width="10"/>
                <button name="action_offer_accept" type="object" string="ACCEPT" icon="fa-check" width="1"/>
                <button name="action_offer_refuse" type="object" string="REFUSE" icon="fa-times" width="1"/>
                <field name="status" string="Status" width='5'/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer Form">
                <sheet>
                    <div>
                    <group>
<!--                        <field name="name"/>-->
                        <field name="partner_id"/>
                        <field name="price"/>
                        <field name="validity_days"/>
                        <field name="deadline"/>
                    </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
