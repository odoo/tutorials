<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list view of offer -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="partner_id" string="Buyer"/>
                <field name="property_id" string="Property"/>
                <field name="validity" string="Validity"/>
                <field name="price" string="Price"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" type="object" class="oe_stat_button" invisible="status == 'refused'" icon="fa-check"></button>
                <button name="action_refuse" type="object" class="oe_stat_button" invisible="status == 'refused'" icon="fa-times"></button>
                <field name="status" string="Status" class="oe_background_grey" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_offer_view_wizard" model="ir.ui.view">
        <field name="name">estate_property_offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer" help="Use options specified in form to list property offer">
                <sheet>
                    <group>
                        <field name="partner_id" string="Buyer"/>
                        <field name="validity" string="Validity"/>
                        <field name="price" string="Price"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="status" string="Status" class="oe_background_grey" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
    