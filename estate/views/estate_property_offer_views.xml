<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" string="Offers" editable="bottom" 
                  decoration-success="status == 'accepted'" 
                  decoration-danger="status == 'refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button invisible="status in ['accepted', 'refused'] or property_id.state in ['offer_accepted', 'sold', 'cancelled']" name="action_accept" type="object" title="Accepted" icon="fa-check"/>
                <button invisible="status in ['accepted', 'refused'] or property_id.state in ['offer_accepted', 'sold', 'cancelled']" name="action_refuse" type="object" title="Refused" icon="fa-times"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form name="estate_property_offer_form" string="Offers">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Real Estate Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
