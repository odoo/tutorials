<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="estate_property_offer_tree_view">
            <field name="name">property offers</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" >
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="date_deadline" />
                    <button name="action_accept" type="object" title="Accept" icon="fa-check" />
                    <button name="action_refuse" type="object" title="Refuse" icon="fa-times" />
                    <field name="status" invisible='1' />      
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="estate_property_offer_action">
            <field name="name">Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_status': 'new'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a property offer
                </p>
                <p>
                    Create offers for properties and manage their status.
                </p>
            </field>

        </record>
    </data>
</odoo>