<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">view.estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" string="List Properties">
                <field name="price" width="10%"/>
                <field name="partner_id" width="10%"/>
                <field name="status" width="10%"/>
            </list>
        </field>
    </record>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">view.estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form  name="estate_property_offer_form" string="Form property">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>