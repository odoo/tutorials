<?xml version="1.0"?>
<odoo>
	<record id="estate_property_offer_action" model="ir.actions.act_window">
		<field name="name">Offers Action</field>
		<field name="res_model">estate.property.offer</field>
		<field name="view_mode">list,form</field>
		<field name="domain">[('property_type_id', '=', active_id)]</field>
	</record>


	<record id="estate_propertt_offer_view_list" model="ir.ui.view">
		<field name="name">estate.property_offer.list</field>
		<field name="model">estate.property.offer</field>
		<field name="arch" type="xml">
			<list string="Offers List" editable="top"
				decoration-success="status == 'accepted'"
				decoration-danger="status=='refused'">
				<field name="price" />
				<field name="validity" />
				<field name="date_deadline" />
				<field name="partner_id" />
				<button name="accept_offer_button_action" string="Accept"
					type="object" icon="fa-check" invisible="status != False" />
				<button name="refuse_offer_button_action" string="Refuse"
					type="object" icon="fa-times" invisible="status != False" />
				<field name="property_type_id" />
			</list>
		</field>
	</record>

	<record id="estate_property_offer_view_form" model="ir.ui.view">
		<field name="name">estate.property.offer.form</field>
		<field name="model">estate.property.offer</field>
		<field name="arch" type="xml">
			<form string="Offers Form">
				<sheet>
					<group>
						<field name="price" />
						<field name="partner_id" />
						<field name="validity" />
						<field name="date_deadline" />
						<field name="status" />
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>
