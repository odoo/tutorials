<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price" width="25%"/>
                <field name="partner_id" width="25%"/>
                <field name="valadity" width="25%"/>
                <field name="date_deadline" width="25%"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="valadity"/>
                    <field name="date_deadline" string="Deadline"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
