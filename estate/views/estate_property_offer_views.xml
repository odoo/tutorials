<?xml version="1.0"?>
<odoo>
    <data>
        <record id="estate_property_offer_list" model="ir.ui.view">
            <field name="name">estate.property.offer.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Property Offers" editable="bottom">
                    <field name="property_id" widget="many2one"/>
                    <field name="property_type_id" string="Property Type" readonly="status == 'accepted'"/>
                    <field name="price" string="Price" readonly="status == 'accepted'"/>
                    <field name="date_deadline" string="Deadline" readonly="status == 'accepted'"/>
                    <field name="validity" string="Validity" readonly="status == 'accepted'"/>
                    <field name="status" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" readonly="status == 'accepted'"/>
                    <field name="partner_id" string="Buyer"/>
                    <field name="salesperson_id" string="SalesPerson"/>
                </list>
            </field>
        </record>

        <record id="estate_property_offer_list_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="estate_property_offer_list"/>
        </record>
    </data>
</odoo>
