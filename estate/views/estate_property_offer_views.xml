<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity" width="150"/>
                <field name="deadline"/>
                <button name="action_accept" type="object" icon="fa-check" />
                <button name="action_refuse" type="object" icon="fa-times" />
                <field name="status"/>
            </list>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property offer">
                <header>
                    <button name="action_accept" type="object" string="Accept" icon="fa-check" class = "oe_stat_button"/>
                    <button name="action_refuse" type="object" string="Refuse" icon="fa-times" class = "oe_stat_button"/>
                </header>
                <sheet>
                    <notebook>
                        <page name="description" string="Description">
                            <group name="name" string="string">
                                <field name="price" />
                                <field name="partner_id"/>
                                <field name="property_id"/>
                                <field name="validity"/>
                                <field name="deadline"/>
                            </group> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
