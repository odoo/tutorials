<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                <field name="price" width="30%"></field>
                <field name="partner_id" width="10%"></field>
                <field name="validity" width="10%"></field>
                <field name="date_deadline" width="10%"></field>
                <button name="action_accepted" type="object" icon="fa-check" width="30%" title="Accept Offer" invisible="status == 'refused' or status == 'accepted'"></button>
                <button name="action_refused" type="object" icon="fa-times" width="30%" title="Refuse Offer" invisible="status == 'refused' or status == 'accepted'"></button>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form name="estate_property_offer_form" string="Estate Property">
                <group>
                    <field name="price"></field>
                    <field name="partner_id"></field>
                    <field name="validity"></field>
                    <field name="date_deadline"></field>
                    <field name="status"></field>
                </group>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
