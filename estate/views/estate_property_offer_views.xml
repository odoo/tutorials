<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">Estate property offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="estate form" editable="bottom">
                <field name="price" />
                <field name="partner_id" string="Partner" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="accept_offer" string="Confirm" type="object" icon="fa-check"
                    invisible="status in ('accepted', 'refused')" />
                <button name="refused_offer" string="Cancel" type="object" icon="fa-times"
                    invisible="status in ('accepted', 'refused')" />
                <field name="status" />
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">Estate property form offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="property offer form view">
                <group>
                    <field name="price" />
                    <field name="partner_id" string="Partner" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <field name="status" />
                </group>
            </form>
        </field>
    </record>
</odoo>
