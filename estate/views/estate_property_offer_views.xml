<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="domain">[('property_type_id','=', active_id)]</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">Property Offers List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers" editable="bottom" decoration-success="state == 'accepted'" decoration-danger="state == 'refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" title="Accept" type="object" icon="fa-check" invisible="state != False"/>
                <button name="action_refuse" title="Refuse" type="object" icon="fa-times" invisible="state != False"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">Property Offers Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="state"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
