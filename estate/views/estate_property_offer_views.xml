<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_model_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Tags">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_model_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>     
                <field name="partner_id" string="Partner"/> 
                <field name="validity" string="Validity(days)"/>
                <field name="date_deadline"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times"/>
                <field name="status"/> 
            </tree>
        </field>
    </record>
</odoo>
