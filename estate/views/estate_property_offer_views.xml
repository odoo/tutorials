<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" 
                  editable="bottom"
                  decoration-success="status == 'accepted'"
                  decoration-danger="status == 'refused'">
                <field name="property_type_id" width="10%"/>
                <field name="price" width="10%"/>
                <field name="partner_id" width="10%"/>
                <field name="validity" width="10%"/>
                <field name="deadline_date" width="10%"/>
                <button invisible="status" name="action_order_accepted" title="Accepted" type="object" icon="fa-check" width="3%"/>
                <button invisible="status" name="action_order_refused" title="Refused" type="object" icon="fa-times" width="3%"/>
                <field name="status" readonly="1" width="10%"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form name="estate_property_offer_form" string="Form property">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="deadline_date"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Estate property tag action -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
