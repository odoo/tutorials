<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action for Property Tag (SUB MENU <- Settings) -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">estate.property.offer.action</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!-- List view for property offers -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list
                string="Property Offers"
                editable="bottom"
                decoration-danger="status == 'refused'"
                decoration-success="status == 'accepted'">
                    <field name="price" string="Price"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="validity" string="Validity"/>
                    <field name="date_deadline" string="Deadline"/>
                    <button name="action_accept" string="Accepted" type="object" icon="fa-check" invisible="status"/>
                    <button name="action_refuse" string="Refused" type="object" icon="fa-times" invisible="status"/>
            </list>
        </field>
    </record>

    <!-- Form view for property offers -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offers">
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="validity" string="Validity"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="status" string="Status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
