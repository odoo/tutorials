<?xml version="1.0"?>
<odoo>
    <record id="test_model_offer_view_list" model="ir.ui.view">
        <field name="name">test.model.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type = "xml">
            <list string="Channel"
                editable="bottom"
                decoration-danger="status == 'refused'"
                decoration-success="status == 'accept'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" string="Accept" type="object" icon="fa-check" invisible="status"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times" invisible="status"/>
                <field name="status" column_invisible="True"/>
                <field name="property_type_id"/>
            </list>
        </field>
    </record>

    <record id="test_model_offer_view_form" model="ir.ui.view">
        <field name="name">test.model.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>        
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_model_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_id', '=', active_id)]</field>
    </record>
</odoo>
