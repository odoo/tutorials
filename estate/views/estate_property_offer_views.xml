<?xml version="1.0"?>
<odoo>
    <record id="estate_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-danger="status == 'refused'" 
            decoration-success="status == 'accepted'">
                <field name="price" string="Price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="estate_offer_accept" icon="fa-check" type="object" string="Accept" invisible="status"/>
                <button name="estate_offer_refuse" icon="fa-times" type="object" string="Refuse" invisible="status"/>
                <field name="status" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">estate.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Offer">
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>