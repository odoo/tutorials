<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Estate Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel" sample="1" editable="bottom" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price" string="Price"/>
                <field name="partner_id" string="Buyer"/>
                <field name="validate" string="Validate"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" type="object" invisible='status == "refused" or status == "accepted" or property_status=="offer_accepted"' icon="fa-check" title="Accept"/>
                <button name="action_refuse" type="object" invisible='status == "refused" or status == "accepted" or property_status=="offer_accepted"' icon="oi-close" title="Refuse"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate_property_offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer" help="Use options specified in form to list property offer">
                <sheet>
                    <group>
                        <field name="partner_id" string="Buyer"/>
                        <field name="validate" string="Validate"/>
                        <field name="price" string="Price"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="status" string="Status" class="oe_background_grey" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>


