<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <sheet>
                    <group>
                       <field name="price" string="Price"/>
                    </group>
                    <group>
                        <field name="partner_id" string="Partner"/>
                    </group>
                     <group>
                        <field name="validity" string="Validity (days)"/>
                    </group>
                     <group>
                        <field name="date_deadline" string="Deadline"/>
                    </group>
                     <group>
                        <field name="status" string="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">Offer Lists</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list
                string="Offers" editable="bottom"
                decoration-danger="status=='refused'"
                decoration-success="status=='accepted'"
            >
                <field name="price" width="200" />
                <field name="status" width="200" readonly="1" />
                <field name="partner_id" width="200" />
                <button
                    name="action_set_accepted"
                    type="object"
                    icon="fa-check"
                    title="Accept"
                    invisible="status == 'accepted' or status == 'refused' "
                />
                <button
                    name="action_set_refused"
                    type="object"
                    icon="fa-times"
                    title="Refuse"
                    invisible="status == 'accepted' or status == 'refused' "
                />
                <field name="validity" width="200" />
                <field name="date_deadline" width="200" />
            </list>
        </field>
    </record>

    <record id="estate_property_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

</odoo>
