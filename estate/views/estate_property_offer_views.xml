<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" string="Property Offers" editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                <field name="price" width="30%"></field>
                <field name="partner_id" width="20%"></field>
                <field name="validity" width="20%"></field>
                <field name="date_deadline" width="20%"></field>
                <button name="action_accepted" type="object" icon="fa-check" title="Accept the offer" width="1%" invisible="status == 'accepted' or status == 'refused'"/>
                <button name="action_refused" type="object" icon="fa-times" title="Refuse the offer" width="1%" invisible="status == 'accepted' or status == 'refused'"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
           <form name="estate_property_offer_form" string="Property Offers">
                <sheet>
                    <group>
                        <field name="price"></field>
                        <field name="partner_id"></field>
                        <field name="validity"></field>
                        <field name="date_deadline"></field>
                        <field name="status"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record> 
</odoo> 
