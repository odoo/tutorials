<odoo>
    <data>
        <!-- List section: Opens when the Offers tab is clicked -->
        <record id="estate_property_offer_view_list" model="ir.ui.view">
            <field name="name">estate.property.offer.view.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list editable="bottom"
                    decoration-danger="status == 'refused'"
                    decoration-success="status == 'accepted'">
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="action_accept" string="Accept" type="object" icon="fa-check" invisible="status == 'accepted' or status == 'refused'"/>
                    <button name="action_refuse" string="Refuse" type="object" icon="fa-times" invisible="status == 'accepted' or status == 'refused'"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="price"/>
                            <field name="status"/>
                        </group>

                        <group>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- Actions to open the Property Offers in list & form views -->
        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('property_type_id','=',active_id)]</field>
        </record>
    </data>
</odoo>
