<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- views  -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Create Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- list view  -->
    <record id="estate_property_offer_views_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offer">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_offer" string="Accpet" type="object" icon="fa-check"/>
                <button name="refuse_offer" string="Reject" type="object" icon="fa-times"/>
            </list>
        </field>
    </record>

    <!-- form view  -->
    <record id="estate_property_offer_views_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="price" placeholder="Price"/>
                    <field name="partner_id" placeholder="Partner"/>
                    <field name="status" placeholder="Status"/>
                    <field name="validity" placeholder="Validity (Days)"/>
                    <field name="date_deadline" placeholder="Deadline"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
