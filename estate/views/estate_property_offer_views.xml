<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="View" editable="top"
                decoration-danger="state == 'refused'" decoration-success="state == 'accepted'">
                <field name="state" column_invisible="True" />
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" type="object" string="Accept" icon="fa-check"
                    invisible="state == 'accepted'" />
                <button name="action_refuse" type="object" string="Refuse" icon="fa-times"
                    invisible="state == 'refused'" />
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="price" />
                            <field name="state" />
                        </group>
                        <group>
                            <field name="date_deadline" />
                            <field name="validity" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id','=', active_id)]</field>
    </record>
</odoo>
