<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="estate_model_property_offer" model="ir.actions.act_window">
        <field name="name">Property offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list, form</field>
    </record>

    <record id="estate_model_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field> 
        <field name="model">estate.property.offer</field> 
        <field name="arch" type="xml">
            <form>
                <!-- <header>
                    <button name="action_property_offer_accept" type="object" string="Accept"></button>
                    <button name="action_property_offer_refused" type="object" string="Refused"></button>
                </header> -->
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field> 
    </record>

</odoo>
