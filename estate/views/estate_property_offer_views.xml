<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list name="estate_property_offer_list" string="Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button invisible="status == 'accepted' or status == 'refused'" name="action_accept" type="object" title="Accepted" icon="fa-check"/>
                <button invisible="status == 'accepted' or status == 'refused'" name="action_refuse" type="object" title="Refused" icon="fa-times"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form name="estate_property_offer_form" string="Offers">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
