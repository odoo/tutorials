<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>


    <record id="estate_property_offer_view" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="status == 'accepted'"
                decoration-danger="status == 'refused'">
                <field name="partner_id" />
                <field name="price" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_confirm" class="oe_state_button" type="object" icon="fa-check"
                    title="Confirm Offer" invisible="status in ['refused', 'accepted']" />
                <button name="action_cancel" class="oe_state_button" type="object" icon="fa-times"
                    title="Cancel Offer" invisible="status in ['refused', 'accepted']" />
            </list>
        </field>
    </record>

</odoo>