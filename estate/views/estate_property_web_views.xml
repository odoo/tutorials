<odoo>
    <record id="properties_menu" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>

    <template id="property_list_template" name="Estate Properties">
        <t t-call="website.layout">
            <div class="container my-4">
                <h1 class="mb-4">Estate Properties</h1>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card shadow-sm border-0 p-3">
                            <h5 class="mb-3">Filters</h5>
                            <form method="GET" action="/properties">
                                <div class="mb-3">
                                    <label for="date" class="form-label small">Listed After</label>
                                    <input type="date" name="date" id="date" class="form-control" t-att-value="date or ''"/>
                                </div>
                                <div class="mb-3">
                                    <label for="min_price" class="form-label small">Min Price</label>
                                    <input type="number" name="min_price" id="min_price" class="form-control" t-att-value="min_price or ''"/>
                                </div>
                                <div class="mb-3">
                                    <label for="max_price" class="form-label small">Max Price</label>
                                    <input type="number" name="max_price" id="max_price" class="form-control" t-att-value="max_price or ''"/>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Apply</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div t-if="properties" class="row g-3">
                            <t t-foreach="properties" t-as="property">
                                <div class="col-12">
                                    <div class="card shadow-sm border-0 mb-3 flex-row">
                                        <img t-if="property.image" t-att-src="'data:image/webp;base64,%s' % property.image.decode('utf-8')" class="rounded-start" style="width: 200px; object-fit: cover;" t-att-alt="property.name"/>
                                        <img t-else="" src="https://placehold.co/200x150?text=No+Image" class="rounded-start" style="width: 200px; object-fit: cover;" alt="No Image"/>
                                        <div class="card-body d-flex flex-column justify-content-between">
                                            <div>
                                                <h5 class="card-title mb-1">
                                                    <a t-attf-href="/property/{{ property.id }}" class="text-decoration-none stretched-link">
                                                        <t t-out="property.name"/>
                                                    </a>
                                                </h5>
                                                <p t-if="property.property_type_id" class="text-muted small mb-1">
                                                    <i class="fa fa-home me-1"></i>
                                                    <t t-out="property.property_type_id.name"/>
                                                </p>
                                                <p class="small mb-2">
                                                    <span t-if="property.bedrooms">
                                                        <i class="fa fa-bed me-1"></i>
                                                        <t t-out="property.bedrooms"/>
                                                        Beds
                                                    </span>
                                                    <span t-if="property.living_area" class="ms-3">
                                                        <i class="fa fa-arrows-alt me-1"></i>
                                                        <t t-out="property.living_area"/>
                                                        sq.m.
                                                    </span>
                                                </p>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <p class="fw-bold text-primary mb-0">₹
                                                    <t t-out="'{:,}'.format(float(property.expected_price))"/>
                                                </p>
                                                <small class="text-muted">Listed: <t t-out="property.create_date.strftime('%b %d, %Y')"/>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div t-else="" class="text-center py-5">
                            <i class="fa fa-home fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No properties found</h4>
                            <p>Adjust filters or check back later.</p>
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <t t-call="website.pager"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="property_details_template" name="Property Details">
        <t t-call="website.layout">
            <div class="container my-4">
                <div class="row g-3">
                    <div class="col-md-8">
                        <h1 class="text-primary fw-bold h3">
                            <t t-out="property.name"/>
                        </h1>
                        <t t-if="property.tag_ids">
                            <p class="mb-2">
                                <t t-foreach="property.tag_ids" t-as="tag">
                                    <span class="badge bg-secondary me-1">
                                        <t t-out="tag.name"/>
                                    </span>
                                </t>
                            </p>
                        </t>
                        <div class="bg-light rounded-3 p-3 mb-3 shadow-sm">
                            <h2 class="text-primary fw-bold mb-0">₹
                                <t t-out="'{:,}'.format(float(property.expected_price))"/>
                            </h2>
                            <t t-if="property.create_date">
                                <span class="text-muted small">Listed <t t-out="property.create_date.strftime('%b %d, %Y')"/>
                                </span>
                            </t>
                        </div>
                        <div class="row g-2 mb-3">
                            <t t-foreach="[('fa-building', 'Type', property.property_type_id.name),
                                           ('fa-bed', 'Beds', property.bedrooms),
                                           ('fa-arrows-alt', 'Area', '%s sq.m.' % property.total_area)]" t-as="info">
                                <t t-if="info[2]">
                                    <div class="col-4">
                                        <div class="d-flex align-items-center">
                                            <i t-att-class="'fa ' + info[0] + ' text-primary me-2'"></i>
                                            <div>
                                                <small class="text-muted">
                                                    <t t-out="info[1]"/>
                                                </small>
                                                <p class="mb-0">
                                                    <t t-out="info[2]"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="mb-3">Description</h5>
                                <p class="text-secondary" t-if="property.description">
                                    <t t-out="property.description"/>
                                </p>
                                <p class="text-muted fst-italic" t-else="">No description available</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card shadow-sm border-0 rounded-3 position-relative">
                            <img t-if="property.image" t-att-src="'data:image/webp;base64,%s' % property.image.decode('utf-8')" class="img-fluid rounded w-100" style="object-fit: cover; height: 250px;" t-att-alt="property.name"/>
                            <img t-else="" src="https://placehold.co/400x250" class="img-fluid rounded w-100" style="object-fit: cover; height: 250px;" t-att-alt="property.name"/>
                            <t t-if="property.state">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span t-att-class="'badge bg-' + ('primary' if property.state == 'new' else
                                    'warning text-dark' if property.state == 'offer_received' else
                                    'success' if property.state == 'offer_accepted' else
                                    'dark' if property.state == 'sold' else 'danger')">
                                        <t t-out="property.state.replace('_', ' ').title()"/>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="/properties" class="btn btn-outline-primary">
                        <i class="fa fa-arrow-left me-2"></i>
                        Back to Listings
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>
