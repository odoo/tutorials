<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="properties_menu" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>
    <template id="property_template" name="Estate Properties">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="row mb-4">
                    <div class="col-12">
                        <h1 class="text-center">Estate Properties</h1>
                        <p class="text-center text-muted">Find your dream property</p>
                    </div>
                </div>
                <form method="GET" action="/properties" class="row mb-3">
                    <div class="col-2">
                        <label for="date" class="form-label">Listed After</label>
                        <input type="date" name="date" id="date"
                               class="form-control"
                               t-att-value="date or ''"/>
                    </div>
                    <div class="col-2">
                        <label for="min_price" class="form-label">Min Price</label>
                        <input type="number" name="min_price" id="min_price"
                               class="form-control"
                               t-att-value="min_price or ''"/>
                    </div>
                    <div class="col-2">
                        <label for="max_price" class="form-label">Max Price</label>
                        <input type="number" name="max_price" id="max_price"
                               class="form-control"
                               t-att-value="max_price or ''"/>
                    </div>
                    <div id="new_filters" hidden="1"/>
                    <div class="col-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary" id="filter-btn">Apply Filters</button>
                    </div>
                </form>
                <div t-if="properties" class="row g-4" id="property-list">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-6 col-lg-4 property-item mb-4"
                             t-att-data-date="property.create_date">
                            <div class="card h-100 shadow-sm border-0">
                                <div>
                                    <img t-if="property.image"
                                         t-att-src="'data:image/webp;base64,%s' % property.image.decode('utf-8')"
                                         class="img-fluid rounded-top w-100"
                                         style="object-fit: cover; height: 400px;"
                                         t-att-alt="property.name"/>
                                    <img t-else=""
                                         t-attf-src="https://placehold.co/600x400.png/?text=No+Image&amp;font=Monsterrat"
                                         class="img-fluid rounded-top w-100"
                                         style="object-fit: cover; height: 400px;"
                                         t-att-alt="property.name"/>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="fw-bold">
                                        <a t-attf-href="/property/{{ property.id }}"
                                           class="text-decoration-none stretched-link text-dark">
                                            <t t-out="property.name"/>
                                        </a>
                                        <t t-if="property.state">
                                            <div class="m-3 float-end">
                                                <span
                                                        t-att-class="'badge bg-' + ('primary' if property.state == 'new' else
                                            'warning text-dark' if property.state == 'offer_received' else
                                            'success' if property.state == 'offer_accepted' else 'danger')">
                                                    <t t-out="property.state.replace('_', ' ').title()"/>
                                                </span>
                                            </div>
                                        </t>
                                    </h5>
                                    <t t-if="property.tag_ids">
                                        <p class="mb-2">
                                            <t t-foreach="property.tag_ids" t-as="tag">
                                                <span
                                                        class="badge text-bg-secondary text-info-emphasis me-1 mb-1">
                                                    <t t-out="tag.name"/>
                                                </span>
                                            </t>
                                        </p>
                                    </t>
                                    <p t-if="property.property_type_id" class="text-muted mb-1">
                                        <i class="fa fa-home me-1"></i>
                                        <t t-out="property.property_type_id.name"/>
                                    </p>
                                    <div class="d-flex gap-3 mb-3 text-muted small">
                                        <span t-if="property.bedrooms"><i class="fa fa-bed me-1"></i> <t
                                                t-out="property.bedrooms"/> bed</span>
                                        <span t-if="property.living_area"><i
                                                class="fa fa-arrows-alt me-1"></i> <t
                                                t-out="property.living_area"/> sq.m.</span>
                                    </div>
                                    <div class="mt-auto">
                                        <div
                                                class="d-flex justify-content-between align-items-center">
                                            <h4 class="text-primary fw-bold mb-0">â‚¹ <t
                                                    t-out="'{:,}'.format(int(property.expected_price))"/></h4>
                                            <small class="text-muted" title="Listed on">
                                                <i class="fa fa-calendar-o me-1"></i>
                                                <t
                                                        t-out="property.create_date.strftime('%b %d, %Y')"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div t-else="" class="text-center py-5">
                    <div class="mb-3">
                        <i class="fa fa-home fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">No properties found</h4>
                    <p>Try adjusting your filter or check back later for new listings.</p>
                </div>
            </div>
            <div class="container d-flex justify-content-center align-items-center my-4">
                <t t-call="website.pager"/>
            </div>
        </t>
    </template>

    <template id="property_details_template" name="Property Details">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="d-block d-lg-none mb-4">
                    <h1 class="text-primary fw-bold h2">
                        <t t-out="property.name"/>
                    </h1>
                    <t t-if="property.tag_ids">
                        <p class="mb-1">
                            <t t-foreach="property.tag_ids" t-as="tag">
                                <span class="badge text-bg-secondary text-info-emphasis me-1 mb-1">
                                    <t t-out="tag.name"/>
                                </span>
                            </t>
                        </p>
                    </t>
                </div>
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div
                                class="card shadow-sm border-0 overflow-hidden rounded-3 position-relative">
                            <img t-if="property.image"
                                 t-att-src="'data:image/webp;base64,%s' % property.image.decode('utf-8')"
                                 class="img-fluid rounded w-100"
                                 style="object-fit: cover; height: 400px;"
                                 t-att-alt="property.name"/>
                            <img t-else=""
                                 t-attf-src="https://placehold.co/600x400.png/?text=No+Image&amp;font=Monsterrat"
                                 class="img-fluid rounded w-100"
                                 style="object-fit: cover; height: 400px;"
                                 t-att-alt="property.name"/>
                            <t t-if="property.state">
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span
                                            t-att-class="'badge bg-' + ('primary' if property.state == 'new' else
                                    'warning text-dark' if property.state == 'offer_received' else
                                    'success' if property.state == 'offer_accepted' else
                                    'dark' if property.state == 'sold' else 'danger')">
                                        <t t-out="property.state.replace('_', ' ').title()"/>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-none d-lg-block">
                            <h1 class="text-primary fw-bold h2">
                                <t t-out="property.name"/>
                            </h1>
                            <t t-if="property.tag_ids">
                                <p class="mb-3">
                                    <t t-foreach="property.tag_ids" t-as="tag">
                                        <span class="badge text-bg-secondary text-info-emphasis me-1">
                                            <t t-out="tag.name"/>
                                        </span>
                                    </t>
                                </p>
                            </t>
                        </div>
                        <div class="bg-light rounded-3 p-3 mb-4 shadow-sm" id="price_card">
                            <div class="d-flex justify-content-between align-items-center">
                                <h2 class="text-primary fw-bold mb-0">â‚¹ <t
                                        t-out="'{:,}'.format(int(property.expected_price))"/></h2>
                                <t t-if="property.create_date">
                                    <span class="badge bg-secondary">Listed <t
                                            t-out="property.create_date.strftime('%b %d, %Y')"/></span>
                                </t>
                            </div>
                        </div>
                        <div class="row g-2 mb-4">
                            <t
                                    t-foreach="[('fa-building', 'Property Type', property.property_type_id.name),
                                           ('fa-bed', 'Bedrooms', property.bedrooms),
                                           ('fa-arrows-alt', 'Total Area', '%s sq.m.' % property.total_area),
                                           ('fa-home', 'Living Area', '%s sq.m.' % property.living_area)]"
                                    t-as="info">
                                <t t-if="info[2]">
                                    <div class="col-6">
                                        <div class="card border-0 bg-light h-100">
                                            <div class="card-body p-3 d-flex align-items-center">
                                                <i
                                                        t-att-class="'fa ' + info[0] + ' text-primary fa-2x me-3'"></i>
                                                <div>
                                                    <p class="text-muted mb-0 small">
                                                        <t t-out="info[1]"/>
                                                    </p>
                                                    <h6 class="mb-0">
                                                        <t t-out="info[2]"/>
                                                    </h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                        <t t-set="details"
                           t-value="[('Facades', property.facades), ('Garage', 'Yes' if property.garage else 'No'),
                            ('Garden', 'Yes' if property.garden else 'No'), ('Garden Area', '%s sq.m.' % property.garden_area if property.garden_area else None),
                            ('Salesperson', property.salesperson_id.name), ('Company', property.company_id.name)]"/>
                        <div class="card border-0 shadow-sm mb-4"
                             t-if="any(val for _, val in details)">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Additional Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <t t-foreach="details" t-as="detail">
                                        <t t-if="detail[1]">
                                            <div class="col-md-6">
                                                <p class="text-muted mb-0 small">
                                                    <t t-out="detail[0]"/>
                                                </p>
                                                <p class="mb-0">
                                                    <t t-out="detail[1]"/>
                                                </p>
                                            </div>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Description</h5>
                            </div>
                            <div class="card-body">
                                <p class="text-secondary mb-0" t-if="property.description">
                                    <t t-out="property.description"/>
                                </p>
                                <p class="text-muted fst-italic mb-0" t-else="">No description
                                    available</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="/properties" class="btn btn-outline-primary">
                        <i class="fa fa-arrow-left me-2"></i> Back to Listings </a>
                </div>
            </div>
        </t>
    </template>
</odoo>
