<?xml version="1.0"?>
<odoo>
    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <img t-if="property.image" t-att-src="'/web/image/estate.property/' + str(property.id) + '/image'" class="img-fluid rounded-3 shadow" alt="Property Image"/>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card shadow-lg border-0 rounded-3">
                            <div class="card-body">
                                <h1 class="card-title text-center text-primary mb-4"><t t-esc="property.name"/></h1>
                                <p class="card-text">
                                    <strong>Price:</strong> <span class="text-success"><t t-esc="property.expected_price"/> $</span>
                                </p>
                                <p class="card-text">
                                    <strong>Bedrooms:</strong> <t t-esc="property.bedrooms"/>
                                </p>
                                <p class="card-text">
                                    <strong>Living Area:</strong> <t t-esc="property.living_area"/> mÂ²
                                </p>
                                <p class="card-text">
                                    <strong>Garden:</strong> <t t-esc="'Yes' if property.garden else 'No'"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <h3 class="card-title">Property Description</h3>
                                <p class="card-text">
                                    <t t-esc="property.description or 'No description available.'"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
