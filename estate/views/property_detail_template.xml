<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container mt-5">
                
                <div class="mb-3">
                    <a href="/properties" class="text-decoration-none text-dark fw-bold">
                        &lt; Back to Property List
                    </a>
                </div>

                <div class="row g-4">
                    <div class="col-lg-8">
                        <div class="card shadow-lg p-4">
                            <h2 class="text-uppercase fw-bold text-center mb-3" t-out="property.name" />
                            
                            <img t-if="property.image"
                                t-att-src="'data:image/webp;base64,%s' % property.image.decode('utf-8')"
                                class="img-fluid mx-auto d-block rounded"
                                alt="Property Image"
                                style="width: 100%; max-height: 400px; object-fit: contain;" />
                            
                            <p class="text-secondary mt-3">
                                <strong>Description:</strong> <t t-out="property.description" />
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        
                        <div class="card p-3 shadow-sm">
                            <h4 class="text-center">Property Details</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Price:</strong> $<t t-out="property.expected_price" /></li>
                                <li class="list-group-item"><strong>Type:</strong> <t t-out="property.property_type_id.name" /></li>
                                <li class="list-group-item"><strong>Bedrooms:</strong> <t t-out="property.bedrooms" /></li>
                                <li class="list-group-item"><strong>Garage:</strong> <t t-out="property.garage and 'Yes' or 'No'" /></li>
                                <li class="list-group-item"><strong>Garden:</strong> <t t-out="property.garden and 'Yes' or 'No'" /></li>
                                <li class="list-group-item"><strong>Total Area:</strong> <t t-out="property.total_area" /> mÂ²</li>
                            </ul>
                        </div>

                        <div class="card p-3 shadow-sm mt-3">
                            <h4 class="text-center">Property Offers</h4>
                            <ul class="list-group list-group-flush">
                                <t t-if="property.property_offer_ids">
                                    <t t-foreach="property.property_offer_ids" t-as="offer">
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span class="fw-bold text-success">$<t t-out="offer.price" /></span>
                                            <span class="small text-secondary" t-out="offer.partner_id.name" />
                                        </li>
                                    </t>
                                </t>
                                <t t-else="">
                                    <li class="list-group-item text-center text-muted">No offers yet.</li>
                                </t>
                            </ul>

                            <div class="mt-3">
                                <form t-attf-action="/offer/create" method="post" class="needs-validation">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/> 
                                    <input type="hidden" name="property_id" t-att-value="property.id" />

                                    <label for="offer_price" class="form-label fw-bold">Your Offer ($)</label>
                                    <input type="number" name="price" class="form-control" 
                                        t-att-placeholder="'New offer must be higher than: %s' % (max(property.property_offer_ids.mapped('price')) if property.property_offer_ids else 0)" 
                                        min="1"  />

                                    <button type="submit" class="btn btn-primary w-100 mt-3">Make Offer</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
