<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel" editable="bottom" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept" type="object" string="Accept" icon="fa-check" invisible="status"/>
                <button name="refuse" type="object" string="Refuse" icon="fa-ban" invisible="status"/>
                <field name="status" optional="hide"/>
                <!-- only for testing -->
                <field name="property_type_id"/>
            </list>
        </field>
    </record>
</odoo>