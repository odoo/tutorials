<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_offer_wizard_form" model="ir.ui.view">
        <field name="name">estate.offer.wizard.form</field>
        <field name="model">estate.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Offers">
                <p class="oe_grey">
                    You are about to create an offer for all selected properties.
                </p>
                <group>
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="validity"/>
                </group>
                <footer>
                    <button name="action_make_offer" string="Make an Offer" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_estate_offer_wizard" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
