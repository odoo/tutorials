<?xml version="1.0"?>
<odoo>
    <!-- Action -->
    <record id="estate_action_model" model="ir.actions.act_window">
        <field name="name">Real Estate Listings</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': 1}</field>
    </record>
    <!-- Kanban -->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey-lighter o_kanban_estate" default_group_by="property_type_id" records_draggable="False">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_price"/>
                <field name="state"/>
                <field name="property_tag_ids" widget="many2many_tags"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_title">
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <span class="o_kanban_record_field">
                                            <i class="fa fa-tag" title="Expected Price"/>
                                            <t t-esc="record.expected_price.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row" t-if="record.state.raw_value == 'offer_received' and record.best_price">
                                    <div class="col-12">
                                        <span class="o_kanban_record_field text-info">
                                            <i class="fa fa-star" title="Best Offer"/>
                                            <t t-esc="record.best_price.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row" t-if="(record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold') and record.selling_price">
                                    <div class="col-12">
                                        <span class="o_kanban_record_field text-success">
                                            <i class="fa fa-handshake-o" title="Selling Price"/>
                                            <t t-esc="record.selling_price.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_field">
                                    <field name="property_tag_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <field name="state" widget="label_selection" options="{'classes': {'new': 'default', 'offer_received': 'info', 'offer_accepted': 'success', 'sold': 'success', 'canceled': 'danger'}}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List -->
    <record id="estate_view_list" model="ir.ui.view">
        <field name="name">Estate List</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string = "Listings" decoration-bf="state == 'offer_accepted'" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="property_type_id"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="date_availability" optional="hide"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <!-- Form -->
    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">Estate Form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate_Forms">
                <header>
                    <button name="action_sell_property" type="object" class="btn-primary" string="Sold" invisible = "state == 'sold'"/>
                    <button name="action_cancel_property" type="object" string="Cancel" invisible = "state == 'cancelled'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="My new house"/>
                    </h1>
                    <group>
                        <group>
                            <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type_id" widget="many2one" options="{'no_create_edit': true, 'no_quick_create': true}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="property_offer_ids" readonly="state in ['offer_accepted', 'sold', 'cancelled']"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search -->
    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="garage"/>
                <field name="best_price"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Group" name="Groupby" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
