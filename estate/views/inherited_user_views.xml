<odoo>
    <record id="res_users_inherited_form" model="ir.ui.view">
        <field name="name">res.users.form.inherited</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <!-- Added a new page in the notebook with properties -->
            <xpath expr="//sheet/notebook/page[@name='preferences']" position="after">
                <page string="Properties">
                    <field name="property_ids" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>