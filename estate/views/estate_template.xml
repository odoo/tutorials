<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="properties_template" name="Estate Properties">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h2 class="text-center mb-4">Estate Properties</h2>
                <div class="card p-3 mb-4 shadow-sm">
                    <form action="/properties" method="GET">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="min_price" class="form-label fw-bold">Min Price (€)</label>
                                <input type="number" class="form-control" name="min_price" id="min_price" placeholder="Enter min price" min="0"/>
                            </div>

                            <div class="col-md-4">
                                <label for="max_price" class="form-label fw-bold">Max Price (€)</label>
                                <input type="number" class="form-control" name="max_price" id="max_price" placeholder="Enter max price" min="0"/>
                            </div>

                            <div class="col-md-4 d-flex align-items-end">
                                <button name="filter_min_max" class="btn btn-primary w-100" type="object" string="Filter">
                                    <i class="fa fa-search"></i> Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <a t-att-href="'/properties/%d' % property.id" style="height:250px; overflow:hidden;">
                                    <img t-if="property.property_image" t-att-src="'/web/image/estate.property/%d/property_image' % property.id" class="card-img-top img-fluid rounded-top" alt="Property Image"/>
                                    <img t-if="not property.property_image" src="/estate/static/src/img/estate.jpeg" class="card-img-top img-fluid rounded-top" alt="Default Image"/>
                                </a>

                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a t-att-href="'/properties/%d' % property.id" class="text-decoration-none">
                                            <t t-esc="property.name"/>
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        <strong>Price:</strong>
                                        <span class="text-success">
                                            <t t-esc="property.expected_price"/>€</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_page" name="Property Detail View">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h1 class="mb-0">
                            <t t-esc="property.name"/>
                        </h1>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="col-md-6 align-center">
                                <img t-att-src="'/web/image/estate.property/%s/property_image' % property.id" class="img-fluid rounded shadow" alt="Property Image"/>
                            </div>
                            <div class="col mb-4 ml4">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>
                                            <i class="fa fa-map-marker-alt text-danger"></i> Postcode:</strong>
                                        <span>
                                            <t t-esc="property.postcode" />
                                        </span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>
                                            <i class="fa fa-calendar-alt text-primary"></i> Date Availability:</strong>
                                        <span>
                                            <t t-esc="property.date_availability" />
                                        </span>
                                    </li>

                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>
                                            <i class="fa fa-dollar-sign text-warning"></i> Expected Price:</strong>
                                        <span class="text-success fw-bold">
                                            <t t-esc="property.expected_price" />
                                        </span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>
                                            <i class="fa fa-map-marker-alt text-danger"></i> Bedrooms:</strong>
                                        <span>
                                            <t t-esc="property.bedrooms" />
                                        </span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <strong>
                                            <i class="fa fa-map-marker-alt text-danger"></i> Total Area(living Area + Garden Area):</strong>
                                        <span>
                                            <t t-esc="property.total_area" />
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                           <div class="mt-5 p-4 bg-light rounded-3 shadow-sm">
                    <h4 class="text-dark fw-bold">Property Description</h4>
                    <p class="text-muted">
                        <t t-esc="property.description or 'No description available.'"/>
                    </p>
                </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
