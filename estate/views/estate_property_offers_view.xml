<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offer Details</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define New Offers
            </p><p>
                add new offers to the properties to see them here.
            </p>
        </field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Properties" editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'rejected'">
                <field name="partener_id"/>
                <field name="property_id" />
                <field name="validity" />
                <field name="price"/>
                <button name="set_offer_accepted" string=" " type="object" icon="fa-check" invisible="status in ['rejected', 'accepted']" />
                <button name="set_offer_rejected" string=" " type="object" icon="fa-times" invisible="status in ['rejected', 'accepted']" />
                <!-- <field name="property_type_id" /> -->
            </list>
        </field>
    </record>

</odoo>
