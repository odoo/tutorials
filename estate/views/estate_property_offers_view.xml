<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_offers_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers list">
                <field name="price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" title="accept" type="object" icon="fa-check"/>
                <button name="action_refuse" title="refuse" type="object" icon="fa-times"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offers_list" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offers form">
                <group>
                    <field name="price"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="validity" string="Validity (days)"/>
                    <field name="date_deadline" string="Deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>