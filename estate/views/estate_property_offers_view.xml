<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_offers_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_offers_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers list" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" editable="top">
                <field name="price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" title="accept" type="object" icon="fa-check" invisible="status == 'accepted' or status == 'refused'"/>
                <button name="action_refuse" title="refuse" type="object" icon="fa-times" invisible="status == 'accepted' or status == 'refused'"/>
                <field name="status" optional="true"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offers_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offers form">
                <group>
                    <field name="price"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="validity" string="Validity (days)"/>
                    <field name="date_deadline" string="Deadline"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>