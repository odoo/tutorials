<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="property_listing_template" name="Property Listing Template">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Available Properties</h1>
            <div class="row">
                <!-- Loop through properties -->
                <t t-foreach="properties" t-as="property">
                    <div class="col-md-4">
                        <!-- Property Card -->
                        <div class="card mb-4">
                            <!-- Property Image -->
                            <t t-if="property.image">
                                <img class="card-img-top" t-att-src="'/web/image/estate.property/' + str(property.id) + '/image_1920'" alt="Property Image"/>
                            </t>
                            <t t-else="">
                                <img class="card-img-top" src="/web/static/src/img/placeholder.png" alt="No Image Available"/>
                            </t>

                            <div class="card-body">
                                <h5 class="card-title"><t t-esc="property.name"/></h5>
                                <p class="card-text"><t t-esc="property.description"/></p>
                                <p><strong>Price:</strong> <t t-esc="property.expected_price"/> â‚¬</p>
                                <p><strong>State:</strong> <t t-esc="property.state"/></p>
                                <!-- View Details Button -->
                                <a t-att-href="'/properties/detail/' + str(property.id)" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </template>
</odoo>



