<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="menu_properties" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="sequence" type="int">60</field>
    </record>

    <template id="property_list_template">
        <t t-call="website.layout">
            <div class="container my-5">
                <t t-if="properties">
                    <h2 class="text-center mb-4">Available Properties</h2>

                    <form method="get" action="/properties" class="mb-4">
                        <div class="row justify-content-end">
                            <div class="col-md-4">
                                <input type="date" name="date_filter" class="form-control" t-att-value="date_filter or ''"/>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">List Properties</button>
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-lg">
                                    <img t-if="property.property_image"
                                        t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                        class="card-img-top"
                                        style="height: 200px; object-fit: cover;"
                                        alt="Property Image"
                                    />
                                    <div class="card-body">
                                        <h5 class="card-title" t-esc="property.name"/>
                                        <p class="card-text"> <t t-esc="property.description"/> </p>
                                        <p class="card-text">Postcode: <t t-esc="property.postcode"/></p>
                                        <a t-att-href="'/property/%s' % property.id" class="btn btn-primary btn-sm">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- Pagination -->
                    <div class="text-center mt-4">
                        <t t-if="pager">
                            <div class="pagination">
                                <t t-call="website.pager">
                                    <t t-set="page_name" t-value="'properties'"/>
                                    <t t-set="pager" t-value="pager"/>
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
                <t t-else="">
                    <h2 class="text-center mb-4">No Properties are Availabe Right Now!!!</h2>

                    <form method="get" action="/properties" class="mb-4">
                        <div class="row justify-content-end">
                            <div class="col-md-4">
                                <input type="date" name="date_filter" class="form-control" t-att-value="date_filter or ''"/>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">List Properties</button>
                            </div>
                        </div>
                    </form>
                </t>
            </div>
        </t>
    </template>


    <template id="property_detail_template">
        <t t-call="website.layout">
                <div class="container my-5">
                    <div class="row">
                        <div class="col-md-6">
                            <img t-if="property.property_image"
                                t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                class="img-fluid rounded shadow-lg"
                                style="object-fit: cover; height: 100%;"
                                alt="Property Image"/>
                        </div>
                        <div class="col-md-6">
                            <h2 YourCompanyt-esc="property.name"/>
                            <p><b>Availability:</b> <span t-esc="property.date_availability"/> </p>
                            <p><b>Expected Price:</b> <span t-esc="property.expected_price"/></p>
                            <p><b>Bedrooms:</b> <span t-esc="property.bedrooms"/></p>
                            <p><b>Facades:</b> <span t-esc="property.facades"/></p>
                            <p><b>Living Area:</b> <span t-esc="property.living_area"/> sqm</p>
                            <p><b>Garage:</b> <span t-esc="'Yes' if property.garage else 'No'"/></p>
                            <p><b>Garden:</b> <span t-esc="'Yes' if property.garden else 'No'"/></p>
                            <p><b>Garden Area:</b> <span t-esc="'property.garden_area' if property.garden else ''"/></p>
                            <p><b>Garden Orientation:</b> <span t-esc="'property.garden_orientation' if property.garden else ''"/></p>
                        </div>
                    </div>

                    <div class="mt-5">
                        <h4>Additional Information</h4>
                        <p t-esc="property.description"/>
                    </div>

                    <div class="mt-4 item">
                        <a href="/properties" class="btn btn-secondary">Back to Listings</a>
                    </div>
                </div>
            </t>
    </template>

</odoo>
