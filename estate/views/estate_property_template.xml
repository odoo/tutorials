<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate_properties" name="All estate properties">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1 class="text-center mb-4">Estate Properties</h1>
                <div class="w-100 d-flex mb-4 px-4">
                    <div class='w-100 d-flex gap-1 justify-content-end'>
                        <t t-if="current_page > 1">
                            <a t-att-href="'/estate/property?page=' + str(current_page - 1)"  class="d-flex justify-content-center align-items-center cursor-pointer text-decoration-none" style="background: rgba(0,0,0,0.09); width: 20px; height: 20px;">&lt;</a>
                        </t>
                        <span class="d-flex justify-content-center align-items-center" style="background: rgba(0,0,0,0.09); width: 20px; height: 20px;">
                        <t t-out="current_page"/></span>
                        <t t-if="total_pages > current_page">
                            <a t-att-href="'/estate/property?page=' + str(current_page + 1)" class="d-flex justify-content-center align-items-center cursor-pointer text-decoration-none" style="background: rgba(0,0,0,0.09); width: 20px; height: 20px;">&gt;</a>
                        </t>
                    </div>
                </div>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 col-sm-6 mb-4 ">
                            <div class="card shadow-sm"  style="height:410px;">
                                <t t-if="property.image">
                                    <img t-att-src="image_data_uri(property.image)" class="card-img-top" alt="property image" style="height: 250px; object-fit: cover;" />
                                </t>
                                <t t-if="not property.image">
                                    <img t-att-src="'/estate/static/src/img/default.jpg'" class="card-img-top" alt="property image" style="height: 250px; object-fit: cover;" />
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title"><t t-out="property.name"/></h5>
                                    <ul class="list-unstyled">
                                        <li><strong>Price:</strong> $<t t-out="property.expected_price"/></li>
                                        <li><strong>Status:</strong> <t t-out="property.status"/></li>
                                        <li><strong>Location:</strong> <t t-out="property.postcode"/></li>
                                    </ul>
                                    <div class="w-100 text-center">
                                        <a t-att-href="'/estate/property/' + str(property.id)" class="btn btn-primary btn-block">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                
            </div>

        </t>
    </template>
    <template id="estate_property_details" name="Estate Property Details">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <t t-if="property.image">
                            <img t-att-src="image_data_uri(property.image)" class="img-fluid rounded shadow-sm w-100" alt="Property Image"/>
                        </t>
                        <t t-if="not property.image">
                            <img t-att-src="'/estate/static/src/img/default.jpg'" class="img-fluid rounded shadow-sm w-100" alt="Property Image" />
                        </t>
                    </div>
                    <div class="col-md-6">
                        <h1 class="text-primary mb-4"><t t-out="property.name"/></h1>
                        <p class="lead"><t t-out="property.description"/></p>
                        <ul class="list-unstyled">
                            <li><strong>Price:</strong> $<t t-out="property.expected_price"/></li>
                            <li><strong>Status:</strong> <t t-out="property.status"/></li>
                            <li><strong>Postcode:</strong> <t t-out="property.postcode"/></li>
                        </ul>
                        <div class="col-md-4">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <strong>Property Overview</strong>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    <li><strong>Bedrooms:</strong> <t t-out="property.bedrooms"/></li>
                                    <li><strong>Living Area:</strong> <t t-out="property.living_area"/> sqm</li>
                                    <li><strong>Garden:</strong> <t t-if="property.is_garden">Yes</t>
                                        <t t-if="not property.is_garden">No</t></li>
                                    <li><strong>Garage:</strong> <t t-if="property.is_garage">Yes</t>
                                        <t t-if="not property.is_garage">No</t></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                        <a t-att-href="'/estate/property'" class="btn btn-secondary btn-lg mt-4">Back to Listings</a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
