<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="menu_properties" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="sequence" type="int">60</field>
    </record>


    <template id="property_list_template">
        <t t-call="website.layout">
            <div class="container my-5">
                <h2 class="text-center mb-4">Available Properties</h2>

                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg">
                                <img t-if="property.property_image" 
                                    t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                    class="card-img-top" 
                                    style="height: 200px; object-fit: cover;" 
                                    alt="Property Image"/>

                                <div class="card-body">
                                    <h5 class="card-title" t-esc="property.name"/>
                                    <p class="card-text"> <t t-esc="property.description"/> </p>
                                    <p class="card-text">Postcode: <t t-esc="property.postcode"/></p>
                                    <a t-att-href="'/property/%s' % property.id" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Pagination -->
                <div class="text-center mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <t t-if="page &gt; 1">
                                <li class="page-item">
                                    <a class="page-link" t-att-href="'/properties/page/%s' % (page - 1)">Previous</a>
                                </li>
                            </t>

                            <t t-foreach="range(1, total_pages + 1)" t-as="num">
                                <li t-att-class="'page-item active' if num == page else 'page-item'">
                                    <a class="page-link" t-att-href="'/properties/page/%s' % num" t-esc="num"/>
                                </li>
                            </t>

                            <t t-if="page &lt; total_pages">
                                <li class="page-item">
                                    <a class="page-link" t-att-href="'/properties/page/%s' % (page + 1)">Next</a>
                                </li>
                            </t>
                        </ul>
                    </nav>
                </div>
            </div>
        </t>
    </template>  



    <template id="property_detail_template">
        <t t-call="website.layout">
                <div class="container my-5">
                    <div class="row">
                        <div class="col-md-6">
                            <img t-if="property.property_image"
                                t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                class="img-fluid rounded shadow-lg"
                                alt="Property Image"/>
                        </div>
                        <div class="col-md-6">
                            <h2 t-esc="property.name"/>
                            <p class="text-muted">Availability: <b t-esc="property.date_availability"/></p>
                            <p><b>Expected Price:</b> <span t-esc="property.expected_price"/> $</p>
                            <p><b>Bedrooms:</b> <span t-esc="property.bedrooms"/></p>
                            <p><b>Living Area:</b> <span t-esc="property.living_area"/> sqm</p>
                            <p><b>Garden:</b> <span t-esc="'Yes' if property.garden else 'No'"/></p>
                            <p><b>State:</b> <span class="badge" t-esc="property.state"/></p>
                        </div>
                    </div>

                    <div class="mt-5">
                        <h4>Additional Information</h4>
                        <p t-esc="property.description"/>
                    </div>

                    <div class="mt-4">
                        <a href="/properties" class="btn btn-secondary">Back to Listings</a>
                    </div>
                </div>
            </t>
    </template>


</odoo>