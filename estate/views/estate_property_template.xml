<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_list_template" name="Property Listings">
        <t t-call="web.frontend_layout">
            <div class="container">
                <div class="mt-3">
                    <div class="mb-3">
                        <h1 class="text-center">Available Properties</h1>
                    </div>
                    <form action="/properties" method="get" class="mb-3">
                        <div class="input-group">
                            <input type="date" name="listed_after" class="form-control"/>
                            <div class="ms-3">
                                <div class="me-5">
                                    <button type="submit" class="btn btn-primary">Listed After</button>
                                </div>
                            </div>
                            <input type="text" name="search" class="form-control" placeholder="Search properties..." t-att-value="search_query"/>
                            <div class="ms-3">
                                    <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <t t-if="properties">
                            <t t-foreach="properties" t-as="property">
                                <div class="col-md-4">
                                    <div class="mb-4">
                                        <div class="card">
                                            <div class="d-flex justify-content-center align-items-center" style="width: 450px; height: 300px; overflow: hidden;">
                                                <img t-if="property.image"
                                                    t-att-src="'data:image/png;base64,' + property.image.decode()"
                                                    class="img-fluid" alt="Property Image"/>
                                                <div t-else="" class="text-center">
                                                    Image not available!
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title"><t t-esc="property.name"/></h5>
                                                <p class="card-text"><strong>Price:</strong> <t t-esc="property.expected_price"/></p>
                                                <a t-att-href="'/property/%s' % property.id" class="btn btn-primary">View Details</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                        <h3 t-else="" class="text-center">No properties available!</h3>
                        <div class="d-flex justify-content-center my-3">
                            <t t-call="website.pager"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_template" name="Property Details">
        <t t-call="web.frontend_layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mt-5">
                            <div class="d-flex justify-content-center align-items-center" style="width: 600px; height: 400px; overflow: hidden;">
                                <img t-if="property.image" 
                                    t-att-src="'data:image/png;base64,' + property.image.decode()" 
                                    class="img-fluid rounded" alt="Property Image"/>
                                <div t-else="" class="text-center">
                                    Image not available!
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mt-5">
                            <h1><t t-esc="property.name"/></h1>
                            <p><strong>Price:</strong> <t t-esc="property.expected_price"/></p>
                            <p><strong>Listed Date:</strong> <t t-esc="property.create_date.date()"/></p>
                            <p><strong>Date Availability:</strong> <t t-esc="property.date_availability"/></p>
                            <p><strong>Total Area:</strong> <t t-esc="property.total_area"/></p>
                            <a href="/properties" class="btn btn-primary">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
