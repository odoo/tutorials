<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="property_list_template">
        <t t-call="website.layout">
            <div class="container my-5">
                <h2 class="text-center mb-4">Available Properties</h2>
                <form method="get" action="/properties" class="mb-4 row">
                    <div class="w-full d-flex justify-content-between gap-3">
                        <div class="w-100">
                            <label for="date_filter" class="form-label">Date</label>
                            <input type="date" id="date_filter" name="date_filter" class="form-control" t-att-value="date_filter or ''"/>
                        </div>
                        <div class="w-100">
                            <label for="min_price" class="form-label">Min Price</label>
                            <input type="number" id="min_price" name="min_price" class="form-control" t-att-value="min_price or ''"/>
                        </div>
                        <div class="w-100">
                            <label for="max_price" class="form-label">Max Price</label>
                            <input type="number" id="max_price" name="max_price" class="form-control" t-att-value="max_price or ''"/>
                        </div>
                        <div class="w-100">
                            <label for="prop_type" class="form-label">Property Type</label>
                            <select name="prop_type" id="prop_type" class="form-control">
                                <option value="">All</option>
                                <t t-foreach="request.env['estate.property.type'].sudo().search([])" t-as="type">
                                    <option t-att-value="type.name" t-att-selected="prop_type == str(type.id)">
                                        <t t-esc="type.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="w-100 d-flex align-items-end" id="filter-apply-btn">
                            <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                        </div>
                    </div>
                </form>
                <t t-if="properties">
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-lg">
                                    <t t-if="property.property_image">
                                        <img
                                            t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                            class="card-img-top"
                                            style="height: 200px; object-fit: cover;"
                                            alt="Property Image"
                                        />
                                    </t>
                                    <t t-else="">
                                        <img
                                            t-att-src="'/estate/static/src/img/nf-home.png'"
                                            class="card-img-top"
                                            style="height: 200px; object-fit: cover;"
                                            alt="Property Image"
                                        />
                                    </t>
                                    <div class="card-body">
                                        <h5 class="card-title" t-esc="property.name"/>
                                        <p class="card-text"> <t t-esc="property.description"/> </p>
                                        <p class="card-text">Postcode: <t t-esc="property.postcode"/></p>
                                        <a t-att-href="'/property/%s' % property.id" class="btn btn-secondary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    <div class="text-center mt-4">
                        <t t-if="pager">
                            <div class="pagination">
                                <t t-call="website.pager">
                                    <t t-set="page_name" t-value="'properties'"/>
                                    <t t-set="pager" t-value="pager"/>
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="property_detail_template">
        <t t-call="website.layout">
                <div class="container my-5">
                    <div class="mb-20" style="margin-bottom:20px;">
                        <a href="/properties" class="btn btn-secondary ">Back to Listings</a>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <t t-if="property.property_image">
                                <img
                                    t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'"
                                    class="img-fluid rounded shadow-lg"
                                    style="object-fit: cover; height: 100%;"
                                    alt="Property Image"
                                />
                            </t>
                            <t t-else="">
                                <img
                                    t-att-src="'/estate/static/src/img/nf-home.png'"
                                    class="img-fluid rounded shadow-lg"
                                    style="object-fit: cover; height: 100%;"
                                    alt="Property Image"
                                />
                            </t>
                        </div>
                        <div class="col-md-6">
                            <h2 t-esc="property.name"/>
                            <p><b>Availability:</b> <span t-esc="property.date_availability"/> </p>
                            <p><b>Expected Price:</b> <span t-esc="property.expected_price"/></p>
                            <p><b>Bedrooms:</b> <span t-esc="property.bedrooms"/></p>
                            <p><b>Facades:</b> <span t-esc="property.facades"/></p>
                            <p><b>Living Area:</b> <span t-esc="property.living_area"/> sqm</p>
                            <p><b>Garage:</b> <span t-esc="'Yes' if property.garage else 'No'"/></p>
                            <p><b>Garden:</b> <span t-esc="'Yes' if property.garden else 'No'"/></p>
                            <p><b>Garden Area:</b> <span t-esc="'property.garden_area' if property.garden else ''"/></p>
                            <p><b>Garden Orientation:</b> <span t-esc="'property.garden_orientation' if property.garden else ''"/></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mt-5">
                                <h4>Additional Information</h4>
                                <p t-esc="property.description"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
    </template>

    <record id="menu_properties" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="sequence" type="int">60</field>
    </record>

</odoo>
