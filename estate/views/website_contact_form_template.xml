<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="contact_form_template" name="Contact Form">
        <t t-call="website.layout">
            <div class="container my-5">
                <h2 class="text-center mb-4">Contact Us</h2>

                <!-- Success Message (will be rendered if available) -->
                <t t-if="success_message">
                    <div class="alert alert-success">
                        <t t-esc="success_message" />
                    </div>
                </t>

                <form action="/website/contact_form_submit" method="POST" class="oe_website_form">
                    <!-- CSRF Token -->
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

                    <div>
                        <label for="name" class="form-label">Your Name:</label>
                        <input type="text" name="name" id="name" class="form-control"
                            required="True" placeholder="Enter your full name" />
                    </div>

                    <div class="mt-3">
                        <label for="email" class="form-label">Your Email:</label>
                        <input type="email" name="email" id="email" class="form-control"
                            required="True" placeholder="Enter your email address" />
                    </div>

                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </form>
            </div>
        </t>
    </template>
    <template id="thank_you" name="thanks page">
        <t t-call="website.layout">
            <div class="container my-5">
                Thank you
            </div>
        </t>
    </template>
</odoo>
