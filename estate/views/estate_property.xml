<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,pivot,graph,kanban</field>
        <field name="context">{'search_default_filter_available': 1}</field>
    </record>

   <record id="action_estate_offer_wizard" model="ir.actions.act_window">
    <field name="name">Add Offer</field>
    <field name="res_model">estate.offer.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_property_ids': active_ids}</field>
   </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <list   
                string="Properties"
                decoration-muted="state == 'sold'"
                decoration-success="state in ['offer received', 'offer accepted']"
                decoration-bf="state == 'offer accepted'"
           >  
            <header>  <button name="%(action_estate_offer_wizard)d" string="Add Offer" type="action"/>
            </header>
                <field name="name" />
                <field name="image_1920" widget="image" options="{'size': [50, 50]}"/>
                <field name="postcode" />
                <field name="tag_ids" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" optional="hide" />
                <field name="property_type_id" />
          </list>
        </field>
    </record> 
    <record id="estate_property_view_pivot" model="ir.ui.view">
        <field name="name">estate.property.pivot</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <pivot string="Estate Property Pivot View">
                <field name="selling_price" type="measure" />
                <field name="state" type="row" />
                <field name="property_type_id" type="col" />
            </pivot>
         </field>
    </record>
    <record model="ir.ui.view" id="estate_property_view_graph">
            <field name="name">estate.property.graph</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <graph string="Estate Propertoes" type="bar">
                    <field name="property_type_id" type="row"/>
                    <field name="selling_price" type="measure"/>
                </graph>
            </field>
    </record>
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <kanban string="Properties" default_group_by="state" group_create="false">
             <field name="state" invisible="1"/>
             <field name="property_type_id"/>
             <field name="expected_price"/>
             <field name="best_offer"/>
             <field name="selling_price"/>
             <field name="tag_ids"/>
             <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card">
                        <strong>
                            <field name="name"/>
                        </strong>
                        <div>
                            <span class="text-muted">Expected Price:</span>
                            <span class="oe_kanban_text"> 
                                <field name="expected_price"/>
                            </span>
                        </div>
                        <t t-if="record.state.raw_value in ['offer_received' , 'offer_accepted']">
                            <div>
                                <span class="text-muted">Best Offer:</span>
                                <span class="oe_kanban_text text-success">
                                    <field name="best_offer"/>
                                </span>
                            </div>
                        </t>
                        <t t-if="record.state.raw_value == 'offer_accepted'">
                            <div>
                                <span class="text-muted">Selling Price:</span>
                                <span class="oe_kanban_text text-primary">
                                    <field name="selling_price"/>
                                </span>
                            </div>
                        </t>
                        <div class="oe_kanban_tags">
                            <field name="tag_ids" widget="many2many_tags"/>
                        </div>
                    </div>
                </t>
              </templates>
            </kanban>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                <button 
                    name="action_sold" 
                    type="object" 
                    string="Sold" 
                    class="btn-primary" 
                    invisible="state in ['cancelled', 'sold']"
                />
                <button 
                     name="action_cancel" 
                     type="object" 
                     string="Cancel" 
                     class="btn-secondary" 
                     invisible="state in ['cancelled', 'sold']"
                />
                <field name="state" widget="statusbar" statusbar_visible="new, offer_received,  offer_accepted, sold" />
                </header>      
                <sheet> 
                 
                   <div class="oe_button_box" name="button_box">
                      <button class="oe_stat_button" type="object" name="action_view_invoice">
                        <field name="invoice_count" widget="statinfo" />
                      </button> 
                   </div> 
                   <div>
                   <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920'}"/>
                 </div>
                   <group>
                        <h1 class="mb32">
                            <field name="name" placeholder="Property Name" />
                        </h1>
                          <field name="tag_ids" placeholder="Property Tag" widget="many2many_tags" options="{'color_field': 'color'}" />
                        <separator/>
                        <group>
                            <field name="date_availability" />
                            <field name="postcode" />
                            <field name="property_type_id" />
                        </group>
                        <group>
                            <field name="expected_price" />        
                            <field name="selling_price" />
                            <field name="best_offer" />
                        </group>    
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" readonly="1" />
                                 <field name="company_id" string="Company Name"/>
                            </group>
                        </page>
                        <page string="Offers">
                           <group>
                              <field name="offer_ids" readonly="state in ('offer_accepted', 'sold', 'cancelled')" />
                            </group>                  
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>                        
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                <filter 
                       name="filter_available" 
                       string="Available" 
                       domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]" 
                       context="{'default_filter': True}" 
                />
                <group expand="0" string="Group By">
                   <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>
