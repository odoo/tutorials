<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.view.form.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='account_security']" position="after">
                <page string="Real Estate Properties">
                    <group>
                        <field name="property_ids" nolabel="1">
                            <list decoration-success="state in ['offer_received', 'offer_accepted']"
                                decoration-bf="state == 'offer_accepted'"
                                decoration-muted="state == 'sold'">
                                <field name="name" />
                                <field name="postcode" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="tag_ids" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                                <field name="expected_price" />
                                <field name="selling_price" />
                                <field name="date_availability" optional="hide" />
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
