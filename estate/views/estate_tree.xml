<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sell_property"
                            type="object"
                            string="SOLD"
                            invisible="status in ['sold', 'canceled']"/>
                    <button name="action_cancel_property"
                            type="object"
                            string="CANCEL"
                            invisible="status in ['sold', 'canceled']"
                            readonly="status == 'accepted'"/>
                    <field name="status"
                           widget="statusbar"
                           statusbar_visible="new,received,accepted,sold"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids"
                           widget="many2many_tags"
                           options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability" optional="True"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                   readonly="status in ['sold', 'accepted', 'canceled']"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer"/>
                                <field name="seller"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_action" model="ir.actions.act_window">
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_property_availability': True}</field>
    </record>

    <record id="estate_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties"
                  decoration-success="status in ['received', 'accepted']"
                  decoration-bf="status == 'accepted'"
                  decoration-muted="status == 'sold'">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers"
                  decoration-success="status == 'accepted'"
                  decoration-warning="status == 'rejected'"
                  editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity" optional="True"/>
                <field name="date_deadline" optional="True"/>
                <field name="property_id" invisible="True"/>
                <button name="action_accept"
                        type="object"
                        icon="fa-check"
                        invisible="property_id.status in ['sold', 'accepted', 'canceled']"/>
                <button name="action_refuse"
                        type="object"
                        icon="fa-times"
                        invisible="property_id.status in ['sold', 'accepted', 'canceled']"/>
                <field name="status" invisible="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
