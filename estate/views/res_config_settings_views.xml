<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_estate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.estate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           <xpath expr="//form" position="inside">
                <app data-string="Real Estate" string="Real Estate" name="estate">
                    <block title="Real Estate Settings" name="real_estate">
                        <group name="automate_auction" string="Automate Auction">
                            <setting string="Automate Auction" id="automate_auction_setting">
                                <field name="auto_auction" string="Automated Auction" />
                            </setting>
                        </group>
                        <group name="invoicing" string="Invoicing">
                            <setting string="Invoicing" id="invoicing_setting">
                                <field name="auto_account_estate" string="Invoicing Setting" />
                            </setting>
                        </group>
                    </block>
                </app>
            </xpath>
            </field>
        </record>
        <record id="action_estate_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'estate', }</field>
        </record>
</odoo>
