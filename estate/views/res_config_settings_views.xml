<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Real Estate" name="estate">
                    <block title="Real Estate Settings" name="estate">
                        <setting id="Estate Property Auction" help="Use to install Estate Auction module">
                            <field name="automated_auction"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
    <record id="estate_config_settings_action" model="ir.actions.act_window">
        <field name="name">Real Estate Configuration</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'estate'}</field>
    </record>
</odoo>
