<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_detail" name="Property Detail">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h1>
                    <t t-esc="property.name"/>
                </h1>
                <div class="row">
                    <div class="col-md-6">
                        <t t-if="property.image">
                            <img t-att-src="image_data_uri(property.image)" class="img-fluid"
                                alt="Property Image"/>
                        </t>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Expected Price: </strong><t t-esc="property.expected_price"/>
                            USD</p>
                        <p>
                            <strong>Bedrooms: </strong>
                            <t t-esc="property.bedrooms"/>
                        </p>
                        <p>
                            <strong>Property State: </strong>
                            <t t-esc="property.state"/>
                        </p>
                        <p>
                            <strong>Bedrooms: </strong>
                            <t t-esc="property.description"/>
                        </p>
                    </div>
                </div>
                <div class="col-md-5 mt-2 card p-3 shadow">
                    <h3>Contact Salesperson</h3>
                    <p>
                        <strong>Name:</strong>
                        <t t-esc="salesperson.name"/>
                    </p>
                    <p>
                        <strong>Phone:</strong>
                        <t t-esc="salesperson.phone"/>
                    </p>
                    <p>
                        <strong>Email:</strong>
                        <t t-esc="salesperson.email"/>
                    </p>
                </div>
                <div class="mt-4">
                    <a href="/properties" class="btn btn-primary my-2">Back to Properties</a>
                </div>
            </div>
        </t>
    </template>
</odoo>
