<?xml version="1.0"?>
<odoo>
    <record id="estate_kanban_view" model="ir.ui.view">
        <field name="name">estate.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by='property_type_id'>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="fw-bold fs-4"><field name="name"/></div>
                            <div>
                                <span> Expected price : <field name="expected_price"/> </span>
                            </div>
                            
                            <div t-if="record.state.raw_value == 'offer_received'">
                                <span> Best offer : <field name="best_price"/> </span>
                            </div>

                            <div t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold'">
                                <span> Selling Price: <field name="selling_price"/> </span>
                            </div>

                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
