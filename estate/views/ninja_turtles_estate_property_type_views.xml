<?xml version="1.0"?>
<odoo>
    <!-- List view for property type -->
    <record id="ninja_turtles_estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.property.type.list</field>
        <field name="model">ninja.turtles.estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form view for property type -->
    <record id="ninja_turtles_estate_property_type_view_form" model="ir.ui.view">
        <field name="name">ninja.turtles.estate.property.type.form</field>
        <field name="model">ninja.turtles.estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_ninja_turtles_estate_property_offer)d"
                                string="Number of Offers"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-envelope">
                            <field name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="d-flex justify-content-between align-items-center" style="width: 100%;">
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for property type -->
    <record id="action_ninja_turtles_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">ninja.turtles.estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
