<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="estate_property_template" name="Estate Properties">
        <t t-call="website.layout">
            <div class="container">
                <h2 class="my-4 text-center">Available Estate Properties</h2>
                <!-- Date Filter Section -->
                <div class="row mb-4">
                    <form method="GET" action="/properties" class="row mb-3">
                        <div class="col-md-4">
                            <input type="date" name="listed_after" id="listed_after" class="form-control" t-att-value="listed_after or ''" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary" id="filter-btn">Listed After</button>
                        </div>
                    </form>
                </div>

                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <t t-if="property.property_image">
                                        <img t-att-src="'/web/image/estate.property/' + str(property.id) + '/property_image'" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Property Image" />
                                    </t>
                                    <t t-else="">
                                        <img src="/estate/static/src/img/default_img.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Default Property Image" />
                                    </t>
                                    <h5 class="card-title">
                                        <t t-esc="property.name"/>
                                    </h5>
                                    <p class="card-text">Price: <t t-esc="property.expected_price"/>
                                    </p>
                                    <a t-att-href="'/property/' + str(property.id)" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

            </div>
            <!-- Pager -->
            <div class="container d-flex justify-content-center align-items-center my-4">
                <t t-call="website.pager" />
            </div>
        </t>
    </template>

</odoo>
