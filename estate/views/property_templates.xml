<odoo>
    <template id="property_list_template" name="Property List">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="mt-4 mb-4 text-center">Available Properties</h1>
                <!-- Filter by property type -->
                <div class="mb-2">
                    <form method="get" action="/properties">
                        <label class="col-form-label fw-bold text-primary" for="property_type">Property Type</label>
                        <select name="property_type" class="form-select" onchange="this.form.submit()">
                            <option value="">All</option>
                            <t t-foreach="property_types" t-as="type">
                                <option
                                    t-att-value="type.id"
                                    t-att-selected="selected_type == type.id"
                                >
                                    <t t-out="type.name"/>
                                </option>
                            </t>
                        </select>
                    </form>
                </div>
                <div class="row g-4">
                    <t t-if="properties">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 mb-2">
                                <!-- Property Card -->
                                <div class="card h-100 shadow-sm">
                                    <!-- Display Property Image -->
                                    <t t-if="property.image_1920">
                                        <img
                                            t-att-src="image_data_uri(property.image_1920)"
                                            alt="Property Image"
                                            class="card-img-top"
                                            style="height: 250px; object-fit: cover;"
                                        />
                                    </t>
                                    <t t-else="">
                                        <img
                                            src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg"
                                            alt="Default Property Image"
                                            class="card-img-top"
                                            style="height: 250px; object-fit: cover;"
                                        />
                                    </t>

                                    <div class="card-body">
                                        <!-- Display Property Details -->
                                        <a t-attf-href="/properties/#{property.id}" class="text-decoration-none">
                                            <h5 class="card-title"><t t-esc="property.name"/></h5>
                                        </a>
                                        <p class="card-text">
                                            <strong>Expected Price:</strong> <t t-esc="property.expected_price"/>
                                        </p>
                                        <p class="card-text">
                                            <strong>Property Type:</strong> <t t-esc="property.property_type_id.name"/>
                                        </p>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a t-attf-href="/properties/#{property.id}" class="btn btn-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div class="alert alert-warning text-center">
                            No available property for your filter.
                        </div>
                    </t>
                </div>
                <!-- pager -->
                <t t-if="pager">
                    <div class="d-flex justify-content-center mt-4 mb-4">
                        <t t-call="website.pager"/>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="property_detail_template" name="Property Details">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row">
                    <!-- Property Image -->
                    <div class="col-md-6">
                        <t t-if="property_details.image_1920">
                            <img
                                t-att-src="image_data_uri(property_details.image_1920)"
                                alt="Property Image"
                                class="img-fluid rounded shadow"
                                style="height: 400px; object-fit: cover; width: 100%;"
                            />
                        </t>
                    </div>

                    <!-- Property Details -->
                    <div class="col-md-6">
                        <h2 class="mb-3"><t t-esc="property_details.name"/></h2>
                        <p class="text-muted">Property Type: 
                            <strong>
                                <t t-esc="property_details.property_type_id.name"/>
                            </strong>
                        </p>
                        <h4 class="text-success">Expected Price: <t t-esc="property_details.expected_price"/></h4>

                        <hr/>
                        <h5>Description</h5>
                        <p>
                            <t t-esc="property_details.description"/>
                        </p>

                        <h5>Details</h5>
                        <ul class="list-unstyled">
                            <li><strong>Bedrooms:</strong> <t t-esc="property_details.bedrooms"/></li>
                            <li><strong>Living Area:</strong> <t t-esc="property_details.living_area"/> sq ft</li>
                            <t t-if="property_details.garden">
                                <li><strong>Garden:</strong> Yes</li>
                                <t t-if="property_details.garden_area">
                                    <li>
                                        <strong>Garden Area:</strong>
                                        <t t-esc="property_details.garden_area"/>sq ft
                                    </li>
                                </t>
                                <t t-if="property_details.garden_orientation">
                                    <li>
                                        <strong>Garden Orientation:</strong>
                                        <t t-esc="property_details.garden_orientation"/>
                                    </li>
                                </t>
                            </t>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
