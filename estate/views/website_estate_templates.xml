<odoo>
    <!-- add menu name Properties to navbar for routing to properties list -->
    <record id="website_property_listing_menu" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>
    
    <!-- template for viewing properties list to website -->
    <template id="property_list_template" name="Property List">
        <t t-call="website.layout">
            <div id="property_list" class="container-fluid my-5" style="width: 70%;">
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-md-4" style="">
                                <t t-call="estate.property_card_template"/>
                        </div>
                    </t>
                </div>
                <div class="row mt-4 mb-3">
                    <div class="col-12 d-flex justify-content-center">
                        <t t-call="website.pager" t-set="pager" t-options="pager"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- property card template -->
    <template id="property_card_template" name="Property Card">
            <div class="card shadow-sm border-0 py-2 my-2" style="padding: 1%; width: 100%">
                <!-- Property Image -->
                <div class="property-image" style="width: 100%; height: 250px; overflow: hidden;">
                    <img t-if="property['image']" class="card-img-top" 
                        t-att-src="image_data_uri(property['image'])" 
                        alt="property['name']" 
                        style="width: 100%; height: 100%; object-fit: cover;"/>
                    <img t-else="" class="card-img-top" 
                        src="real_estate/static/src/images/no_image.jpeg" 
                        alt="property['name']" 
                        style="width: 100%; height: 100%; object-fit: cover;"/>
                </div>

                <!-- Property Details -->
                <div class="card-body">
                    <h5>
                        <p t-esc="property.name" 
                        class="text-decoration-none text-dark fw-bold"/>
                    </h5>
                    <p><strong>Postcode:</strong> <span t-esc="property.postcode"/></p>
                    <p><strong>Price:</strong> <span t-esc="property.expected_price"/></p> 
                    <div>
                        <a t-att-href="'/properties/%s' % property.id" 
                        class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
                
            </div>
    </template>

    <!-- property details template -->
    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container p-3 my-5 d-flex flex-column align-items-center justify-content-center shadow-lg rounded bg-light" style="overflow: hidden; ">
                <!-- image, title, price, overview -->
                <div class="d-flex flex-column flex-md-row flex-wrap justify-content-center align-items-center border rounded">
                    <!-- Image Container -->
                    <div class="image p-3 w-100 w-md-50">
                        <img t-if="property['image']" class="img-fluid rounded"
                            t-att-src="image_data_uri(property['image'])"
                            t-att-alt="property.name"
                            style="width:100%; height:auto; object-fit: cover;"/>
                        <img t-else="" class="img-fluid rounded"
                            t-att-src="'/estate/static/src/img/no_image.jpeg'"
                            t-att-alt="property.name"
                            style="width:100%; height:auto; object-fit: cover;"/>
                    </div>

                    <!-- Property Details -->
                    <div class="d-flex flex-column p-3 w-100 w-md-50 justify-content-between">
                        <!-- Title & Tags -->
                        <div class="title w-100 px-2 mt-3">
                            <div class="name" style="font-size: 28px; font-weight: bold; color:rgb(8, 57, 111);">
                                <span t-esc="property.name"/>
                            </div>

                            <!-- Tags Section -->
                            <div t-if="property.tag_ids" class="tags mt-2 d-flex flex-wrap">
                                <span t-foreach="property.tag_ids" t-as="tag" 
                                    class="badge rounded-pill text-bg-primary mx-1" 
                                    style="background-color: #007bff; font-size: 12px; padding: 5px 10px;">
                                    <span t-esc="tag.name"/>
                                </span>
                            </div>

                            <div id="price" class="price mt-2" style="font-size: 24px; font-weight: bold; color: #28a745;">
                                ₹ <span t-esc="property.expected_price"/>
                            </div>
                        </div>

                        <!-- Overview Section -->
                        <div class="overview mt-4 p-3 border rounded  bg-light w-100">
                            <h4 class="fw-bold" style="font-size: 24px;">Overview</h4>
                            <div class="row text-secondary d-flex flex-wrap align-items-center">
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Property Type:</strong> 
                                    <div t-esc="property.property_type_id.name"/>
                                </div>
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Postcode:</strong> 
                                    <div t-esc="property.postcode"/>
                                </div>
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Bedrooms:</strong> 
                                    <div t-esc="property.bedrooms"/>
                                </div>
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Facades:</strong> 
                                    <div t-esc="property.facades"/>
                                </div>
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Availability:</strong> 
                                    <div t-esc="property.date_availability"/>
                                </div>
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Living Area:</strong>
                                    <div><span t-esc="property.living_area"/> m²</div>
                                </div>
                                <div t-if="property.garage" class="col-6 col-md-4 mt-3">
                                    <strong>Garage:</strong> 
                                    <div t-esc="property.garage and 'Yes' or 'No'"/>
                                </div>
                                <div t-if="property.garden" class="col-6 col-md-4 mt-3">
                                    <strong>Garden:</strong> 
                                    <div t-esc="property.garden and 'Yes' or 'No'"/>
                                </div>
                                <div t-if="property.garden" class="col-6 col-md-4 mt-3">
                                    <strong>Garden Area:</strong> 
                                    <div><span t-esc="property.garden_area"/> m²</div>
                                </div>
                                <div class="col-6 col-md-4 mt-3">
                                    <strong>Total Area:</strong>
                                    <div><span t-esc="property.total_area"/> m²</div>
                                </div>
                                <div t-if="property.garden" class="col-12 col-md-6 mt-3">
                                    <strong>Garden Orientation:</strong>
                                    <div t-esc="property.garden_orientation"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- description  -->
                <div t-if="property.description" class="description mt-4 p-4 border rounded bg-light" style="width:100%;">
                    <h4 class="fw-bold mb-4" style="font-size: 30px">Description</h4>
                    <p class="text-secondary" style="font-size: 18px; line-height: 1.6;">
                        <span t-esc="property.description"/>
                    </p>
                </div>
                <!-- offer list -->
                <div class="table-container mt-4 p-4 border rounded bg-light" id="tableContainer" style="width:100%; height:auto;">
                    <h4 class="fw-bold mb-4 text-center" style="font-size: 30px">Offers</h4>
                    
                    <table class="table table-striped text-center">
                        <thead class="table" style="background-color:rgb(106, 87, 101); color: white; font-weight: bold;">
                            <tr>
                                <th style="width: 10%;">Sr.No.</th>
                                <th style="width: 30%;">Offer Price (₹)</th>
                                <th style="width: 20%;">Date Deadline</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="property.offer_ids">
                                <t t-set="counter" t-value="1"/>
                                <t t-foreach="property.offer_ids" t-as="offer">
                                    <tr>
                                        <td style="width: 10%; vertical-align: middle;"><span t-esc="counter"/></td>
                                        <td style="width: 30%; vertical-align: middle;"><span t-esc="offer.price"/></td>
                                        <td style="width: 20%; vertical-align: middle;"><span t-esc="offer.date_deadline"/></td>
                                    </tr>
                                    <t t-set="counter" t-value="counter + 1"/>
                                </t>
                            </t>
                            <t t-else="">
                                <tr>
                                    <td colspan="3" class="text-center text-muted">
                                        No offers available.
                                    </td>
                                </tr>
                            </t>

                            <!-- Checkbox to Show Form -->
                            <tr>
                                <td colspan="3" class="text-center">
                                    <input type="checkbox" class="btn-check" id="toggleOfferForm" autocomplete="off"/>
                                    <label class="btn btn-outline-primary" for="toggleOfferForm" id="toggleOfferLabel">
                                        ➕ Add New Offer
                                    </label>
                                </td>
                            </tr>

                            <!-- Form Row (Initially Hidden) -->
                            <form t-att-action="'/properties/%s/make-offer' % property.id" method="post">
                                <tr id="offerFormRow" class="hidden-row">
                                    <td style="width: 10%;"></td>
                                    <td style="width: 30%;"><input type="number" name="offer_price" required="1" class="form-control" placeholder="Offer Price" style="text-align:center;"/></td>
                                    <td style="width: 20%;"><input type="date" name="date_validity" required="1" class="form-control" placeholder="Date Deadline" style="text-align:center;"/></td>
                                </tr>

                                <!-- Warning Message Row -->
                                <t t-if="error_message">
                                    <tr id="errorRow">
                                        <td colspan="3">
                                            <div id="errorMessage" class="alert alert-danger text-center">
                                                <t t-esc="error_message"/>
                                            </div>
                                        </td>
                                    </tr>
                                </t>

                                <!-- Submit Button Row -->
                                <tr id="submitRow" class="hidden-row">
                                    <td colspan="2"></td>
                                    <td><button type="submit" class="btn btn-primary">Submit Offer</button></td>
                                </tr>
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
        
        <!-- style for tamplate -->
        <style>
            .hidden-row {
                height: 0;
                opacity: 0;
                overflow: hidden;
                display: none;
                transition: height 0.5s ease-in-out, opacity 0.3s ease-in-out;
            }

            .visible-row {
                height: 50px;
                opacity: 1;
                transition: height 0.5s ease-in-out, opacity 0.3s ease-in-out;
            }

            .table-container {
                transition: height 0.5s ease-in-out, padding 0.3s ease-in-out;
                overflow: hidden;
            }

            /* Default Button Styles */
            #toggleOfferLabel {
                display: inline-block;
                padding: 8px 15px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.5s ease-in-out, color 0.5s ease-in-out, transform 0.5s ease-in-out;
            }

            /* Hover effect when form is NOT expanded */
            #toggleOfferLabel:not(.active):hover {
                background-color: rgb(106, 87, 101);
                color: white;
                font-weight: bold;
            }

            /* Hover effect when form IS expanded */
            #toggleOfferLabel.active:hover {
                background-color: rgb(190, 83, 83);
                color: white;
                font-weight: bold;
            }

            /* Active state when form is expanded */
            #toggleOfferLabel.active {
                background-color: #ffcccc !important;
                color: black !important;
                font-weight: bold;
                transform: scale(1.1);
            }
        </style>

        <!-- script to handle checkbox for showing offer create form or not -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                let toggleCheckbox = document.getElementById("toggleOfferForm");
                let offerFormRow = document.getElementById("offerFormRow");
                let submitRow = document.getElementById("submitRow");
                let toggleOfferLabel = document.getElementById("toggleOfferLabel");
                let tableContainer = document.getElementById("tableContainer");

                if (toggleCheckbox) {
                    toggleCheckbox.addEventListener("change", function () {
                        if (this.checked) {
                            let currentHeight = tableContainer.offsetHeight || 0; // Ensure it has a value
                            tableContainer.style.height = currentHeight + "px"; // Set the height explicitly
                            setTimeout(() => {
                                tableContainer.style.height = (currentHeight + 200) + "px"; // Apply transition smoothly
                            }, 10);

                            offerFormRow.style.display = "table-row";
                            submitRow.style.display = "table-row";

                            setTimeout(() => {
                                offerFormRow.classList.add("visible-row");
                                submitRow.classList.add("visible-row");
                            }, 50);

                            toggleOfferLabel.textContent = "❌ Cancel";
                            toggleOfferLabel.style.backgroundColor = "#ffcccc";
                            toggleOfferLabel.style.color = "#000";
                            toggleOfferLabel.style.fontWeight = "bold";
                        } else {
                            offerFormRow.classList.remove("visible-row");
                            submitRow.classList.remove("visible-row");

                            setTimeout(() => {
                                offerFormRow.style.display = "none";
                                submitRow.style.display = "none";
                                let currentHeight = tableContainer.offsetHeight || 200;
                                tableContainer.style.height = (currentHeight - 200) + "px";
                            }, 50);

                            toggleOfferLabel.textContent = "➕ Add New Offer";
                            toggleOfferLabel.style.backgroundColor = "";
                            toggleOfferLabel.style.color = "";
                            toggleOfferLabel.style.fontWeight = "";
                        }
                    });
                }
            });
        </script>
    </template>
</odoo>
