<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_multi_offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Multi offer wizard</field>
        <field name="res_model">estate.property.multi.offer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

     <record id="estate_property_multi_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.multi.offer.form</field>
        <field name="model">estate.property.multi.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>                
                    <field name="price" />
                    <field name="validity" />
                    <field name="buyer_id" />
                </group>
                <footer>
                    <button string="Make offers" type="object" name="action_make_offer" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
