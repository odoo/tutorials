<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_make_offer_view_form" model="ir.ui.view">
        <field name="name">estate_property_make_offer.view.form</field>
        <field name="model">estate.property.make.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Make Offer">
                <group>
                    <field name="partner_id" string="Buyer"/>
                    <field name="offer_price" string="Price"/>
                    <field name="offer_validity" string="Validity"/>
                </group>
                <footer>
                    <button name="make_offer" string="Make Offer" type="object" class="btn-primary"/>
                    <button special="cancel">Cancel</button>
                </footer>
            </form>
        </field>
    </record>
</odoo>
