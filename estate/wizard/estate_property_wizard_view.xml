<odoo>
    <record id="offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="offer_wizard_form" model="ir.ui.view">
        <field name="name">offer.wizard.form</field>
        <field name="model">offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="price"/>
                    <field name="validity"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="action_make_offer" type="object" string="Make Offer" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
