<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="estate_property_offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">wizard.estate.property</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list,form</field>
    </record>

    <record id="estate_property_wizard_view_form" model="ir.ui.view">
        <field name="name">wizard.estate.property.form</field>
        <field name="model">wizard.estate.property</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="price"/>
                    <field name="validity"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="action_add_offer"
                            string="Add Offer" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
