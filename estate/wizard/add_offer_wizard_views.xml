<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_add_offer_wizard" model="ir.ui.view">
        <field name="name">add.offer.wizard.form</field>
        <field name="model">add.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Make Offer">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="make_offer" string="Make Offer" type="object"
                        class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_add_offer_wizard" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">add.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
