<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_add_offer_wizard_form" model="ir.ui.view">
        <field name="name">estate.property.bulk.offers.form</field>
        <field name="model">estate.property.bulk.offers</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="price"/>
                    <field name="validity"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button string="Make an Offer" type="object" name="action_make_bulk_offers"
                        class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bulk_offers_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Offers Wizard</field>
        <field name="res_model">estate.property.bulk.offers</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_add_offer_wizard_form"/>
        <field name="context">{'default_property_ids': active_ids }</field>
        <field name="target">new</field>
    </record>
</odoo>
