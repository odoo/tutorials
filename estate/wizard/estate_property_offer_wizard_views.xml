<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_estate_property_offer_wizard" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="estate_property_offer_wizard_view" model="ir.ui.view">
        <field name="name">estate.property.offer.wizard.view</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Make Offer">
                <group>
                    <field name="price"/>
                    <field name="buyer_id"/>
                </group>
                <footer>
                    <button string="Add an Offer" type="object" name="submit_offer" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
