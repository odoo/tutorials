<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_wizard_view_form" model="ir.ui.view">
        <field name="name">estate.propety.offer.wizard.view.form</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Offer">
                <group>
                    <field name="buyer_id"></field>
                    <field name="price"></field>
                    <field name="validity"></field>
                </group>
                <footer>
                    <button name="action_make_offer" type="object" class="btn-primary" string="Make an Offer"></button>
                    <button class="btn-secondary" string="Cancel" special="cancel"></button>
                </footer>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
