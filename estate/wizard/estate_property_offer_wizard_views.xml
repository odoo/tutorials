<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_bulk_offers_view_form" model="ir.ui.view">
        <field name="name">estate.bulk.offers.form</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Offers">
                <group>
                    <field name="price" />
                    <field name="validity" />
                    <field name="partner_id" />
                </group>
                <footer>
                    <button string="Make an offer" name="add_offers" type="object"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_estate_bulk_offers" model="ir.actions.act_window">
        <field name="name">Bulk Offers</field>
        <field name="res_model">estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="estate_bulk_offers_view_form" />
        <field name="context">{'default_property_ids': active_ids}</field>
        <field name="target">new</field>
    </record>
</odoo>
