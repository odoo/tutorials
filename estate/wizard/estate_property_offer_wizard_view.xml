<odoo>
    <record id="action_estate_offer_wizard" model="ir.actions.act_window">
        <field name="name">Make offer</field>
        <field name="res_model">estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="estate_property_offer_wizard_form_view" model="ir.ui.view">
        <field name="name">estate.action.offer.wizard.form</field>
        <field name="model">estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Make an Offer">
                <group>
                    <field name="price"/>
                    <field name="validity"/>
                    <field name="partner_id"/>
                    <field name="property_ids"/>
                </group>
                <footer>
                    <button string="Make Offer" type="object" name="make_offer" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel_offer" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>