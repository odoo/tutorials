<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_estate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Real Estate" string="Real Estate" name="estate">
                    <block title="Estate">
                        <group name="addon_settings">
                            <group string="Invoicing" name="invoicing">
                                <setting string="Enable Invoicing">
                                    <field name="module_estate_account" />
                                </setting>
                            </group>
                            <group string="Auction" name="auction">
                                <setting string="Automated Auction">
                                    <field name="module_estate_auction" />
                                </setting>
                            </group>
                        </group>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
