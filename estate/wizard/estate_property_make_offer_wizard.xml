<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_wizard_form_view" model="ir.ui.view">
        <field name="name">Offer Wizard</field>
        <field name="model">estate.property.make.offer</field>
        <field name="arch" type="xml">
            <form>
                <group name="offer_details">
                    <field name="offer_price"></field>
                    <field name="partner_id"></field>
                    <field name="validity"></field>
                </group>
                <footer>
                    <button name="make_offer" string="Add Offer" type="object" class="btn-primary" icon="fa-check" />
                    <button string="Discard" class="btn-secondary" special="cancel" icon="fa-times" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
