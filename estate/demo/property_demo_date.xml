<odoo>
    <data noupdate="1">
        <record id="estate_property_big_villa" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="status">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="estate_property_type_residential"></field>
        </record>

        <record id="estate_property_trailer_home" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="status">canceled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="garden">False</field>
        </record>

     <record id="estate_property_luxury_villa" model="estate.property">
            <field name="name">Luxury Villa</field>
            <field name="status">new</field>
            <field name="description">A luxury villa with sea view</field>  <!-- Fixed typo -->
            <field name="postcode">388120</field>
            <field name="date_availability">2025-06-01</field>
            <field name="expected_price">2500000</field>
            <field name="bedrooms">5</field>
            <field name="living_area">200</field>
            <field name="facades">3</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">500</field>
            <field name="garden_orientation">west</field>
            <field name="property_type_id" ref="estate_property_type_residential"/>

           <field name="offer_ids" eval="[
    Command.create({
        'partner_id': ref('base.res_partner_15'),
        'price': 2200000,
        'validity': 14
    }),
    Command.create({
        'partner_id': ref('base.res_partner_deco_addict'),
        'price': 2300000,
        'validity': 21
    })
]"/>

        </record>
 
        <record id="estate_property_azure_1" model="estate.property.offer"> 
            <field name="partner_id" ref="base.res_partner_15"></field>
            <field name="property_id" ref="estate_property_big_villa"></field>
            <field name="price">144000</field>
            <field name="validity">14</field>
        </record>

        <record id="estate_property_azure_2" model="estate.property.offer"> 
            <field name="partner_id" ref="base.res_partner_15"></field>
            <field name="property_id" ref="estate_property_big_villa"></field>
            <field name="price">150000</field>
            <field name="validity">14</field>
        </record>

        <record id="estate_property_deco_addict_1" model="estate.property.offer"> 
            <field name="partner_id" ref="base.res_partner_deco_addict"></field>
            <field name="property_id" ref="estate_property_big_villa"></field>
            <field name="price">150001</field>
            <field name="validity">14</field>
        </record>

        <record id="estate_property_deco_addict_2" model="estate.property.offer"> 
            <field name="partner_id" ref="base.res_partner_deco_addict"></field>
            <field name="property_id" ref="estate_property_big_villa"></field>
            <field name="price">1500001</field>
            <field name="validity">14</field>
        </record>

       
        <function model="estate.property.offer" name="reject_offer">
            <value eval="[ref('estate_property_deco_addict_1'), ref('estate_property_azure_1'),ref('estate_property_azure_2')]"/>
        </function>

        <function model="estate.property.offer" name="accept_offer">
            <value eval="[ref('estate_property_deco_addict_2')]"/>
        </function>

    </data>
</odoo>
