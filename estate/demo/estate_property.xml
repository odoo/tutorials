<odoo>
    <record id="demo_property_1" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">220</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">600</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="type_residential" />
    </record>

    <record id="demo_property_2" model="estate.property">
        <field name="name">Trailer Home</field>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">2018-05-01</field>
        <field name="expected_price">7000</field>
        <field name="selling_price">6450</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="garden">False</field>
        <field name="property_type_id" ref="type_residential" />
    </record>

    <record id="demo_property_3" model="estate.property">
        <field name="name">Office Spaces</field>
        <field name="state">new</field>
        <field name="description">Office spaces in modern building</field>
        <field name="postcode">123211</field>
        <field name="date_availability">2024-05-01</field>
        <field name="expected_price">400000</field>
        <field name="bedrooms">0</field>
        <field name="living_area">200</field>
        <field name="facades">1</field>
        <field name="garage">False</field>
        <field name="garden">False</field>
        <field name="property_type_id" ref="type_commercial" />
    </record>

    <record id="demo_property_4" model="estate.property">
        <field name="name">Big Land</field>
        <field name="state">new</field>
        <field name="description">Nice land in the countryside</field>
        <field name="postcode">424242</field>
        <field name="date_availability">2022-05-01</field>
        <field name="expected_price">100000</field>
        <field name="living_area">0</field>
        <field name="facades">0</field>
        <field name="garage">False</field>
        <field name="garden">False</field>
        <field name="property_type_id" ref="type_land" />
        <field name="offer_ids"
            eval="[Command.create({
                'partner_id': ref('base.res_partner_10'),
                'price': 85000,
                'date_deadline': datetime.today()+timedelta(days=30)})]" />
    </record>
</odoo>
