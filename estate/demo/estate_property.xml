<odoo>
    <record id="umbm_estate_01" model="estate_property">
        <field name="name">Big Villa 3</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="estate_property_type" ref="estate.umbm_01"/>
        <field name="date_availability">2024-04-25</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orentation">south</field>
    </record>

    <record id="umbm_estate_02" model="estate_property">
        <field name="name">Trailer home 3</field>
        <field name="state">canceled</field>
        <field name="estate_property_type" ref="estate.umbm_01"/>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">2024-01-01</field>
        <field name="expected_price">120000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
    </record>

    <record id="umbm_offer_01" model="estate_property_offer">
        <field name="price">10000</field>
        <field name="partner_id" ref="base.res_partner_12"/>
        <field name="property_id" ref="estate.umbm_estate_01"/>
        <field name="date_deadline" eval="(datetime.now() + relativedelta(months=1)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="umbm_offer_02" model="estate_property_offer">
        <field name="price">1500000</field>
        <field name="partner_id" ref="base.res_partner_12"/>
        <field name="property_id" ref="estate.umbm_estate_01"/>
        <field name="date_deadline" eval="(datetime.now() + relativedelta(months=1)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="umbm_offer_03" model="estate_property_offer">
        <field name="price">1500001</field>
        <field name="partner_id" ref="base.res_partner_12"/>
        <field name="property_id" ref="estate.umbm_estate_01"/>
        <field name="date_deadline" eval="(datetime.now() + relativedelta(months=1)).strftime('%Y-%m-%d')"/>
    </record>

    <function model="estate_property_offer" name="action_close">
        <value eval="[ref('umbm_offer_01')]"/>
    </function>

    <function model="estate_property_offer" name="action_close">
        <value eval="[ref('umbm_offer_02')]"/>
    </function>

    <function model="estate_property_offer" name="action_confirm">
        <value eval="[ref('umbm_offer_03')]"/>
    </function>

