<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record 1: Big Villa -->
    <record id="estate_property_big_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">160000.00</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="estate.property_type_1"></field>
    </record>

    <!-- Record 2: Trailer Home -->
    <record id="estate_property_trailer_home" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000.00</field>
        <field name="selling_price">120000.00</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="property_type_id" ref="estate.property_type_1"></field>
    </record>

    <!-- Reference Data For Partner -->
    <record id="property_partner_1" model="res.partner">
        <field name="name">Azure Interior</field>
    </record>
    <record id="property_partner_2" model="res.partner">
        <field name="name">Deco Addict</field>
    </record>

    <!-- Record 3: a property offers directly added inside One2many field -->
    <record id="estate_property_pent_house" model="estate.property">
        <field name="name">Pent House</field>
        <field name="state">new</field>
        <field name="description">Luxurious pent house!</field>
        <field name="postcode">54322</field>
        <field name="date_availability">2024-05-17</field>
        <field name="expected_price">1000000.00</field>
        <field name="bedrooms">4</field>
        <field name="living_area">1000</field>
        <field name="facades">6</field>
        <field name="garage">False</field>
        <field name="property_type_id" ref="estate.property_type_1"></field>
        <field name="offer_ids" eval="[
            Command.create({
                'price': 1100000,
                'validate': 20,
                'partner_id': ref('property_partner_1')
            }),
            Command.create({
                'price': 1500000,
                'validate': 27,
                'partner_id': ref('property_partner_2')
            })
        ]"/>
    </record>

    <!-- Demo data of property offer -->
    <record id="big_villa_offer_1" model="estate.property.offer">
        <field name="partner_id" ref="property_partner_1"/>
        <field name="property_id" ref="estate.estate_property_big_villa" />
        <field name="price">10000.00</field>
        <field name="validate">14</field>
    </record>
    <record id="big_villa_offer_2" model="estate.property.offer">
        <field name="partner_id" ref="property_partner_1"/>
        <field name="property_id" ref="estate_property_big_villa" />
        <field name="price">1500000.00</field>
        <field name="validate">14</field>
    </record>
    <record id="big_villa_offer_3" model="estate.property.offer">
        <field name="partner_id" ref="property_partner_2"/>
        <field name="property_id" ref="estate_property_big_villa" />
        <field name="price">1500001.00</field>
        <field name="validate">14</field>
    </record>

    <!-- Validating third offer by accepting it -->
    <function model="estate.property.offer" name="action_accept" eval="[ref('big_villa_offer_3')]">
    </function>

</odoo>