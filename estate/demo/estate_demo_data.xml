<?xml version="1.0" encoding="UTF-8"?>
<odoo>  

   <record id="demo_property_type_1" model="estate.property.type">
         <field name="name">Demo Property Type</field>
   </record>

   <record id="property_id_1" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="property_type_id" ref="demo_property_type_1"/>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
    </record>
    <record id="property_id_2" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="property_type_id" ref="demo_property_type_1"/>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
    </record>

    <record id="property_id_3" model="estate.property">
        <field name="name">New Willa Apartment</field>
        <field name="state">new</field>
        <field name="description">New modern appartment</field>
        <field name="expected_price">1000000</field>
        <field name="living_area">115</field>
        <field name="bedrooms">6</field>
        <field name="offer_ids" eval="[
            Command.create({
                'price': 950000,
                'validity': 14,
                'partner_id': ref('property_partner_1')
            }),
            Command.create({
                'price': 980000,
                'validity': 14,
                'partner_id': ref('property_partner_2')
            })
        ]"/>
    </record>

   <record id="property_partner_1" model="res.partner">
        <field name="name">Azure Interior</field>
    </record>
    <record id="property_partner_2" model="res.partner">
        <field name="name">Deco Addict</field>
    </record>
        <record id="estate_offer_demo_1" model="estate.property.offer">
            <field name="partner_id" ref="property_partner_1"/>
            <field name="property_id" ref="property_id_1"/>
            <field name="price">10000</field>
            <field name="validity">14</field>
        </record>
        <record id="estate_offer_demo_2" model="estate.property.offer">
            <field name="partner_id" ref="property_partner_2"/>
            <field name="property_id" ref="property_id_1"/>
            <field name="price">1500000</field>
            <field name="validity">14</field>
        </record>
        <record id="estate_offer_demo_3" model="estate.property.offer">
            <field name="partner_id" ref="property_partner_1"/>
            <field name="property_id" ref="property_id_1"/>
            <field name="price">1500001</field>
            <field name="validity">14</field>
        </record> 

        <function model="estate.property.offer" name="action_accept">
            <value eval="[ref('estate_offer_demo_2')]"/>
        </function>

        <function model="estate.property.offer" name="action_refuse">
            <value eval="[ref('estate_offer_demo_1')]"/>
        </function>
        <function model="estate.property.offer" name="action_refuse">
            <value eval="[ref('estate_offer_demo_3')]"/>
        </function>
</odoo>
