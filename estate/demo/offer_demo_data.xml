<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="offer_demo_data_1" model="estate.property.offer">
        <field name="price">10000</field>
        <field name="partner_id" ref="base.res_partner_12" />
        <field name="property_id" ref="property_demo_data_1" />
        <field name="date_deadline" eval="(DateTime.now() + timedelta(days=14))" />
    </record>
    <record id="offer_demo_data_2" model="estate.property.offer">
        <field name="price">1500000</field>
        <field name="partner_id" ref="base.res_partner_12" />
        <field name="property_id" ref="property_demo_data_1" />
        <field name="validity">14</field>
        <field name="date_deadline" eval="(DateTime.now() + timedelta(days=14))" />
    </record>
    <record id="offer_demo_data_3" model="estate.property.offer">
        <field name="price">1500001</field>
        <field name="partner_id" ref="base.res_partner_2" />
        <field name="property_id" ref="estate_property_renovated_villa" />
        <field name="validity">14</field>
        <field name="date_deadline" eval="(DateTime.now() + timedelta(days=14))" />
    </record>

    <function model="estate.property.offer" name="action_set_status_accepted">
        <value eval="[ref('offer_demo_data_3')]" />
    </function>
    <function model="estate.property.offer" name="action_set_status_refused">
        <value eval="[ref('offer_demo_data_1', 'offer_demo_data_3')]" />
    </function>
</odoo>
