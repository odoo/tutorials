<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="demo_property_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new_offer</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="selling_price">0</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="property_type_residential"/>
    </record>

    <record id="demo_property_trailer" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">cancel_offer</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">0</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="garden">False</field>
        <field name="property_type_id" ref="property_type_residential"/>
    </record>

    <record id="demo_property_beachfrontvilla" model="estate.property">
        <field name="name">Beachfront Villa</field>
        <field name="state">new_offer</field>
        <field name="description">A luxurious villa with a stunning ocean view.</field>
        <field name="postcode">98765</field>
        <field name="date_availability">2025-07-01</field>
        <field name="expected_price">3000000</field>
        <field name="selling_price">0</field>
        <field name="bedrooms">5</field>
        <field name="living_area">350</field>
        <field name="facades">3</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">500</field>
        <field name="garden_orientation">east</field>
        <field name="offer_ids" eval="[
            Command.create({
                'partner_id': ref('base.res_partner_1'),
                'price': 2800000,
                'validity': 10,
                'date_deadline': (datetime.now() + timedelta(days=10)).strftime('%Y-%m-%d'),
            }),
            Command.create({
                'partner_id': ref('base.res_partner_2'),
                'price': 2900000,
                'validity': 14,
                'date_deadline': (datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d'),
            })
        ]"/>
    </record>

    <record id="demo_offer_villa_1" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="demo_property_villa"/>
        <field name="price">10000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="demo_offer_villa_2" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="demo_property_villa"/>
        <field name="price">1500000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="demo_offer_villa_3" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="demo_property_villa"/>
        <field name="price">1500001</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <function model="estate.property.offer" name="action_accept">
        <value eval="[ref('demo_offer_villa_3')]"/>
    </function>

    <function model="estate.property.offer" name="action_refuse">
        <value eval="[ref('demo_offer_villa_1')]"/>
    </function>
</odoo>
