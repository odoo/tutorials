<?xml version="1.0"?>
<odoo>
    <data noupdate="1">

        <!-- Partners -->
        <record id="estate_property_partner_1" model="res.partner">
            <field name="name">Azure Interrior</field>
        </record>

        <record id="estate_property_partner_2" model="res.partner">
            <field name="name">Deco Addict</field>
        </record>

        <record id="estate_property_partner_3" model="res.partner">
            <field name="name">Deco Addict Addison</field>
        </record>

        <!-- Properties -->
        <record id="estate_property_1" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="expected_price">1600</field>
            <field name="status">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="property_type_id" ref="estate.property_type_residential"/>
            <field name="date_availability">2020-02-02</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="is_garage">True</field>
            <field name="is_garden">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="offer_ids" eval="[
                Command.create({
                    'price': 50000,
                    'partner_id': ref('estate_property_partner_1'),
                    'validity':14
                }),
                Command.create({
                    'price': 100000,
                    'partner_id': ref('estate_property_partner_2'),
                    'validity':14
                }),
                Command.create({
                    'price': 100001,
                    'partner_id': ref('estate_property_partner_3'),
                    'validity':14
                })
            ]" />
        </record>

        <record id="estate_property_2" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="selling_price">120000</field>
            <field name="expected_price">100000</field>
            <field name="property_type_id" ref="estate.property_type_residential"/>
            <field name="status">cancelled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="is_garage">False</field>
            <field name="is_garden">False</field>
        </record>


        <!-- Offers -->
        <record id="estste_property_offer_1" model="estate.property.offer">
            <field name="partner_id" ref="estate_property_partner_1"/>
            <field name="price">10000</field>
            <field name="validity">14</field>
            <field name="property_id" ref="estate_property_2" />
        </record>
        <record id="estste_property_offer_2" model="estate.property.offer">
            <field name="partner_id" ref="estate_property_partner_2"/>
            <field name="price">1500000</field>
            <field name="validity">14</field>
            <field name="property_id" ref="estate_property_2" />
        </record>
        <record id="estste_property_offer_3" model="estate.property.offer">
            <field name="partner_id" ref="estate_property_partner_3"/>
            <field name="price">1500001</field>
            <field name="validity">14</field>
            <field name="property_id" ref="estate_property_2" />
        </record>
    </data>
</odoo>
