<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Property Types -->
    <record id="property_type_residential" model="estate.property.type">
        <field name="name">Residential</field>
    </record>

    <!-- Demo Properties -->
    <record id="estate_property_big_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="property_type" ref="property_type_residential"/>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="selling_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <record id="estate_property_trailer_home" model="estate.property">
        <field name="name">Trailer Home</field>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="property_type" ref="property_type_residential"/>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100</field>
        <field name="selling_price">100</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="garden">False</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="offer_ids" eval="[
            Command.create({
                'partner_id': ref('base.res_partner_1'),
                'price': 280000,
                'validity': 14,
                'status': 'draft',
            }),
            Command.create({
                'partner_id': ref('base.res_partner_2'),
                'price': 290000,
                'validity': 10,
                'status': 'draft',
            }),
            Command.create({
                'partner_id': ref('base.res_partner_3'),
                'price': 295000,
                'validity': 7,
                'status': 'draft',
            })
        ]"/>
    </record>

    <!-- Demo Offers for Big Villa -->
    <record id="estate_offer_1" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="estate_property_big_villa"/>
        <field name="price">1600000</field>
        <field name="validity">14</field>
    </record>
    <function model="estate.property.offer" name="action_accept" eval="[ref('estate_offer_1')]"/>
    <record id="estate_offer_2" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="estate_property_big_villa"/>
        <field name="price">16000001</field>
        <field name="validity">10</field>
    </record>
    <function model="estate.property.offer" name="action_refuse" eval="[ref('estate_offer_2')]"/>
    <record id="estate_offer_3" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_3"/>
        <field name="property_id" ref="estate_property_big_villa"/>
        <field name="price">160000012</field>
        <field name="validity">4</field>
    </record>
    <function model="estate.property.offer" name="action_refuse" eval="[ref('estate_offer_3')]"/>
</odoo>
