<odoo>
    <!-- Demo Prpperties     -->
    <record id="estate_property_demo_1" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="property_type_id" ref="estate.property_type_residential" />
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
    </record>

    <record id="estate_property_demo_2" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="property_type_id" ref="estate.property_type_residential" />
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
    </record>
    <record id="estate_property_demo_3" model="estate.property">
        <field name="name">Luxury Apartment</field>
        <field name="property_type_id" ref="estate.property_type_commercial" />
        <field name="state">new</field>
        <field name="description">A modern luxury apartment with ocean view.</field>
        <field name="postcode">98765</field>
        <field name="date_availability" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
        <field name="expected_price">2000000</field>
        <field name="bedrooms">4</field>
        <field name="living_area">200</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">500</field>
        <field name="garden_orientation">east</field>
        <field name="property_offer_ids" eval="[
            Command.create({
                'partner_id': ref('base.res_partner_1'),
                'price': 500000,
                'validity': 14,
                'date_deadline': (datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')
            }),
            Command.create({
                'partner_id': ref('base.res_partner_2'),
                'price': 1800000,
                'validity': 14,
                'date_deadline': (datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')
            })
        ]"/>
    </record>

    <!-- Demo Offers to Big Villa demo property -->
    <record id="estate_offer_1" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="estate_property_demo_1"/>
        <field name="price">10000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="estate_offer_2" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="estate_property_demo_1"/>
        <field name="price">1500000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="estate_offer_3" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="estate_property_demo_1"/>
        <field name="price">1500001</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <!-- Accept Offer using function -->
    <function model="estate.property.offer" name="action_set_offer_status_accepted">
        <value eval="[ref('estate_offer_3')]"></value>
    </function>
</odoo>
