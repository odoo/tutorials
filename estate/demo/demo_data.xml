<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_prop_rec_1" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="state">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">160000</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="estate.prop_type_residential" />
            <field name="offer_ids">
                <record id="estate_offer_rec_1" model="estate.property.offers">
                    <field name="price">10000</field>
                    <field name="validity">14</field>
                    <field name="partner_id" ref="base.res_partner_12"></field>
                </record>
                <record id="estate_offer_rec_2" model="estate.property.offers">
                    <field name="price">1500000</field>
                    <field name="validity">14</field>
                    <field name="partner_id" ref="base.res_partner_12"></field>
                </record>
                <record id="estate_offer_rec_3" model="estate.property.offers">
                    <field name="price">1500001</field>
                    <field name="validity">14</field>
                    <field name="partner_id" ref="base.res_partner_2"></field>
                </record>
                
            </field>
        </record>

        <record id="estate_prop_rec_2" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="state">canceled</field>
            <field name="description">
                Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="property_type_id" ref="estate.prop_type_residential" />
            <field name="offer_ids" eval="[
            Command.create({
                'partner_id': ref('base.res_partner_12'),
                'price': 100000,
                'validity': 10
            }),
            Command.create({
                'partner_id': ref('base.res_partner_2'),
                'price': 150000,
                'validity': 11
            })
        ]" />
        </record>

        <function model="estate.property.offers" name="action_refused">
            <value eval="[ref('estate_offer_rec_1')]"></value>
        </function>
        <function model="estate.property.offers" name="action_refused">
            <value eval="[ref('estate_offer_rec_3')]"></value>
        </function>
        <function model="estate.property.offers" name="action_accepted">
            <value eval="[ref('estate_offer_rec_2')]"></value>
        </function>
    </data>
</odoo>