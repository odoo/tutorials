<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="demo_property_with_offers" model="estate.property">
    <field name="name">Luxury Mansion</field>
    <field name="state">new</field>
    <field name="description">Ultra modern home with garden pool.</field>
    <field name="postcode">600001</field>
    <field name="date_availability" eval="(datetime.today() + timedelta(days=14)).date().isoformat()"/>
    <field name="expected_price">2500000</field>
    <field name="bedrooms">5</field>
    <field name="living_area">250</field>
    <field name="facades">3</field>
    <field name="garage">True</field>
    <field name="garden">True</field>
    <field name="garden_area">500</field>
    <field name="garden_orientation">east</field>
    <field name="property_type_id" ref="estate.property_type_residential"/>
    
    <!-- Add Offers -->
    <field name="offer_ids" eval="[
        Command.create({
            'price': 1000000,
            'validity': 7,
            'partner_id': ref('base.res_partner_4'),
        }),
        Command.create({
            'price': 1200000,
            'validity': 14,
            'partner_id': ref('base.res_partner_2'),
        })
    ]"/>
  </record>
</odoo>
