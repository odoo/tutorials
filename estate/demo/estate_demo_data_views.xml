<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="demo_data" model="estate.property">
    <field name="name">Big Villa</field>
    <field name="state">new</field>
    <field name="description">A nice and big villa</field>
    <field name="postcode">12345</field>
    <field name="date_availability">2020-02-02</field>
    <field name="expected_price">1600000</field>
    <field name="bedrooms">6</field>
    <field name="living_area">100</field>
    <field name="facades">4</field>
    <field name="garage">True</field>
    <field name="garden">True</field>
    <field name="garden_area">100000</field>
    <field name="garden_orientation">south</field>
    <field name="property_type_id" ref="id1"/>
  </record>

  <record id="demo_data_1" model="estate.property">
    <field name="name">Trailer home</field>
    <field name="state">cancelled</field>
    <field name="description">Home in a trailer park</field>
    <field name="postcode">54321</field>
    <field name="date_availability">1970-01-01</field>
    <field name="expected_price">100000</field>
    <field name="selling_price">120000</field>
    <field name="bedrooms">1</field>
    <field name="living_area">10</field>
    <field name="facades">4</field>
    <field name="garage">False</field>
    <field name="property_type_id" ref="id1"/>
  </record>

  <record id="offer_id_1" model="estate.property.offer">
    <field name="partner_id" ref="base.res_partner_12"/>
    <field name="property_id" ref="demo_data"/>
    <field name="price">1000</field>
    <field name="validity">14</field>
   </record> 

  <record id="offer_id_2" model="estate.property.offer">
    <field name="partner_id" ref="base.res_partner_12"/>
    <field name="property_id" ref="demo_data"/>
    <field name="price">1500000</field> 
    <field name="date_deadline" eval="datetime.now() + relativedelta(days=14)"/>
  </record>

  <record id="offer_id_3" model="estate.property.offer"> 
    <field name="partner_id" ref="base.res_partner_2"/>
    <field name="property_id" ref="demo_data"/>
    <field name="price">1500001</field>
    <field name="date_deadline" eval="datetime.now() + relativedelta(days=10)"/>
  </record>

  <function model="estate.property.offer" name="action_accept">
    <value eval="[ref('offer_id_2')]"/>
 </function> 

 <function model="estate.property.offer" name="action_refuse">
    <value eval="[ref('offer_id_1'), ref('offer_id_3')]"/>
 </function>

 <record id="demo_data_3" model="estate.property">
    <field name="name">Home</field>
    <field name="state">cancelled</field>
    <field name="description">Home is a living place</field>
    <field name="postcode">54321</field>
    <field name="date_availability">2020-04-01</field>
    <field name="expected_price">200</field>
    <field name="selling_price">220</field>
    <field name="bedrooms">1</field>
    <field name="living_area">12</field>
    <field name="facades">5</field>
    <field name="garage">False</field>
    <field name="offer_ids" eval="[
        Command.create({
            'partner_id': ref('base.res_partner_2'),
            'price': 150
            })
    ]"/>
  </record>
</odoo>
