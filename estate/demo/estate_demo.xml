            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[Command.link(ref('base.main_company'))]"/>
            <field name="partner_id" ref="partner_101"/>
            <field name="groups_id" eval="[
                Command.link(ref('base.group_user')),
                Command.link(ref('estate_group_user')),
            ]"/>
        </record>

        <record id="user_estate_agent_2" model="res.users">
            <field name="login">b</field>
