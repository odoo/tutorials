<odoo>
    <data noupdate="1">
        <!-- Residential Property Type -->
        <record id="estate_property_type_residential" model="estate.property.type">
            <field name="name">Residential</field>
        </record>

        <!-- Commercial Property Type -->
        <record id="estate_property_type_commercial" model="estate.property.type">
            <field name="name">Commercial</field>
        </record>

        <!-- Industrial Property Type -->
        <record id="estate_property_type_industrial" model="estate.property.type">
            <field name="name">Industrial</field>
        </record>

        <!-- Land Property Type -->
        <record id="estate_property_type_land" model="estate.property.type">
            <field name="name">Land</field>
        </record>
        
        <!-- Big Villa -->
        <record id="estate_property_big_villa" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="state">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="estate_property_type_residential"/>
        </record>

        <!-- Trailer Home -->
        <record id="estate_property_trailer_home" model="estate.property">
            <field name="name">Trailer Home</field>
            <field name="state">cancelled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="garden">False</field>
            <field name="property_type_id" ref="estate_property_type_residential"/>
        </record>
        <!--Apartment home-->
        <record id="estate_property_aparment_home" model="estate.property">
            <field name="name">Apartment Home</field>
            <field name="state">new</field>
            <field name="description">Home in a apartment building</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="garden">False</field>
            <field name="property_type_id" ref="estate_property_type_residential"/>
            <field name="offer_ids" eval="[
            Command.create({'partner_id': ref('base.res_partner_1'), 'price': 700000, 'validity': 10}),
            Command.create({'partner_id': ref('base.res_partner_2'), 'price': 720000, 'validity': 15}),
            Command.create({'partner_id': ref('base.res_partner_3'), 'price': 730000, 'validity': 20})
            ]"/>

        </record>
        
        <record id="azure_interior_offer_1" model="estate.property.offer">
            <field name="property_id" ref="estate_property_big_villa"/>
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="price">10000</field>
            <field name="validity">14</field>
        </record>

        <record id="azure_interior_offer_2" model="estate.property.offer">
                <field name="property_id" ref="estate_property_big_villa"/>
                <field name="partner_id" ref="base.res_partner_12"/>
                <field name="price">1500000</field>
                <field name="validity">14</field>
        </record>
                <record id="deco_addict_offer_1" model="estate.property.offer">
                <field name="property_id" ref="estate_property_big_villa"/>
                <field name="partner_id" ref="base.res_partner_2"/>
                <field name="price">1500001</field>
                <field name="validity">14</field>
        </record>

        <function model="estate.property.offer" name="offer_refuse">
            <value eval="[ref('azure_interior_offer_1')]"/>
        </function>

        <function model="estate.property.offer" name="offer_refuse">
            <value eval="[ref('azure_interior_offer_2')]"/>
        </function>

        <function model="estate.property.offer" name="offer_accept">
            <value eval="[ref('deco_addict_offer_1')]"/>
        </function>
        
    </data>
</odoo>
