<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="property_big_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">New</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">South</field>
        <field name="property_type_id" ref="estate.property_type_residential" />
    </record>

    <record id="property_trailer_home" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">Cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="property_type_id" ref="estate.property_type_residential" />
    </record>

    <record id="property_new_villa" model="estate.property">
        <field name="name">New Villa</field>
        <field name="state">New</field>
        <field name="description">A newly listed villa with amazing views</field>
        <field name="postcode">67890</field>
        <field name="date_availability">2025-05-01</field>
        <field name="expected_price">2500000</field>
        <field name="bedrooms">5</field>
        <field name="living_area">300</field>
        <field name="facades">3</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">5000</field>
        <field name="garden_orientation">East</field>
        <field name="offer_ids" eval="[
            Command.create({
                'price': 2000000,
                'validity': 30,
                'partner_id': ref('base.res_partner_2'),
            }),
            Command.create({
                'price': 2100000,
                'validity': 30,
                'partner_id': ref('base.res_partner_3'),
            })
        ]" />
    </record>

    <record id="offer_azure_10000" model="estate.property.offer">
        <field name="price">10000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + relativedelta(years=1)).strftime('%Y-%m-%d')" />
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="property_big_villa"/>
    </record>

    <record id="offer_azure_1500000" model="estate.property.offer">
        <field name="price">1500000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + relativedelta(years=1)).strftime('%Y-%m-%d')" />
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="property_big_villa"/>
    </record>

    <record id="offer_deco_1500001" model="estate.property.offer">
        <field name="price">1500001</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + relativedelta(years=1)).strftime('%Y-%m-%d')" />
        <field name="partner_id" ref="base.res_partner_3" />
        <field name="property_id" ref="property_big_villa" />
    </record>

    <function model="estate.property.offer" name="action_accept">
        <value eval="[ref('offer_azure_10000')]"/>
    </function>

    <function model="estate.property.offer" name="action_refuse">
        <value eval="[ref('offer_azure_1500000')]"/>
    </function>

    <function model="estate.property.offer" name="action_refuse">
        <value eval="[ref('offer_deco_1500001')]"/>
    </function>

</odoo>
