<odoo>
    <record id="estate_property_big_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="selling_price">0</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">true</field>
        <field name="garden">true</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="estate.property_type_residential"/>
    </record>

    <record id="estate_property_trailer_home" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">false</field>
        <field name="garden">false</field>
        <field name="garden_area">0</field>
        <field name="property_type_id" ref="estate.property_type_residential"/>
    </record>

    <record id="estate_property_small_house" model="estate.property">
        <field name="name">Small House</field>
        <field name="state">new</field>
        <field name="description">A compact house perfect for small families.</field>
        <field name="postcode">98765</field>
        <field name="date_availability" eval="(datetime.now() + timedelta(days=30)).date()"/>
        <field name="expected_price">250000</field>
        <field name="selling_price">0</field>
        <field name="bedrooms">3</field>
        <field name="living_area">80</field>
        <field name="facades">2</field>
        <field name="garage">true</field>
        <field name="garden">true</field>
        <field name="garden_area">50</field>
        <field name="garden_orientation">east</field>
        <field name="property_type_id" ref="estate.property_type_residential"/>
        <field name="offer_id">
            <record model="estate.property.offer">
                <field name="partner_id" ref="base.res_partner_10"/>
                <field name="price">250000</field>
                <field name="validity">30</field>
                <field name="date_deadline" eval="(datetime.now() + timedelta(days=30)).date()"/>
            </record>
            <record model="estate.property.offer">
                <field name="partner_id" ref="base.res_partner_12"/>
                <field name="price">280000</field>
                <field name="validity">15</field>
                <field name="date_deadline" eval="(datetime.now() + timedelta(days=15)).date()"/>
            </record>
        </field>
    </record>

    <record id="estate_property_very_samll_house" model="estate.property">
        <field name="name">Very Small House</field>
        <field name="state">new</field>
        <field name="description">A nice and small villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability" eval="(datetime.now() + timedelta(days=60)).date()"/>
        <field name="expected_price">1600000</field>
        <field name="selling_price">0</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">true</field>
        <field name="garden">true</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="estate.property_type_residential"/>
        <field name="offer_id" eval="[
            Command.create({
                'partner_id': ref('base.res_partner_12'),
                'price': 1200000,
                'validity': 14,
                'date_deadline': (datetime.now() + timedelta(days=14)).date(),
            }),
            Command.create({
                'partner_id': ref('base.res_partner_12'),
                'price': 1300000,
                'validity': 14,
                'date_deadline': (datetime.now() + timedelta(days=14)).date(),
            }),
            Command.create({
                'partner_id': ref('base.res_partner_10'),
                'price': 1500000,
                'validity': 14,
                'date_deadline': (datetime.now() + timedelta(days=14)).date(),
            })
        ]"/>
    </record>
</odoo>
