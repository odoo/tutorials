<odoo>
    <data>
        <!-- Define Property records first -->
        <record id="estate_property_big_villa" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="state">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="property_type_residential"></field>
        </record>

        <record id="estate_property_trailer_home" model="estate.property">
            <field name="name">Trailer Home</field>
            <field name="state">cancelled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="garden">False</field>
            <field name="property_type_id" ref="property_type_residential"></field>
        </record>

        <record id="estate_property_small_villa" model="estate.property">
            <field name="name">Small Villa</field>
            <field name="state">offer_received</field>
            <field name="description">A bad and small villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">1</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">2</field>
            <field name="garden_orientation">south</field>
            <field name="offer_ids" eval="[
            Command.create({'partner_id':ref('base.res_partner_12'),'property_id':'estate_property_small_villa','price':1700}),
            Command.create({'partner_id':ref('base.res_partner_2'),'property_id':'estate_property_small_villa','price':1800}),
            Command.create({'partner_id':ref('base.res_partner_2'),'property_id':'estate_property_small_villa','price':1900}),
            ]"/>
        </record>

        <!-- Define Estate Offers after Property and Partner records -->
        <record id="estate_property_offer_big_villa_1" model="estate.property.offer">
            <field name="partner_id"  ref="base.res_partner_2"/>
            <field name="property_id" ref="estate_property_big_villa"/>
            <field name="price">10000</field>
            <field name="validity">14</field>
            <field name="date_deadline" eval="(datetime.now() + relativedelta(days=14)).date()"></field>
        </record>
        <record id="estate_property_offer_big_villa_2" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_12" />
            <field name="property_id" ref="estate_property_big_villa"/>
            <field name="price">1500000</field>
            <field name="validity">14</field>
            <field name="date_deadline" eval="(datetime.now() + relativedelta(days=14)).date()"></field>
        </record>
        <record id="estate_property_offer_big_villa_3" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="property_id" ref="estate_property_big_villa"/>
            <field name="price">1500001</field>
            <field name="validity">14</field>
            <field name="date_deadline" eval="(datetime.now() + relativedelta(days=14)).date()"></field>
        </record>


        <function model="estate.property.offer" name="action_offer_cancel">
            <value eval="[ref('estate_property_offer_big_villa_1')]" />
        </function>
        <function model="estate.property.offer" name="action_offer_cancel">
            <value eval="[ref('estate_property_offer_big_villa_2')]" />
        </function>
        <function model="estate.property.offer" name="action_offer_confirm">
            <value eval="[ref('estate_property_offer_big_villa_3')]" />
        </function>
    </data>
</odoo>

