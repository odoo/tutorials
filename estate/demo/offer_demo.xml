<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="offer_azure_low" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_12"/>
        <field name="property_id" ref="estate.property_bigvilla"/>
        <field name="price">10000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="offer_azure_high" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_12"/>
        <field name="property_id" ref="estate.property_bigvilla"/>
        <field name="price">1500000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <record id="offer_deco" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="estate.property_bigvilla"/>
        <field name="price">1500001</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="(datetime.now() + timedelta(days=14)).strftime('%Y-%m-%d')"/>
    </record>

    <function model="estate.property.offer" name="accept_offer">
        <value eval="[ref('offer_deco')]"/>
    </function>

    <function model="estate.property.offer" name="refuse_offer">
        <value eval="[ref('offer_azure_high'), ref('offer_azure_low')]"/>
    </function>
</odoo>
