<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_offer_table_template" t-name="estate.report_offer_table_template">
        <t t-if="property.offer_ids">
            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity (days)</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="sorted(property.offer_ids, key=lambda o: o.price, reverse=True)"
                        t-as="offer">
                        <tr>
                            <td>
                                <t t-esc="offer.price" />
                            </td>
                            <td>
                                <t t-esc="offer.partner_id.name" />
                            </td>
                            <td>
                                <t t-esc="offer.validity" />
                            </td>
                            <td>
                                <t t-esc="offer.date_deadline" />
                            </td>
                            <td>
                                <t t-esc="(offer.status or 'Pending').capitalize()" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
</odoo>