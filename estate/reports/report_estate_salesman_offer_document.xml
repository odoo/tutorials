<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_estate_salesman_offer_document"
        t-name="estate.report_estate_salesman_offer_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="user">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Salesman: <t t-esc="user.name" /></h2>

                        <t t-foreach="user.property_ids" t-as="property">
                            <h3>
                                <t t-esc="property.name" />
                            </h3>
                            <p>
                                <strong>Expected Price:</strong>
                                <t t-esc="property.expected_price" />
                            </p>
                            <p>
                                <strong>Status:</strong>
                                <t t-esc="(property.state or 'unknown').replace('_', ' ').title()" />
                            </p>

                            <t t-call="estate.report_offer_table_template">
                                <t t-set="property" t-value="property" />
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>