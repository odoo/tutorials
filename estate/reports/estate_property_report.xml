<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- PDF Report Action: Property Offers Report -->
    <record id="action_report_estate_property_offer" model="ir.actions.report">
        <field name="name">Property Offers Report</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_estate_property_offer_document</field>
        <field name="report_file">estate.report_estate_property_offer_document</field>
        <field name="print_report_name">'Property Offers - %s' % (object.name)</field>
    </record>

    <record id="action_report_estate_salesman_offer" model="ir.actions.report">
        <field name="name">Salesman Property Offers</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_estate_salesman_offer_document</field>
        <field name="binding_model_id" ref="base.model_res_users" />
        <field name="print_report_name">'Salesman Property Offers - %s' % (object.name)</field>
    </record>

</odoo>