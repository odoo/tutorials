<odoo>


    <record id="estate_offer_list_view_tree" model="ir.ui.view">
        <field name="name">estate.offer.main.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Channel" editable="top" decoration-success="status=='accepted'" decoration-bf="status=='accepted'" decoration-muted="status=='sold'">
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <button name="action_accept_offer" title="allows to accept an offer" type="object" class="fa fa-check" invisible="status in ['accepted', 'refused']"/>
                <button name="action_refuse_offer" title="allows to refuse an offer" type="object" class="fa fa-times" invisible="status in ['accepted', 'refused']"/>
            </list>
        </field>
    </record>

    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">estate.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Offer">
                <sheet>
                    <h1 class="oe_title">
                        <field name="property_id"/>
                    </h1>
                    <div class="row">
                        <div class="col-12">
                            <group>
                                <field name="partner_id"/>
                                <field name="price"/>
                                <field name="status"/>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                                <field name="create_date"/>
                            </group>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id='estate_property_offer_action' model='ir.actions.act_window'>
        <field name='name'>Offers</field>
        <field name='res_model'>estate.property.offer</field>
        <field name='view_mode'>list,form</field>
    </record>
</odoo>
