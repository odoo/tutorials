<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- action view -->
    <record id='estate_property_offer_action' model='ir.actions.act_window'>
        <field name='name'>Property Offer</field>
        <field name='res_model'>estate_property_offer_model</field>
        <field name='view_mode'>list,form</field>
        <field name='domain'>[("property_type_id", "=", active_id)]</field>
    </record>
    <!-- form view -->
    <record id="estate_property_offer_model_form_view" model="ir.ui.view">
        <field name="name">estate_property_offer_model_form_view</field>
        <field name="model">estate_property_offer_model</field>
        <field name="arch" type="xml">
            <form string="Property_offer_Form">
                <field name="price"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <field name="partner_id"/>
                <field name="status"/>
            </form>
        </field>
    </record>
    <!-- list view -->
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate_property_offer_model_list_view</field>
        <field name="model">estate_property_offer_model</field>
        <field name="arch" type="xml">
            <list string="list_view">
                <field name="price"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <field name="status"/>
                <field name="partner_id"/>
            </list>
        </field>
    </record>

</odoo>