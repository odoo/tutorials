<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_available_properties_filter': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No properties yet!
            </p>
        </field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel"
                decoration-success="status=='offer_received' or status=='offer_accepted'"
                decoration-bf="status=='offer_accepted'"
                decoration-muted="status=='sold'">
                <field name="name" width="200%" />
                <field name="postcode" width="200%" />
                <field name="date_availability" optional="hide" />
                <field name="bedrooms" width="200%" />
                <field name="living_area" />
                <field name="status" width="200%" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold" string="Sold" type="object"
                        invisible="status == 'sold'" />
                    <button name="action_cancel" string="Cancel" type="object"
                        invisible="status == 'sold'" />
                </header>
                <header>
                    <field name="status" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="tags_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                            <group>
                                <field name="image" widget='image' optional="show" class="oe_avatar"
                                    style="max-width: 150px; max-height: 150px;" />
                            </group>
                            <field name="property_type_id"
                                options="{'no_create':True, 'no_open':True}"></field>
                            <field name="postcode" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="status == 'offer_accepted' or status=='sold' or status=='cancelled'">
                                <list editable="bottom"
                                    decoration-success="state=='accepted'"
                                    decoration-danger="state=='refused'">
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="property_type_id" />
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                    <button name="action_accepted" type="object" icon="fa-check"
                                        title="Accept"
                                        invisible="state == 'accepted' or state =='refused'" />
                                    <button name="action_refused" type="object" icon="fa-times"
                                        title="Refuse"
                                        invisible="state == 'accepted' or state=='refused'" />
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" />
                                <field name="seller_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area','>=',self)]" />
                <field name="facades" />
                <filter string="Available Properties" name="available_properties_filter"
                    domain="[('status', 'in', ['new', 'offer_received'])]" />
                <group string="Group By">
                    <filter string="Postcode" name="postcode_name" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="false">
                <field name="status" />
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bolder" />
                        <div> Expected Price : <field name="expected_price" />
                        </div>
                        <div t-if="record.status.raw_value == 'offer_received'"> Best Price : <field
                                name="best_price" />
                        </div>
                        <div t-if="record.status.raw_value == 'offer_accepted'"> Selling Price : <field
                                name="selling_price" />
                        </div>
                        <field name="tags_ids" widget="many2many_tags" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_url_action" model="ir.actions.act_url">
        <field name="name">Open External Website</field>
        <field name="url">http://localhost:8069/properties</field>
        <field name="target">new</field>
    </record>
</odoo>
