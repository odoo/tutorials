    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate_model</field>
        <field name="view_mode">list,form,kanban,graph</field>
        <field name="view_id" ref="estate_model_list_view"/> 
    </record>
    <record id="postcode_action" model="ir.actions.act_window">
        <field name="name">PostCode</field>
        <field name="res_model">estate_model</field>
        <field name="view_mode">list,form,kanban,graph</field>
        <field name="view_id" ref="estate_model_list_view"/>
    </record> 
    <record id="estate_model_form_view" model="ir.ui.view">
        <field name="name">estate_property_form_view</field>
        <field name="model">estate_model</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <h3>Name</h3>
                <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="postcode" style="border:2px"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/> 
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/> 
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/> 
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                    </notebook>
            </form>
        </field>
    </record>  
</odoo>     