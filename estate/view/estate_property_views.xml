<?xml version="1.0"?>
<odoo>

    <record id="estate_model_list_view" model="ir.ui.view">
        <field name="name">estate_property_view</field>
        <field name="model">estate_model</field>
        <field name="arch" type="xml">
            <list string="list_view">
                <field name="name"/> 
                <field name="postcode"/>
                <field name="bedrooms"/> 
                <field name="living_area"/>
                <field name="expected_price"/> 
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
            </list> 
        </field> 
    </record>

    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate_model</field>
        <field name="view_mode">list,form,kanban,graph</field>
        <field name="view_id" ref="estate_model_list_view"/> 
    </record>
    
    <record id="estate_model_form_view" model="ir.ui.view">
        <field name="name">estate_property_form_view</field>
        <field name="model">estate_model</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <h3>Name</h3>
                <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/> 
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="property_type_id"/>
                                <field name="bedrooms"/> 
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="state"/>
                                <field name="garden"/> 
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
            </form>
        </field>
    </record>  

    <record id="search_view" model="ir.ui.view">
            <field name="name">estate_search_view</field>
            <field name="model">estate_model</field>
            <field name="arch" type="xml">
                <search string="search view on field">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="property_type_id"/>
                    <filter string="Available Properties"
                            name="available_properties"
                            domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                    <group string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
    </record>
</odoo>    