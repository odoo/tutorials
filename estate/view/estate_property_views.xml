    <!-- list view code -->
    <record id="estate_model_list_view" model="ir.ui.view">
        <field name="name">estate_property_view</field>
        <field name="model">estate_model</field>
        <field name="arch" type="xml">
            <list string="list_view">
                <field name="name"/> 
                <field name="postcode"/>
                <field name="bedrooms"/> 
                <field name="living_area"/>
                <field name="expected_price"/> 
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list> 
        </field> 
    </record>
