<odoo>
    <record id="estate_list_view_tree" model="ir.ui.view">
        <field name="name">estate.main.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel" decoration-success="state in ['offer received', 'offer accepted']"  decoration-bf="state=='offer accepted'">
                <field name="name"/>
                <field name="last_seen"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>

    <record id="view_property_type_kanban" model="ir.ui.view">
        <field name="name">estate.main.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban string="name" default_group_by="property_type_id">
                <templates>
                    <div class="oe_kanban_card">
                        <t t-name="card">
                            <field name="name"/>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </t>
                    </div>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate">
            <header>
                <button name="action_property_sold" type="object" string="SOLD" invisible="state in ['sold', 'cancelled']"/>
                <button name="action_property_cancelled" type="object" string="CANCELLED" invisible="state in ['sold', 'cancelled']"/>
                <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
            </header>
                <sheet>
                    <h1 class="oe_title">
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids"  widget="many2many_tags" class="mb16" options="{'color_field': 'color'}"/>
                    <div class="row">
                        <div class="col-6">
                            <group>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                        </div>
                        <div class="col-6">
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="best_offer"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="living_area"/>
                                <field name="total_area"/>
                                <field name="property_type_id"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="sales_person_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state not in ['new', 'offer received']"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='estate_view_search' model="ir.ui.view">
        <field name="name">estate.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Estates">
                <field name="name"/>
                <field name="living_area" string="filter on living area size" filter_domain="[('living_area', '>=', self)]"/>
                <filter string="Available" name="available" domain="[('state', 'not in', ['sold','cancelled','offer_accepted'] )]"/>
                <filter string="Garage" name="garage" domain="[('garage', '!=', True )]"/>
                <group expand="True" string="Group By">
                        <filter string="Poscode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id='action_test_action' model='ir.actions.act_window'>
        <field name='name'>property_action</field>
        <field name='res_model'>estate.property</field>
        <field name='view_mode'>kanban,list,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>
</odoo>
