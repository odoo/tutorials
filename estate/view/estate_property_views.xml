<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available_properties_filter': True}</field>
    </record>

    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Channel"
                decoration-success="status=='offer_received' or status=='offer_accepted'"
                decoration-bf="status=='offer_accepted'"
                decoration-muted="status=='sold'"
            >
                <field name="name" width="200%" />
                <field name="postcode" width="200%" />
                <field name="date_availability" optional="hide" />
                <field name="bedrooms" width="200%" />
                <field name="living_area" />
                <field name="status" width="200%" />
            </list>
        </field>
    </record>
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold" string="Sold" type="object"
                        invisible="status == 'sold'" />
                    <button name="action_cancel" string="Cancel" type="object"
                        invisible="status == 'sold'" />
                </header>
                <header>
                    <field name="status" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="tags_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                            <field name="property_type_id"
                                options="{'no_create':True, 'no_open':True}"></field>
                            <field name="postcode" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="best_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" />
                                <!-- <field name="status" /> -->
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="status == 'offer_accepted' or status=='sold' or status=='cancelled'">
                                <list editable="bottom"
                                    decoration-success="state=='accepted'"
                                    decoration-danger="state=='refused'"
                                >
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="property_type_id" />
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                    <button name="action_accepted" type="object" icon="fa-check"
                                        title="Accept"
                                        invisible="state == 'accepted' or state =='refused'" />
                                    <button name="action_refused" type="object" icon="fa-times"
                                        title="Refuse"
                                        invisible="state == 'accepted' or state=='refused'" />
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" />
                                <field name="seller_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area','>=',self)]" />
                <field name="facades" />
                <filter string="Available Properties" name="available_properties_filter"
                    domain="[('status', 'in', ['new', 'offer_received'])]" />
                <group string="Group By">
                    <filter string="Postcode" name="postcode_name" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>
