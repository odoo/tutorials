<?xml version="1.0"?>
<odoo>
    <!-- Property Types -->
    <record id="property_type_house" model="estate.property.type">
        <field name="name">House</field>
    </record>

    <record id="property_type_apartment" model="estate.property.type">
        <field name="name">Industrial</field>
    </record>

    <record id="property_type_residential" model="estate.property.type">
        <field name="name">Residential</field>
    </record>

    <record id="property_type_land" model="estate.property.type">
        <field name="name">Land</field>
    </record>

    <record id="property_type_commercial" model="estate.property.type">
        <field name="name">Commercial</field>
    </record>

    <!-- Property Tags -->
    <record id="property_tag_new" model="estate.property.tag">
        <field name="name">New</field>
        <field name="color">1</field>
    </record>

    <record id="property_tag_renovated" model="estate.property.tag">
        <field name="name">Renovated</field>
        <field name="color">2</field>
    </record>

    <record id="property_tag_luxury" model="estate.property.tag">
        <field name="name">Luxury</field>
        <field name="color">3</field>
    </record>

    <record id="property_tag_semi_funished" model="estate.property.tag">
        <field name="name">Semi Furnished</field>
        <field name="color">4</field>
    </record>

    <record id="property_tag_full_furnished" model="estate.property.tag">
        <field name="name">Full Furnished</field>
        <field name="color">5</field>
    </record>

    <!-- Properties in website menu -->
    <record id="website_menu_list_properties" model="website.menu">
        <field name="name">Properties</field>
        <field name="url">/properties</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">60</field>
    </record>
</odoo>
