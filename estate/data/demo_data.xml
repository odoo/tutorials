<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
            
            <!-- Demo Properties -->
        <record id="property_big_villa" model="estate.property">
            <field name="name">Bigg Villa</field>
            <field name="state">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <!-- <field name="selling_price">1500001</field> -->
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">10000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="estate.pt2"/>
        </record>
        
        <record id="property_trailer_home" model="estate.property">
            <field name="name">Trailer Home</field>
            <field name="state">canceled</field>
            <field name="description">Home in a trailer partk</field>
            <field name="postcode">543231</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="property_type_id" ref="estate.pt2"/>
        </record>

        <record id="estate_demo_data6" model="estate.property">
            <field name="property_type_id" ref="estate.pt3" />
            <field name="name">Trailer Dome</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">454321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">10001</field>
            <field name="selling_price">120001</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="offer_ids"
                eval="[
                    Command.create({
                        'partner_id':ref('base.res_partner_12'),
                        'price': 1500002,
                        'validity':14,
                    })
    
                ]" />
        </record>
        
        <!-- Demo Offers -->
        <record id="offer_1" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_12"/> 
            <field name="property_id" ref="property_big_villa"/>
            <field name="price">100000</field>
            <field name="validity">14</field>
            <field name="date_deadline" eval="(datetime.now()+timedelta(days=14))" />
        </record>
        
        <record id="offer_2" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="property_id" ref="property_big_villa"/>
            <field name="price">1500000</field>
            <field name="validity">14</field>
            <field name="date_deadline" eval="(datetime.now()+timedelta(days=14))" />
        </record>

        <record id="offer_3" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="property_id" ref="property_big_villa"/>
            <field name="price">1500001</field>
            <field name="validity">14</field>
            <field name="date_deadline" eval="(datetime.now()+timedelta(days=14))" />
        </record>
        
        <function model="estate.property.offer" name="action_refuse_offer">
            <value eval="[ref('offer_1')]" />
        </function>

        <function model="estate.property.offer" name="action_refuse_offer">
            <value eval="[ref('offer_2')]" />
        </function>
        
        <function model="estate.property.offer" name="action_accept_offer">
            <value eval="[ref('offer_3')]" />
        </function>
        <!-- action_refuse_offer -->
        
    </data>
</odoo>
