<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="estate_property_type_residential" model="estate.property.type">
        <field name="name">Residential</field>
    </record>
    <!-- Big Villa record -->
    <record id="estate_demo_big_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price" eval="1600000"/>
        <field name="bedrooms" eval="6"/>
        <field name="living_area" eval="100"/>
        <field name="facades" eval="4"/>
        <field name="garage" eval="True"/>
        <field name="garden" eval="True"/>
        <field name="garden_area" eval="100000"/>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="estate_property_type_residential"/>
    </record>
    <!-- Trailer home record -->
    <record id="estate_demo_trailer_home" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">cancelled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price" eval="100000"/>
        <field name="selling_price" eval="120000"/>
        <field name="bedrooms" eval="1"/>
        <field name="living_area" eval="10"/>
        <field name="facades" eval="4"/>
        <field name="garage" eval="False"/>
        <field name="property_type_id" ref="estate_property_type_residential"/>
    </record>
    <!-- Offers records-->
    <record id="estate_demo_offer_2" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/> <!-- Azure Interior -->
        <field name="property_id" ref="estate_demo_big_villa"/> <!-- Big Villa -->
        <field name="price" eval="1500000"/>
        <field name="validity" eval="14"/>
    </record>
    <record id="estate_demo_offer_3" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"/> <!-- Deco Addict -->
        <field name="property_id" ref="estate_demo_big_villa"/> <!-- Big Villa -->
        <field name="price" eval="1500001"/>
        <field name="validity" eval="14"/>
    </record>
  </data>
</odoo>
