<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- demo Standard Property type-->
    <record id="demo_data_property_type1" model="estate.property.type">
        <field name="name">Residential</field>
    </record>
    <record id="demo_data_property_type2" model="estate.property.type">
        <field name="name">Commercial</field>
    </record>
    <record id="demo_data_property_type3" model="estate.property.type">
        <field name="name">Industrial</field>
    </record>
    <record id="demo_data_property_type4" model="estate.property.type">
        <field name="name">Land</field>
    </record>

    <!-- Demo Property-->
    <data noupdate="0"> 
        <record id="demo_property_1" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="status">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability" eval="(DateTime.now()).strftime('%Y-%m-%d')"/>
            <field name="expected_price">1600000</field>
            <field name="selling_price">1700000</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">1</field>
            <field name="garden">1</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">south</field>
            <field name="property_type_id" ref="demo_data_property_type1"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="demo_property_2" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="status">cancelled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability" eval="(DateTime.now()).strftime('%Y-%m-%d')"/>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">0</field>
            <field name="garden">0</field>
            <field name="garden_area">0</field>
            <field name="garden_orientation"></field>
            <field name="property_type_id" ref="demo_data_property_type1"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="demo_property_4" model="estate.property">
            <field name="name">Odoo Office</field>
            <field name="status">new</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability" eval="(DateTime.now()).strftime('%Y-%m-%d')"/>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">0</field>
            <field name="garden">0</field>
            <field name="garden_area">0</field>
            <field name="garden_orientation"></field>
            <field name="property_type_id" ref="demo_data_property_type3"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="demo_property_5" model="estate.property">
            <field name="name">Renew Home</field>
            <field name="status">new</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability" eval="(DateTime.now()).strftime('%Y-%m-%d')"/>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">0</field>
            <field name="garden">0</field>
            <field name="garden_area">0</field>
            <field name="garden_orientation"></field>
            <field name="property_type_id" ref="demo_data_property_type1"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>

    <!-- Demo Property Offers-->
    <record id="demo_data_property_offer1" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="demo_property_1"/>
        <field name="price">100000</field>
        <field name="validity">14</field>
    </record>
    <record id="demo_data_property_offer2" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_1"/>
        <field name="property_id" ref="demo_property_1"/>
        <field name="price">1500000</field>
        <field name="validity">14</field>
    </record>
    <record id="demo_data_property_offer3" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="property_id" ref="demo_property_1"/>
        <field name="price">1500001</field>
        <field name="validity">14</field>
    </record>
    <function model="estate.property.offer" name="action_accept_offer">
        <value eval="[ref('demo_data_property_offer3')]"/>
    </function>
</odoo>
