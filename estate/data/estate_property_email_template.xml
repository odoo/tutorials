<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_property_sold" model="mail.template">
        <field name="name">Property Sold Notification</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="email_from">{{object.seller_id.email}}</field>
        <field name="email_to">{{object.buyer_id.email}}</field>
        <field name="subject">Your Property Purchase: {{object.name}}</field>
        <field name="body_html" type="html">
            <tr>
                <td style="min-width: 590px;">
                    <table border="0" cellpadding="0" cellspacing="0" width="590"
                        style="min-width: 590px;">
                        <tr>
                            <td valign="top" style="font-size: 13px;">
                                <div>
                                    <p>Dear <t t-out="object.buyer_id.name or 'Valued Customer'" />,</p>

                                    <p>Congratulations! We are pleased to inform you that the property 
                                        <strong>
                                            <t t-out="object.name" />
                                        </strong>
                                        has been successfully sold to you.</p>

                                    <p>Thank you for your trust in 
                                        <strong> <t t-out="object.company_id.name or 'Our Company'" />
                                        </strong>.
                                        If you have any further inquiries, feel free to contact us.
                                    </p>

                                    <p>Best regards,<br />
                                        <strong>
                                                <t t-out="object.company_id.name or 'The Real Estate Team'" />
                                        </strong>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </field>
    </record>
</odoo>