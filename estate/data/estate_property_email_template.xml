<odoo>
    <record id="email_template_property_sold" model="mail.template">
        <field name="name">Property Sold Notification</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="subject">Congratulations! Your Purchase of {{object.name}} is Confirmed</field>
        <field name="email_from">{{object.salesperson_id.email}}</field>
        <field name="email_to">{{object.buyer_id.email}}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[
                <p>Hello <strong><t t-out="object.buyer_id.name"/></strong>,</p>
                <p><strong>Congratulations!</strong> You have successfully purchased the property:</p>
                <ul>
                    <li><strong>Property Name:</strong> <t t-out="object.name"/></li>
                    <li><strong>Final Price:</strong> $ <t t-out="object.selling_price"/></li>
                    <li><strong>Sold On:</strong> <t t-out="format_date(object.write_date)"/></li>
                </ul>
                <p>We hope you enjoy your new property!</p>
                <p>Best regards,<br/> <t t-out="object.company_id.name"/> Team</p>
            ]]>
        </field>
    </record>
</odoo>