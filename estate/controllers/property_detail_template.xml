<odoo>
    <template id="property_detail_template" name="Property Detail">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <h2 t-esc="property.name"/>
                        <p class="text-muted">Price: <t t-esc="property.expected_price"/> INR</p>
                        <t t-if="property.image_1920">
                            <img t-att-src="'/web/image/estate.property/%s/image_1920' % property.id"
                                 class="img-fluid rounded shadow-sm mb-4"
                                 alt="Property Image"/>
                        </t>
                        <p t-esc="property.description"/>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-3 shadow-sm" style="margin-top: 140px ">
                            <h4 class="mb-3">Property Details</h4>
                            <p><strong>Type:</strong> <t t-esc="property.property_type_id.name"/></p>
                            <p><strong>Bedrooms:</strong> <t t-esc="property.bedrooms"/></p>
                            <p><strong>postcode:</strong> <t t-esc="property.postcode"/> </p>
                            <p><strong>Availability Date:</strong> <t t-esc="property.date_availability"/> </p>
                            <p><strong>Size:</strong> <t t-esc="property.living_area"/> </p>
                            <p><strong>Facades:</strong> <t t-esc="property.facades"/> </p>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-center">
                        <a href="/properties" class="btn btn-secondary">Back to Listings</a>
                    </div>
                </div>
                <br></br>
            </div>
        </t>
    </template>
</odoo>


