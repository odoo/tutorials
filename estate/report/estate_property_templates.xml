<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="properties_template" name="Porperty Listing">
        <t t-call="website.layout">
            <div class="container pt-3">
                <h2 class="mb-4">Available Properties</h2>
                <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="col-sm">
                            <div class="card my-3" style="width: 24rem; height:26em;">
                                <t t-if="property.image">
                                    <img
                                        t-att-src="('/web/image/%s/%s/image' % ('estate.property', property.id))"
                                        class="card-img-top" style="height: 250px;"
                                        alt="Property image"/>
                                </t>
                                <t t-else="">
                                    <img src="/estate/static/img/img-1.jpg" style="height: 250px;"
                                        class="card-img-top w-auto"
                                        alt="Property image"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <t t-out="property.name"/>
                                    </h5>
                                    <p class="card-text">
                                        <t t-out="property.description" widget="text"/>
                                    </p>
                                    <a t-attf-href="/property/{{property.id}}"
                                        class="btn btn-primary">View Property</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="my-5 mx-auto">
                    <t t-call="website.pager" t-value="pager"/>
                </div>
            </div>
        </t>
    </template>

    <template id="property_detail_template" name="Porperty Listing">
        <t t-call="website.layout">
            <div class="container px-5 py-3">
                <h2 class="my-5 px-5">Property Details</h2>
                <div class="row">
                    <div class="col-md-6 d-flex px-5">
                        <t t-if="property.image">
                            <img t-att-src="('/web/image/%s/%s' % ('estate.property', property.id))"
                                class="img img-fluid shadow-sm mb-2 bg-gray rounded"
                                alt="Property image"/>
                        </t>
                        <t t-else="">
                            <img src="/estate/static/img/img-1.jpg"
                                class="img img-fluid shadow-sm mb-2 bg-gray rounded"
                                alt="Property image"/>
                        </t>
                    </div>
                    <div class="col-md-6 my-auto px-5">
                        <h3>
                            <t t-out="property.name"/>
                        </h3>
                        <h4 class="mt-n2 text-info">$ <t t-out="property.expected_price"/></h4>
                        <p class="mt-4">
                            <t t-out="property.description"/>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm my-4 px-5">
                        <table class="table">
                            <tbody>
                                <tr t-if="property.property_type_id">
                                    <th scope="row">Property Type</th>
                                    <td>
                                        <p><t t-out="property.property_type_id.name"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Postcode</th>
                                    <td>
                                        <p><t t-out="property.postcode"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Bedrooms</th>
                                    <td>
                                        <p><t t-out="property.bedrooms"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Living Area (sqm)</th>
                                    <td>
                                        <p><t t-out="property.living_area"/></p>
                                    </td>
                                </tr>
                                <tr t-if="property.garden">
                                    <th scope="row">Garden Area (sqm)</th>
                                    <td>
                                        <p><t t-out="property.garden_area"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Total Area (sqm)</th>
                                    <td>
                                        <p><t t-out="property.total_area"/></p>
                                    </td>
                                </tr>
                                <tr t-if="property.garden">
                                    <th scope="row">Garden Area (sqm)</th>
                                    <td>
                                        <p><t t-out="property.garden_orientation"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Available From</th>
                                    <td>
                                        <p><t t-out="property.date_availability"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Facades</th>
                                    <td>
                                        <p><t t-out="property.facades"/></p>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Garage</th>
                                    <td>
                                        <p><t t-if="property.garage">Available</t>
                                            <t t-else=""> Not Available</t>
                                        </p>
                                    </td>
                                </tr>
                                <tr t-if="property.salesperson_id">
                                    <th scope="row">Salesman</th>
                                    <td>
                                        <p><t t-out="property.salesperson_id.name"/></p>
                                    </td>
                                </tr>
                                <tr t-if="property.tags_ids">
                                    <th scope="row">Tags</th>
                                    <td class="d-flex">
                                        <ul t-foreach="property.tags_ids" t-as="tags">
                                            <li>
                                                <t t-out="tags.name"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="property_report">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div t-if="property.salesperson_id">
                        <strong>Salesman: </strong>
                        <span t-field="property.salesperson_id.name" />
                    </div>
                    <t t-call="estate.property_offer_report_page"/>                    
                </t>
            </t>
        </t>
    </template>

    <template id="property_offer_report">
        <t t-if="property.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity (days)</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                        <tr t-foreach="offers" t-as="offer">
                            <td>
                                <span t-field="offer.price"/>
                            </td>
                            <td>
                                <span t-field="offer.partner_id"/>
                            </td>
                            <td>
                                <span t-field="offer.validity"/>
                            </td>
                            <td>
                                <span t-field="offer.date_deadline"/>
                            </td>
                            <td>
                                <span t-field="offer.status"/>
                            </td>
                        </tr>
                    </tbody>
            </table>
        </t>
        <t t-else="">
            <p>No offers have been made yet :(</p>
        </t>
    </template>

    <template id="property_offer_report_page">
        <div class="page">
            <h2>
                <span t-field="property.name" />
            </h2>
            <div>
                <strong>Expected Price: </strong>
                <span t-field="property.expected_price" />
            </div>
            <div>
                <strong>Status: </strong>
                <span t-field="property.state" />
            </div>
            <t t-call="estate.property_offer_report" />
        </div>
    </template>

    <template id="property_report_salesman">
        <t t-foreach="docs" t-as="salesman">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div>
                        <strong>Salesman: </strong>
                        <span t-field="salesman.name" />
                    </div>

                    <t t-if="salesman.property_ids">
                        <t t-set="properties" t-value="salesman.mapped('property_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            <t t-call="estate.property_offer_report_page"/>   
                        </t>
                    </t>
                    <t t-else="">
                        <p>Salesman does not have any properties listed!!</p>
                    </t>      
                </t>
            </t>
        </t>
    </template>
</odoo>
