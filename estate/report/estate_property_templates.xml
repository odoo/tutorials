<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="subtemplate_property_offers">
        <t t-if="property.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th><strong>Price</strong></th>
                        <th><strong>Partner</strong></th>
                        <th><strong>Validity</strong></th>
                        <th><strong>Deadline</strong></th>
                        <th><strong>State</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="property.offer_ids" t-as="offer">
                        <tr>
                            <td>
                                <span t-field="offer.price"/>
                            </td>
                            <td>
                                <span t-field="offer.partner_id"/>
                            </td>
                            <td>
                                <span t-field="offer.validity"/>
                            </td>
                            <td>
                                <span t-field="offer.date_deadline"/>
                            </td>
                            <td>
                                <span t-field="offer.status"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <p><em>No offers received yet.</em></p>
        </t>
    </template>
    <template id="report_property_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <main> 
                        <div class="page">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <br/>
                            <t t-call="estate.subtemplate_property_offers"/>
                        </div>
                    </main>
                </t>
            </t>
        </t>
    </template>
    <template id="report_salesperson_properties">
        <t t-foreach="docs" t-as="salesperson">
            <t t-call="web.external_layout">
                <main>
                <div class="page">
                    <h2>Salesman: <span t-field="salesperson.name" /></h2>
                    <t t-set="properties" t-value="salesperson.property_ids"/>
                    <t t-if="properties">
                        <t t-foreach="properties" t-as="property">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <t t-call="estate.subtemplate_property_offers"/>
                        </t>
                    </t>
                    <t t-else="">
                        <p><em>Property Not available yet.</em></p>
                    </t>
                </div>
                </main>
            </t>
        </t>
        
    </template>
</odoo>
