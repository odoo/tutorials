<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name" />
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson_id.name" />
                        </div>
                        <t t-call="estate.report_property_info" />
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_salesman_properties">
        <t t-foreach="docs" t-as="salesman">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2> Salesman: <span t-field="salesman.name" /></h2>
                        <t t-if="salesman.property_ids">
                            <t t-set="properties" t-value="salesman.mapped('property_ids')" />
                            <t t-foreach="properties" t-as="property">
                                <h3>
                                    <span t-field="property.name" />
                                </h3>
                                <t t-call="estate.report_property_info" />
                            </t>
                        </t>
                        <t t-else="">
                            <p>No properties have been assigned for this salesperson.</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_property_info">
        <div>
            <strong>Expected Price: </strong>
            <span t-field="property.expected_price" />
        </div>
        <div>
            <strong>Status: </strong>
            <span t-field="property.state" />
        </div>
        <t t-if="property.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity (days)</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_ids')" />
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price" />
                        </td>
                        <td>
                            <span t-field="offer.partner_id.name" />
                        </td>
                        <td>
                            <span t-field="offer.validity" />
                        </td>
                        <td>
                            <span t-field="offer.date_deadline" />
                        </td>
                        <td>
                            <span t-field="offer.status" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <p>No offers have been made for this property yet.</p>
        </t>
    </template>

    <!-- Template of properties card in website -->
    <template id="property_list_template">
        <t t-call="website.layout">
            <div class="container">
                <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 mt-5">
                    <h1>Properties</h1>
                    <form method="GET" action="/estate_properties" class="d-flex gap-2 col-md-4">
                        <input type="date" id="filter_date" name="filter_date" class="form-control"
                            t-att-value="filter_date" />
                        <button type="submit" class="btn btn-primary">Listed After</button>
                    </form>
                </div>
                <!-- Property Grid -->
                <t t-if="properties">
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 mb-4">
                                <a t-att-href="'property/%s' % property.id">
                                    <div class="card">
                                        <img t-if="property.property_img"
                                            t-att-src="image_data_uri(property.property_img)"
                                            class="card-img-top" alt="Property Image" />
                                        <img t-else=""
                                            t-att-src="'/estate/static/img/house.jpeg'"
                                            alt="Default Image" />
                                        <div class="card-body">
                                            <h5 class="card-title" t-out="property.name" />
                                            <p class="card-text">Expected Price: <t
                                                    t-out="property.expected_price" /></p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </t>
                    </div>
                </t>
                <t t-else="">
                    <p class="text-center text-muted">No properties found.</p>
                </t>
                <!-- Pagination -->
                <nav>
                    <ul class="pagination justify-content-center align-items-center">
                        <t t-if="page &gt; 1">
                            <li class="page-item">
                                <a class="page-link"
                                    t-att-href="'/estate_properties?page=%s&amp;filter_date=%s' % (page-1, filter_date or '')">
                                    Previous</a>
                            </li>
                        </t>
                        <li class="page-item disabled">
                            <a class="page-link">Page <t t-out="page" /></a>
                        </li>
                        <t t-if="has_next">
                            <li class="page-item">
                                <a class="page-link"
                                    t-att-href="'/estate_properties?page=%s&amp;filter_date=%s' % (page+1, filter_date or '')">
                                    Next</a>
                            </li>
                        </t>
                    </ul>
                </nav>
            </div>
        </t>
    </template>

    <template id="website_property_details">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="property-banner">
                    <img t-if="property.property_img"
                        t-att-src="image_data_uri(property.property_img)"
                        class="img-fluid rounded shadow w-100" alt="Property Image" />
                    <img t-else=""
                        t-att-src="'/estate/static/img/house.jpeg'"
                        alt="Default Image"
                        class="img-fluid rounded shadow w-100" />
                </div>
                <!-- Property Info -->
                <div class="row mt-4">
                    <div class="col-md-8">
                        <h1 class="fw-bold" t-out="property.name" />
                        <h4 class="text-primary">Rs. <t t-out="property.expected_price" /></h4>
                        <p class="text-muted">
                            <i class="fa fa-map-marker"></i>
                            <t t-out="property.postcode" />
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <i class="fa fa-user"></i>
                        <t t-out="property.salesperson_id.name" />
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-4 text-center mt-2">
                        <div class="p-3 bg-light rounded shadow-sm">
                            <i class="fa fa-bed fa-2x text-primary"></i>
                            <h5 class="mt-2">Bedrooms</h5>
                            <p class="fw-bold" t-out="property.bedrooms" />
                        </div>
                    </div>
                    <div class="col-md-4 text-center mt-2">
                        <div class="p-3 bg-light rounded shadow-sm">
                            <i class="fa fa-tree fa-2x text-primary"></i>
                            <h5 class="mt-2">Garden</h5>
                            <t t-if="property.garden">
                                <p class="fw-bold">Available</p>
                            </t>
                            <t t-else="">
                                <p class="fw-bold">Not Available</p>
                            </t>
                        </div>
                    </div>
                    <div class="col-md-4 text-center mt-2">
                        <div class="p-3 bg-light rounded shadow-sm">
                            <i class="fa fa-expand fa-2x text-primary"></i>
                            <h5 class="mt-2">Living Area</h5>
                            <p class="fw-bold"><t t-out="property.living_area" /> sqm</p>
                        </div>
                    </div>
                </div>
                <!-- Property Description -->
                <t t-if="property.description">
                    <div class="mt-5">
                        <h3 class="fw-bold">Property Description</h3>
                        <p class="text-muted" t-out="property.description" />
                    </div>
                </t>
                <!-- Offers Section -->
                <div class="mt-5 mb-3">
                    <h3 class="fw-bold">Offers</h3>
                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Buyer</th>
                                <th>Offer Price</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="property.offer_ids" t-as="offer">
                                <tr>
                                    <td t-out="offer.partner_id.name" />
                                    <td>$<t t-out="offer.price" /></td>
                                    <td>
                                        <span
                                            t-att-class="'badge ' + ('bg-success' if offer.status == 'accepted' else 'bg-danger')">
                                            <t t-out="offer.status" />
                                        </span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>
