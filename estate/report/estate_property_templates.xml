<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_offers_table">
        <t t-if="offers">
            <table class="table">
                <thead>
                    <tr>
                        <th>Buyer</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Offer Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                        <td>
                            <span t-field="offer.create_date"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <p>
                <i>No offers yet on this property.</i>
            </p>
        </t>
    </template>

    <template id="report_property_offer">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Property Type: </strong>
                            <span t-field="property.property_type_id.name"/>
                        </div>
                        <div>
                            <strong>Property Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-if="property.state == 'sold'">
                            <div>
                                <strong>Invoice Status:</strong> Invoice Created
                            </div>
                        </t>
                        <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                        <t t-call="estate.property_offers_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

