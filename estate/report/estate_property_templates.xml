<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Table Sub-template -->
    <template id="report_estate_property_offers_table">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity(days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')" />
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price" />
                    </td>
                    <td>
                        <span t-field="offer.partner_id"></span>
                    </td>
                    <td>
                        <span t-field="offer.validity"></span>
                    </td>
                    <td>
                        <span t-field="offer.deadline"></span>
                    </td>
                    <td>
                        <span t-field="offer.status"></span>
                    </td>
                </tr>
            </tbody>

        </table>
    </template>
    <!-- Main Template -->
    <template id="report_property_template_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.company_id.name" />
                        </h2>
                        <div>
                            <span t-field="property.company_id.street"></span>
                        </div>
                        <div>
                            <span t-field="property.company_id.city"></span>
                            <span t-field="property.company_id.state_id.name"></span>
                            <span t-field="property.company_id.zip"></span>
                        </div>
                        <div>
                            <span t-field="property.company_id.country_id.name"></span>
                        </div>
                        <h2>
                            <span t-field="property.name" />
                        </h2>
                        <div>
                            <strong>Salesman:</strong>
                            <span t-field="property.salesperson_id" />
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price" />
                        </div>
                        <div>
                            <strong>Status:</strong>
                            <span t-field="property.state" />
                        </div>
                        <t t-if="property.offer_ids and len(property.offer_ids) > 0">
                            <t t-call="estate.report_estate_property_offers_table" />
                        </t>
                        <t t-else="">No Offer have been made yet!!</t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Print all property template -->
    <template id="report_salesman_template_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="user.name" />
                        </h2>
                        <div>
                            <strong>Properties:</strong>
                        </div>
                        <t t-if="user.property_ids">
                            <t t-foreach="user.property_ids" t-as="property">
                                <div>
                                    <strong>Property Name:</strong>
                                    <span t-field="property.name" />
                                </div>
                                <div>
                                    <strong>Expected Price:</strong>
                                    <span t-field="property.expected_price" />
                                </div>
                                <div>
                                    <strong>Status:</strong>
                                    <span t-field="property.state" />
                                </div>
                            </t>
                            <t t-if="property.offer_ids and len(property.offer_ids) > 0">
                            <t t-call="estate.report_estate_property_offers_table" />
                            </t>
                        </t>
                        <t t-else="">No Properties have been assigned
                            yet!!</t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
