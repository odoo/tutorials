<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- template for estate_property -->
    <template id="estate_property_offer_template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container"> 
                <t t-call="web.external_layout"> <!-- adds default header and footer web module must be installed-->
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson.name"/>
                            <br/>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                            <br/>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                            <br />
                            <span id="estate_account_data_here"></span>
                        </div>
                        <t t-call="estate.property_offers_template_table" />
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- template to generate the property report associated to a user -->
    <template id="estate_property_offer_template_res_user">
        <t t-call="web.html_container"> 
            <t t-call="web.external_layout"> <!-- adds default header and footer web module must be installed-->
                <div class="page">
                    <h1>
                        <strong>Salesman: </strong> <span t-field="docs.name" />
                    </h1>
                    <t t-foreach="docs.property_ids" t-as="property">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                            <br/>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                            <br />
                        </div>
                        <t t-call="estate.property_offers_template_table" />
                    </t>
                    <br/>
                </div>
            </t>
        </t>
    </template>

    <!-- template for table offer table creation -->
    <template id="property_offers_template_table">

        <t t-if="len(property.mapped('offer_ids')) > 0">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Price</th>
                        <th scope="col">Partner</th>
                        <th scope="col">Validity (days)</th>
                        <th scope="col">Deadline</th>
                        <th scope="col">State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            there are no offers related to <span t-field="property.name" />
        </t>
    
    </template>

    <!--template to show the available propertiees in the website in /properties route-->
    <template id="estate_property_website_grid_view">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <t t-foreach="all_properties" t-as="property">
                        <div class="col-12 col-md-4">
                            <div class="card">
                                <t t-if="property.image">
                                    <img t-att-src="image_data_uri(property.image)" class="card-img-top"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <span t-field="property.name"></span>
                                    </h5>
                                    <p class="card-text">
                                        <span t-field="property.description" />
                                    </p>
                                    <a t-att-href="'/properties/%s' % property.id" class="btn btn-primary">View more</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>


                <!--pagination-->
                <div class="d-flex justify-content-center mt-5">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <t t-if="current_page-1 == 0">
                                    <a class="page-link disabled">
                                        <i class="fa fa-angle-left" />
                                    </a>
                                </t>
                                <t t-else="">
                                    <a class="page-link" t-att-href="'?page=%s' % (current_page-1)">
                                        <i class="fa fa-angle-left" />
                                    </a>
                                </t>
                            </li>
                            <t t-foreach="total_arr" t-as="index">
                                <li class="page-item px-1">
                                    <t t-if="index==current_page-1">
                                        <a class="page-link active" t-att-href="'?page=%s' % (index+1)">
                                            <t t-out="index+1" />
                                        </a>
                                    </t>
                                    <t t-else="">
                                        <a class="page-link" t-att-href="'?page=%s' % (index+1)">
                                            <t t-out="index+1" />
                                        </a>
                                    </t>
                                </li>
                            </t>
                            <li class="page-item">
                                <t t-if="current_page == len(total_arr)">
                                    <a class="page-link disabled" t-att-href="'?page=%s' % (current_page+1)">
                                        <i class="fa fa-angle-right" />
                                    </a>
                                </t>
                                <t t-else="">
                                    <a class="page-link" t-att-href="'?page=%s' % (current_page+1)" t-att-disabled="">
                                        <i class="fa fa-angle-right" />
                                    </a>
                                </t>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </t>
    </template>

    <!--template to show a single propertiees in the website in /properties/<property_id> route-->
    <template id="estate_property_website_single_view">
        <t t-call="website.layout">
            <div class="container">
                <t t-if="property_details.image">
                    <img t-att-src="image_data_uri(property_details.image)" class="card-img-top w-50 h-50"/>
                </t> <br/>
                name: <span t-field="property_details.name"/><br/>
                description: <span t-field="property_details.description"/><br/>
                postcode: <span t-field="property_details.postcode"/><br/>
                expected_price: <span t-field="property_details.expected_price"/><br/>
                best_price: <span t-field="property_details.best_price"/><br/>
                garden_area: <span t-field="property_details.garden_area"/><br/>
                garden_orientation: <span t-field="property_details.garden_orientation"/><br/>
                total_area: <span t-field="property_details.total_area"/><br/>
            </div>
        </t>
    </template>
</odoo>