<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="offers_template">
        <t t-call="web.html_container">
            <table t-if="property.offer_ids" class="table">
                <thead>
                    <tr>
                        <th>
                            <strong>Price</strong>
                        </th>
                        <th>
                            <strong>Partner</strong>
                        </th>
                        <th>
                            <strong>Validity (days)</strong>
                        </th>
                        <th>
                            <strong>Deadline</strong>
                        </th>
                        <th>
                            <strong>Status</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                        <tr t-foreach="offers" t-as="offer">
                            <td>
                                <span t-field="offer.price"/>
                            </td>
                            <td>
                                <span t-field="offer.partner_id"/>
                            </td>
                            <td>
                                <span t-field="offer.validity"/>
                            </td>
                            <td>
                                <span t-field="offer.date_deadline"/>
                            </td>
                            <td>
                                <span t-field="offer.status"/>
                            </td>
                        </tr>
                </tbody>
            </table>
            <div t-else="">
                <strong>No Offers have been made yet!</strong>
            </div>
        </t> 
    </template>

    <template id="estate_property_report_template_badge">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesman_id"/><br/>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/><br/>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-call="estate.offers_template"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="estate_property_user_report_template">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="user.name"/><br/>
                        </h1>
                        <t t-if="user.property_ids">
                            <t t-foreach="user.property_ids" t-as="property">
                                <div class="property-section">
                                    <h2>
                                        <span t-field="property.name"/>
                                    </h2>
                                    <div>
                                        <strong>Expected Price: </strong>
                                        <span t-field="property.expected_price"/><br/>
                                        <strong>Status: </strong>
                                        <span t-field="property.state"/>
                                    </div>
                                    <t t-call="estate.offers_template"/>
                                </div>
                            </t>
                        </t>
                        <div t-else="">
                            <strong>This salesperson doesn't have any property!</strong>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
