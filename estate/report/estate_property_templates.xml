<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<template id="report_propertyofferstable">
    <table class="table">
        <thead style="display: table-row-group">
            <tr>
                <th name="" class="text-start"><strong>Price</strong></th>
                <th name="" class="text-end"><strong>Partner</strong></th>
                <th  name="" class="text-end"><strong>Validity (days)</strong></th>
                <th name="" class="text-end"><strong>Deadline</strong></th>
                <th name="" class="text-end"><strong>State</strong></th>
            </tr>
        </thead>
        <tbody>
            <t t-set="offers" t-value="property.mapped('offer_ids')"/>
            <t t-if="offers">
                <tr t-foreach="offers" t-as="offer">
                    <td> <span t-field="offer.price"/> </td>
                    <td class="text-end"> <span t-field="offer.partner_id"/>  </td>
                    <td class="text-end"> <span t-field="offer.validity"/>  </td>
                    <td class="text-end"> <span t-field="offer.date_deadline"/> </td>
                    <td class="text-end"><span t-field="offer.status"/></td>
                </tr>
            </t>
            <t t-if="not offers">
                <td><strong> NO OFFERS YET GENERATED!! </strong></td>
            </t>
        </tbody>
    </table>
</template>

<template id="report_propertyoffers">
    <t t-foreach="docs" t-as="property">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
        
                <div class="page">
                    <h2><span t-field="property.name"/></h2>
                    <div>
                        <strong>Salesman: </strong>
                        <span t-field="property.partner_id"/>
                    </div>
                    <div>
                        <strong>Expected Price: </strong>
                        <span t-field="property.expected_price"/>
                    </div>
                    <div>
                        <strong>Status: </strong>
                        <span t-field="property.state"/>
                    </div>
                    <t t-call="estate.report_propertyofferstable"/>
                </div>
            </t>
        </t>
    </t>
</template>

<template id="report_salesmanproperties">
    <t t-foreach="docs" t-as="user">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
              
                <div class="page">
                    <h2>
                        <span t-field="user.name"/>
                    </h2>
                    <t t-set="properties" t-value="user.mapped('property_ids')"/>
                    <t t-foreach="properties" t-as="property">
                    <div>
                        <strong>Name: </strong>
                        <span t-field="property.name"/>
                    </div>
                    <div>
                        <strong>Expected Price: </strong>
                        <span t-field="property.expected_price"/>
                    </div>
                    <div>
                        <strong>Status: </strong>
                        <span t-field="property.state"/>
                    </div>
                    <t t-call="estate.report_propertyofferstable"/>
                    </t>
                    
                </div>
            </t>
        </t>
    </t>
</template>

<template id="report_offer_basic_inherited" name="Offer Basic Inherited" inherit_id="estate.report_propertyoffers">
    <xpath expr="//div[3]" position="after">
        <strong t-if="property.state=='sold'" class="text-danger fw-bold">!!! Invoice has already been created !!!</strong>
    </xpath>
</template>

</odoo>
