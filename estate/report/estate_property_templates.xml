<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="estate.report_company_details">
                            <t t-set="company_source" t-value="property"/>
                        </t>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div class="property_details">
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                            <br/>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="estate.report_offer_table"/>
                        </t>
                        <t t-else="">
                            <div>There are no offers for this property.</div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_salesman_offers">
        <t t-foreach="docs" t-as="salesman">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="estate.report_company_details">
                            <t t-set="company_source" t-value="salesman"/>
                        </t>
                        <t t-set="properties" t-value="salesman.property_ids"/>
                        <t t-foreach="properties" t-as="property">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                                <br/>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <t t-call="estate.report_offer_table"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_offer_table">
        <table class="table">
            <thead class="fw-bold fs-5">
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity(days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.offer_ids"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
    <template id="report_company_details">
        <div>
            <h5 t-field="company_source.company_id.name" />
            <hr />
            <h5 t-field="company_source.company_id.partner_id.street" />
            <h5 t-field="company_source.company_id.partner_id.city" />
            <h5>
                <span t-field="company_source.company_id.partner_id.zip" />
                <span t-field="company_source.company_id.partner_id.state_id.name" />
            </h5>
            <h5 t-field="company_source.company_id.partner_id.country_id.name" />
            <br/>
            <br/>
            <br/>
        </div>
    </template>
</odoo>
