<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_estate_property_property" t-name="report_estate_property_property">
        <t t-if="docs">
            <t t-foreach="docs" t-as="property" t-if="property">
                <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 style="font-size: 32px; margin-bottom: 20px;">
                                <span t-field="property.name"/>
                            </h2>

                            <div style="margin-bottom: 20px;">
                                <div><strong>Salesman: </strong><span t-field="property.salesman_id"/></div>
                                <div><strong>Expected Price: </strong><span t-field="property.expected_price"/></div>
                                <div><strong>Status: </strong><span t-field="property.status"/></div>
                            </div>
                                <t t-call="estate.report_estate_property_offer" />
                        </div>
                    </t>
                </t>
            </t>
        </t>
        <t t-else="">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="text-align: center; padding: 50px;">
                        <h2>No data available to generate the report.</h2>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
