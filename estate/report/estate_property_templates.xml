<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_estate_property">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesman_id"/>
                        </div>
                        <div id="state">
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div><hr/>
                        <t t-call="estate.report_property_offer"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_property_offer">
        <t t-if = "len(property.offer_ids) == 0">
            <h4 class="fw-bold">No offers have been made yet!</h4>
        </t>
        <t t-else = "">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity(Days)</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
    </template>

    <template id="report_estate_property_for_user">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesman: </strong>
                            <span t-field="user.name" />
                        </h2>
                        <t t-foreach="user.property_ids" t-as="property">
                            <h3 t-field="property.name"/>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price" />
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.state" />
                            </div>
                            <t t-call="estate.report_property_offer" />
                            <hr style="margin-bottom: 30px;"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
