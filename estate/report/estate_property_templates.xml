<odoo>
    <template id="sub_template_property_details">
        <t t-if="property">
            <div>
                <div>
                    <h1><span t-field="property.name" /></h1>
                </div>
                <div>
                    <strong>Expected Price: </strong>
                    <span t-field="property.expected_price" />
                </div>
                <div>
                    <strong>State: </strong>
                    <span t-field="property.state" />
                </div>
            </div>
            <t t-if="property.offer_ids">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Partner</th>
                            <th>Price</th>
                            <th>Deadline</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="offers" t-value="property.mapped('offer_ids')" />
                        <tr t-foreach="offers" t-as="offer">
                            <td><span t-field="offer.partner_id.name" /></td>
                            <td><span t-field="offer.price" /></td>
                            <td><span t-field="offer.deadline" /></td>
                            <td><span t-field="offer.state" /></td>
                        </tr>
                    </tbody>
                </table>
            </t>
            <t t-else="">
                <div>No Offers have been made yet :(</div>
            </t>
        </t>
    </template>

    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesperson: </strong>
                            <span t-field="property.user_id" />
                        </h2>
                        <t t-set="property" t-value="property" />
                        <t t-call="estate.sub_template_property_details" />
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_salesperson_property">
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesperson: </strong>
                            <span t-field="users.name" />
                        </h2>
                        <t t-foreach="users.property_ids" t-as="property">
                            <t t-set="property" t-value="property" />
                            <t t-call="estate.sub_template_property_details" />
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
