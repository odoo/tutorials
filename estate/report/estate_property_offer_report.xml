<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate_property_offer_report" name="Estate Propety Offer Report">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">Price</th>
                        <th class="text-center">Partner</th>
                        <th class="text-center">Validity (days)</th>
                        <th class="text-center">Deadline</th>
                        <th class="text-center">State</th>
                    </tr>
                </thead>
                <t t-if="property">
                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                </t>
                <t t-else="">
                    <t t-set="offers" t-value="[]"/>
                </t>
                <t t-if="offers">
                    <tbody>
                        <t t-foreach="offers" t-as="offer">
                            <tr>
                                <td class="text-center">
                                    <span t-field="offer.price"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="offer.partner_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="offer.validity"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="offer.date_deadline"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="offer.status"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
                <t t-else="">
                    <tbody>
                        <tr>
                            <td colspan="5" class="text-center">There are no offers for this property.</td>
                        </tr>
                    </tbody>
                </t>
            </table>
        </div>
    </template>
</odoo>
