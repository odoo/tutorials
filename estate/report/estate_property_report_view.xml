<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_report_property_offers" model="ir.actions.report">
        <field name="name">Property Offers Report</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_property_offers</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="print_report_name">'Property Offers - %s' % object.name</field>
    </record>

    <!-- Report for salesperson's properties -->
    <record id="action_report_salesperson_properties" model="ir.actions.report">
        <field name="name">Salesperson properties Report</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_salesperson_properties</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="print_report_name">'Salesperson Property Report'</field>
    </record>
</odoo>
