
<odoo>
    <template id="public_property_single_web_render">
        <!-- Link to Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"></link>
        
        <t t-call="website.layout">
            <t t-set="title">Property Details</t>
            <div class="oe_structure">
                <div class="container">
                <a t-attf-href="/properties/"><h3>Back</h3></a>
                    <t t-foreach="properties" t-as="prop">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <img t-att-src="'/web/image/public.property/' + str(prop.id) + '/property_image'" 
                                     class="img-fluid" 
                                     style="object-fit: cover; height: 300px; width: 100%;" 
                                     alt="Property Image" />
                            </div>
                            <div class="col-md-8">
                                <h2><t t-esc="prop.name" /></h2>
                                <p><strong>Price: </strong><t t-esc="prop.selling_price" /> €</p>
                                <p><strong>Description: </strong><t t-esc="prop.description" /></p>
                                <p><strong>Available From: </strong><t t-esc="prop.date_availability" /></p>
                                <p><strong>Bedrooms: </strong><t t-esc="prop.bedrooms" /></p>
                                <p><strong>Living Area: </strong><t t-esc="prop.living_area" /> m²</p>
                                <p><strong>Garden Area: </strong><t t-esc="prop.garden_area" /> m²</p>
                                <p><strong>State: </strong><t t-esc="prop.state" /></p>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
