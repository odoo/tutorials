<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="user_property_template">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">    
                        <div class="page">
                            <h1>
                                <strong>Salesman: </strong>
                                <span t-field="user.name"/>
                            </h1>
                            <t t-if="user.property_ids">
                                <t t-foreach="user.property_ids" t-as="property">
                                    <h3>
                                        <span t-field="property.name" />
                                    </h3>
                                    <p>Expected Price: <span t-field="property.expected_price" />
                                    </p>
                                    <p>Status: <span t-field="property.state" />
                                    </p>
                                    <t t-call="estate.property_offer_table"/>
                                </t>
                            </t>
                            <t t-else="">
                                <p>No properties available for this user.</p>
                            </t>                          
                        </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
