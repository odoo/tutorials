<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_user_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">

                        <h1>Salesman: <span t-field="user.name"/> </h1>
                        <h2>Email: <span t-field="user.email"/></h2>

                        <t t-if="user.property_ids">
                            <h3>Properties Managed:</h3>
                            <t t-foreach="user.property_ids" t-as="property">
                                <h4>Property: <span t-field="property.name" /></h4>
                                <p>
                                    <strong>Expected Price:</strong> <span t-field="property.expected_price" /><br/>
                                    <strong>Status:</strong> <span t-field="property.state" />
                                </p>

                                <!-- Call the sub-template for offers -->
                                <t t-call="estate.offer_table" t-if="property.offer_ids">
                                    <t t-set="offers" t-value="property.offer_ids"/>
                                </t>
                                <t t-else="">
                                    <p>No offers available for this property yet.</p>
                                </t>
                            </t>
                        </t>
                        <t t-else="">
                            <p>No properties managed by this salesman yet.</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
