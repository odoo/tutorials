<odoo>
   <data>
       <record id="estate_property_email_template" model="mail.template">
           <field name="name">Estate Property Email template</field>
           <field name="model_id" ref="estate.model_estate_property"/>
           <field name="subject">{{ object.company_id.name }}</field>
           <field name="email_from">{{ (object.seller_id.email) }}</field>
           <field name="partner_to">{{ object.buyer_id.email }}</field>
           <field name="description">Add Description</field>
           <field name="body_html" type="html">
               <div>
                   <p>
                        <t t-if="object.buyer_id">
                            <t t-out="object.buyer_id.name"/>
                        </t>
                        <t t-else=" ">
                            <p>Buyer</p>
                        </t>
                       <br/>
                       <br/>
                        <t t-if="object.name">
                        <strong>The property with name:</strong>
                            <t t-out="object.name"/>
                            has been sold!!!!
                        </t> 
                       <br/>
                       <br/>
                       <br/>
                       <p>
                       Sincerly,
                       </p>
                       <t t-out="object.seller_id.name"/>
                       <br/>
                       <br/>
                   </p>
               </div>
           </field>
       </record>
   </data>
</odoo>