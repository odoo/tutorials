<odoo>
    <template id="public_property_web_render">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"></link>

        <t t-call="website.layout">
            <t t-set="title">Properties</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="properties" t-as="property">
                        <t t-if="property.state != 'sold' or property.state != 'cancelled'">
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <p class="list-group-item">
                                        <strong>
                                            <a t-attf-href="/properties/{{ property.id }}">
                                                <t t-esc="property.name" />
                                            </a>
                                        </strong>
                                        <br />
                                        <span>
                                            <t t-esc="property.selling_price" />
                                        </span>
                                    </p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <img
                                        t-att-src="'/web/image/public.property/' + str(property.id) + '/property_image'"
                                        class="card-img-top"
                                        style="height: 100px; width: 100px; object-fit: cover;"
                                        alt="Property Image" />
                                </div>
                            </div>
                        </t>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>