<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Margin and Other Perameters -->
    <record id="paperformat_euro_lowmargin" model="report.paperformat">
        <field name="name">European A4 low margin</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>

    <!-- Property offer action report -->
    <record id="report_property_offers" model="ir.actions.report">
        <field name="name">Property Offers</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_property_template_offers</field>
        <field name="report_file">estate.report_property_template_offers</field>
        <field name="print_report_name">'Property Offers - %s' % (object.name)</field>
        <field name="binding_model_id" ref="estate.model_estate_property" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="estate.paperformat_euro_lowmargin" />
    </record>

    <!-- Report for res.users (Salesmen) -->
    <record id="action_report_salesman_properties" model="ir.actions.report">
        <field name="name">Salesman Properties</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_salesman_template_properties</field>
        <field name="report_file">estate.report_salesman_template_properties</field>
        <field name="print_report_name">'Salesman Properties - %s' % (object.name)</field>
        <field name="binding_model_id" ref="base.model_res_users" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="estate.paperformat_euro_lowmargin" />
    </record>

</odoo>
