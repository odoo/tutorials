<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_estate_property" model="ir.actions.report">
        <field name="name">Property Offers</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.estate_property_report_template_badge</field>
        <field name="report_file">estate.estate_property_report_template_badge</field>
        <field name="print_report_name">'Property %s - %s' % ((object.name or 'Property').replace('/',''),(object.buyer_id.name or 'customer').replace('/',''))</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_estate_property_user" model="ir.actions.report">
        <field name="name">Salesman Property Report</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.estate_property_user_report_template</field>
        <field name="report_file">estate.estate_property_user_report_template</field>
        <field name="print_report_name">'Salesman properties - %s' % (object.name)</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
