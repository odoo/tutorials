<odoo>
    <template id="report_estate_properties">
    <t t-foreach="docs" t-as="salesman">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="company_info">
                    <img t-if="salesman.company_id.logo"
                        t-att-src="'data:image/png;base64,%s' % salesman.company_id.logo"
                        alt="Company Logo" style="max-height: 80px;" />
                    <h5 t-field="salesman.company_id.name" />
                    <hr />
                    <h5 t-field="salesman.company_id.partner_id.street" />
                    <h5 t-field="salesman.company_id.partner_id.city" />
                    <h5>
                        <span t-field="salesman.company_id.partner_id.zip" />
                        <span t-field="salesman.company_id.partner_id.state_id.name" />
                    </h5>
                    <h5 t-field="salesman.company_id.partner_id.country_id.name" />
                    <br/>
                    <br/>
                    <br/>
                </div>
                <div class="page">
                    <h1>
                        <span t-field="salesman.partner_id.name" />
                    </h1>
                    <hr />
                    <t t-foreach="salesman.property_ids" t-as="property">
                        <h2>
                            <span t-field="property.name" />
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price" />
                        </div>
                        <div>
                            <span>Status: </span>
                            <span t-field="property.state" />
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="estate.estate_property_subtemplate" />
                        </t>
                        <t t-else="">
                            <span>No offer has been made yet</span>
                        </t>
                    </t>
                </div>
            </t>
        </t>
        </t>
    </template>
</odoo>
