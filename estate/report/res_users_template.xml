<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_user_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <span t-field="user.name"/>
                        </h1>
                        <t t-if="not user.property_ids">
                            No properties assigned!!!
                        </t>
                        <t t-set="properties" t-value="user.mapped('property_ids')"/>
                        <tr t-foreach="properties" t-as="docs">
                            <t t-call="estate.report_property_offers"/>
                        </tr>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
