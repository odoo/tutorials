<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="estate_property_offer_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="property">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h1>
                                 <span t-field="property.name"/>
                            </h1>

                             <h6>
                                <span> <b>Salesperson:</b> </span>
                                  <span t-field="property.user_id"/>
                            </h6>
                            
                            <h6>
                                <span> <b>Expected Price: </b></span>
                                <span t-field="property.expected_price"/>
                            </h6>
                            <h6>
                                <span> <b>Status: </b></span>
                                <span t-field="property.state"/>
                            </h6>
                            <t t-set="offers" t-value="property.offer_ids"/>
                            <t t-if="len(offers) != 0">
                                <t t-call="estate.estate_property_subtemplate"/>
                            </t>
                            <t t-else="">
                                <span>There are no offers yet!!</span>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
