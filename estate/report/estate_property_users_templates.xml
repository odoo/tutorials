<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="estate_property_users_report_template">
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <h1>
                        <strong>Salesman:</strong>
                        <span t-field="users.name"/>
                    </h1>
                    <t t-if="users.property_ids">
                        <t t-set="properties" t-value="users.mapped('property_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            <t t-call="estate.estate_property_report_template"/>
                        </t>
                    </t>

                </t>
            </t>
        </t>
    </template>
</odoo>
