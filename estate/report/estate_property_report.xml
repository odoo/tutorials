<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="estate_property_report">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div class="mb-1">
                            <strong>Salesman: </strong>
                            <span t-field="property.seller_id.name"/>
                        </div>
                        <div class="mb-1">
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div class="mb-1">
                            <strong>Status: </strong>
                            <span t-field="property.status"/>
                        </div>
                        <t t-set="property" t-value="property"/>
                        <t t-call="estate.estate_property_offer_report"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="inherit_estate_property_report" inherit_id="estate.estate_property_report">
       <xpath expr="(//div[@class='page']/div)[3]" position="after">
            <t t-if="property.status == 'sold'">
                <div class="mb-1">
                    <h2>!!!Invoice has already been created!!!</h2>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
