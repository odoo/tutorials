<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- report action -->
    <record id="report_property_offers" model="ir.actions.report">
        <field name="name">Print Property Offers</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_property_offer</field>
        <field name="report_file">estate.report_property_offer</field>
        <field name="print_report_name">'Property Offers - %s' % (object.name or 'Attendee').replace('/','')</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">report</field>
    </record>

    <!-- res users report  -->
    <record id="action_report_user_properties" model="ir.actions.report">
        <field name="name">Print User Properties</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_user_properties</field>
        <field name="report_file">estate.report_user_properties</field>
        <field name="print_report_name">'%s - Properties' % (object.name or 'Salesman').replace('/','')</field>
        <field name="binding_model_id" ref="model_res_users"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
