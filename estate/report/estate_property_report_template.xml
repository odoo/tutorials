<?xml version="1.0"?>
<odoo>
    <template id="estate_property_offer_table">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"></t>
                <tr t-foreach="offers" t-as="offer">
                    <td><span t-field="offer.price"></span></td>
                    <td><span t-field="offer.partner_id"></span></td>
                    <td><span t-field="offer.validity"></span></td>
                    <td><span t-field="offer.date_deadline"></span></td>
                    <td><span t-field="offer.status"></span></td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="report_estate_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2><span t-field="property.name"></span></h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson_id"></span>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"></span>
                        </div>
                        <div class="state_estate">
                            <strong>State: </strong>
                            <span t-field="property.state"></span>
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="estate.estate_property_offer_table"/>
                        </t>
                        <t t-else="">
                            <strong><p>No Offers have been made yet:(</p></strong>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_estate_user_property">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h2><strong>Salesman: </strong>
                            <span t-field="user.name"></span></h2>
                        </div>
                        <t t-set="properties" t-value="user.mapped('property_ids')"></t>
                        <t t-foreach="properties" t-as="property">
                            <div>
                                <h2><span t-field="property.name"></span></h2>
                            </div>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"></span>
                            </div>
                            <div>
                                <strong>State: </strong>
                                <span t-field="property.state"></span>
                            </div>
                            <div>
                                <t t-if="property.offer_ids">
                                    <t t-call="estate.estate_property_offer_table"></t>
                                </t>
                                <t t-else="">
                                    <strong><p>No Offers have been made yet:(</p></strong>
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
