<odoo>
    <template id="estate_property_report_template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2><t t-out="property.name"/></h2>
                        <p><strong>Salesman:</strong> <t t-out="property.salesperson_id.name"/></p>
                        <p><strong>Expected Price:</strong> <t t-out="property.expected_price"/> USD</p>
                        <p><strong>Status:</strong> <t t-out="dict(property._fields['state'].selection).get(property.state)"/></p>
                        <t t-call="estate.estate_property_offer_template"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="estate_salesman_property_report_template">
        <t t-foreach="docs" t-as="seller">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesman: </strong>
                            <span t-field="seller.name"/>
                        </h2>
                        <t t-foreach="seller.property_ids" t-as="property">
                            <div class="page">
                                <h2>
                                    <span t-field="property.name" />
                                </h2>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price" />
                                </div>
                                <div>
                                    <strong>Status: </strong>
                                    <span t-field="property.state" />
                                </div>
                                <t t-call="estate.estate_property_offer_template" />
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
