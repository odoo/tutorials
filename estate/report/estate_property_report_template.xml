<?xml version="1.0"?>
<odoo>
    <template id="estate_property_offer_table">
        <div t-if="property.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity (days)</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="property.offer_ids" t-as="offer">
                        <tr>
                            <td>
                                <t t-esc="offer.price"/>
                            </td>
                            <td>
                                <t t-esc="offer.buyer_id"/>
                            </td>
                            <td>
                                <t t-esc="offer.validity"/>
                            </td>
                            <td>
                                <t t-esc="offer.date_deadline"/>
                            </td>
                            <td>
                                <t t-esc="offer.status"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
        <div t-else="">
            <p>No offers yet for this property.</p>
        </div>
    </template>
    <template id="report_estate_property_offer_pdf">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h1>
                                <strong>Salesman: </strong>
                                <span t-field="property.salesperson_id"/>
                            </h1>
                        </div>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <div>
                            <t t-if="property.state == 'sold' and property.invoice_created">
                                <strong>!!! Invoice has already been created !!!</strong>
                            </t>
                        </div>
                        <div>
                            <t t-call="estate.estate_property_offer_table" t-foreach="docs" t-as="property"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_res_users_property_offer_pdf">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-foreach="user.property_type_id" t-as="property">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </div>
                        </t>
                        <div>
                            <t t-set="offers" t-value="property.offer_ids"/>
                            <t t-call="estate.estate_property_offer_table"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
