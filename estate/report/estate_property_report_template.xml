<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_property_offers_table">
        <table class="table" t-if="property.mapped('offer_ids')">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
    <template id="report_property_offers">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="property">
                        <div class="my-5">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Sales Person: </strong>
                                <span t-field="property.seller_id"/>
                            </div>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>State: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <t t-if="not property.mapped('offer_ids')">
                                <div>
                                    <strong>No offers have been made yet :(</strong>
                                </div>
                            </t>
                            <div t-if="property.state == 'sold'">
                                <strong>!!!Invoice already has been created </strong>
                            </div>
                            <t t-else="">
                                <t t-call="estate.report_property_offers_table"/>
                            </t>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
    <template id="user_estate_property_report">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1 class="mb-1">
                            <strong>Salesman: </strong>
                            <span t-field="user.name"/>
                        </h1>
                        <t t-foreach="user.property_ids" t-as="property">
                            <div class="mb-1">
                                <span t-field="property.name"/>
                            </div>
                            <div class="mb-1">
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div class="mb-1">
                                <strong>State: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <t t-if="not property.mapped('offer_ids')">
                                <div>
                                    <strong>No offers have been made yet :(</strong>
                                </div>
                            </t>
                            <t t-else="">
                                <t t-call="estate.report_property_offers_table"/>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
