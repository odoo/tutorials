<odoo>
    <template id="report_user_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Salesperson: <span t-field="user.name" /></h2>
                        <!-- Include properties -->
                        <t t-if="user.property_ids">
                            <t t-set="properties" t-value="user.property_ids" />
                            <t t-call="estate.report_properties_table" />
                            <!-- Include offers for each property -->
                            <t t-foreach="properties" t-as="property">
                                <t t-if="property.offer_ids">
                                    <t t-set="offers" t-value="property.offer_ids" />
                                    <t t-call="estate.report_offers_table" />
                                </t>
                            </t>
                        </t>
                        <t t-else="">
                            <p>
                                <em>This user has no associated properties.</em>
                            </p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>