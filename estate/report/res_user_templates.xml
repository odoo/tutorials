<odoo>
    <template id="report_user_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Salesperson: <span t-field="user.name"/></h1>
                        <!-- Include properties -->
                        <t t-if="user.property_ids">
                            <t t-foreach="user.property_ids" t-as="property">
                                <h3>Property Name: <span t-field="property.name"/></h3>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/>
                                </div>
                                <div>
                                    <strong>Status: </strong>
                                    <span t-field="property.state"/>
                                </div>
                                <t t-if="property.offer_ids">
                                    <t t-set="offers" t-value="property.offer_ids"/>
                                    <t t-call="estate.report_offers_table"/>
                                </t>
                                <t t-else="">
                                    <p>
                                        <em>no offers have been made yet</em>
                                    </p>
                                </t>
                            </t>
                        </t>
                        <t t-else="">
                            <p>
                                <em>This user has no associated properties.</em>
                            </p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>