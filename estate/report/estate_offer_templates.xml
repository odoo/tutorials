<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_estate_property_offer" t-name="offer_table">
        <table style="width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 14px; margin-bottom: 20px">
            <thead>
                <tr style="background-color: #f5f5f5; text-align: left;">
                    <th style="padding: 10px; border: 1px solid #ddd;">Price</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Partner</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Validity (days)</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Deadline</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <t t-if="offers">
                    <tr t-foreach="offers" t-as="offer">
                        <td style="padding: 10px; border: 1px solid #ddd;">
                            <span t-field="offer.price"/>
                        </td>
                        <td style="padding: 10px; border: 1px solid #ddd;">
                            <span t-field="offer.partner_id.name"/>
                        </td>
                        <td style="padding: 10px; border: 1px solid #ddd;">
                            <span t-field="offer.validity"/>
                        </td>
                        <td style="padding: 10px; border: 1px solid #ddd;">
                            <span t-field="offer.deadline"/>
                        </td>
                        <td style="padding: 10px; border: 1px solid #ddd;">
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </t>
                <t t-else="">
                    <tr>
                        <td colspan="5" style="padding: 10px; border: 1px solid #ddd; text-align: center;">
                            No offers available for this property.
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>
</odoo>
