<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_offers">
        <div>
            <strong>Expected Price: </strong>
            <span t-field="property.expected_price"/>
        </div>
        <div>
            <strong>Status: </strong>
            <span t-field="property.state"/>
        </div>
        <table class="table" t-if="property.offer_ids">
            <thead>
                <tr>
                    <th class="fw-bold">Price</th>
                    <th class="fw-bold">Partner</th>
                    <th class="fw-bold">Validity (days)</th>
                    <th class="fw-bold">Deadline</th>
                    <th class="fw-bold">State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.state"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <strong t-else="">No offers have been made yet :(</strong>
    </template>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesperson: </strong>
                            <span t-field="property.salesperson_id"/>
                        </div>
                        <t t-call="estate.report_offers"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_salesperson_properties">
        <t t-foreach="docs" t-as="salesperson">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesperson: </strong>
                            <span t-field="salesperson.name"/>
                        </h2>
                        <t t-if="salesperson.property_ids">
                            <t t-set="properties" t-value="salesperson.mapped('property_ids')"/>
                            <t t-foreach="properties" t-as="property">
                                <h3>
                                    <span t-field="property.name"/>
                                </h3>
                                <t t-call="estate.report_offers"/>
                            </t>
                        </t>
                        <strong t-else="">Salesperson has no properties!</strong>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
