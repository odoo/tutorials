<odoo>
    <template id="salesperson_property_report">
        <t t-foreach="docs" t-as="salesperson">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Salesperson: <span t-out="salesperson.name"/> </h2> 
                        
                        <t t-if="salesperson.property_ids">
                            <t t-foreach="salesperson.property_ids" t-as="property">
                                <t t-set="docs" t-value="[property]"/>
                                <h2><span t-out="property.name"/></h2>  
                                <h5>Expected Price: <span t-out="property.expected_price"/></h5> 
                                <h5>Best Offer Price: <span t-out="property.best_price"/></h5> 
                                <h5>Status: <span t-out="property.state"/></h5>                               
                                <t t-call="estate.estate_property_offert_report"/>
                            </t>
                        </t>
                        <t t-else="">
                            <p>No properties assigned to this salesperson.</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
