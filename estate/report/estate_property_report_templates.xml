<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="estate_property_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">

                        <!-- Call the Company header Sub-Template -->
                        <t t-call="estate.estate_property_company_header"/>
                         
                        <h2><t t-esc="property.name"/></h2>
                        <p><t t-esc="property.description"/></p>
                        <p> <strong>Salesman:</strong> <t t-esc="property.user_id.name"/></p>
                        <p> <strong>Expected Price:</strong> <t t-esc="property.expected_price"/></p>
                        
                        <t t-if="property.property_offer_ids">
                            <!-- Call the Offers Table Sub-Template -->
                            <t t-call="estate.estate_property_offer_table"/>
                        </t>
                        <t t-else="">
                            <p>No offers have been made for this property yet.</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <template id="estate_user_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="user">
                <t t-call="web.external_layout">
                    <div class="page">
                    
                        <!-- Call the Company header Sub-Template -->
                        <t t-call="estate.estate_property_company_header"/>
                         
                        <h1>Salesman: <t t-esc="user.name"/> </h1>
                        <hr/>
                        <t t-foreach="user.property_ids" t-as="property">

                            <h2><t t-esc="property.name"/></h2>
                            <p> <strong>Expected Price:</strong> <t t-esc="property.expected_price"/></p>
                            <p> <strong>Status:</strong> <t t-esc="property.state"/></p>
                            <t t-if="property.property_offer_ids">
                                <!-- Call the Offers Table Sub-Template -->
                                <t t-call="estate.estate_property_offer_table"/>
                            </t>
                            <t t-else="">
                                <p>No offers have been made for this property yet.</p>
                            </t>
                            <hr/>
                        </t>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>


    <template id="estate_property_offer_table">

        <t t-if="property.property_offer_ids">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> <strong>Price</strong> </th>
                        <th> <strong>Partner</strong> </th>
                        <th> <strong>Validity (days)</strong> </th>
                        <th> <strong>Deadline</strong> </th>
                        <th> <strong>State</strong> </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="property.property_offer_ids" t-as="offer">
                        <tr t-att-class="('text-success' if offer.state == 'accepted' else 'text-danger')">
                            <td t-esc="offer.price"/>
                            <td t-esc="offer.partner_id.name"/>
                            <td t-esc="offer.validity"/>
                            <td t-esc="offer.date_deadline"/>
                            <td t-esc="offer.state"/>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>


    <template id="estate_property_company_header">
        <div>
            <strong>YourCompany</strong><br/>
            <hr/>
            250 Executive Park Blvd, Suite 3400<br/>
            San Francisco CA 94134<br/>
            United States
        </div>
        <br/>
        <br/>   
    </template>


</odoo>