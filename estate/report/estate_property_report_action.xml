<?xml version="1.0"?>
<odoo>
    <record id="report_estate_property_offer_pdf_action" model="ir.actions.report">
        <field name="name">Estate Property Offer Report PDF</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.report_estate_property_offer_pdf</field>
        <field name="report_file">estate.report_estate_property_offer_pdf</field>
        <field name="print_report_name">'Property Offer Report - %s' % (object.name or 'Property').replace('/', '')</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_res_users_property_offer_pdf_action" model="ir.actions.report">
        <field name="name">Salesman Properties and Offers PDF</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">report_res_users_property_offer_pdf</field>
        <field name="report_file">report_res_users_property_offer_pdf</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_type">report</field>
    </record>
</odoo>