<?xml version="1.0"?>
<odoo>
    <template id="report_estate_property_offer_pdf">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h1>
                                <strong>Salesman: </strong>
                                <span t-field="property.salesperson_id"/>
                            </h1>
                        </div>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <!-- Check if the property has offers -->
                        <div t-if="property.offer_ids">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Partner</th>
                                        <th>Validity (days)</th>
                                        <th>Deadline</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="property.offer_ids" t-as="offer">
                                        <tr>
                                            <td>
                                                <t t-esc="offer.price"/>
                                            </td>
                                            <td>
                                                <t t-esc="offer.buyer_id"/>
                                            </td>
                                            <td>
                                                <t t-esc="offer.validity"/>
                                            </td>
                                            <td>
                                                <t t-esc="offer.date_deadline"/>
                                            </td>
                                            <td>
                                                <t t-esc="offer.status"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div t-else="">
                            <p>No offers yet for this property.</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
