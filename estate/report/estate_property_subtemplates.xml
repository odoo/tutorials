<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="offers_table_subtemplate">
        <t t-if="property.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th>Offer Price</th>
                        <th>Partner</th>
                        <th>Validity</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="property.offer_ids" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>

        </t>
            <t t-else="">
                <p>No offers available for this property.</p>
            </t>
    </template>
</odoo>
