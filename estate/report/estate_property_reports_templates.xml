<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="estate_property_offer_report">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesperson: </strong>
                            <span t-field="property.user_id.name" />
                        </h1>
                        <h2>
                            <span t-field="property.name" />
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price" />$ 
                        </div>
                        <div>
                            <strong>Property Type: </strong>
                            <span t-field="property.property_type_id.name" />
                        </div>
                        <div>
                            <strong>Bedrooms: </strong>
                            <span t-field="property.bedrooms" />
                        </div>
                        <!-- Use Sub-template for Offers -->
                        <t t-call="estate.report_property_offers_table">
                            <t t-set="offers" t-value="property.mapped('offer_ids')" />
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Sub-template for Offers Table -->
    <template id="report_property_offers_table">
        <t t-if="offers">
            <h3>Offers</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Buyer</th>
                        <th>Validity (days)</th>
                        <th>deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price" />
                        </td>
                        <td>
                            <span t-field="offer.partner_id.name" />
                        </td>
                        <td>
                            <span t-field="offer.state" />
                        </td>
                        <td>
                            <span t-field="offer.validity" />
                        </td>
                        <td>
                            <span t-field="offer.date_deadline" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <p>
                <strong>No offers have been made on this property yet.</strong>
            </p>
        </t>
    </template>
</odoo>
