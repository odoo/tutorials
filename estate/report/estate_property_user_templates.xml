<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_user_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Real Estate Properties of <span t-field="user.name"/>
                        </h2>
                        <t t-foreach="user.property_ids" t-as="property">
                            <div class="property-section">
                                <h3>
                                    <span t-field="property.name"/>
                                </h3>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/>
                                </div>
                                <div>
                                    <strong>Property Type: </strong>
                                    <span t-field="property.property_type_id.name"/>
                                </div>
                                <div>
                                    <strong>Property Status: </strong>
                                    <span t-field="property.state"/>
                                </div>
                                <t t-set="offers" t-value="property.offer_ids"/>
                                <t t-call="estate.property_offers_table"/>
                            </div>
                        </t>
                        <t t-if="not user.property_ids">
                            <p>
                                <i>No properties assigned to this user.</i>
                            </p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

