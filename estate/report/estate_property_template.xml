<odoo>
    <template id="estate_property_template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <span t-field="property.name"/>
                        </h1>
                        <div t-if="property.salesperson_id">
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson_id.name"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <div>
                            <t t-set="offers" t-value="property.offer_ids"/>
                            <t t-if="len(offers) != 0">
                                <t t-call="estate.estate_property_offer_subtemplate"/>
                            </t>
                            <t t-else="">
                                <strong>No offers have been made yet :(</strong>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
