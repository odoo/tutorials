<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>                    
                        <div>
                            <strong>Salesman: </strong> 
                            <span t-field="property.user_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div id="status">
                            <strong>Status: </strong>
                            <span t-field="property.status"/>
                        </div>
                        <t t-set="offers" t-value="property.offer_ids"/>
                        <t t-if="offers"> 
                            <t t-call="estate.property_offers_table"/>
                        </t>
                        <t t-else="">
                            <p>No offer exist for this property!</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_user_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div>
                        <h2>Properties of 
                            <span t-field="user.name"/>
                        </h2>
                    </div>
                    <div class="border-top my-3"></div>
                    <t t-foreach="user.property_ids" t-as="property">
                        <div class="page">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>                    
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.status"/>
                            </div>
                            <t t-set="offers" t-value="property.offer_ids"/>
                            <t t-if="offers"> 
                                <t t-call="estate.property_offers_table"/>
                            </t>
                            <t t-else="">
                                <p class="text-center fs-3">No offer exist for this property!</p>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
    
    <template id="property_offers_table">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Price</th>
                    <th class="text-center">Partner</th>
                    <th class="text-center">Validity (days)</th>
                    <th class="text-center">Deadline</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="offers" t-as="offer" class="text-center">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id.name"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <t t-if="offer.status">
                            <span t-field="offer.status"/>
                        </t>
                        <t t-else="">
                            <span>Pending</span>
                        </t>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>
