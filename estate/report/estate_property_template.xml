<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_property_offers_template" name="Property Offers Template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-call="estate.report_property_offers_call"/>
                </t>
            </t>
        </t>
    </template>


    <template id="report_property_offers_call" name="Property Offers Call">
        <t t-call="estate.report_property_offers_basic"/>
        <t t-call="estate.report_property_offers_table"/>
    </template>

    <template id="report_property_offers_basic">
        <div class="page">
            <h2>
                <span t-field="property.name"/>
            </h2>
            <div>
                <strong>Expected Price: </strong>
                <span t-field="property.expected_price"/>
            </div>
            <div>
                <strong>Salesman: </strong>
                <span t-field="property.salesman_id"/>
            </div>
            <div>
                <strong>Status: </strong>
                <span t-field="property.status"/>
            </div>
        </div>
    </template>

    <template id="report_property_offers_table">
        <t t-set="offers" t-value="property.mapped('offer_ids')"/>
        <t t-if="offers">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <strong>Hey there no offers yet</strong>
        </t>
    </template>

    <template id="report_property_users_template" name="Property of Users">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            Salesman <span t-field="user.name"/>
                        </h2>
                        <t t-set="properties" t-value="user.mapped('property_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            <t t-call="estate.report_property_offers_call"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
