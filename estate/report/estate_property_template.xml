<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                         <span><img t-attf-src="/logo.png?company={{ property.company_id.id }}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="property.company_id.name"/></span>
                        </div>
                        <hr/>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <t t-if ="property.seller_id">
                            <div>
                                <strong>Sales person:</strong>
                                <span t-field="property.seller_id.name"/>
                            </div>
                        </t>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                          <strong>Status: </strong>
                          <span t-field="property.state"/>
                        </div>
                        <t t-if="property.offer_ids">
                            <div>
                                <strong>BestPrice: </strong>
                                <span t-field="property.best_price"/>
                            </div>
                            <t t-call="estate.estate_property_subtemplate"/>
                        </t>
                        <t t-else="">
                            <h2>No offer received! :( </h2>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="estate_property_subtemplate">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td><span t-field="offer.price"/></td>
                    <td><span t-field="offer.partner_id"/></td>
                    <td><span t-field="offer.validity"/></td>
                    <td><span t-field="offer.date_deadline"/></td>
                    <td><span t-field="offer.status"/></td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>
