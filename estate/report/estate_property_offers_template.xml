<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property_offers_template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page"> 
                        <h2><span t-field="property.name"/></h2>
                        <p>Salesman: <span t-field="property.user_id"/></p>
                        <p>Expected Price: <span t-field="property.expected_price"/></p>
                        <p>Status: <span t-field="property.state"/></p>                         
                        <div name="sold_message"></div>
                        <t t-call="estate.property_offer_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
