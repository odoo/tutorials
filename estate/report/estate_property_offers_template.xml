<odoo>
    <template id="estate_property_offert_report">
        <t t-if="property.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity (days)</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="property.offer_ids" t-as="offer">
                        <tr>
                            <td><t t-out="offer.price"/></td>
                            <td><t t-out="offer.partner_id.name"/></td>
                            <td><t t-out="offer.validity"/></td>
                            <td><t t-out="offer.date_deadline"/></td>
                            <td><t t-out="offer.status"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <center><h3>No offers have been made for this property yet.</h3></center>
        </t>
    </template>
</odoo>
