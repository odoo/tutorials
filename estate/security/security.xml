<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="estate_property_user_own_rule" model="ir.rule">
        <field name="name">Agent can access only their own properties of their companies</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">['&amp;', '|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="estate_property_manager_all_rule" model="ir.rule">
        <field name="name">Manager can access all properties of their companies</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
