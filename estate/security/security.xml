<?xml version="1.0" ?>

<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="comment">Agents manage assigned or unassigned properties.</field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
        <field name="comment">Managers configure the system and oversee all properties.</field>
        <field name="users" eval="[(4,ref('base.user_admin'))]" />
    </record>
    
    <record id="property_visibility_manager_rule" model="ir.rule">
        <field name="name">Manager property visibility rule</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="property_visibility_agent_rule" model="ir.rule">
        <field name="name">Agent property visibility rule</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False)
        ]</field>
    </record>

    <record id="company_visiblity_agent_rule" model="ir.rule">
        <field name="name">Agent company visibilty rule</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
