<?xml version="1.0"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>

    <record id="restrict_user_property" model="ir.rule">
        <field name="name">Salesperson</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="0" />
        <field name="domain_force">[
            '&amp;','|', ('salesperson_id', '=', user.id),
            ('salesperson_id', '=', 'False'),'|', ('company_id', '=', False),
            ('company_id', 'in', company_ids)
            ]
        </field>
    </record>

    <record id="access_manager_property" model="ir.rule">
        <field name="name">An agent manager managers property types and tags and oversees all the
            properties.</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="0" />
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
