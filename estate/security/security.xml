<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_real_estate_brokerage" model="ir.module.category">
            <field name="name">Real Estate Brokerage</field>
            <field name="description">Category for Real Estate Brokers as agents and managers</field>
            <field name="sequence">1</field>
        </record>

        <!-- Agent Group -->
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="module_category_real_estate_brokerage"/>
            <field name="comment">The user will be able to create and manage estate properties.</field>
        </record>

        <!-- Manager Group -->
        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_real_estate_brokerage"/>
            <field name="comment">The user will be able to create and manage estate properties.</field>
            <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
        </record>
    </data>
</odoo>
