<?xml version="1.0"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"></field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"></field>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"></field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"></field>
    </record>

<!-- [IMP] improvement needed -->
    <record id="agent_rule_id" model="ir.rule">
        <field name="name">Limit agents access rules</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"></field>
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False)
        ]</field>
    </record>
</odoo>
