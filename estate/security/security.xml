<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- The agent cannot read the property of others -->
    <record id="estate_agent_property_rule" model="ir.rule">   
        <field name="name">Agent: access own properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id','=',False)]</field>
    </record>

    <!-- Due to implication of user we have to define new manager rules  -->
    <record id="estate_manager_rule" model="ir.rule">
        <field name="name">There are no restriction for manager</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>    
    </record>

    <!-- record rule for multi company -->
    <record id="estate_property_multi_company_rule" model="ir.rule">
        <field name="name">Estate Property Multi-Company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="global" eval="True" />
    </record>


</odoo>
