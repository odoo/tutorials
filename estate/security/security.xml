<odoo>
    <data>
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        </record>

        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
            <field name="implied_ids" eval="[(4,ref('estate_group_user'))]" />
        </record>
    </data>
    <data noupdate="0">
        <record id="public_access_agent_properties" model="ir.rule">
            <field name="name">Agent Estate Property Access</field>
            <field name="model_id" ref="model_public_property" />
            <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"></field>
            <field name="domain_force"> ['|',('company_id','=',user.company_id.id), ('salesperson', '=', user.id), ('salesperson', '=',
                False)]</field>
        </record>

        <record id="public_access_manager_properties" model="ir.rule">
            <field name="name">Manager Estate Property Access</field>
            <field name="model_id" ref="model_public_property" />
            <field name="groups" eval="[ref('estate.estate_group_manager')]" />
        </record>
    </data>
</odoo>
