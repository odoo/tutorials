<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate.property" model="ir.model">

    </record>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="comment">The user can manage the properties under his care</field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        <field name="comment">The user can do agent things and settings of the real estate App</field>
    </record>

    <record id="rule_agent_property" model="ir.rule">
        <field name="name">Agent can only see modify their properties or the unassigned ones</field>
        <field name="model_id" ref="estate.property"/>
        <field name="perm_read" eval="False"/>
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]"/>
        <field name="domain_force">[
                '|', ('user_id', '=', user.id),
                    ('user_id', '=', False)
            ]</field>
    </record>

</odoo>
