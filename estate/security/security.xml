<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[Command.link(ref('estate.estate_group_user'))]"/>
    </record>

    <record id="agent_rule" model="ir.rule">
        <field name="name">Limit agent access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_create" eval="False"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False)
        ]</field>
    </record>

    <record id="manager_rule" model="ir.rule">
        <field name="name">Allow manager to access everything</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="property_company_rule" model="ir.rule">
        <field name="name">Access properties in own companies only</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>