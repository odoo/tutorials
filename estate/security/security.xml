<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="comment">A Real Estate Agent</field>
        <field name="category_id" ref="base.module_category_real_estate"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">A Real Estate Manager</field>
        <field name="category_id" ref="base.module_category_real_estate"/>
        <field name="implied_ids" eval="[Command.set([ref('estate.estate_group_user')])]"/>
        <field name="users" eval="[Command.link(ref('base.user_admin'))]"/>
    </record>

    <record id="access_estate_property_salesperson" model="ir.rule">
        <field name="name">Salesperson: Access to Own or Unassigned Properties</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">['|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False)]</field>
    </record>

    <record id="access_estate_property_manager_override" model="ir.rule">
        <field name="name">Manager: Full Access to All Properties</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
    </record>

    <record id="estate_property_company_isolation_rule" model="ir.rule">
        <field name="name">Company Isolation: Access Limited to User's Company Properties</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
