<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base.module_category_real_estate_brokerage" model="ir.module.category">
        <field name="name">Real Estate/Brokerage</field>
    </record>
    <record id="estate_group_agent" model="res.groups">
        <field name="name">Real Estate Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate.estate_group_agent'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="rule_id_1" model="ir.rule">
        <field name="name">Access Own properties</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_agent'))]"/>
        <field name="domain_force">[
            '|', ('user_id', '=', user.id),
            ('user_id', '=', False),
            ('company_id', '=', user.company_id.id)
            ]</field>
    </record>

    <record id="rule_id_2" model="ir.rule">
        <field name="name">Access all properties if user is manager</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
