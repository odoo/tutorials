<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>   

    <record id="estate_group_access_rule" model="ir.rule">
        <field name="name">Estate users can't see exclusive properties from other estate users</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]"/>
        <field name="domain_force">['|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False)]</field>
    </record>    

    <record id="estate_group_access_rule_manager" model="ir.rule">
        <field name="name">Give back to manager all properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    
    <record model="ir.rule" id="estate_access_comp_rule">
        <field name="name">Restrict property view for multi-company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                 ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
