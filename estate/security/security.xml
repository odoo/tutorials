<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>

    <record id="agent_property_rule" model="ir.rule">
        <field name="name">Agent can view new or assigned property</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">["|", ("salesman", "=", False), ("salesman", "=", user.id)]</field>
    </record>

    <record id="manager_property_rule" model="ir.rule">
        <field name="name">Manager can view all property</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
    </record>

    <record id="manager_multi_company" model="ir.rule">
        <field name="name">Manager multi-company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
