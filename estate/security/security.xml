<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        <field name="users" eval="[4,ref('base.user_admin')]"/>
    </record>

    <record id="agent_rule" model="ir.rule">
        <field name="name">Agent Limit Access Rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">[
            '|', 
            ('seller_id', '=', user.id),
            ('seller_id', '=', False)
        ]</field> 
    </record>

    <record id="manager_access_rule" model="ir.rule">
        <field name="name">Manager Access Rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[]</field>  <!-- No domain filter, so managers see all properties -->
    </record>

    <record id="multi_company_rule" model="ir.rule">
        <field name="name">Multi-company access rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
