<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Real Estate Agent Group -->
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <!-- Real Estate Manager Group -->
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[Command.link(ref('estate_group_user'))]"/>
    </record>

    <record id="estate_agent_rule" model="ir.rule">
        <field name="name">Agent can only see their own properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                 ('salesperson_id', '=', False), ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="estate_manager_rule" model="ir.rule">
    <field name="name">Managers can see all properties</field>
    <field name="model_id" ref="model_estate_property"/>
    <field name="groups" eval="[Command.link(ref('estate_group_manager'))]"/>
    <field name="domain_force">[]</field>                                       <!-- Managers see all properties (domain_force = [] â†’ no restriction -->
    </record>

</odoo>
