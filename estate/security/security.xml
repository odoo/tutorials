<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        </record>

        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
            <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"></field>
        </record>

        <!-- Restrict agent permission to access only there own properties and same company only  -->
        <record id="exclusive_property_access_rule" model="ir.rule">
            <field name="name">Restrict property access for agents.</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="perm_read" eval="True"/>
            <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
            <field name="domain_force">[
                '|', ('user_id', '=', user.id),
                    ('user_id', '=', False), ('company_id', '=', False),
                    ('company_id', 'in', company_ids)
            ]</field>      
        </record>

        <!-- Grant manager permission to access all property  -->
        <record id="manager_access_rule" model="ir.rule">
            <field name="name">Rule for managers to see all properties</field>
            <field name="model_id" ref="estate.model_estate_property" />
            <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
            <field name="domain_force">[]</field>
        </record>

</odoo>
