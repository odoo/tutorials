<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="comment">The Agent can manage the properties under their care, or properties
            which are not specifically under the care of any agent.</field>
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4,ref('estate_group_user'))]" />
        <field name="comment">The managers can configure the system (manage available types and
            tags) as well as oversee every property in the pipeline.</field>
    </record>
    <record id="rule_limiting_agents" model="ir.rule">
        <field name="name">limiting agents</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
        <field name="domain_force">['|', ('salesperson_id', '=',user.id ), ('salesperson_id', '=',
            False)]</field>
    </record>
    <record id="rule_estate_group_manager" model="ir.rule">
        <field name="model_id" ref="model_estate_property" />
        <field name="name">Manager permissions</field>
        <field name="perm_unlink" eval="False" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
    </record>
    <record id="estate_property_company_rules" model="ir.rule">
        <field name="model_id" ref="model_estate_property" />
        <field name="name">Multi Company Management</field>
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>
</odoo>
