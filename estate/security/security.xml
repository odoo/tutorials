<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]" />
    </record>

    <record id="rule_estate_property_user" model="ir.rule">
        <field name="name">Estate Property User Rule</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
        <field name="domain_force">[
            '|', ('company_id', '=', False), ('company_id', 'in', company_ids),
            '|', ('salesperson_id', '=', False),('salesperson_id', '=', user.id)
        ]</field>
    </record>

    <record id="rule_estate_property_manager" model="ir.rule">
        <field name="name">Estate Property Manager Rule</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
    </record>
</odoo>
