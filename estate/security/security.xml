<?xml version="1.0"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>

    <record id="restrict_user_property" model="ir.rule">
        <field name="name">Salesperson</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4, ref('estate_group_user'))]" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="domain_force">[
            '|', ('salesperson_id', '=', False), ('salesperson_id', '=', user.id)
            ]
        </field>
    </record>

    <record model="ir.rule" id="estate_property_record_rule_multi-company">
        <field name="name">Shared Record: multi-company</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="global" eval="True" />
        <field name="domain_force">
            ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>
</odoo>
