<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- creating groups(access rights) -->
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        </record>

        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />  
            <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]" />  <!-- if Group A "implies" Group B, a user added to Group A will automatically gain the permissions of Group B.-->
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/> <!-- uses belongs to this group-->
        </record>

        <!-- creating record rules(record rules) -->
        <record id="estate_agent_user_rule" model="ir.rule">
            <field name="name">Allow agent to see only their record/not associated record</field> <!-- description of the rule-->
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="groups" eval="[(4, ref('estate.estate_group_user'))]"/>
            <field name="domain_force">
                [ 
                    '&amp;', ('company_id', 'in', company_ids), 
                        '|',  ('salesperson', '=', user.id), ('salesperson', '=', False)
                ]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

         <record id="estate_manager_user_rule" model="ir.rule">
            <field name="name">Allow managers to see all record</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record> 
    </data>
</odoo>
