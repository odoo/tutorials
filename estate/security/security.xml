<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <!--field name="implied_ids" eval="[(6, 0, [ref('base.group_private_addresses'), ref('base.group_user')])]"/-->
        <field name="comment">The user will be able to do stuff with the Estate module.</field>
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(6, 0, [ref('estate.estate_group_user')])]"/>
        <field name="comment">The user will be able to do more stuff with the Estate module.</field>
    </record>
    <record id="rule_estate_proeprty_agent" model="ir.rule">
        <field name="name">Limits agents to only being able to see or modify properties which have no salesperson, or for which they are the salesperson.</field>
        <field name="model_id" ref="model_estate_property"/>
        <!--field name="perm_read" eval="False"/-->
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False)
        ]</field>
    </record>
    <record id="rule_estate_property_company" model="ir.rule">
        <field name="name">Agents should only have access to properties of their agency (or agencies).</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                ('company_id', 'in', company_ids)
        ]</field>
    </record>

</odoo>