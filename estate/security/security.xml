<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="comment">The User can manage the properties under their care, or
            properties which are not specifically under the care of any agent.</field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        <field name="comment">The User can configure the system (manage available types
            and tags) as well as oversee every property in the pipeline.</field>
    </record>

    <record id="estate_property_rule_agent" model="ir.rule">
        <field name="name">Agent Rules</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="groups" eval="[Command.link(ref('base.group_user'))]"/>
        <field name="domain_force">['|', ('property_seller_id', '=', user.id), ('property_seller_id', '=', False)]
        </field>
    </record>

    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Manager Rules</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[(1,"=",1)]
        </field>
    </record>

    <record id="estate_property_company_rule" model="ir.rule">
        <field name="name">Appraisal Plan multi-company</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">[
        '|', ('company_id', '=', False),
             ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
