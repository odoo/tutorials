<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_user_rule" model="ir.rule">
        <field name="name">estate.group.user.rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">['|', ('sales_person', '=', False), ('sales_person', '=', user.id), ('company_id', 'in', company_ids)]</field>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[(4, ref('estate.estate_group_user'))]"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
    </record>

    <record id="estate_group_manager_rule" model="ir.rule">
        <field name="name">estate.group.manager.rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]"/>
    </record>

</odoo>
