<odoo>
        <!-- Agent Group -->
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        </record>

        <!-- Manager Group -->
        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
            <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        </record>

        <!-- Security rules-->

      <record id="rule_estate_property_agent" model="ir.rule">
            <field name="name">Agents are only able to see properties or unassinged property</field>
            <field name='model_id' ref="model_estate_property"></field>
            <field name='groups' eval="[Command.link(ref('estate_group_user'))]"></field>
            <field name="domain_force">["&amp;",('company_id', '=', user.company_id.id),'|',('property_seller_id','=',user.id),('property_seller_id','=',False)]</field>
            <field name="perm_read" eval="True"></field>
       </record> 

    <record id="rule_estate_property_manager" model="ir.rule">
        <field name="name">Managers can see all properties</field>
        <field name='model_id' ref="model_estate_property"/>
        <field name='groups' eval="[Command.link(ref('estate_group_manager'))]"/>
        <field name="domain_force">[]</field>
        <field name="perm_read" eval="True"/>
    </record>



</odoo>
