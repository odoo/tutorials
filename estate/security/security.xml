<odoo>
    <record id="module_category_real_estate_brokerage" model="ir.module.category">
        <field name="name">Real Estate Brokerage</field>
        <field name="sequence">10</field>
    </record>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user'), ref('estate_group_user')])]"/>
    </record>

    <record id="estate_property_agent_rule" model="ir.rule">
        <field name="name">Agent: See/modify own or unassigned properties in own company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[
        '&amp;',
            ('company_id', '=', user.company_id.id),
            '|',
            ('salesperson_id', '=', user.id),
            ('salesperson_id', '=', False)
        ]</field>
    </record>

    <record id="estate_property_agent_rule" model="ir.rule">
        <field name="name">Manager: Full access to all properties of all companies</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>