<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="rule_property_manager_own_records" model="ir.rule">
            <field name="name">Own Records Access Rule</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="groups" eval="[(4, ref('group_property_manager'))]"/>
            <field name="domain_force">[('buyer_id', '=', user.id)]</field>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">1</field>
        </record>

        <record id="estate_property_company_access_rule" model="ir.rule">
            <field name="name">Company Access Rule</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
            <field name="global" eval="False"/>
        </record>
    </data>
</odoo>
