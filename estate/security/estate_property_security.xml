<?xml version="1.0"?>
<odoo>
    <record id="estate_property_rule_property_manager" model="ir.rule">
        <field name="name">Property: Show certain states to property manager</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4, ref('estate_group_property_manager'))]" />
        <field name="domain_force">[('state', 'in', ['offer_received', 'offer_accepted',
            'sold'])]</field>
    </record>

    <record id="estate_property_rule_manager" model="ir.rule">
        <field name="name">Real Estate Manager: Full Access</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4, ref('estate_group_manager'))]" />
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="estate_property_rule_agent" model="ir.rule">
        <field name="name">Real Estate Agent: Can Only See Own Properties</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4, ref('estate_group_user'))]" />
        <field name="domain_force">[ '|', ('salesperson_id', '=', user.id), ('salesperson_id', '=',
            False)]</field>
    </record>

    <record id="estate_property_company_rule" model="ir.rule">
        <field name="name">Estate Property Multi-Company Access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                 ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
