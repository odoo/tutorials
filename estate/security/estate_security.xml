<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]" />
    </record>

    <record id="estate_property_rule_group_user" model="ir.rule">
        <field name="name">Access only self properties to agent</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
        <field name="domain_force">["&amp;",('company_id', 'in', company_ids),"|",
            ('salesperson_id', '=', user.id), ('salesperson_id', '=',
            'False')]</field>
    </record>

    <record id="estate_property_rule_group_manager" model="ir.rule">
        <field name="name">Access of r-w-c to manager</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="perm_unlink" eval="False" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]" />
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

</odoo>
