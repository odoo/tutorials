<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define Real Estate Agent Group -->
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="comment">Real estate agents can manage the properties under their care, or properties which are not specifically under the care of any agent.</field>
    </record>

    <!-- Define Real Estate Manager Group -->
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]" />
    </record>

    <data noupdate="1">
        <!-- Property Agent Rule: Restrict agents to only manage their properties -->
        <record id="estate_property_agent_rule" model="ir.rule">
            <field name="name">Property Agent</field>
            <field name="model_id" ref="model_estate_property" />
            <field name="groups" eval="[Command.link(ref('estate_group_user'))]" />
            <field name="domain_force">[('salesperson_id', 'in', [user.id, False])]</field>
        </record>

        <!-- Property Manager Rule: Full access -->
        <record id="estate_property_manager_rule" model="ir.rule">
            <field name="name">Property Manager</field>
            <field name="model_id" ref="model_estate_property" />
            <field name="groups" eval="[Command.link(ref('estate_group_manager'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>

        <record id="estate_property_multi_company_rule" model="ir.rule">
            <field name="name">Estate Property multi-company</field>
            <field name="model_id" ref="model_estate_property" />
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                ('company_id', 'in', user.company_ids.ids)
            ]</field>
        </record>
    </data>
</odoo>
