<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate.estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        </record>

        <record id="estate.estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
            <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
        </record>

        <record id="estate_property_rule_agent" model="ir.rule">
            <field name="name">
                Limit agents to only being able to see or modify properties which have no salesperson, or
                for which they are the salesperson.
            </field>
            <field name="model_id" ref="model_estate_property" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"></field>
            <field name="domain_force">[
                '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False), '|', ('company_id', '=', user.company_id.id),
                ('company_id', '=', False)]
            </field>
        </record>

        <record id="estate_property_rule_manager" model="ir.rule">
            <field name="name">Managers can see all properties</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
        </record>

    </data>
</odoo>
