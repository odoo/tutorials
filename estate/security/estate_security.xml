<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="base.module_category_real_estate_brokerage" model="ir.module.category">
            <field name="name">Real Estate/Brokerage</field>
        </record>

        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        </record>
        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
            <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>

        <record id="estate_property_rule_agent" model="ir.rule">
            <field name="name">Property: Agent Access</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="domain_force">['|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False),('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('estate.estate_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>


        <record id="estate_property_rule_manager" model="ir.rule">
            <field name="name">Property: Manager Access</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
