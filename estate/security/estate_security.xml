<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_tutorials_realestate" />
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_tutorials_realestate" />
    </record>

    <data noupdate="1">
        <record id="estate_property_agent_rule" model="ir.rule">
            <field name="name">Property Agent</field>
            <field name="model_id" ref="model_estate_property" />
            <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
            <field name="domain_force">[('salesperson_id', 'in', [user.id, False])]</field>
        </record>
    </data>
</odoo>
