<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="res.groups" id="estate_group_user">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        </record>

        <record model="res.groups" id="estate_group_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
            <field name="implied_ids" eval="[ref('estate_group_user')]"></field>
        </record>

        <record id="estate_access_agent_properties" model="ir.rule">
            <field name="name">Agent Estate Property Access</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[ref('estate.estate_group_user')]"></field>
            <field name="domain_force" > [('company_id', 'in', company_ids),
            '|', ('seller_id', '=', user.id), ('seller_id', '=', False)]</field>
        </record>

        <record id="estate_access_manager_properties" model="ir.rule">
            <field name="name">Manager Estate Property Access</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[ref('estate.estate_group_manager')]"/>
        </record>
        
</odoo>
