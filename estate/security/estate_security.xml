<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <!-- <field name="implied_ids" eval="[(4,ref('base.group_user'))]" /> -->
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4,ref('estate.estate_group_user'))]" />
        <field name="users" eval="[(4,ref('base.user_admin'))]" />
    </record>

    <record id="estate_group_user_estate_property" model="ir.rule">
        <field name="name">Agent's can't see other agent's properties.</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4,ref('estate_group_user'))]" />
        <field name="domain_force">
            [
                '&amp;',
                '|',
                ('user_id', '=', user.id),
                ('user_id', '=', False),
                ('company_id', 'in', company_ids)
            ]
        </field>
        <field name="perm_read" eval="1" />
    </record>

    <record id="estate_group_manager_estate_property" model="ir.rule">
        <field name="name">Manager can see everybody's properties.</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4,ref('estate_group_manager'))]" />
        <field name="domain_force">
            [
                (1, '=', 1)
            ]
        </field>
        <field name="perm_read" eval="1" />
    </record>

</odoo>
