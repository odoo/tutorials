<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate" />
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
        <field name="users" eval="[Command.link(ref('base.user_admin'))]"/>
    </record>

    <record id="estate_property_agent_rule" model="ir.rule">
        <field name="name">Limit agents to their properties</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]" />
        <field name="domain_force">[('salesperson_id', 'in', [user.id, False])]</field>
    </record>

    <record id="estate_property_manager_rule" model="ir.rule">
        <field name="name">Manager Full Access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
    </record>

    <record id="estate_property_company_rule" model="ir.rule">
        <field name="name">Estate Property Multi-Company Rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False),('company_id', 'in', user.company_ids.ids)]</field>
    </record>
</odoo>
