<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="group_estate_user" model="res.groups">
        <field name="name">Real Estate Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[Command.link(ref('base.group_user'))]"/>
        <field name="comment">The user will be able to use the estate module.</field>
    </record>

    <record id="group_estate_manager" model="res.groups">
        <field name="name">Real Estate Administrator</field>
        <field name="comment">The user will have access to the real estate configuration.</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[Command.link(ref('group_estate_user'))]"/>
        <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <record id="access_rule_property_agent_limit" model="ir.rule">
        <field name="name">Agent should only accessed their properties.</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('group_estate_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id.id', '=', user.id),
                 ('salesperson_id.id', '=', False)
        ]</field>
    </record>

    <record id="access_rule_property_manager" model="ir.rule">
        <field name="name">Manager should be able to access all properties.</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('group_estate_manager'))]"/>
    </record>
</odoo>