<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_rule_company" model="ir.rule">
        <field name="name">Estate Property: Multi-Company Access</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="global" eval="True"/>
    </record>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>

    <record id="estate_property_user_access" model="ir.rule">
        <field name="name">Estate Property: Agent Access</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">['|', ('salesperson_id', '=', False), ('salesperson_id', '=', user.id)]</field>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
    </record>

    <record id="estate_property_manager_access" model="ir.rule">
        <field name="name">Estate Property: Manager Access</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
    </record>
</odoo>
