<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_agent" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_agent'))]"/>
    </record>

    <record id="estate_agent_rule" model="ir.rule">
        <field name="name">You can't modify a record that you do not own</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate_group_agent'))]"/>
        <field name="domain_force">[
            '|', ('salesman_id', '=', user.id),
                ('salesman_id', '=', False)
        ]</field>
    </record>

    <record id="estate_manager_rule" model="ir.rule">
        <field name="name">Manager have superpowers</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[Command.link(ref('estate_group_manager'))]"/>
        <field name="domain_force">[
            (1, '=', 1),
        ]</field>
    </record>

    <record id="estate_company_rule" model="ir.rule">
        <field name="name">Estate multi-company</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                ('company_id', 'in', company_ids)
        ]</field>
    </record>

</odoo>
