<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Property Manager Record Rules -->
    <record id="estate_property_manager_rule" model="ir.rule">
        <field name="name">Property Manager Restricted Access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[
            ('state', 'in', ['offer_received', 'offer_accepted', 'sold']),
            '|', ('company_id', '=', False), ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <!-- Agent Recor Rule -->
    <record id="estate_property_agent_rule" model="ir.rule">
        <field name="name">Property Agent Restricted Access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False),
            '|', ('company_id', '=', False), ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
