<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_wbsp_prod_desc" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.wbsp.prod.desc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='sale']" position="after">
                <group name="web_product_description" string="Ecommerce Product Extended Description">
                    <field name="wbsp_product_description" string="Ecommerce Extended Description" placeholder="Extended Description" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
