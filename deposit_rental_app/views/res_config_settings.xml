<odoo>
    <record id="res_config_settings_view_form_inherit_rental_extra" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.rental.extra</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="11" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='extra_product']" position="after">
                <div class="row mt8">
                    <label string="Deposit" for="deposit" class="col-lg-3 o_light_label" />
                    <field name="deposit" placeholder="Enter new field value" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
