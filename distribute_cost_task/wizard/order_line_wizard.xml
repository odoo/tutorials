<odoo>
    <record id="view_order_line_wizard" model="ir.ui.view">
        <field name="name">order.line.wizard.form</field>
        <field name="model">order.wizard</field>
        <field name="arch" type="xml">
            <form string="Order Lines">
                <sheet>
                    <field name="order_line_ids" options="{'no_create': true}">
                        <list editable="bottom" create="false">
                            <field name="product_template_id" />
                            <field name="include_for_division"/>
                            <field name="price" readonly="not include_for_division"/>
                            <field name="order_line_id" column_invisible="1"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button name="action_add_cost" type="object"
                        string="Divide" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
