<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Action -->
    <record id="modular_type_wizard_action" model="ir.actions.act_window">
        <field name="name">Set Modular Type</field>
        <field name="res_model">sale.order.modular.type.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Wizard Form View -->
    <record id="modular_type_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.modular.type.wizard.form</field>
        <field name="model">sale.order.modular.type.wizard</field>
        <field name="arch" type="xml">
            <form string="Set Modular Type Values">
                <sheet>
                    <group>
                        <field name="modular_value_ids" nolabel="1" widget="one2many_list">
                            <list editable="bottom">
                                <field name="modular_type_id"/>
                                <field name="value"/>
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button name="apply_modular_values" string="Apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
