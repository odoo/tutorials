<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_addquantity.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//SelectPartnerButton" position="before">
            <button t-if="this.pos.selectedOrder.get_selected_orderline()?.product_id.second_uom_id !== undefined and !currentOrder?.is_empty() and pos.get_order()?.uiState.selected_orderline_uuid" t-attf-class="{{buttonClass}}" t-on-click="onAddQuantity">
                Add Quantity
            </button>
        </xpath>
    </t>
</templates>
