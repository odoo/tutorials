<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="pos.AddQuantityDialog">
        <Dialog size="'sm'" title="'Enter Quantity - in ' + props.second_uom">
            <div class="mb-3">
                <label for="quantityInput" class="form-label">Quantity</label>
                <input id="quantityInput" type="number" class="form-control pos-second" t-model="props.quantity"/>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="confirm">
                    Confirm
                </button>
            </t>
        </Dialog>
    </t>
</templates>
