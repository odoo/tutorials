<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sale_warranty_configuration_action" model="ir.actions.act_window">
        <field name="name">Warranty Configuration</field>
        <field name="res_model">sale.warranty.configuration</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Register a new warranty configuration
            </p><p>
            Register warranty configuration to apply on products.
            </p>
        </field>
    </record>

    <record id="sale_warranty_configuration_view_list" model="ir.ui.view">
        <field name="name">sale.warranty.configuration.view.list</field>
        <field name="model">sale.warranty.configuration</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="product_id"/>
                <field name="year"/>
                <field name="percentage"/>
            </list>
        </field>
    </record>
</odoo>
