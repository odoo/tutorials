<odoo>
    <record id="product_template_inherit_view_form" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[@name='sale']" position="inside">
                <group string="Warranty" name="sale_warranty">
                    <field name="is_warranty_available" string="Is Warranty Available?" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
