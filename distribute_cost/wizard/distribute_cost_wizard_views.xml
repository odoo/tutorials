<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard View for Distribute Cost -->
    <record id="view_sale_order_distribute_cost_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.distribute.cost.wizard.form.view</field>
        <field name="model">sale.order.distribute.cost.wizard</field>
        <field name="arch" type="xml">
            <form string="Distribute Cost">
                <sheet>
                    <field name="distribution_line_ids">
                        <list string="Cost Distribution Lines" editable="bottom" create="0">
                            <field name="product_id"/>
                            <field name="is_selected"/>
                            <field name="allocated_price"/>
                            <field name="sale_order_line_id" invisible="1"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
