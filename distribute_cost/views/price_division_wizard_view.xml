<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="price_division_wizard_form" model="ir.ui.view">
        <field name="name">price.division.wizard.form</field>
        <field name="model">price.division.wizard</field>
        <field name="arch" type="xml">
            <form string="Price Division">
                <sheet>
                    <group>
                        <field name="remaining_order_line_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="sale_order_line_id"/>
                                <field name="is_selected"/>
                                <field name="amount"/>
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button string="Divide" type="object" name="action_divide" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
     <record id="price_division_wizard_action" model="ir.actions.act_window">
        <field name="name">Price Division</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">price.division.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="price_division_wizard_form"/>
    </record>
</odoo>
