<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sale Order Form View to Add Distribute Cost Button and Tags -->
    <record id="view_sale_order_form_inherit_distribute_cost" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.distribute.cost</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="before">
                <button name="action_open_distribute_cost_wizard" type="object" icon="fa-share-alt" title="Distribute Cost" invisible="price_subtotal == 0"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="distribution_tag_ids" widget="many2many_tags" invisible="price_unit == 0" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
