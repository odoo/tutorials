<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.distriute.price</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="before">
                <button name="action_open_distriute_wizard" title="Open distribute wizard" type="object" icon="fa-share-alt" invisible="not price_unit"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="before">
                <field name="divided_amount_ids" widget="many2many_tags" invisible="not price_unit">
                </field>
            </xpath>
        </field>
    </record>
</odoo>
