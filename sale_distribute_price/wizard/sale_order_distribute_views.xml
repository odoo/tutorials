<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sale_order_distribute_view_form" model="ir.ui.view">
        <field name="name">sale.order.distribute.view.form</field>
        <field name="model">sale.order.distribute</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_line_ids" nolabel="1">
                        <list editable="bottom" create="0">
                            <field name="order_line_id" column_invisible="1"/>
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="is_divided"/>
                            <field name="amount"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Divide" type="object" name="action_divide_price" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
