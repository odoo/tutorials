<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_line_distribution_wizard_action" model="ir.actions.act_window">
        <field name="name">Sale Line Distribution</field>
        <field name="res_model">sale.line.distribution.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="sale_line_distribution_wizard_form" model="ir.ui.view">
        <field name="name">sale.line.distribution.wizard.form</field>
        <field name="model">sale.line.distribution.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Line Distribution" nolabel="1">
                <sheet>
                    <group>
                        <field name="order_line_ids" optional="hide" nolabel="1">
                            <list editable="bottom" delete="0" create="0">
                                <field name="distributed_cost"/>
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button string="Apply" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
