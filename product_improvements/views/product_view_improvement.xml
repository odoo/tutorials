<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Removing two buttons from header and one stat button from module stock-->
    <record id="inherit_product_template_form_view_update_quantity_button" model="ir.ui.view">
        <field name="name">product.template.form.update.quantity.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_update_quantity_on_hand']"
                position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header/button[@name='%(stock.action_product_replenish)d']"
                position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_update_quantity_on_hand'][@class='oe_stat_button']"
                position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <!-- removed one button from header from product module -->
    <record id="product_form_view_inherit_print_label_button" model="ir.ui.view">
        <field name="name">product.form.view.print.label.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_open_label_layout']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_open_label_layout" model="ir.actions.act_window">
        <field name="name">Choose Labels Layout</field>
        <field name="res_model">product.label.layout</field>  <!-- Ensure res_model is included -->
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="view_ids"
            eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('product.product_label_layout_form')})]" />
        <field name="target">new</field>
    </record>

    <record id="action_product_replenish" model="ir.actions.act_window">
        <field name="name">Low on stock? Let's replenish.</field>
        <field name="res_model">product.replenish</field>  <!-- Ensure this field is present -->
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock.view_product_replenish" />
        <field name="target">new</field>
    </record>

    <record id="product_template_view_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.sale.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <group name="group_general" position="inside">
                <field name="is_kit" />
                <field name="sub_product_ids" invisible="not is_kit" />
            </group>
        </field>
    </record>
</odoo>