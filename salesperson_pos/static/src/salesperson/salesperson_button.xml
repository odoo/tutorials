<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.Salespersonbutton">
        <button class="btn btn-light btn-lg lh-lg text-truncate w-auto" t-on-click="() => this.selectSalesperson()">
            <div t-if="props.salesperson" t-esc="props.salesperson.name" class="text-truncate text-action">
            </div>
            <div t-elif="this.sales.salesperson" t-esc="this.sales.salesperson.name">
                Salesperson
            </div>
            <div t-else="">
                Salesperson
            </div>
        </button>
    </t>
</templates>