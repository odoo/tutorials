<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">inherited.sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='tax_id']" position="after">
                <button name="sale_price_history_wizard.action_sale_price_history"
                        type='action'
                        icon="fa-history"
                        title="Sales Price History"
                        invisible="not partner_id"
                        context="{'default_product_id': product_id, 'default_partner_id': partner_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
