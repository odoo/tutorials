<?xml version="1.0"?>
<odoo>
    <!-- Form view for the wizard -->
    <record id="add_emi_wizard_form_view" model="ir.ui.view">
        <field name="name">installment.wizard.form</field>
        <field name="model">installment.wizard</field>
        <field name="arch" type="xml">
            <form string="Add EMI">
                <sheet>
                    <group>
                        <field name="so_amount" string="Total SO Amount"/>
                        <field name="down_payment"/>
                        <field name="remaining_amount"/>
                        <field name="interest"/>
                        <field name="monthly_installment_count" string="Number of Monthly Installment"/>
                        <field name="monthly_installment_amount" string="Installment Amount"/>
                    </group>       
                </sheet>
                <footer>
                    <button string="Add Installment" name="action_add_installment" type="object"  class="btn-primary" invisible="is_emi"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
