<odoo>
    <record id="product_template_view_extend" model="ir.ui.view">
        <field name="name">product.template.form.inherit.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='product_tooltip']"
                position="after">
                <field name="is_kit" />
                <field name="sub_product_ids" invisible="not is_kit" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
