<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_inherit_is_kit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.is.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group[@name='group_general']//field[@name='product_tooltip']" position="after">
                <field name="is_kit"/>
                <field name="kit_product_ids" invisible="not is_kit" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
