<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_view_extend" model="ir.ui.view">
        <field name="name">product.template.form.inherit.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']">
                <field name="is_kit"/>
                <field name="sub_products_ids" widget="many2many_tags" type="action"/>
            </xpath>
        </field>
    </record>
</odoo>
