<odoo>
    <record id="view_product_sub_wizard_form" model="ir.ui.view">
        <field name="name">product.sub.wizard.form</field>
        <field name="model">sub.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Product">
                <h3>Sub Products</h3>
                <field name="line_ids" >
                    <list editable="top" create="false">
                        <field name="product_id" />
                        <field name="quantity" />
                        <field name="price" />
                    </list>
                </field>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" />
                    <button special="cancel" string="Cancel"></button>
                </footer>
            </form>
        </field>
    </record>
</odoo>
