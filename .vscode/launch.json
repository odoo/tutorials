{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo: Launch",
            "type": "debugpy",
            "request": "launch",
            "program": "${env:HOME}/odoo18/community/odoo-bin",
            "args": [
              "--addons-path=${env:HOME}/odoo18/community/addons,${env:HOME}/odoo18/enterprise,${workspaceFolder}",
              "--dev=all",
              "--log-level=warn",
              "-d test",
              "-u estate",
              "-i base",
              "--limit-time-real=100000000000000",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        }
    ]
}