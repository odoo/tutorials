<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="vendor_template_list_view" model="ir.ui.view">
        <field name="name">vendor.product.template.list.view</field>
        <field name="model">vendor.product.template</field>
        <field name="arch" type="xml">
            <list string="Vendor product Template">
                <field name="name" string="Name"/>
                <field name="vendor_id"/>
            </list>
        </field>
    </record>

    <record id="vendor_template_form_view" model="ir.ui.view">
        <field name="name">vendor.product.template.form.view</field>
        <field name="model">vendor.product.template</field>
        <field name="arch" type="xml">
            <form name="Vendor Product Template">  
                <sheet>
                    <group>
                        <field name="name" class="h1" placeholder="Template Name" nolabel="1"/>
                        <field name="vendor_id"/>
                    </group>
                    <notebook>
                        <page string="Vendor Template Formate">
                            <field name="template_formate_ids" editable="bottom"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- view action -->
    <record id="vendor_product_template_view_action" model="ir.actions.act_window">
        <field name="name">Vendor Product Template action</field>
        <field name="res_model">vendor.product.template</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
