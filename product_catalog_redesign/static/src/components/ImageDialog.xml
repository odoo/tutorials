<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="product_catalog_redesign.ImageDialog">
        <Dialog t-props="props">
            <t t-set-slot="default">
                <div class="text-center">
                    <img t-att-src="props.imageUrl"
                         class="img-fluid" 
                         style="max-width: 100%; height:250px; border-radius: 8px;"/>
                </div>
            </t>
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="props.close">Close</button>
            </t>
        </Dialog>
    </t>
</templates>
