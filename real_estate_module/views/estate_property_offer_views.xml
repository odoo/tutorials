<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_id', '=', context.get('active_id'))]</field>
    </record>
    <!-- Property Types Inline View (Corrected) -->
    <record id="property_types_inline_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.inline.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(estate_property_offer_action)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers"></field>
                    </button>
                </header>
                <h1>
                    <field name="name"/>
                </h1>
                <notebook>
                    <page string="Properties">
                        <field name="property_ids">
                            <list>
                                <field name="name" string="Title"></field>
                                <field name="expected_price"></field>
                                <field name="state"></field>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>