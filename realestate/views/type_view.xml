<odoo>


    <record id="type_action" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="res_model">types</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id='type_form_view' model='ir.ui.view'>
        <field name='name'>Types List</field>
        <field name='model'>types</field>
        <field name='arch' type='xml'>
            <form string='Types'>
                <header>
                    <button type='action' name='%(offer_action)d' class="oe_stat_button"
                        icon='fa-money'>
                        <field name='offer_count' />
                    </button>
                </header>
                <sheet>
                    <h1>
                        <field name='name' />
                    </h1>
                    <notebook>

                        <page string="Properties">

                            <field name='properties_ids'>
                                <list>
                                    <field name='name' string='Title' />
                                    <field name='expected_price' />
                                    <field name='state' string='Status' />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>

    </record>
    <record id='type_list_view' model='ir.ui.view'>
        <field name='name'>Types List</field>
        <field name='model'>types</field>
        <field name='arch' type='xml'>
            <list string='Channel'>
                <field name='name' />
                <field name="sequence" widget='handle' />
                <field name='offer_count' />


            </list>

        </field>

    </record>

    <menuitem id="real_estate_root_menu" name="Real Estate">
        <menuitem id="configuration_menu" name="Configuration">
            <menuitem id="type_menu_item" name="Property Types" action="type_action" />
        </menuitem>
    </menuitem>


</odoo>