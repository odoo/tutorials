<odoo>


    <record id="offer_action" model="ir.actions.act_window">
        <field name="name">Offer</field>
        <field name="res_model">offer</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id='offer_list_view' model='ir.ui.view'>
        <field name='name'>Offers List</field>
        <field name='model'>offer</field>
        <field name='arch' type='xml'>
            <list string='Channel'>
                <field name='price' />
                <field name="status" />
                <field name='buyer_id' />
                <field name="validity" />
                <field name="property_id" />
                <field name="deadline" />
                <button type='object' name="set_offer_accepted" string="Accept" icon='fa-check' />


            </list>

        </field>

    </record>

    <menuitem id="real_estate_root_menu" name="Real Estate">
        <menuitem id="advertisements_menu" name="Advertisements">
            <menuitem id="offer_menu_item" name="Offers" action="offer_action" />
        </menuitem>
    </menuitem>


</odoo>