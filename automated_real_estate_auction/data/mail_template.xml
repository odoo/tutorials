<?xml version="1.0"?>
<odoo>
    <record id="email_template_offer_accepted" model="mail.template">
        <field name="name">Auction Offer Accepted</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="subject">Congratulations! Your Offer is Accepted</field>
        <field name="email_from">${(object.company_id.email or 'noreply@example.com')|safe}</field>
        <field name="email_to">${object.buyer_id.email|safe}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
           <![CDATA[
           <p>Hello <strong>${object.buyer_id.name}</strong>,</p>
           <p>Congratulations! Your offer of <strong>${object.selling_price} ${object.currency_id.symbol}</strong> 
              has been accepted for the property <strong>${object.name}</strong>.</p>
           <p>Please contact us for further steps.</p>
           <p>Best Regards,</p>
           <p>${object.company_id.name}</p>
           ]]>        
        </field>
    </record>

    <record id="email_template_offer_rejected" model="mail.template">
        <field name="name">Auction Offer Rejected</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="subject">Your Offer was Not Accepted</field>
        <field name="email_from">${(object.company_id.email or 'noreply@example.com')|safe}</field>
        <field name="email_to">${object.buyer_id.email|safe}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
           <![CDATA[
           <p>Hello <strong>${object.buyer_id.name}</strong>,</p>
           <p>We regret to inform you that your offer of <strong>${object.selling_price} ${object.currency_id.symbol}</strong> 
              was not accepted for the property <strong>${object.name}</strong>.</p>
           <p>Thank you for participating in the auction.</p>
           <p>Best Regards,</p>
           <p>${object.company_id.name}</p>
           ]]>        
        </field>
    </record>
</odoo>
