<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="budget_line_menu_action" model="ir.actions.act_window">
        <field name="name">Budget Line</field>
        <field name="res_model">budget.line</field>
        <field name="view_mode">list,pivot,graph,gantt</field>
    </record>

    <record id="budget_line_list_view" model="ir.ui.view">
        <field name="name">budget.line.list</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <list string="Budget Line">
                <field name="budget_id" />
                <field name="budget_amount" />
                <field name="achieved_amount" />
                <field name="achieved_percentage" />
            </list>
        </field>
    </record>

    <record id="budget_line_pivot_view" model="ir.ui.view">
        <field name="name">budget.line.pivot</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <pivot string="Budget Lines">
                <field name="analytic_account_ids" type="row"/>
                <field name="achieved_amount" type="measure" string="Achieved"/>
                <field name="budget_amount" type="measure" string="Budget"/>
            </pivot>
        </field>
    </record>

    <record id="budget_line_graph_view" model="ir.ui.view">
        <field name="name">budget.line.graph</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <graph string="Budget Line" type="line">
                <field name="analytic_account_ids" type="row"/>
                <field name="achieved_amount" type="col"/>
                <field name="budget_amount" type="measure"/>
                <field name="budget_id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="budget_line_gantt_view" model="ir.ui.view">
        <field name="name">budget.line.gantt</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <gantt string="Budget Line"
             date_start="period_start_date" date_stop="priod_end_date" default_group_by="budget_id">
            </gantt>
        </field>
    </record>


</odoo>