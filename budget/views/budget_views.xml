<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_budget_form" model="ir.ui.view">
        <field name="name">budget.budget.form</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <form string="Budget Form">
                <field name="state" invisible="1"/>
                <div class="alert alert-warning" role="alert" name="warnings" invisible="not warnings">
                    <p>This is over budget warning</p>
                </div>
                <header>
                    <button name="action_budget_draft" type="object" string="Reset to Draft" invisible="state in ['draft','revised','done']"/>
                    <button name="action_budget_confirmed" type="object" string="confirmed" invisible="state in ['revised','done','confirmed']"/>
                    <button name="action_budget_revise" type="object" string="Revise" invisible="state in ['revised','done']"/>
                    <button name="action_budget_done" type="object" string="Done" invisible="state in ['done']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,revised,done"/>
                </header>
                <sheet>
                    <h5>Budget Name</h5>
                    <h4>
                        <field name="name"/>
                    </h4>
                    <field name="currency_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date_from" string="Period" widget="daterange" options="{'end_date_field': 'date_to', 'always_range': '1'}" optional="hide" />
                        </group>
                    </group>
                    <group>
                        <group>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="on_over_budget"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="revision_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Budget Lines">
                            <field name="budget_line_ids">
                                <list no_open="1" create="state in ['draft']" editable="bottom">
                                    <field name="state" column_invisible="1" />
                                    <field name="currency_id" column_invisible="1" />
                                    <field name="analytic_account_id" string="Analytic Account" readonly="state not in ['draft']"/>
                                    <field name="planned_amount" string="Budget Amount" readonly="state not in ['draft']"/>
                                    <field name="practical_amount" string="Achieved Amount" />
                                    <field name="percentage" string="Achieved (%)" widget="progressbar" options="{'max_value': 100}"/>
                                    <!-- <button name="action_view_analytic_lines" type="object" string="View"/> -->
                                    <button name="open_analytic_lines_action" type="object" string="View"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_budget_kanban" model="ir.ui.view">
        <field name="name">budget.budget.kanban</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <kanban sample="1" highlight_color="color">
                <header>
                    <button name="action_budget_wizard" type="object" string="Generate" display="always"/>
                </header>
                <templates>
                    <t t-name="menu">

                        <div class="container">
                            <div class="row">
                                <div name="card_menu_view">
                                    <div role="menuitem" aria-haspopup="true">
                                        <a class="dropdown-item" role="menuitem" name="budget_action" type="open">
                                            Configuration</a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div role="menuitem" aria-haspopup="true" class="col-6">
                                    <field name="color" widget="kanban_color_picker"/>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="card">
                        <div style="display:flex;justify-content:space-between;flex-direction:column">
                            <div style="display:flex;">
                                <field name="is_favorite" widget="boolean_favorite" options="{'color': 'warning'}" nolabel="1"/>
                                <h3>
                                    <field name="name"/>
                                </h3>
                                <!-- <div class="d-flex flex justify-content-end align-items-center">
                                <field name="state" class="float-end" widget="label_selection" options="{'state': {'draft': 'confirmed', 'revised': 'done'}}"/>
                            </div> -->
                            </div>
                            <div style="display:flex;">
                                <div t-if="record.date_to.raw_value or record.date_from.raw_value" class="text-muted">
                                    <span class="fa fa-clock-o me-2" title="Dates"/>
                                    <field name="date_from"/>
                                    <i t-if="record.date_to.raw_value and record.date_from.raw_value" class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_to"/>
                                </div>
                            </div>
                        </div>
                        <footer class="mt-auto pt-0 ms-1">
                            <div class="d-flex ms-auto align-items-center">
                                <field name="user_id" string="Responsible" widget="many2one_avatar_user" domain="[('share', '=', False)]" class="me-1"/>
                            </div>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="budget_action" model="ir.actions.act_window">
        <field name="name">Budgets</field>
        <field name="res_model">budget.budget</field>
        <field name="view_mode">kanban,form</field>
    </record>
</odoo>
