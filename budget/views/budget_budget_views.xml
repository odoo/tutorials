<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="budget_menu_action" model="ir.actions.act_window">
        <field name="name">Budget</field>
        <field name="res_model">budget.budget</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="budget_budget_kanban_view" model="ir.ui.view">
        <field name="name">budget.budget.kanban</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <kanban highlight_color="color">
                <header>
                    <button name="action_create_multiple_budget" display="always" class="btn btn-secondary" string="Generate" type="object"/>
                </header>
                <field name="state"/>
                <templates>
                    <t t-name="menu">
                        <t t-if="widget.editable">
                            <a role="menuitem" type="open" class="dropdown-item">Edit</a>
                        </t>
                        <t t-if="widget.deletable">
                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        </t>
                        <button name="open_budget_form_view" type="object" class="dropdown-item" string="Configuration"></button>
                        <field name="color" widget="kanban_color_picker"/>
                    </t>
                    <t t-name="card">
                        <t class="oe_kanban_global_click">
                            <div class="d-flex mb-0 h5">
                                <field class="me-1" name="name" widget="boolean_favorite" nolabel="1"/>
                                <field name="name" class="oe_kanban_title"/>
                            </div>
                            <br/>
                            <div class="d-flex mt-auto align-items-center">
                                <field name="activity_ids" widget="kanban_activity"/>
                                <div>
                                    <span>Budget: </span>
                                    <field name="period_start_date"/>
                                    <span> -- </span>
                                    <field name="period_end_date"/>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div class="d-flex ms-auto align-items-center">
                                <field name="responsible" widget="many2one_avatar" class="me-1"/>
                                <field t-if="record.state.raw_value &amp;&amp; widget.editable" name="state" widget="project_state_selection"/>
                            </div>
                        </t>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="budget_budget_form_view" model="ir.ui.view">
        <field name="name">budget.budget.form</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-warning" role="alert" invisible="not warning_message">
                    <field name="warning_message"/>
                </div>
                <header>
                    <button name="action_reset_to_draft" type="object" string="Reset to draft" class="btn btn-primary" invisible="state=='draft'"/>
                    <button name="action_confirm" type="object" string="Confirm" class="btn btn-primary" invisible="state!='draft'"/>
                    <button name="action_revise" type="object" string="Revise"/>
                    <button name="action_set_to_done" type="object" string="Done"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h4>
                    Budget Name 
                        <br/>
                        <field name="name"/>
                    </h4>
                    <group>
                        <group>
                            <field name="responsible"/>
                            <field name="revision_id"/>
                        </group>
                        <group>
                            <group>
                                <field name="period_start_date"/>
                            </group>
                            <group>
                                <field name="period_end_date"/>
                            </group>
                            <group>
                                <field name="company"/>
                                <field name="on_over_budget" invisible="over_budget_visible==True"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget lines">
                            <field name="budget_line_ids" readonly="state in ['confirmed', 'done']">
                                <list editable="bottom">
                                    <field name="analytic_account_ids"/>
                                    <field name="budget_amount"/>
                                    <field name="achieved_amount"/>
                                    <field name="achieved_percentage" widget="progressbar"/>
                                <button name="open_account_analytic_view" type="object" string="View"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>