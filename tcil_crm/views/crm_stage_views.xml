<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_stage_tree" model="ir.ui.view">
        <field name="name">crm.stage.list.inherit.tcil.crm</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_won']" position="before">
                <field name="sequence_no"/>
            </xpath>
        </field>
    </record>

    <record id="crm_stage_form" model="ir.ui.view">
        <field name="name">crm.stage.form.inherit.tcil.crm</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_won']" position="before">
                <field name="sequence_no"/>
            </xpath>
        </field>
    </record>
</odoo>
