<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_move_line_form_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.product.context</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//list//field[@name='product_id']" position="attributes">
                <attribute name="context">
                    {
                        "default_partner_id": parent.partner_id,
                        "order_type": "invoice"
                    }
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
