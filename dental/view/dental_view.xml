<odoo>
    <record id="dental_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">dental.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>


        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data found!
            </p>
            <p>
                Use this menu to have an overview of your Pipeline.
            </p>
        </field>
    </record>

    <!-- Tree view -->

    <record id="action_dental_patient_tree" model="ir.ui.view">
        <field name="name">dental.patient</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <tree sample="1">

                <field name='sequence' widget='handle' />
                <field name="name" string="Title" />
                <field name="state" invisible="1" />

            </tree>
        </field>
    </record>

    <!-- form view -->


    <record id="action_dental_patient_form" model="ir.ui.view">
        <field name="name">dental.patient.form</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <form string="description">
                <header>
                    <header>
                        <button name="button_to_invoice" type="object" string="Invoice"
                            invisible="state in ('new', 'today')" />
                    </header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,today,done,invoice" />
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>

                    </div>
                    <field name="patient_image" widget="image" class="oe_avatar" />

                    <group>
                        <field name="state" />
                        <field name="history_ids" />


                    </group>
                    <notebook>
                        <page string="Medical">
                            <group>
                                <group>
                                    <field name="gpname" />
                                    <field name="chronic_ids" widget="many2many_tags" />
                                    <field name="hospitalised_year" />
                                    <field name="medication_ids" widget="many2many_tags" />
                                    <field name="gender" />
                                    <field name="ispregnant" />
                                    <field name="isnursing" />
                                    <field name="areyouon" />
                                </group>
                                <group>
                                    <field name="allergies_ids" widget="many2many_tags" />
                                    <field name="habits_abuse_ids" widget="many2many_tags" />
                                    <field name="under_speciality" />

                                </group>
                            </group>
                            <field name="notes" placeholder="Type down your notes here" />


                        </page>

                        <page name="Medical Aid">
                            <group>
                                <group>
                                    <field name="medical_aids_ids" />
                                    <field name="medical_aid_plan" />
                                    <field name="medical_aid_no" />
                                </group>
                                <group>
                                    <field name="main_member_code" />
                                    <field name="dependent_code" />
                                </group>
                            </group>
                        </page>

                        <page string="History">
                            <group>
                                <field name="history_ids" />
                            </group>


                        </page>
                        <page string="Patient Details">

                            <group>
                                <group string="NEXT OF KIN">
                                    <field name="emergency_contact" string="Emergency Contact" />
                                    <field name="mobile" string="Mobile" widget="phone" />


                                </group>
                                <group string="PATIENT DETAILS">
                                    <field name="company_id" string="Company or School" />
                                    <field name="occupation" string="Occupation or Grade" />
                                    <field name="identity_no" string="Identity Number" />
                                    <field name="birth_data" string="Date of Birth" />
                                    <field name="gender" string="Gender" />
                                    <field name="marital_status" string="Marital Status" />

                                </group>
                                <group string="CONSENT FORM">
                                    <field name="signature" string="Consent Signature" />
                                    <field name="birth_data" string="Consent Date" />

                                </group>

                            </group>
                            <field name="notes" placeholder="Type down your notes here" />


                        </page>
                        <page string="Guarantor Details">
                            <group>
                                <group string="GUARANTOR">
                                    <field name="guarantor" string="Guarantor" />
                                    <field name="guarantor_mobile" string="Guarantor Mobile"
                                        widget="phone" />
                                    <field name="guarantor_phone" string="Phone" />
                                    <field name="guarantor_email" string="Email" />


                                </group>
                                <group string="OFFICE USE">
                                    <field name="tags_ids" string="Tags" widget="many2many_tags" />
                                    <field name="guarantor_company_id" string="Company" />

                                </group>

                            </group>
                            <field name="notes" placeholder="Type down your notes here" />


                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>

        </field>
    </record>

    <!-- kanban view -->

    <record id="action_dental_patient_kanban_view" model="ir.ui.view">
        <field name="name">dental.patient.action.kanban.view</field>
        <field name="model">dental.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="false">
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="container">
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="oe_kanban_global_click">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="w-52 h-52">
                                        <field name="patient_image" widget="image" class="oe_avatar" />
                                    </div>
                                </div>
                            </div>
                        </div>


                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>