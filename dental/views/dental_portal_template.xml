<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_my_home_extended" name="My Portal Extended" inherit_id="portal.portal_my_home">
        <xpath expr="//div[@id='portal_common_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/dental/static/description/dental-checkup.png'"/>
                <t t-set="title">Dental</t>
                <t t-set="text">Manage your dental records and appointments</t>
                <t t-set="url" t-value="'/my/dental'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>
    
    <template id="portal_my_dental" name="My Dental Portal">
        <t t-call="portal.portal_layout">
            <t t-set="title">Dental</t>
            <div class="container">
                <h1>Dental</h1>
                <div class="row">
                    <div class="col-md-6 mb-4" t-foreach="users" t-as="user">
                        <a t-attf-href="/my/dental/{{ user.id }}">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    <img class="mr-3" src="/contacts/static/description/icon.svg"/>
                                    <p class="card-title mb-0" t-esc="user.name"/>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_dental_user" name="My Dental Portal">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4 d-flex justify-content-start gap-4 gap-md-4 align-items-center text-bg-light me-md-3 me-md-3">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="icon" t-value="'/sale/static/src/img/bag.svg'"/>
                            <t t-set="title">Personal</t>
                            <!-- <t t-set="url" t-value="'/my/dental'"/> -->
                            <t t-set="config_card" t-value="True"/>
                        </t>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4 d-flex justify-content-start gap-4 gap-md-4 align-items-center text-bg-light">
                       <t t-call="portal.portal_docs_entry">
                            <t t-set="icon" t-value="'/account/static/src/img/Bill.svg'"/>
                            <t t-set="title">Medical History</t>
                            <!-- <t t-set="url" t-value="'/my/dental'"/> -->
                            <t t-set="config_card" t-value="True"/>
                        </t>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5 order-md-2 mb-4 d-flex justify-content-start gap-4 gap-md-4 align-items-center text-bg-light me-md-3">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="icon" t-value="'/project/static/src/img/folder.svg'"/>
                            <t t-set="title">Medical Aid</t>
                            <!-- <t t-set="url" t-value="'/my/dental/medical-aid'"/> -->
                            <t t-set="config_card" t-value="True"/>
                        </t>
                    </div>
                    <div class="col-md-6 order-md-2 mb-4 d-flex justify-content-start gap-4 gap-md-4 align-items-center text-bg-light">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="icon" t-value="'/project/static/src/img/tasks.svg'"/>
                            <t t-set="title">Dental History and Next Appointment</t>
                            <!-- <t t-set="url" t-value="'/my/dental'"/> -->
                            <t t-set="config_card" t-value="True"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>