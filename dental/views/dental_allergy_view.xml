<?xml version="1.0"?>
<odoo>
    <record id="view_dental_allergy_tree" model="ir.ui.view">
        <field name="name">dental.allergy.tree</field>
        <field name="model">dental.allergy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_dental_allergy_form" model="ir.ui.view">
        <field name="name">dental.allergy.form</field>
        <field name="model">dental.allergy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div>
                        <field name="parent_id" />
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <record id="allergy_action" model="ir.actions.act_window">
        <field name="name">Allergy</field>
        <field name="res_model">dental.allergy</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>