<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="dental_habits_actions" model="ir.actions.act_window">
        <field name="name">Habits</field>
        <field name="res_model">dental.habits</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> Create a habit</p>
        </field>
    </record>

    <record id="dental_habits_tree" model="ir.ui.view">
        <field name="name">dental.habits.tree</field>
        <field name="model">dental.habits</field>
        <field name="arch" type="xml">
            <tree sample="1" editable='bottom'>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>
