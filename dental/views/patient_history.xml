<odoo>
    <record id="patient_history_action" model="ir.actions.act_window">
        <field name="name">Patient History</field>
        <field name="res_model">patient.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_patient_history_tree" model="ir.ui.view">
        <field name="name">patient.history.tree</field>
        <field name="model">patient.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" widget="date"/>
                <field name="name" />
                <field name="treatment_notes" string="Description"/>
                <field name="tags"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_history_form" model="ir.ui.view">
        <field name="name">patient.history.form</field>
        <field name="model">patient.history</field>
        <field name="arch" type="xml">
            <form string="Patient History">
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" required="1"/>
                            <field name="date" required="1"/>
                            <field name="did_not_attend"/>
                        </group>
                        <group>
                            <field name="responsible_id"/>
                            <field name="company_id" required="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Teeth History">
                            <field name="main_complaint"/>
                            <field name="xray_file_1" widget="image"/>
                            <field name="habits"/>
                            <field name="clear_align_file_1" widget="binary"/>
                        </group>
                        <group string="Teeth History">
                            <field name="teeth_history"/>
                            <field name="xray_file_2" widget="image"/>
                            <field name="extra_oral_observation"/>
                            <field name="clear_align_file_2" widget="binary"/>
                        </group>
                    </group>
                    <group string="Tooth Chart">
                        <group>
                            <group string="Upper">
                                <field name="upper_18" />
                                <field name="upper_17" />
                                <field name="upper_16" />
                                <field name="upper_15" />
                                <field name="upper_14" />
                                <field name="upper_13" />
                                <field name="upper_12" />
                                <field name="upper_11" />
                                <field name="upper_28" />
                                <field name="upper_27" />
                                <field name="upper_26" />
                                <field name="upper_25" />
                                <field name="upper_24" />
                                <field name="upper_23" />
                                <field name="upper_22" />
                                <field name="upper_21" />
                            </group>
                            <group string="Lower">
                                <field name="lower_38" />
                                <field name="lower_37" />
                                <field name="lower_36" />
                                <field name="lower_35" />
                                <field name="lower_34" />
                                <field name="lower_33" />
                                <field name="lower_32" />
                                <field name="lower_31" />
                                <field name="lower_41" />
                                <field name="lower_42" />
                                <field name="lower_43" />
                                <field name="lower_44" />
                                <field name="lower_45" />
                                <field name="lower_46" />
                                <field name="lower_47" />
                                <field name="lower_48" />
                            </group>
                        </group>
                    </group>
                    <group name="Treatment Notes">
                        <field name="treatment_notes" widget="text"/>
                    </group>
                    <group name="BILLING">
                        <field name="consultation_type" widget="selection" />
                        <field name="call_out" widget="boolean" />
                        <field name="scale_and_polish" widget="boolean" />
                        <field name="fluoride" widget="boolean" />
                        <field name="filling_description" widget="text" />
                        <field name="aligner_delivery" widget="boolean" />
                        <field name="whitening" widget="boolean" />
                        <field name="fissure_sealant_qty" widget="float" />
                        <field name="attachments_removed" widget="boolean" />
                        <field name="aligner_followup_scan" widget="boolean" />
                        <field name="other_notes" widget="text" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
