<?xml version="1.0"?>
<odoo>
    <record id="action_medical_history" model="ir.actions.act_window">
        <field name="name">Medical History</field>
        <field name="res_model">medical.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_medical_history_tree" model="ir.ui.view">
        <field name="name">medical.history.tree</field>
        <field name="model">medical.history</field>
        <field name="arch" type="xml">
            <tree string="Medical History">
                <field name="date" />
                <field name="name" />
                <field name="main_complaint" string="Description" />
                <field name="tag_ids" />
            </tree>
        </field>
    </record>

    <record id="view_medical_history_tree" model="ir.ui.view">
        <field name="name">medical.history.tree</field>
        <field name="model">medical.history</field>
        <field name="arch" type="xml">
            <tree string="Medical History">
                <field name="date" />
                <field name="name" />
                <field name="tag_ids" />
            </tree>
        </field>
    </record>

    <record id="view_medical_history_form" model="ir.ui.view">
        <field name="name">medical.history.form</field>
        <field name="model">medical.history</field>
        <field name="arch" type="xml">
            <form string="Medical History">
                <group>
                    <field name="name" />
                </group>
                <sheet>
                    <group string="Billing">
                        <group>
                            <field name="patient_id" readonly="True" />
                            <field name="date" required="1" />
                            <field name="did_not_attend" />
                        </group>
                        <group>
                            <field name="company_id" />
                            <field name="tag_ids" />
                            <field name="responsible" />
                        </group>
                    </group>
                    <group>
                        <group string="Teeth History">
                            <field name="main_complaint" />
                            <field name="xray_file1" widget="image" />
                            <field name="habits" />
                            <field name="aligner_file1" />
                        </group>
                        <group string="Teeth History">
                            <field name="history" />
                            <field name="xray_file2" widget="image" />
                            <field name="extra_observation" />
                            <field name="aligner_file2" />
                        </group>
                    </group>
                    <group string="Tooth Chart">
                        <group string="Upper">
                            <strong>
                                <div>
                                    <div class="pt-3">18</div>
                                    <div class="pt-3">17</div>
                                    <div class="pt-3">16</div>
                                    <div class="pt-3">15</div>
                                    <div class="pt-3">14</div>
                                    <div class="pt-3">13</div>
                                    <div class="pt-3">12</div>
                                    <div class="pt-3">11</div>
                                    <div class="pt-3">28</div>
                                    <div class="pt-3">27</div>
                                    <div class="pt-3">26</div>
                                    <div class="pt-3">25</div>
                                    <div class="pt-3">24</div>
                                    <div class="pt-3">23</div>
                                    <div class="pt-3">22</div>
                                    <div class="pt-3">21</div>
                                </div>
                            </strong>
                        </group>
                        <group string="Upper">
                            <field name="upper_18" />
                            <field name="upper_17" />
                            <field name="upper_16" />
                            <field name="upper_15" />
                            <field name="upper_14" />
                            <field name="upper_13" />
                            <field name="upper_12" />
                            <field name="upper_11" />
                            <field name="upper_28" />
                            <field name="upper_27" />
                            <field name="upper_26" />
                            <field name="upper_25" />
                            <field name="upper_24" />
                            <field name="upper_23" />
                            <field name="upper_22" />
                            <field name="upper_21" />
                        </group>
                        <group string="Lower">
                            <strong>
                                <div>
                                    <div class="pt-3">48</div>
                                    <div class="pt-3">47</div>
                                    <div class="pt-3">46</div>
                                    <div class="pt-3">45</div>
                                    <div class="pt-3">44</div>
                                    <div class="pt-3">43</div>
                                    <div class="pt-3">42</div>
                                    <div class="pt-3">41</div>
                                    <div class="pt-3">38</div>
                                    <div class="pt-3">37</div>
                                    <div class="pt-3">36</div>
                                    <div class="pt-3">35</div>
                                    <div class="pt-3">34</div>
                                    <div class="pt-3">33</div>
                                    <div class="pt-3">32</div>
                                    <div class="pt-3">31</div>
                                </div>
                            </strong>
                        </group>
                        <group name="lower" string="Lower">
                            <field name="lower_48" />
                            <field name="lower_47" />
                            <field name="lower_46" />
                            <field name="lower_45" />
                            <field name="lower_44" />
                            <field name="lower_43" />
                            <field name="lower_42" />
                            <field name="lower_41" />
                            <field name="lower_38" />
                            <field name="lower_37" />
                            <field name="lower_36" />
                            <field name="lower_35" />
                            <field name="lower_34" />
                            <field name="lower_33" />
                            <field name="lower_32" />
                            <field name="lower_31" />
                        </group>
                    </group>
                    <group string="Treatment notes">
                        <field name="treatment_notes" widget="text" />
                    </group>
                    <group string="Billing">
                        <field name="consultation_type" widget="selection" />
                        <field name="call_out" widget="boolean" />
                        <field name="scale_and_polish" widget="boolean" />
                        <field name="fluoride" widget="boolean" />
                        <field name="filling_description" widget="text" />
                        <field name="aligner_delivery" widget="boolean" />
                        <field name="whitening" widget="boolean" />
                        <field name="fissure_sealant_qty" widget="float" />
                        <field name="attachments_removed" widget="boolean" />
                        <field name="aligner_followup_scan" widget="boolean" />
                    </group>

                    <div>
                        <field name="notes" placeholder="Type down your notes here" />
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>
</odoo>