<?xml version="1.0"?>
<odoo>
    <record id="view_dental_habit_tree" model="ir.ui.view">
        <field name="name">dental.habit.tree</field>
        <field name="model">dental.habit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="parent_id" />
            </tree>
        </field>
    </record>
    <record id="view_dental_habit_form" model="ir.ui.view">
        <field name="name">dental.habit.form</field>
        <field name="model">dental.habit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div>
                        <field name="parent_id" />
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="habit_action" model="ir.actions.act_window">
        <field name="name">Habit</field>
        <field name="res_model">dental.habit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>