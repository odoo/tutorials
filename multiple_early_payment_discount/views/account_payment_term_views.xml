<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payment_term_form" model="ir.ui.view">
        <field name="name">inherited.account.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_field_highlight')]" position="replace">
                <div class="o_field_highlight">
                    <field name="early_discount"/>
                    <field name="discount_line_ids" invisible="not early_discount">
                        <list editable="bottom">
                            <field name="discount_percentage"/>
                            <field name="discount_days"/>
                            <field name="early_pay_discount_computation"/>
                        </list>
                    </field>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
