<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="view_order_form_inherited_catalog" model="ir.ui.view">
      <field name="name">view.order.form.inherited</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
         <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
            <button name="catalog.price_list_wizard_action" type="action" icon="fa-history" title="View Order History"/>
         </xpath>
      </field>
   </record>
</odoo>
