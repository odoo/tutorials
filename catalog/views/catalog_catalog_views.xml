<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="catalog_catalog_list_view" model="ir.ui.view">
        <field name="name">catalog.catalog.list.view</field>
        <field name="model">catalog.catalog</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
            </list>
        </field>
    </record>
    <record id="catalog_catalog_view_form" model="ir.ui.view">
        <field name="name">catalog.catalog.view.form</field>
        <field name="model">catalog.catalog</field>
        <field name="arch" type="xml">
            <form string="Catalog">
                <header>
                    <button string="Catalog View"
                        type="object"
                        name="action_open_catalog_view"
                        class="btn-primary"/>
                </header>
                <sheet>
                    <group>   
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <notebook>
                            <page name="Caalog Lines" string="Lines">
                                <field name="catalog_line_ids">
                                    <list editable="bottom">
                                        <field name="product_category_id"></field>
                                        <field name="color1" widget="color"></field>
                                        <field name="color2" widget="color"></field>
                                        <field name="removed_product_ids"></field>
                                    </list>
                                </field>  
                            </page>
                            <page name="Catalog Fields" string="Fields">
                                <field name="catalog_fields_line_ids">
                                    <list editable="bottom">
                                         <field name="sequence" widget="handle"></field>
                                         <field name="fields"></field>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>  
    <record id="catalog_catalog_action" model="ir.actions.act_window">
        <field name="name">Catalog</field>
        <field name="res_model">catalog.catalog</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
