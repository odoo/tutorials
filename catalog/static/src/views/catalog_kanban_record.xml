<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="CatalogKanbanRecord">
        <article
            t-att-class="getRecordClasses() + (isRemoved ? 'bg-danger-subtle' : '')"
            t-att-data-id="props.record.id"
            t-att-tabindex="props.record.model.useSampleModel ? -1 : 0"
            t-on-click.prevent.stop="onGlobalClick">
            <div class="d-flex h-100">
                <t t-call="{{ templates[this.constructor.KANBAN_CARD_ATTRIBUTE] }}"
                   t-call-context="this.renderingContext"/>
            </div>
        </article>
    </t>
</templates>
