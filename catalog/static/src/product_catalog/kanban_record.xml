<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="catalog.ProductCatalogKanbanRecord" t-inherit="ProductCatalogKanbanRecord" t-inherit-mode="extension">
        <xpath expr="//article" position="attributes">
             <attribute name="t-if">this.env.orderResModel != 'catalog.catalog'</attribute>
        </xpath>
        <xpath expr="//article" position="after">
            <article
                t-if="this.env.orderResModel == 'catalog.catalog'"
                t-att-class="
                    getRecordClasses() +
                    (
                        this.state.removed_product_ids.includes(this.props.record.data.id)
                        ? ' o_cancelled'
                        : ''
                    )
                "
                t-att-data-id="props.record.id"
                t-att-tabindex="props.record.model.useSampleModel ? -1 : 0"
                t-on-click="onGlobalClick"
                t-ref="root">
                <div class="d-flex flex-column h-100">
                    <t t-call="{{ templates[this.constructor.KANBAN_CARD_ATTRIBUTE] }}"
                        t-call-context="this.renderingContext"/>
                    <t t-component="orderLineComponent" productId="props.record.resId" t-props="productCatalogData"/>
                </div>
                <t t-call="{{ this.constructor.menuTemplate }}"/>
            </article>
        </xpath>
    </t>
</templates>
