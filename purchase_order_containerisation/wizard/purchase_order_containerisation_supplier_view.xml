<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_containerisation_supplier_wizard_form" model="ir.ui.view">
        <field name="name">containerisation.supplier.wizard.form</field>
        <field name="model">purchase.order.containerisation.supplier</field>
        <field name="arch" type="xml">
            <form string="Select Supplier">
                <group>
                    <p>Please select the supplier that you are wishing to containerize purchase order lines for</p>
                    <field name="supplier_id"/>
                </group>
                <footer>
                    <button string="Continue" type="object" name="action_continue" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_containerisation_supplier_wizard" model="ir.actions.act_window">
        <field name="name">Select Supplier</field>
        <field name="res_model">purchase.order.containerisation.supplier</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_containerisation_supplier_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
