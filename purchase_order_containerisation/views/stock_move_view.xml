<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_move_container_list" model="ir.ui.view">
        <field name="name">stock.move.container.list</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <list name="stock_move_container_list" create="false" editable="bottom">
                <header>
                    <button name="action_continue_container" class="oe_highlight" type="object" string="Continue"/>
                </header>
                <field name="origin" readonly="1" optional="hide"/>
                <field name="picking_id" readonly="1"/>
                <field name="date" readonly="1"/>
                <field name="product_id" readonly="1"/>
                <field name="location_dest_id" readonly="1"/>
                <field name="product_uom_qty" readonly="1"/>
                <field name="quantity_to_containerise"/>
            </list>
        </field>
    </record>

    <record id="view_stock_move_container_search" model="ir.ui.view">
        <field name="name">stock.move.container.search</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <search string="Move Lists">
                <group expand="1" string="Group By">
                    <filter string="Source Document" name="origin" context="{'group_by': 'origin'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_stock_move_container" model="ir.actions.act_window">
        <field name="name">Set Lines and Quantities to Containerise</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_stock_move_container_list"/>
        <field name="search_view_id" ref="view_stock_move_container_search"/>
        <field name="target">new</field>
    </record>
</odoo>
