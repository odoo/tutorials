<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_product_kit_wizard_view_form" model="ir.ui.view">
        <field name="name">product.kit.wizard.view.form</field>
        <field name="model">product.kit.wizard</field>
        <field name="arch" type="xml">
            <form string="Kit Configuration">
                <sheet>
                    <group>
                        <field name="product_id" readonly="1"/>
                    </group>
                    <separator string="Sub Products" />
                    <field name="subproduct_ids">
                        <list editable="bottom" create="0">
                            <field name="wizard_id" column_invisible="1"/>
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                        </list>
                    </field>
                    <footer>
                        <button type="object" string="Confirm" name="action_confirm_kit" class="btn btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
