<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tooltip']" position="after">
                <field name="is_kit" invisible="type != 'consu'" />
                <field name="sub_product_ids" widget="many2many_tags" invisible="not is_kit or type != 'consu'"/>
            </xpath>
        </field>
    </record>
</odoo>
