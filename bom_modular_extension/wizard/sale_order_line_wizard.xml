<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_module_wizard" model="ir.ui.view">
        <field name="name">sale.order.line.module.wizard</field>
        <field name="model">sale.order.line.wizard</field>
        <field name="arch" type="xml">
            <form name="Set Module Type Values">
                <group>
                    <field name="modular_type_value_ids" nolabel="1">
                        <list create="0" editable="bottom">
                            <field name="modular_type_id" />
                            <field name="value" />
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Apply" type="object" name="apply_values" class="btn-primary" />
                    <button string="Cancel" classs="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_modular_type_wizard" model="ir.actions.act_window">
        <field name="name">Set Modular Type </field>
        <field name="res_model">sale.order.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
