<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bom_form_inherit_modular_type" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit.modular.type</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/list/field[@name='product_id']"
                position="after">
                <field name="modular_type_id" />
            </xpath>
        </field>
    </record>
</odoo> 
