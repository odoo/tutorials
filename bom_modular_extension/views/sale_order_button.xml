<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_button_add" model="ir.ui.view">
        <field name="name">sale.order.line.button.add</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_id']" position="after">
                <button name="%(action_modular_type_wizard)d" type="action" icon="fa-flask"
                    invisible="not is_modular_types" />
            </xpath>
        </field>
    </record>
</odoo>
