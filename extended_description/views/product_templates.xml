<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="product_template_inherit" inherit_id="website_sale.product">
        <xpath expr="//section[@id='product_detail']" position="inside">
            <t t-if="product.get_clean_description()">
                <h3 class="my-4">Description</h3>
                <div t-field="product.ecom_extended_description"/>
            </t>
        </xpath>
    </template>
</odoo>
