<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_return_picking_view_form" model="ir.ui.view">
        <field name="name">stock.return.picking.view.form.inherit</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sale_order_id" 
                    options="{'no_create': True}"
                    domain="[('order_line.product_id', '=', product_id), ('state', '=', 'sale'), ('id', 'in', context.get('sale_orders'))]"
                    column_invisible="not context.get('is_delivery') or not context.get('multi_pickings')" 
                    required="1" />
                <field name="purchase_order_id" 
                    options="{'no_create': True}"
                    domain="[('order_line.product_id', '=', product_id), ('state', '=', 'purchase'), ('id', 'in', context.get('purchase_orders'))]"
                    column_invisible="context.get('is_delivery') or not context.get('multi_pickings')"
                    required="1" />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="domain">[('id', 'in', context.get('available_products'))]</attribute>
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_mass_return" model="ir.actions.server">    
        <field name="name">Mass Return</field>
        <field name="model_id" ref="stock.model_stock_return_picking"></field>
        <field name="binding_model_id" ref="stock.model_stock_picking"></field>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = env['stock.return.picking'].action_mass_return()
        </field>
    </record>
</odoo>
