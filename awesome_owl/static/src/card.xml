<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card m-2 p-2" style="width: 18rem;">
            <div class="d-inline-block">
                <h5 class="card-title d-inline"><t t-esc="props.title"/></h5>
                <button class="btn btn-primary d-inline" t-on-click="toggleCollapse">Toggle</button>
            </div>
            <t t-if="state.isCollapsed" t-slot="default" />
        </div>
    </t>
</templates>
