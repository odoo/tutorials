<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo.item">
        <p t-att-class="{'text-muted': this.state.isCompleted, 'text-decoration-line-through': this.state.isCompleted}">
            <input type="checkbox" t-on-click="this.toggleState"/>
            <t t-esc="this.state.id"/>. <t t-esc="this.state.description"/> 
            <span class="fa fa-remove" t-on-click="removeMe"/>
        </p>
    </t>

</templates>
