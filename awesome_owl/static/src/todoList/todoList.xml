<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="awesome_owl.TodoList">
        <div class="d-inline-block border p-2 m-2">
            <input type="text" placeholder="Enter New Task" t-on-keyup.self="ev => this.addTodo(ev)"
                t-ref="input" />
            <t t-foreach="this.todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleItem" removeTodo.bind="deleteTodo"/>
            </t>
        </div>

    </t>
</templates>
