<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <!-- Card Component -->
        <div class="d-flex gap-2">
            <Card title="'Counter Card'">
                <Counter />
            </Card>
            <Card title="'Card 2'">
                <div>
                    <p>Content for card 2</p>
                </div>
            </Card>
        </div>

        <!-- Child Component  -->
        <div class="d-flex flex-column w-25 mx-2 card border border-3">
            <Counter onchange.bind="incrementSum"/>
            <Counter onchange.bind="incrementSum"/>
            <h2 class="px-3">Sum: <t t-esc="state.sum"/></h2>
        </div> 

        <!-- TodoList -->
        <div>
            <TodoList/>
        </div>    
    </t>

</templates>
