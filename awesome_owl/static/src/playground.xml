<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <div class="container py-4">
            <div class="p-4 card shadow-lg rounded-4 border-0 bg-light text-center">
                <h4 class="fw-bold text-primary">
                    <i class="fa fa-flask me-2"></i> Playground
                </h4>
                <p class="text-muted">Experiment with Counters and Cards</p>
                <div class="d-flex justify-content-center gap-3">
                    <Counter onChange.bind="incrementSum" />
                    <Counter onChange.bind="incrementSum" />
                </div>
                <p class="mt-3 fw-bold text-success">
                    <i class="fa fa-plus-circle me-2"></i> The sum is: <t t-esc="this.state.sum" />
                </p>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <Card title="'Card 1'">
                        <p class="text-dark">This is a normal paragraph.</p>
                    </Card>
                </div>
                <div class="col-md-6">
                    <Card title="'Card 2'">
                        <Counter onChange.bind="incrementSum" />
                    </Card>
                </div>
            </div>

            <div class="mt-4">
                <div class="card shadow-lg rounded-4 border-0 bg-light p-3">
                    <h4 class="fw-bold text-danger">
                        <i class="fa fa-list-check me-2"></i> Todo List
                    </h4>
                    <TodoList /> 
                </div>
            </div>
        </div>
    </t>

</templates>
