<templates xml:space="preserve">
    <t t-name="awesome_owl.playground">
        <div class="d-flex">
            <div class="p-3 bg-light border-end" style="width: 200px; height: auto; min-height: 100vh;">
                <h4 class="fw-bold text-dark text-center">Menu</h4>
                <ul class="list-unstyled mt-4">
                    <li>
                        <button class="btn w-100 text-start" t-att-class="activeTab.value === 'hello' ? 'text-primary' : 'text-dark'"
                            t-on-click="()=> setActiveTab('hello')">Hello World</button>
                    </li>
                    <li>
                        <button class="btn w-100 text-start" t-att-class="activeTab.value === 'counter' ? 'text-primary' : 'text-dark'"
                            t-on-click="()=> setActiveTab('counter')">Counter</button>
                    </li>
                    <li class="mt-2">
                        <button class="btn w-100 text-start" t-att-class="activeTab.value === 'cards' ? 'text-primary' : 'text-dark'"
                            t-on-click="()=> setActiveTab('cards')">Cards</button>
                    </li>
                    <li class="mt-2">
                        <button class="btn w-100 text-start" t-att-class="activeTab.value === 'todo' ? 'text-primary' : 'text-dark'"
                            t-on-click="()=> setActiveTab('todo')">Todo List</button>
                    </li>
                    <li class="mt-2">
                        <button class="btn w-100 text-start" t-att-class="activeTab.value === 'All' ? 'text-primary' : 'text-dark'"
                            t-on-click="()=> setActiveTab('All')">All Menu</button>
                    </li>
                </ul>
            </div>

            <div class="p-5 w-100">
                <t t-if="activeTab.value === 'hello' || activeTab.value === 'All'">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="row border p-5 rounded shadow bg-light w-50">
                            <div class="text-center">
                                <h3 class="fw-semibold mb-0">Hello, World!</h3>
                            </div>
                        </div>
                    </div>
                </t>

                <t t-if="activeTab.value === 'counter' || activeTab.value === 'All'">
                    <div class="d-flex align-items-center justify-content-center mt-5">
                        <div class="row border p-5 rounded shadow bg-light w-50">
                            <div class="text-center mb-3">
                                <h3 class="fw-bold text-dark">Counter</h3>
                            </div>
                            <div class="list-group">
                                <div class="d-flex align-items-center justify-content-center">
                                    <Counter t-props="{'onChange': incrementSum}"/>
                                    <Counter t-props="{'onChange': incrementSum}"/>
                                    <div class="m-2 p-4 border rounded shadow d-inline-block text-center bg-light" style="width: max-content;">
                                        <h4 class="fw-bold text-primary mb-0">Sum: <t t-esc="sum.value"/></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>

                <t t-if="activeTab.value === 'cards' || activeTab.value === 'All'">
                    <div class="d-flex align-items-center justify-content-center mt-5">
                        <div class="row border p-5 rounded shadow bg-light w-50">
                            <div class="text-center mb-3">
                                <h3 class="fw-bold text-dark">Cards</h3>
                            </div>
                            <div class="list-group">
                                 <div class="d-flex align-items-center justify-content-center">
                                     <Card title="'card 1'">
                                         This is card 1 content
                                     </Card>
                                     <Card title="'card 2'">
                                        <Counter />
                                    </Card>
                                 </div>
                            </div>
                        </div>
                    </div>
                </t>

                <t t-if="activeTab.value === 'todo' || activeTab.value === 'All'">
                    <div class="mt-5">
                        <TodoList/>
                    </div>
                </t>

            </div>
        </div>
    </t>
</templates>
