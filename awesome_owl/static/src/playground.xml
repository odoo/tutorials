<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.playground">
        <div class="p-3 text-center">
            <h2>Playground with Two Counters</h2>
            <Counter onChange.bind="incrementSum"/>
            <Counter onChange.bind="incrementSum"/>
            <h3>Total Sum: <t t-out="state.sum"/></h3>
        </div>
        <div class="p-3 text-center">
            <h2>Playground with Cards</h2>
            <Card title="'Card 1'">
                <p>This is some text inside the card.</p>
            </Card>
            <Card title="'Card 2'">
                <Counter/>
            </Card>
        </div>
        <div class="p-3 text-center">
            <h2>Playground with TodoList</h2>
                <TodoList />
        </div>
    </t>
</templates>
