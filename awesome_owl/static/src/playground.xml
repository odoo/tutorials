<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.playground">
        <div class="container py-4">
            <div class="text-center mb-4">
                <h3 class="text-primary fw-bold">Welcome to the Playground</h3>
                <p class="text-muted">Experiment with the counter and card components below!</p>
            </div>            
            <div class="mb-5">
                <h5 class="text-secondary fw-bold mb-3">Counters</h5>
                <div class="d-flex gap-4 justify-content-center">
                    <Counter t-props="{ onChange: () => incrementSum() }" />
                    <Counter t-props="{ onChange: () => incrementSum() }" />
                </div>
                <div class="mt-3 text-center">
                    <h5 class="text-dark">Sum of Counters: <span class="fw-bold text-primary"><t t-esc="state.value" /></span></h5>
                </div>
            </div>
            <div class="mt-4">
                <h5 class="text-secondary fw-bold mb-3">Cards</h5>
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <t t-foreach="cards" t-as="card" t-key="card.title">
                        <Card t-props="card" />
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
