<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.playground">
        <div class="p-3">
           <h2>------Counter in a sub component-------</h2>
           <Counter/>
           <Counter/>
           <h2>--------Card component-----------</h2>
            <Card title="'card1'" content="'this is card'"/>
            <h2>-------Using markup to display html-------</h2>
            <t t-foreach="cards" t-as="card" t-key="card.title">
                <Card title="card.title" content="card.content"/>
            </t>
            <h2>--------The sum of two Counter------</h2> 
             <Sum/>
             <h2>-------todo list------</h2>
             <TodoList/> 
             <h2>----------Card with slots-------</h2>
             <Card title="'card content optional'"><Counter/></Card> 
        </div>
    </t>
</templates>
