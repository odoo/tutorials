<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Playground">
        <div class="container text-center mt-5">
            <h1 class="fw-bold text-center" style="color: #9873AC;">Playground with Multiple Counters</h1>           

            <div class="d-flex justify-content-center gap-3 flex-wrap my-4">
                <Counter onChange="incrementSum"/>
                <Counter onChange="incrementSum"/>
            </div>

            <div class="d-flex justify-content-center mt-3">
                <div class="card p-3 shadow-sm" style="width: 200px;">
                    <h5 class="fw-bold" style="color: #9873AC;">Total Sum</h5>
                    <h2 class="fw-bold text-black"><t t-out="state.sum"/></h2>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
               <t t-foreach="cards" t-as="card" t-key="card.title">
                    <Card t-props="card"/>
                </t>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <TodoList t-props="{ todos: todos, onAddTodo: addTodo }"/>
            </div>
        </div>
    </t>
</templates>
