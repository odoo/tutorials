        <Card title="'Card with HTML'" content="'&lt;strong&gt;Content of card1&lt;/strong&gt;'"/>
        <Card title="'&lt;strong&gt;Content of card2&lt;/strong&gt;'" content="'Content of card2'"/>

        <h4>6. The sum of two Counter</h4>
        <Counter onchange="incrementSum"/>
        <Counter onchange="incrementSum"/>
