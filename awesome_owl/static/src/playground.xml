<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.playground">
        <div class="border border-secondary p-2 gap-2">
            <div>hello world!</div>

            <Counter/>
            <Counter/>

            <Card title="'Card 1'" content="'This is the first card.'"/>
            <Card title="'Card 2'" content="'This is the second card.'"/>
            <Card title="'Card 3'" content="'This is the third card.'"/>

            <t t-foreach="cards" t-as="card" t-key="card.title">
                <Card title="card.title" content="card.content"/>
            </t>

            <Counter onChange.bind="incrementSum"/>
            <Counter onChange.bind="incrementSum"/>
            <p><strong>Sum:</strong> <t t-esc="state.sum"/></p>

            <TodoList/>

            <Card title="'My Card'">
                <p>This is a paragraph inside the card.</p>
            </Card>
            <Card title="'Another Card'">
                <Counter/>
            </Card>
        </div>
    </t>
</templates>
