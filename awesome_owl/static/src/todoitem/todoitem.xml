<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todoitem">
        <div t-att-class="{'text-decoration-line-through': props.todo.isCompleted, 'text-muted': props.todo.isCompleted}">           
            <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="() => props.toggleState(props.todo.id)" />
            <t t-out = "props.todo.id" />
            <span> : </span>
            <t t-out = "props.todo.description" />
            <span class="fa fa-remove" t-on-click="() => props.removeTodo(props.todo.id)"/>
        </div>
    </t>
</templates>
