<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
   <t t-name="my_module.TodoList">

      <ul class="list-group">
         <input type="text" t-ref="focus-input" class="list-group-item" t-on-keyup="ev => this.addTodo(ev, 'value')" placeholder="Enter a todo"/>
         <t t-foreach="todos" t-as="todo" t-key="todo.id">
               <TodoItem todo="todo" toggleState.bind="toggleTodo" removeTodo.bind="removeTodo"/>
         </t>
      </ul>
   </t>
</templates>