<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="TodoList">
        <p><input placeholder="Enter a new task" t-on-keyup="event => this.addTodo(event)"/></p>
        <t t-foreach="todos" t-as="todo" t-key="todo.id">
            <TodoItem todo="todo"/>
        </t>
    </t>

</templates>
