<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.Todolist">
        <input t-ref="inputTask" t-on-keyup="addTodo" placeholder="Enter a new task"></input>
        <t t-foreach="this.todos" t-as="todo" t-key="todo.id">
            <TodoItem todo="todo" onToggle.bind="toggleTodoitem" onDelete.bind="deleteTodoitem"/>
        </t>
    </t>

</templates>
