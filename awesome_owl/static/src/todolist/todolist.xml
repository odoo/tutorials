<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="d-inline-block border p-2 m-2">
            <input t-ref="addTask" class="form-control mb-3" type="text" placeholder="Add a todo" t-on-keyup="addTodo"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleTodo" removeTodo.bind="remTodo"/>
            </t>
        </div>
    </t>
</templates>
