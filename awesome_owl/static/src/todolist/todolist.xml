<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todolist">
        <div class="p-3">
            <input placeholder="Enter a new task" t-ref="task_name" t-on-keyup="event => this.addTodo(event)"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" onRemove.bind="removeTodo"/>
            </t>
        </div>
    </t>

</templates>
