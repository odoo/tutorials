<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="border p-3">
            <h4>My Todo List</h4>
            <div>
                <input type="text" t-ref="input" placeholder="Add a todo" t-on-keyup="addTodo"/>
                <t t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo" toggleState="toggleState" removeState="removeTodo"/>
                </t>
            </div>
        </div>
    </t>
</templates>
