<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todolist">
        <div class="container py-4">
            <h3 class="mb-4 text-center" style="color: var(--primary); font-weight: bold;">My To-Do List</h3>
            <div class="mb-4 d-flex justify-content-center align-items-center gap-2">
                <input type="text"
                       t-ref="my_val"
                       class="form-control w-50"
                       placeholder="Add a todo"
                       t-model="state.newTodoDescription"
                       t-on-keypress="keyPress"/>
                <button 
                    type="button" 
                    class="btn" 
                    t-on-click="addTodo" 
                    style="
                        background-color: #007bff; 
                        color: white; 
                        font-weight: bold; 
                        border: none; 
                        padding: 0.5rem 1rem; 
                        border-radius: 0.375rem; 
                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
                        transition: all 0.2s ease-in-out;
                    " 
                    onmouseover="this.style.transform='scale(1.05)'" 
                    onmouseout="this.style.transform='scale(1)'">
                    Create
                </button>
            </div>
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <t t-foreach="state.todos" t-as="todo" t-key="todo.id">
                    <ToDoItem t-props="{...todo, onToggleStatus: changeStatus, onDelete: deleteToDo}" />
                </t>
            </div>
        </div>
    </t>
</templates>
