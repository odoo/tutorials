<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todoitem">
        <div style="display: flex; justify-content: space-between;">
            <div t-if="props.isCompleted">
                <input type="checkbox" t-on-change="onChange" checked="true" />
            </div>
            <div t-else="">
                <input type="checkbox" t-on-change="onChange" />
            </div>

            <div t-if="props.isCompleted" class="text-muted text-decoration-line-through">
                <p t-esc="props.description" />
            </div>
            <div t-else="">
                <p t-esc="props.description" />
            </div>
            <span class="fa fa-remove" t-on-click="removeTodo" />
        </div>
    </t>
</templates>
