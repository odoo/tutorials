<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.ToDoItem">
        <div class="form-check">
            <!-- <t t-out="Object.keys(this.props)" /> -->
            <t t-set="todo" t-value="props.model.getTodo(props.id)" />
            <input class="form-check-input" type="checkbox" t-att-checked="todo.isCompleted" t-on-change="() => this.props.model.toggle(todo.id)" />
            <label t-att-class="todo.isCompleted ? 'text-decoration-line-through text-muted' : '' ">
                <t t-esc="todo.id"/>. <t t-esc="todo.description" />
            </label>
            <span class="fa fa-trash ms-3 text-danger" t-on-click="() => this.props.model.remove(todo.id)"/>
        </div>
    </t>

</templates>
