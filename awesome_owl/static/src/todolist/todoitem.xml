<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.ToDoItem">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="props.toggleState" />
            <label t-att-class="props.todo.isCompleted ? 'text-decoration-line-through text-muted' : '' ">
                <t t-esc="props.todo.id"/>. <t t-esc="props.todo.description" />
            </label>
            <span class="fa fa-trash ms-3 text-danger" t-on-click="props.removeTodo"/>
        </div>
    </t>

</templates>