<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todoitem">
        <div t-att-class="{'text-muted': !props.todo.isCompleted, 'text-decoration-line-through': props.todo.isCompleted}">
            <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="toggleState" class="me-2"/>
            <t t-esc="props.todo.id"/>.
            <t t-esc="props.todo.description"/>
            <span class="fa fa-remove ms-3 text-danger" t-on-click="onClick"/>
        </div>
    </t>

</templates>
