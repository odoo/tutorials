<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="form-check d-flex justify-content-between align-items-center">
            <div>
                <input class="form-check-input" type="checkbox"
                       t-att-id="props.todo.id"
                       t-att-checked="props.todo.isCompleted"
                       t-on-click="() => props.toggleState(props.todo.id)" />
                <label t-att-for="props.todo.id"
                       t-att-class="props.todo.isCompleted ? 'text-decoration-line-through text-muted ms-2' : 'ms-2' ">
                    <t t-esc="props.todo.id"/>
                    <t t-esc="props.todo.description"/>
                </label>
            </div>
            <i class="fa fa-trash ms-3 text-danger"
               role="button"
               style="font-size: 1.2rem; cursor: pointer;"
               t-on-click="() => props.removeTodo(props.todo.id)">
            </i>
        </div>
    </t>
</templates>
