<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <!-- mute the text if the task isCompleted using (text-muted) for bootstrap style -->
        <div
            class="card border-primary mb-3"
            t-att-class="{
                'text-muted': props.todo.isCompleted,
                'text-decoration-line-through': props.todo.isCompleted,
            }"
            style="max-width: 18rem;"
        >
            <div class="card-header">
                <input
                    type="checkbox"
                    t-att-checked="props.todo.isCompleted"
                    t-on-change="() => props.toggleTodo(props.todo.id)"
                />
                <div class="d-inline-block m-2">
                    ID: <strong t-esc="props.todo.id"/>
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title"><strong t-esc="props.todo.description"/></h5>
            </div>
        </div>
    </t>
</templates>