<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todoitem">
        <div class="border rounded p-2" t-att-class="props.todo.isCompleted ? 'text-muted text-decoration-line-through': '' ">
            <input type="checkbox" class="form-check-input me-2" t-att-checked="props.todo.isCompleted" t-on-change="toggleCompletion" />
            <span><t t-esc="props.todo.id"/>
            </span>. 
            <span> <t t-esc="props.todo.description"/>
            </span>
            <span class="fa fa-remove ms-2" t-on-click="remove" />
        </div>
    </t>

</templates>
