<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div class="todo-item p-2 border rounded mb-2" t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="toggleStateItem"/>
            <strong><t t-out="props.todo.id"/>.</strong>
            <span><t t-out="props.todo.description"/></span>
            <span class="fa fa-remove" t-on-click="removeTodoItem"/>
        </div>
    </t>

</templates>
