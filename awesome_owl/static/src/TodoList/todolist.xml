<odoo>
    <t t-name="awesome_owl/TodoList">
        <input 
            type="text" 
            placeholder="Enter a new task" 
            t-on-keyup="addTodo" 
            t-ref="todoInput"
        />
        <div t-foreach="state.todos" t-as="todo" t-key="todo.id">
            <TodoItem todo="todo" toggleStart="toggleStart" deleteTodo="deleteTodo"/>
        </div>
    </t>   
</odoo>
