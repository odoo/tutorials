<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <h3>Todo List</h3>
        <input t-ref ="inputRef" t-model="state.newTask" t-on-keyup="addTodo" placeholder="Enter a new task"/>
        <div>
            <t t-foreach="state.todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleTodoState" removeTodo.bind="removeTodo"/>
            </t>
        </div>
    </t>
</template>
