<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.counter">
        <div class="card" style="width: 200px;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 t-esc="props.title || 'Counter'"/>
                <button class="btn fa" t-att-class="state.show ? 'fa-caret-up': 'fa-caret-down'" type="button" t-on-click="toggleShow" title="'Toggle Card'"/>
            </div>
            <t t-if="state.show">
                <div class="card-body">
                    <div>
                        <button class="btn btn-primary w-100" t-on-click="increment">
                        Increment ++
                        </button>
                    </div>
                    <t t-slot="default"/>
                </div>
                <div class="card-footer">
                    <div class="text-center fs-3" t-esc="state.count"/>
                </div>
            </t>
        </div>
    </t>

</templates>
