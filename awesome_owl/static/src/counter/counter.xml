<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.counter">
        <div class="card d-inline-block m-2 p-4" style="width: fit-content;">
            <p>Counter: <t t-esc="state.value"/> </p>
            <button class="btn bg-info" t-on-click="increment">COUNT</button>
        </div>
    </t>
</templates>
