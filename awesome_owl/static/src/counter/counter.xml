<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Counter">
        <div class="card p-3">
            <div class="d-flex align-items-center justify-content-between">
                <span class="accent-color fw-medium">
                    Value: <span class="fs-5 fw-bold"><t t-esc="counter.count"/></span>
                </span>
                <button class="btn" t-on-click="incrementCounter">  Increment  </button>
            </div>
        </div>
    </t>
</templates>
