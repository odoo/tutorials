<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.counter">
       <div class="card p-2 text-center d-flex align-items-center justify-content-center">
            <span class="h5 m-0">Counter: <t t-esc="state.value"/></span>
            <button class="btn btn-primary" t-on-click="increment">
                Increment
            </button>
       </div>
    </t>
</templates>
