<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Counter">
        <div class="card shadow-sm m-3 border-1" style="min-width: 18rem; max-width: 24rem;">
            <div class="card-body p-4">
                <p class="card-text fs-5 mb-3">Counter: <t t-esc="state.value"/></p>
                <button class="btn w-100 py-2"
                        style="background-color: rgb(30, 248, 255);"
                        t-on-click="increment">
                    Increment
                </button>
            </div>
        </div>
    </t>
</templates>
