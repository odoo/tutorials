<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.counter">
        <div class="d-inline-flex">
            <div class="card p-4 m-1 text-center shadow border rounded-3" >
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <span class="fs-4 fw-bold">Counter: <span class="text-primary" t-esc="state.value" /></span>
                </div>
                <button t-on-click="increment" class="btn btn-primary border mt-4 w-100 fw-bold">Increment</button>
            </div>
        </div>        
    </t>

</templates>
