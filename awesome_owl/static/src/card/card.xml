<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.card.card">
        <div class="card d-inline-block m-2">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title"><t t-esc="props.title"/></h5>
                    <button class="btn btn-sm btn-primary" t-on-click="toggleContent">
                        <t t-esc="state.isOpen ? '-' : '+'"/>
                    </button>
                </div>
                <t t-if="state.isOpen">
                    <p class="card-text">
                        <t t-out="props.content"/>
                    </p>
                    <t t-slot="default"/>
                </t>     
            </div>
        </div>
    </t>

</templates>
