<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
   <t t-name="awesome_owl.card">
      <div class='gradient-container hover-card'>
            <h3 class="card-title"><t t-out="props.title"/>
                  <button class="btn btn-sm" t-on-click="toggleContent" style="background-color: #313034; color: white; border: none; margin-left:10px; border-radius: 5px;">
                      <i class="fa fa-sliders"></i>
                    </button>
            </h3>
            <p class="card-text" t-if="state.isOpen">
               <t t-slot="default"/>
            </p>
      </div>
   </t>
</templates>
