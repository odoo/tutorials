        <div class="card" style="width: 18rem;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <t t-slot="title"/>
                </h5>
                <button class="btn btn-danger btn-sm" t-on-click="toggle"><i class="fa fa-close"></i></button>
            </div>
            <div class="card-body" t-if="this.isOpen.value">
                <t t-slot="content"/>
            </div>
            <div class="card-body" t-else="">
                <p>Click on Toggle to View Counters</p>
            </div>
        </div>
    </t>
</templates>
