<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card" class="">
        <div class="card d-inline-block m-2" style="width: fit-content;">
            <div class="card-body">
                <h5 class="card-title"><t t-esc="props.title"/></h5>
                <p class="card-text">
                    <t t-out="props.content"/>
                </p>
                <t t-slot="default"/>
            </div>
        </div>
    </t>
</templates>
