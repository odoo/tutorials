<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <t t-esc="props.title"/>
                    <button class="btn p-2 bg-primary rounded ms-2 text-white" t-on-click="toggleContent">
                        <t t-if="isOpen.value">Hide</t>
                        <t t-else="">View</t>
                    </button>
                </h5>
                <div t-if="isOpen.value">
                    <p class="card-text">
                        <t t-out="props.content"/>
                    </p>
                    <div>
                        <t t-slot="default"/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
