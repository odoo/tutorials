<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-header text-center">
                <button class="btn btn-primary btn-sm border border-primary" t-on-click="()=>{state.isOpen = !state.isOpen}">Toggle</button>
            </div>
            <div class="card-body" t-if="state.isOpen">
                <h5 class="card-title" t-esc="props.title"></h5>
                <p class="card-text" t-esc="props.content"></p>
            </div>
        </div>
    </t>
</templates>
