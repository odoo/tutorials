<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
            <div style="display: flex; justify-content: space-between;">
                <h5 class="card-title">
                    <t t-out="props.title" />
                </h5>
                <button class="btn btn-primary" t-on-click="toggle">Toggle visibility</button>
                </div>
                <div t-if="state.show">
                    <t t-slot="default" />
                </div>
            </div>
        </div>
    </t>
</templates>
