<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">   
    <t t-name="awesome_owl.Card">
        <div class="card d-inline-block m-2 shadow-lg border rounded animate-card" style="width: 20rem; background-color: var(--o-gray-100);">
            <div class="card-body">
                <h5 class="card-title d-flex justify-content-between align-items-center">
                    <t t-out="props.title"/>
                    <button class="btn btn-primary btn-sm" t-on-click="toggleContent">Toggle</button>
                </h5>
                
                <p class="card-text fade-content" t-att-style="state.isOpen ? 'opacity:1; max-height:100px' : 'opacity:0; max-height:0'">
                    <t t-slot="default"/>
                    <Counter />
                </p>
            </div>
        </div>

        <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-card {
            animation: fadeInUp 0.8s ease-in-out;
            border-radius: 10px;
            overflow: hidden;
        }

        .fade-content {
            transition: opacity 0.5s ease-in-out, max-height 0.5s ease-in-out;
            overflow: hidden;
        }
        </style>
    </t>     
</templates>
