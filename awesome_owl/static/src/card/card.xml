<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card border p-3" t-on-click="onClick">
            <div class="card-body">
                <h5 class="card-title"><t t-esc="title"/> </h5>
                <p class="card-text"><t t-out="content"/> </p>
            </div>
        </div>
    </t>
</templates>