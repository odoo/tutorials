<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h2 class="card-title">
                    <t t-out="props.title"/>
                    <button t-on-click="toggleIsOpen">Toggle</button>
                </h2>
                <p t-if="state.isOpen">
                    <t t-slot="default"/>
                </p>
            </div>
        </div>
    </t>
</templates>
