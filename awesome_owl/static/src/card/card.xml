<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="awesome_owl.Card">
        <div class="card text-center border shadow-sm p-3 rounded bg-white">
            <h5 class="text-primary fw-bold mb-2">
                <t t-out="props.title"/>
            </h5>
            <button class="btn btn-outline-primary px-3 py-1" t-on-click="toggleContent">
                Toggle
            </button>
            <div class="card-body" t-if="state.isVisible">
                <t t-slot="default"/>
            </div>
        </div>
    </t>
</templates>
