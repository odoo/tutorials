<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Card">
        <div class="card shadow-sm m-3 border-1" style="min-width: 18rem; max-width: 24rem;">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title m-0">
                        <t t-out="props.title"/>
                    </h5>
                    <button class="btn btn-sm text-muted border-0"
                            t-on-click="toggleContent">
                        <i t-att-class="state.isOpen ? 'fa fa-chevron-up' : 'fa fa-chevron-down'"/>
                    </button>
                </div>
                <p t-if="state.isOpen" class="card-text mt-3 mb-0">
                    <t t-slot="default"/>
                </p>
            </div>
        </div>
    </t>
</templates>
