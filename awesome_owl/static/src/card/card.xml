<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <t t-esc="props.title"></t>
                </h5>
                <p class="card-content">
                    <t t-out="props.content"></t>
                </p>
            </div>
        </div>
    </t>
</templates>