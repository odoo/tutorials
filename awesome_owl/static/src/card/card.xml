<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="awesome_owl.card">
    <div class="card p-3 border m-2">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="card-title">
            <t t-esc="props.title" />
          </h5>
          <button t-on-click="toggleOpen" class="bg-transparent border-0 fs-5 cursor-pointer">
            <t t-esc="state.isOpen ? '-' : '+'"/>
          </button>
        </div>
        <t t-if="state.isOpen">
          <div class="card-text">
            <t t-slot="default"/>
          </div>
        </t>
    </div>
  </t>
</templates>
