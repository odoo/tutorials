<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5>
                    <t t-esc="props.title"/>
                </h5>
                <button t-on-click="toggleContent" class="btn">Toggle content</button>
                <t t-slot="default" t-if="state.contentVisible"/>
            </div>
        </div>
    </t>

</templates>
