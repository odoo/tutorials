<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <t t-out="props.title"/>
                    <button class="btn btn-primary  px-4 py-2" t-on-click="toggleContent">
                        <i class="fa fa-plus"></i> toggle
                    </button>
                </h5>
                <div t-att-class="{'d-none': state.isContent}">
                <t t-slot="default"/>
                </div>
            </div>
        </div>
    </t>
</templates>
