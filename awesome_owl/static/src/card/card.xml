<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="awesome_owl.card">
    <div class="card p-3 border m-2">
      <div class="d-flex justify-content-between align-items-center">
        <h5 t-if="props.title">
          <t t-esc="props.title"/>
        </h5>
        <button t-on-click="toggle" class="btn btn-sm btn-outline-secondary">
          <t t-esc="state.isOpen ? '-' : '+'"/>
        </button>
      </div>

      <div t-if="state.isOpen">
        <t t-slot="default"/>
      </div>
    </div>
  </t>
</templates>
