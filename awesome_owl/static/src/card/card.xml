<templates xml:space="preserve">
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <t t-out="props.title" />
                </h5>
                <button class="btn btn-primary" t-on-click="toggleContent">
                    Toggle
                </button>
                <p class="card-text text-primary" t-if="state.isOpen">
                    <t t-slot="default"/>
                </p>
            </div>
        </div>
    </t>
</templates>
