<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.Card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><t t-out="props.title"/> <button class="border" t-on-click="toggleContent">Toggle</button></h5>
                <p t-if="state.value == true" class="card-text"><t t-slot="default"/></p>
            </div>
        </div>
    </t>

</templates>
