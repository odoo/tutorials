<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <span><input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="toggleState"/></span>     
            <span><t t-esc="props.todo.id"/>. </span>
            <span><t t-esc="props.todo.description"/></span>
            <span class="fa fa-remove" t-on-click="removeTodo"/>
        </div>
    </t>
</templates>