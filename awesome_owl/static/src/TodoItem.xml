<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
<t t-name="awesome_owl.TodoItem">
        <div class="p-3">
        <ul>
            <t t-foreach="props.todo" t-as="item" t-key="item.id">
            <li>
            <p t-att-class="{'text-muted':item.isCompleted,'text-decoration-line-through':item.isCompleted}">
                <input type="checkbox" t-att-value="item.isCompleted" onChange.bind="toggleState"/>
                <t t-esc="item.id"/>
                <t t-esc="item.description"/>
            </p>
            </li>
            </t>
        </ul>
        </div>
    </t>
</templates>