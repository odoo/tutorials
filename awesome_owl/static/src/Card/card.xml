<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="awesome_owl.Card" owl="1">
        <div class="card border shadow-sm p-3 mb-3 bg-white rounded">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title m-0">
                    <t t-if="props.title">
                        <t t-esc="props.title" />
                    </t>
                </h5>
                <button class="btn btn-sm btn-outline-secondary" t-on-click="toggle">
                    <t t-esc="state.isOpen ? 'âˆ’' : '+'"/>
                </button>
            </div>
            <div class="card-body" t-if="state.isOpen">
                <t t-slot="default" />
            </div>
        </div>
    </t>
</templates>
