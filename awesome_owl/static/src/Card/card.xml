<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="awesome_owl.card">
    <div class="card d-inline-block m-2" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">
          <t t-esc="props.title"/>
        </h5>
        <button class="btn btn-sm btn-secondary" t-on-click="toggleOpen">
            <t t-esc="state.isOpen ? 'Toggleup' : 'Toggledown'" />
          </button>
         <div class="card-text" t-if="state.isOpen">
          <t t-slot="default"/>
        </div>
      </div>
    </div>
  </t>
</templates>
