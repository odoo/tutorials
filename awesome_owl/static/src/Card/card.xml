<odoo>
    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <h3 class="card-title m-2"><t t-out="props.title"/></h3>
            <button class="ms-2" t-on-click="toggleContent">Toggle</button>
            <div class="card-body" t-if="state.isOpen">
                <!-- <p class="card-text"><t t-out="props.content"/></p> -->
                <t t-slot="default" />
            </div>
        </div>
    </t>
</odoo>
