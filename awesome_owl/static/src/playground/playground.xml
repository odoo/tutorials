<templates xml:space="preserve">
    <t t-name="awesome_owl.playground.view" owl="1">
        <div class="container mt-5">
            <h2 class="mb-4 text-center">Welcome to the Owl Playground</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <Card title="'Counter 1'">
                        <Counter onChange="(newCount) => updateCount('count1', newCount)"/>
                    </Card>
                </div>
                <div class="col-md-4 mb-4">
                    <Card title="'Counter 2'">
                        <Counter onChange="(newCount) => updateCount('count2', newCount)"/>
                    </Card>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="card-title">Total Sum</h4>
                            <p class="card-text display-4">
                                <t t-out="sum"/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-4">
                    <Card title="'Todo List'">
                        <TodoList/>
                    </Card>
                </div>
            </div>
        </div>
    </t>
</templates>
