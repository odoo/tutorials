<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.TodoList">
        <div class="d-inline-block border p-3 m-3">
            <input class="form-control mb-3" type="text" placeholder="Add a Todo" t-on-keyup="addTodo" t-ref="input"/>
            <t t-foreach="todos" t-as="i" t-key="i.id">
            <TodoItem todo="i" toggleState.bind="toggleTodo" removeTodo.bind="removeTodo"/>
            </t>
        </div>
    </t>

</templates>
