<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div class="border p-2 m-1" t-att-class="props.todo.isCompleted ? 'text-muted text-decoration-line-through' : ''">
            <strong>ID:</strong> <t t-esc="props.todo.id"/>
            <span><t t-esc="props.todo.description"/></span>
        </div>
   </t>
</templates>
