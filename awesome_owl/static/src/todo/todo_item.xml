<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="awesome_owl.TodoItem">
    <div class="d-flex align-items-center gap-2">
        <input t-att-id="'id-'+props.todo.id" class="form-check-input" type="checkbox"
            t-att-checked="props.todo.isCompleted" t-on-change="toggleState" />
        <label t-att-for="'id-'+props.todo.id" class="mb-0" 
            t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
            <t t-esc="props.todo.id" />. <t t-esc="props.todo.description" />
        </label>
        <span class="fa fa-remove text-danger" t-on-click="removeTodo" />
    </div>
    </t>
</templates>
