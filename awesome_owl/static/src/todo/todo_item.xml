<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  
  <!-- Define the TodoItem component template -->
  <t t-name="awesome_owl.todo_item">
    
    <!--
      Outer div for each todo item.
      Bootstrap classes:
        - border: adds a border
        - p-2: padding
        - my-1: vertical margin
      t-att-class: adds conditional styling if the todo is completed:
        - text-muted: faded text color
        - text-decoration-line-through: strikethrough effect
    -->
    <div 
      class="border p-2 my-1"
      t-att-class="{ 'text-muted text-decoration-line-through': props.todo.isCompleted }">

      <!-- Render todo ID in bold -->
      <strong>#<t t-esc="props.todo.id"/></strong>: 

      <!-- Render the todo description -->
      <span><t t-esc="props.todo.description"/></span>

    </div>

  </t>
</templates>
