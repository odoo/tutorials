<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="form-check ">
            <input type="checkbox" class="form-check-input" t-att-id="props.todo.id" t-att-checked="props.todo.isCompleted" t-on-change="onChange"/>
            <lable t-att-for="props.todo.id" t-att-class="props.todo.isCompleted ? 'text-muted text-decoration-line-through' : ''">
                <t t-esc="props.todo.id"/>
                 .  
                <t t-esc="props.todo.description"/>
            </lable>
            <span role="button" class="fa fa-remove text-danger ms-4" t-on-click="onRemove"/>
        </div>
    </t>
</templates>
