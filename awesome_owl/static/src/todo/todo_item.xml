<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
     <t t-name="awesome_owl.todo_item">
        <div class="todo-item"
             t-att-class="{
                'text-muted': props.todo.isCompleted,
                'text-decoration-line-through': props.todo.isCompleted }"
            style="display: flex; align-items: center; gap: 10px; padding: 8px; border: 1px solid; border-radius: 6px; margin-bottom: 5px;">
            
            <input type="checkbox" t-att-checked="props.todo.isCompleted" 
             t-on-change="() => props.toggleState(props.todo.id)"
             style="width: 18px; height: 18px; cursor: pointer;"/>
            
            <p style="margin: 0; font-size: 16px;">
                <t t-esc="props.todo.id" />. 
                <t t-esc="props.todo.description" />
            </p>
            
            <span class="fa fa-remove" t-on-click="()=>props.removeTodo(props.todo.id)"  style="color: red; cursor: pointer; font-size: 18px;">
            </span>
        </div>
    </t>
</templates>
