<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div class="form-check d-flex gap-2 align-items-center">
            <label class="mt-1 mb-0 flex-fill d-flex gap-2" t-att-class="props.todo.isCompleted ? 'text-muted text-decoration-line-through' : ''">
                <input class="form-check-input" type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="onChange"/>
                #<t t-esc="props.todo.id"/>
                 - <t t-esc="props.todo.description"/>
            </label>
            <span class="fa fa-remove" t-on-click="onClick"/>
        </div>
    </t>
</templates>