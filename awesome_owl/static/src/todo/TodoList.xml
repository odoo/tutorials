<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="TodoList">
        <div>
            <h2>Todo List</h2>

            <ul class="list-group w-50">
                <div>
                <!-- <li class="list-group-item"> -->
                    <span>
                        <input type="text"  t-att-placeholder="'Add a new todo...'" t-on-keyup="addTodo" t-ref="todo_input" />
                    </span>
                </div>
                <!-- </li> -->

                <t t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo" toggleState.bind="toggleTodoState" removeTodo.bind="removeTodoItem" />
                </t>
            </ul>

        </div>
    </t>
</templates>