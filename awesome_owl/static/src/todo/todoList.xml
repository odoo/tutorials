<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todoList">
        <div class="p-3">
            <div class="flex space-x-2">
                <input type="text" placeholder="Enter a new task" t-on-keyup="addTodo" t-ref="inputRef"/>
            </div>
            <div class="todos">
                <t t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo" toggleState.bind="toggleTodoState" removeTodo.bind="removeTodo"/>
                </t>
            </div>
        </div>
    </t>
</templates>
