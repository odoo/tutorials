<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="d-flex align-items-center justify-content-between p-3 border rounded shadow-sm bg-light"
            t-att-class="{'text-muted text-decoration-line-through bg-secondary': props.todo.isCompleted}">
            
            <input type="checkbox" class="form-check-input me-3"
                t-att-checked="props.todo.isCompleted ? 'checked' : null" 
                t-on-change="onCheckboxChange" />

            <div class="flex-grow-1">
                <span class="fw-bold me-2"><t t-esc="props.todo.id" />.</span>
                <span t-esc="props.todo.description" class="todo-text" />
            </div>

            <button class="btn btn-outline-danger btn-sm d-flex align-items-center" t-on-click="onRemoveTodo">
            <i class="fa fa-trash me-1"></i> Remove
            </button>
        </div>
    </t>
</templates>
