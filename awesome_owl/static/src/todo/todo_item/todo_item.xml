<t t-name="awesome_owl.TodoItem">
    <div class="border p-2 m-2" t-att-class="props.todo.isCompleted ? 'text-muted text-decoration-line-through' : ''">
        <input type="checkbox" t-on-change="change"/>
        <span class="fw-bold"># <t t-esc="props.todo.id"/>: </span>
        <span><t t-esc="props.todo.description"/></span>
        <span class="fa fa-remove" t-on-click="delete"/>
    </div>
</t>
