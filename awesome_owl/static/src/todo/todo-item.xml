<t t-name="awesome_owl.TodoItem">
    <div class="card mb-2 shadow-sm">
        <div class="p-3">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center flex-grow-1">
                    <input type="checkbox" class="form-check-input me-2 mt-0" t-att-checked="props.todo.isCompleted" t-on-change="() => props.onToggle(props.todo.id)" />
                    <div class="flex-grow-1 d-flex align-items-center" t-att-class="props.todo.isCompleted ? 'text-decoration-line-through text-muted' : ''">
                        <h6 class="todo-name d-flex align-items-center m-0">
                            <span t-out="props.todo.id"/>
                            <span>.</span>
                        </h6>
                        <small t-out="props.todo.description"/>
                    </div>
                </div>
                <button type="button" class="btn btn-outline-danger btn-sm ms-3" style="color:red" title="Remove todo item" t-on-click="() => props.onDelete(props.todo.id)">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </div>
</t>
