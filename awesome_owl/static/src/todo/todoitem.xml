<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todoitem">
    
        <div class="mb-1" t-att-class="props.todo.isCompleted ? 'text-muted text-decoration-line-through' : ''">
            <input type="checkbox" 
                t-att-checked="props.todo.isCompleted" 
                t-on-change="() => props.toggleState(props.todo.id)"/>

            <span class="fa fa-remove text-danger"
                role="button" 
                style="cursor: pointer; margin: 0px 10px 0px 10px;"
                t-on-click="() => {props.removeTodo(props.todo.id) }"/>

            <t t-esc="props.todo.id"/> - <t t-esc="props.todo.description"/>        
        </div>
    
    </t>

</templates>
