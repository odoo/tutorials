<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="awesome_owl.todoitem">
        <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="todoToggle" />
        <div t-att-class="props.todo.isCompleted ? 'text-decoration-line-through' : ''">
            <t t-esc="props.todo.id"/>. <t t-esc="props.todo.description"/>
        </div>
        <i class="fa fa-trash text-danger" t-on-click="removeTodo"/>
    </t>

</templates>
