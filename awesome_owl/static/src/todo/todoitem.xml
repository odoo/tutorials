<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo.item">
        <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-click="toggleState"/>
        <span><t t-esc="props.todo.id"/>. </span>
        <span><t t-esc="props.todo.description"/></span>
        <span class="fa fa-remove text-danger ms-2" style="cursor: pointer;" t-on-click="() => props.removeTodo(props.todo.id)"></span>
    </t>

</templates>
