<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todoitem">
        <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="toggleTodo"/>
        <span t-att-class="props.todo.isCompleted ? 'text-decoration-line-through' : ''">
            <t t-esc="props.todo.id"/>
            .
            <t t-esc="props.todo.description"/>
        </span>
        <i class="fa fa-remove text-danger" t-on-click="removeTodo"/>
    </t>

</templates>
