<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="awesome_owl.TodoList">
        <div class="bg-light p-4 mx-auto w-50">
            <input class="w-100 mb-4" t-ref="input" t-on-keyup="addTodo" placeholder="Enter a new task"/>
            <div class="mt-1" t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggle.bind="toggle" delete.bind="delete"/>
            </div>
        </div>
    </t>
</templates>
