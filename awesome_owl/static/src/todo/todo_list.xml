<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="card w-25">
            <div class="card-body ">
                <input type="text" placeholder="Add a todo" t-on-keyup="addTodo" t-ref="todo_input" />
                <t t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo" toggleState.bind="updateState" />
                </t>
            </div>
        </div>
    </t>
</templates>