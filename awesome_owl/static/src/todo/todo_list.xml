<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <input type="text" t-on-keyup="addItem" t-ref="todo_list_input"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <div>
                    <TodoItem id="todo.id" description="todo.description" isCompleted="todo.isCompleted" toggleState.bind="onItemChange" removeTodo.bind="onItemRemoval"/>
                </div>
            </t>
        </div>
    </t>
</templates>
