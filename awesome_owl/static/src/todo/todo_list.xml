<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_list">
        <div>
            <input t-model="state.newTodo" t-ref="new_todo" t-on-keyup="addTodo" type="text" placeholder="Add a todo"/>
            <TodoItem t-foreach="todos" t-as="todo" t-key="todo.id" todo="todo"/>
        </div>
    </t>

</templates>