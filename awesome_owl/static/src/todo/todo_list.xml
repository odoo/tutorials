<?xml version="1.0" encoding="UTF-8" ?>
<template xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="container mt-4">
            <h2 class="mb-4">Todo List</h2>
            <input type="text" t-ref="input" placeholder="Enter a new task" t-on-keyup="addTodo" class="form-control mb-3 w-100"/>
            <div class="row">
                <div t-foreach="todos" t-as="todo" t-key="todo.id" class="col-md-4 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <TodoItem todo="todo"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
