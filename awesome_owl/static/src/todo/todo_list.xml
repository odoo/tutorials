<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="awesome_owl.todo_list">
        <div class="d-flex flex-column m-3 border rounded-3 p-4" style="background-color: #714b67; color:white;">
            <input type="text" class="form-control mb-3" placeholder="Enter a new task" t-on-keyup="addTodo" t-ref="input_field"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <div class="d-flex justify-content-between mb-2">
                    <ToDoItem todo_item="todo" removeTodo.bind="removeTodo"/>
                </div>
            </t>
        </div>
    </t>
</templates>
