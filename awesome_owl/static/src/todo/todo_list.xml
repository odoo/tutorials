<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="todo-list border p-3 rounded shadow-sm">
            <h4>Todo List</h4>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo"/>
            </t>
        </div>
    </t>
</templates>
