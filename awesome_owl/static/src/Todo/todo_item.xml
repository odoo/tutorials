<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}" class="todo-item card container" style="width: 18rem">
            <p>ID: <t t-esc="props.todo.id"/></p>
            <p>Description: <t t-esc="props.todo.description"/></p>
        </div>
    </t>
</templates>
