<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="card m-auto my-3" style="width: 24rem;">
            <div class="card-body">
                <span class="card-text" t-esc="props.todo.id"></span>
                <h4 t-att-class="props.todo.isCompleted ? 'card-subtitle mb-2 text-body-secondary text-muted text-decoration-line-through' : 'card-subtitle mb-2 text-body-secondary'" t-esc="props.todo.description"/>
                <div class="form-check">
                    <input class="form-check-input"
                        type="checkbox"
                        t-att-checked="props.todo.isCompleted ? 'checked' : undefined" t-on-change="onChange"
                    />
                    <label class="form-check-label">
                        Completed
                    </label>
                </div>
                <span class="fa fa-remove me-2 my-3" t-on-click="onClick">Delete</span>
            </div>
        </div>
    </t>
</templates>
