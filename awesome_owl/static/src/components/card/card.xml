<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="awesome_owl.card">
		<div class="card d-inline-block m-2" style="width: 18rem;">
			<div class="card-body">
				<h5 class="card-title">
					<t t-out="props.title" />
					<button class="btn btn-primary ms-2" t-on-click="toggleContent">
						Toggle
					</button>
				</h5>
				<p class="card-text">
					<t t-if="this.state.isOpen" t-slot="default">
						<p>
							No content provided
						</p>
					</t>
				</p>
			</div>
		</div>
	</t>
</templates>
