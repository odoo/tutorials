<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="awesome_owl.Card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><t t-esc="props.title"/></h5>
                <p class="card-text">
                <t t-esc="props.body"/>
                </p>
                <t t-if="props.visit">
                    <t t-out="markup_visit"></t>
                </t>
            </div>
        </div>
    </t>
</template>
