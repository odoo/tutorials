<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="p-3 border m-2 rounded-4 d-inline-block" style="background-color:rgb(199, 238, 24)">
            <h2 class="text-2xl font-bold mb-4 ">Todo List</h2>
            <input type="text" placeholder="Enter a new task"
                class="w-full p-2 mb-3 border rounded"
                style="background-color:rgb(231, 255, 123)"
                t-on-keyup="addTodo" />

            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleState" removeTodo.bind="removeTodo"/>
            </t>
            <t t-if="todos.length === 0">
                <p class="text-gray-500 italic">No tasks yet â€” add one!</p>
            </t>
        </div>
    </t>
</templates>
