<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="awsome_owl.todo_list">
        <div class="card border m-2 p-2 d-inline-block">
            <div>
                <input t-on-keyup="addTodo" placeholder="Add a todo" t-ref="add-input" />
            </div>
            <div>
                <t t-if="state.todos.length > 0">
                    <t t-foreach="state.todos" t-key="todo.id" t-as="todo">
                        <TodoItem todo="todo" deleteTodo.bind="deleteTodo" toggleState.bind="toggleTodoState"/>
                    </t>
                </t>
                <t t-else="">
                    <p>No Todos.</p>
                </t>
            </div>
        </div>
    </t>
</templates>
