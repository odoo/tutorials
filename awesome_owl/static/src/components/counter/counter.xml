<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Counter" owl="1">
        <div class="p-3">
            <h3>Counter: <t t-esc="state.count"/>
            </h3>
            <button class="btn btn-primary me-2" t-on-click="increment">Increment</button>
            <button class="btn btn-secondary me-2" t-on-click="decrement">Decrement</button>
            <button class="btn btn-danger" t-on-click="reset">Reset</button>
        </div>
    </t>
</templates>
