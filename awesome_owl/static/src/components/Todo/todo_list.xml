<?xml version="1.0" encoding="UTF-8" ?>
<templates xml-space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="p-3 border text-center">
            <h3 class="">Todo List</h3>
            <input type="text" placeholder="Add a todo" t-on-keyup="addTodo" t-ref="todoInput" />
            <div t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleState.bind="toggleState" deleteTodo.bind="deleteTodo" />
            </div>
        </div>
    </t>
</templates>
