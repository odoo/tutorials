<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="awesome_owl.playground">
    <div class="container p-4 rounded shadow-sm bg-white">
      <h3 class="mb-4 text-primary fw-bold">Counter Playground</h3>
      <hr class="mb-4"/>
      <h4 class="mb-3 text-secondary">Card Examples</h4>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col d-flex flex-column gap-3">
          <Card title="'Counter 1'">
            <Counter onChange="(val) => incrementSum('counter1', val)" />
          </Card>
          <Card title="'Counter 2'">
            <Counter onChange="(val) => incrementSum('counter2', val)" />
          </Card>
          <Card>
            <div class="alert alert-info d-inline-block m-0">
              <strong>Sum:</strong> <t t-esc="state.sum" />
            </div>
          </Card>
        </div>

        <div class="col d-flex flex-column gap-3">
          <Card title="'Text Content'">
            <p class="mb-0">This card displays some arbitrary content inside a styled container.</p>
          </Card>
        </div>
      </div>
      <h3 class="mt-5 mb-3 text-primary">Todo List</h3>
      <TodoList/>
    </div>
  </t>
</templates>
