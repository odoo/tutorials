<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todolist">
        <h2>
            Todo List
        </h2>

        <!-- Add New Todo -->
         <div class="mb-3">
            <input
                type="text"
                class="form-control"
                placeholder="Enter a new task"
                t-ref="todoInputRef"
                t-on-keyup="addTodo"
            />
        </div>
        <t t-foreach="todos" t-as="todo" t-key="todo.id">
            <TodoItem t-props="{ 
                    id: todo_value.id, 
                    description: todo_value.description, 
                    isCompleted: todo_value.isCompleted, 
                    markTodocallback: markTodo
                }" deleteTodocallback.bind="deleteTodo" />

        </t>
    </t>
</templates>
