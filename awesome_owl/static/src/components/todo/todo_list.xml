<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="d-flex flex-column m-3 border border-primary rounded-3 p-4 bg-white shadow-sm">
            <h3 class="text-primary text-center mb-3">Todo List</h3>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo_item="todo" callbackRemoveTodo.bind="removeTodo" callbackToggleState.bind="toggleTodoState" />
            </t>
            <input type="text"
                placeholder="Enter new task"
                class="form-control mt-3 border border-primary p-2 rounded-2"
                t-on-keyup="addTodo"
                t-ref="inputRef"
                />
        </div>
    </t>
</templates>
