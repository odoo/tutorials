<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Card">
        <div class="card shadow-sm m-3 border-0 rounded-4" style="width: 20rem;">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white rounded-top-4 px-3 py-2">
                <h5 t-if="props.title" class="mb-0">
                    <t t-esc="props.title"/>
                </h5>
                <button t-on-click="toggleContent" class="btn btn-sm btn-outline-light border-0">
                    <t t-esc="state.isOpen ? 'âˆ’' : '+'"/>
                </button>
            </div>
            <div t-if="state.isOpen" class="card-body p-3">
                <t t-slot="default"/>
            </div>
        </div>
    </t>
</templates>
