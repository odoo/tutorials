<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todolist">
        <div class="d-inline-block border border-3 border border-black m-3 p-3 text-dark">
            <input type="text" placeholder="Enter a new task" t-on-keyup="addTodo" t-ref="input"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id" >
             <TodoItem todo="todo" toggleState.bind="toggleTodo" removeItem.bind="removeTodo"/>
             </t>
        </div>
    </t>
</templates>
