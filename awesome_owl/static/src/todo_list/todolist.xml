<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
     <t t-name="awesome_owl.todolist">
        <input t-ref="todoInput" type="text" placeholder="Enter a Todo" class="form-control mb-2" t-on-keyup="onKeyUpListener"/>
       <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" toggleTodoStatus.bind="toggleTodoStatus" removeTodo.bind="removeTodo"/>
        </t>
    </t>
</templates>
