<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.Todo_list">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <input class="form-control mb-3" type="text" placeholder="Add a todo" t-on-keyup="addTodo" t-ref="input"/>
            <div class="p-3" t-foreach="todos" t-as="t" t-key="t.id">
                <Todo_item todo="t" toggleState.bind="toggleTodo" removeTodo.bind="removeTodo"/>
            </div>
        </div>
    </t>

</templates>
