<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="d-inline-block border p-2 m-2">
            <input class="mb-3 p-1" type="text" placeholder="Enter a new task." t-on-keyup="addTodo" t-ref="input"/>
            <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <TodoItem todo="todo" completeTask="toggleTodo" deleteTask="deleteTodo"/>
            </t>
        </div>
    </t>
</templates>
