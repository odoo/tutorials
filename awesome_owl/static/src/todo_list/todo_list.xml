<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="mt-4">
            <h3 class="text-black fs-3 text-center mb-3">Todo List</h3>
            <div>
            <input 
                name="new_task" 
                type="text" 
                placeholder="Enter Your Todo" 
                t-on-keyup="addTodo" 
                t-ref="input"
                class="form-control border border-gray-300 shadow-sm rounded-lg p-2 w-100"
                style="outline: none; transition: border-color 0.2s ease-in-out;"
                onfocus="this.style.borderColor='rgba(113, 75, 103, 1)';"
                onblur="this.style.borderColor='gray';"/>

                <div class="mt-3">
                    <t t-if="todos.length">
                        <t t-foreach="todos" t-as="todo" t-key="todo.id">
                            <TodoItem todo="todo" toggleState.bind="this.toggleState" removeTodo.bind="this.removeTodo"/>
                        </t>
                    </t>
                    <p t-else="" class="text-center text-muted">No tasks available.</p>
                </div>
            </div>
        </div>
    </t>
</templates>
