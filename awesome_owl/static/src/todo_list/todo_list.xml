<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
        <div class="container p-3 w-50">
            <h2 class="mb-3 text-center">To-Do List</h2>
            <input class="form-control mb-3" type="text" placeholder="Add a todo" t-on-keyup="addTodo" t-ref="input"/>
            <ul class="list-group">
                <t t-foreach="todos.value" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo" toggleState="toggleState" removeTodo.bind="removeTodo"/>
                </t>
            </ul>
        </div>
    </t>
</templates>
