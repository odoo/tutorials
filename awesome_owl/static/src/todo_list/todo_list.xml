<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoList">
        <div class="p-2">
            <input class="form-control mb-3" type="text" placeholder="Enter a new task." t-on-keyup="addTodo"></input>
            <div class="d-inline-block border p-2 m-2" t-if="todos.length > 0">
                <t t-foreach="todos" t-as="todo" t-key="todo.id">
                    <TodoItem todo="todo"/>
                </t>
            </div>
        </div>
    </t>
</templates>
