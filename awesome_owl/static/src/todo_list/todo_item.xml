<?xml version="1.0"?>

<template xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="d-flex justify-content-between align-items-center gap-3">
            <input 
                class="form-check-input"
                type="checkbox"
                style="transform: scale(1.5);"
                t-att-checked="props.todo.isCompleted"
                t-on-change="() => props.toggleState(props.todo.id)" 
            />
            <span t-att-class="{'text-decoration-line-through text-muted': props.todo.isCompleted}">
                <t t-esc="props.todo.id"/>.
                <t t-esc="props.todo.description"/>
            </span>
            <button 
                type="button" class="btn-close" style="transform: scale(0.8);" 
                t-on-click="() => props.removeTodo(props.todo.id)" />
        </div>
    </t>
</template>
