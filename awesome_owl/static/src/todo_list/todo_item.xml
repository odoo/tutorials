<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-id="props.todo.id" t-att-checked="props.todo.isCompleted" t-on-change="() => props.onChange(props.todo.id)"/>
            <div class="mt-3">
                <label t-att-for="props.todo.id" t-att-class="props.todo.isCompleted ? 'text-decoration-line-through text-muted' : '' ">
                    <t t-out="props.todo.id"/>. 
                    <t t-out="props.todo.description"/>
                </label>
                <span role="button" class="fa fa-remove ms-3 text-danger" t-on-click="() => props.removeTodo(props.todo.id)"/>
            </div>
        </div>
    </t>
</templates>
