<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div t-att-class="{'text-decoration-line-through text-muted': props.todo.isCompleted}">
            <input type="checkbox" t-att-id="props.todo.index" 
                t-att-checked="props.todo.isCompleted" 
                t-on-change="() => props.todo.toggleState()"
            /> - <t t-esc="props.todo.index"/>. <t t-esc="props.todo.description"/>
            <span role="button" class="fa fa-remove" t-on-click="removeItem"/>
        </div>
    </t>
</templates>
