<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div t-att-class="{ 'text-muted text-decoration-line-through': props.item.isCompleted }" class="w-50 fs-5">
            <span>
                <input
                    type="checkbox"
                    t-on-change="(ev) => props.toggleState(props.item.id, ev.target.checked)" 
                    t-att-checked="props.item.isCompleted"
                    class="btn" 
                />
            </span>
            <span class="ms-2"><t t-esc="props.item.id" />. </span>
            <span><t t-esc="props.item.description" /></span>
            <span 
                class="fa fa-remove ms-2 text-danger" 
                type="button" 
                t-on-click="() => props.removeTodo(props.item.id)"
            />
        </div>
    </t>

</templates>
