            <input type="checkbox" t-model="props.todo.isCompleted"/><t t-esc="props.todo.id"/>. <t t-esc="props.todo.description"/>, 
            <t t-esc="props.todo.isCompleted"/> <span style="color:red" class="fa fa-remove" t-on-click="onRemove"/>
        </div>
    </t>

</templates>
