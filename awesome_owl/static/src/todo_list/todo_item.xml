<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="d-flex align-items-center py-2 border-bottom">
            <t t-set="todo" t-value="props.todo"/>
            <input class="form-check-input me-2" type="checkbox" t-att-id="todo.id" t-att-checked="todo.isCompleted" t-on-change="() => todo.toggle()"/>
            <label t-att-for="todo.id" class="flex-grow-1 mb-0" t-att-class="todo.isCompleted ? 'text-decoration-line-through text-muted' : ''">
                <span class="accent-color me-1"><t t-esc="todo.id"/>.</span>
                <t t-esc="todo.description"/>
            </label>
            <button class="btn btn-sm text-danger border-0 bg-transparent" t-on-click="() => todo.remove()">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </t>
</templates>
