<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div>
            <input name="todo-confirm-input" type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="confirm_todo"/> <label t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
                <t t-esc="props.todo.id"/>. <t t-esc="props.todo.description"/>
            </label> <span class="fa fa-remove" t-on-click="remove_todo"/>
        </div>
    </t>

</templates>
