<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.TodoItem">
        <div class="form-check">
            <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="onChange"/><span>  </span>
            <label t-att-for="props.todo.id" t-att-class="props.todo.isCompleted ? 'text-decoration-line-through text-muted' : '' ">
                <t t-esc="props.todo.id"/>. 
                <t t-esc="props.todo.description"/><span>  </span>
                <span class="fa fa-remove" t-on-click="onDelete"/>
            </label>
        </div>
    </t>
</templates>
