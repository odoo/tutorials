<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_item">
        <div class="todo-item" t-att-class="{
            'text-muted': props.todoList.isCompleted,
            'text-decoration-line-through': props.todoList.isCompleted,
        }">
            <div>
                <input type="checkbox" t-att-checked="props.todoList.isCompleted" t-on-change="toggleCheckbox"/>
                <p>ID: <t t-esc="props.todoList.id"/>
                </p>
                <p t-on-click="toggleItem">Description: <t t-esc="props.todoList.description"/>
                </p>
                <span t-on-click="removeItem" class="fa fa-remove"/>
            </div>
        </div>
    </t>
</templates>
