<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div t-att-class="{'text-muted text-decoration-line-through': props.todo.isCompleted}">
                <input type="checkbox" t-att-checked="props.todo.isCompleted" t-on-change="toggleTodo"/>
                <span>
                    <strong class="me-2 ms-2">ID:</strong>
                    <t t-esc="props.todo.id"/>
                    <strong class="me-2 ms-2">Description:</strong>
                    <t t-esc="props.todo.description"/>
                </span>
                <button class="btn btn-danger btn-sm" t-on-click="()=> props.removeTodo(props.todo.id)">
                    <i class="fa fa-times"></i>
                </button>

            </div>
        </li>
    </t>
</templates>
