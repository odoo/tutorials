<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.Counter">
        <div class="card text-center shadow-sm p-3 counter-box">
            <div class="card-body d-flex flex-column justify-content-between">
                <h6 class="fw-bold">Counter Example</h6>
                <p class="fs-5">Count: <t t-out="state.count"/></p>
                <button t-on-click="increment" class="btn btn-primary btn-lg mt-auto" 
                        style="background-color: #9873AC; color: white; font-weight: bold; border: none;">
                    Increment
                </button>
            </div>
        </div>
    </t>
</templates>
