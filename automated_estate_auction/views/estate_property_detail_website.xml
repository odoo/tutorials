<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="estate_property_detail_template_addon"
        inherit_id="estate.estate_property_detail_template">
        <xpath expr="//div[@name='navigation_buttons']/a" position="before">
            <a
                t-if="property.state == 'new' or property.state == 'offer_received' or property.auction_state != 'sold'"
                t-attf-href="/estate-properties/{{property.id}}/create_offer"
                class="btn btn-lg btn-primary rounded-pill">
                Create Offer
            </a>
        </xpath>
        <xpath expr="//span[@name='expected_price_field']" position="after">
            <span t-if="property.auction_end_time"
                t-att-datetime="property.auction_end_time"
                class="o_estate_auction_countdown ms-2 fw-bold text-danger" />
        </xpath>
    </template>
</odoo>
