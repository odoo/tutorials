<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_sale_order_line_wizard" model="ir.actions.act_window">
        <field name="name">Configure Modular Values</field>
        <field name="res_model">sale.order.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_sale_order_line_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.line.wizard.form</field>
        <field name="model">sale.order.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Configure Sale Order Line">
                <sheet>
                    <field name="wizard_line_ids" force_save="1">
                        <list editable="bottom" create="False" delete="False" open_form_view="False">
                            <field name="modular_type_id" readonly="True"/>
                            <field name="value"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button name="save_configuration" string="Save" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
