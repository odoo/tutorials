<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.modular.types</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group//field[@name='product_tooltip']" position="after">
                <field name="modular_type_ids" string="Modular Types" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
