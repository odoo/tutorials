<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_form_view_modular_type" model="ir.ui.view">
        <field name="name">mrp.production.form.modular.type</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <field name="bom_id" position="attributes">
                <attribute name="readonly">is_modular_bom</attribute>
            </field>
            <xpath expr="//page[@name='components']//field[@name='product_uom_qty']" position="before">
                <field name="modular_type_id" invisible="not parent.is_modular_bom"/>
            </xpath>
        </field>
    </record>
</odoo>
