<?xml version="1.0" ?>
<odoo>
    <record id="view_order_form_inherit_sale" model="ir.ui.view">
        <field name="name">view.order.form.inherit.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list/field[@name='product_uom_qty']" position="before">
                <field name="book_price" groups="product.group_product_pricelist"/>
            </xpath>
        </field>
    </record>
</odoo>
