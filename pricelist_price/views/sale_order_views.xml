<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.pricelist.price</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook//list//field[@name='product_uom_qty']" position="before">
                <field name="book_price" string="Book Price" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
