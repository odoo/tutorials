<?xml version="1.0" ?>
<odoo>
    <record id="view_move_form_inherit_account" model="ir.ui.view">
        <field name="name">view.move.form.inherit.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoice_tab']//field[@name='invoice_line_ids']//list/field[@name='quantity']" position="before">
                <field name="book_price" groups="product.group_product_pricelist"/>
            </xpath>
        </field>
    </record>
</odoo>
