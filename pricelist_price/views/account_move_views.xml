<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_line_form_inherit" model="ir.ui.view">
        <field name="name">view_invoice_line_form_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='price_unit']" position="before">
                <field name="book_price"/>
            </xpath>
        </field>
    </record>
</odoo>

