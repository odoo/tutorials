<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="customer_invoice_view_inherit" model="ir.ui.view">
        <field name="name">inherit.customer.invoice.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="before">
                <field name="book_price" column_invisible = "parent.move_type not in ('out_invoice')"/>
            </xpath>
        </field>
    </record>
</odoo>
