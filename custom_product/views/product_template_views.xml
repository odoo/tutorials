<odoo>
    <record id="view_product_template_kit_form" model="ir.ui.view">
        <field name="name">product.template.kit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group[@name='group_general']/field[@name='product_tooltip']" position="after">
                <field name="is_kit"/>
                <field name="kit_product_ids" invisible="not is_kit"/>
            </xpath>
        </field>
    </record>
</odoo>