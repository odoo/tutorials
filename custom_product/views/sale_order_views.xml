<odoo>
    <record id="view_order_line_form" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.kit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <!-- Add Kit Button (only visible for kits in draft state) -->
            <xpath expr="//page[@name='order_lines']//list//field[@name='product_id']"
                position="after">
                <button name="action_open_kit_wizard" type="object" string="Add Kit"
                    class="btn-primary" invisible="(not is_kit_product) or (state != 'draft')" />
            </xpath>


            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="print_subproducts" />
            </xpath>


            <xpath expr="//page[@name='order_lines']//list//field[@name='product_template_id']"
                position="attributes">
                <attribute name="readonly">parent_line_id</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='product_uom_qty']"
                position="attributes">
                <attribute name="readonly">parent_line_id</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='price_unit']"
                position="attributes">
                <attribute name="readonly">parent_line_id</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='qty_delivered']"
                position="attributes">
                <attribute name="readonly">parent_line_id</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='customer_lead']"
                position="attributes">
                <attribute name="readonly">parent_line_id</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='tax_id']"
                position="attributes">
                <attribute name="readonly">parent_line_id</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//list" position="attributes">
                <attribute name="decoration-warning">parent_line_id</attribute>
                <attribute name="readonly">is_kit_product</attribute>
            </xpath>

        </field>
    </record>
</odoo>
