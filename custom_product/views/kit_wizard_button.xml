<odoo>
    <record id="view_order_line_form" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.kit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//list//field[@name='product_id']" position="after">
                <button name="action_open_kit_wizard" type="object" string="Add Kit"  class="btn-primary" invisible="(not is_kit_product) or (state != 'draft')"/>
            </xpath>
        </field>
    </record>
</odoo>
