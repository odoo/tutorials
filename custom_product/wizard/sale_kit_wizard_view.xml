<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_kit_wizard_form" model="ir.ui.view">
        <field name="name">sale.kit.wizard.form</field>
        <field name="model">sale.kit.wizard</field>
        <field name="arch" type="xml">
            <form string="Configure Kit">
                <group>
                    <field name="kit_product_id" readonly="1" />
                </group>
                <group>
                    <field name="kit_line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="quantity"/>
                            <field name="price"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_kit" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_kit_wizard" model="ir.actions.act_window">
        <field name="name">Kit</field>
        <field name="res_model">sale.kit.wizard</field>
        <field name="view_mode">form,list</field>
        <field name="target">new</field>
    </record>

</odoo>
