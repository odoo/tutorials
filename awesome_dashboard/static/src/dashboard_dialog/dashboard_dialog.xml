<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.DashboardDialog">
        <Dialog size="'md'" title="'Dashboard Items Configuration'">
            <div>
                <t t-foreach="props.items" t-as="item" t-key="item.id">
                    <div class="d-flex gap-2 mb-2">
                        <input type="checkbox" 
                            t-att-data-id="item.id"
                            class="form-check-input"
                            t-att-id="`check-${item.id}`" 
                            t-att-checked="!itemsState.removedIds.includes(item.id)"
                        />
                        <label t-att-for="`check-${item.id}`" t-esc="item.description" />
                    </div>
                </t>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="_confirm">
                    Done
                </button>
            </t>
        </Dialog>
    </t>
</templates>
