<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{controlPanel: {} }" >
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex p-3 gap-3 flex-wrap">
                <DashboardItem >
                    <p>Number of new orders this month</p>
                    <h3 class="text-info text-center m-0"><t t-out="statistics.nb_new_orders" /></h3>
                </DashboardItem>
                <DashboardItem >
                    <p>Total amount of new orders this month</p>
                    <h3 class="text-info text-center m-0"><t t-out="statistics.total_amount" /></h3>
                </DashboardItem>
                <DashboardItem >
                    <p>Average amount of t-shirt by order this month</p>
                    <h3 class="text-info text-center m-0"><t t-out="statistics.average_quantity" /></h3>
                </DashboardItem>
                <DashboardItem >
                    <p>Number of cancelled orders this month</p>
                    <h3 class="text-info text-center m-0"><t t-out="statistics.nb_cancelled_orders" /></h3>
                </DashboardItem>
                <DashboardItem >
                    <p>Average time for an order to go from 'new' to 'sent' or 'cancelled'</p>
                    <h3 class="text-info text-center m-0"><t t-out="statistics.average_time" /></h3>
                </DashboardItem>
                <DashboardItem>
                    <PieChart data="statistics.orders_by_size" />
                </DashboardItem>
            </div>
        </Layout>
    </t>

</templates>