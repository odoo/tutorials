<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout t-props="{'controlPanel': {}}" className="'o_dashboard h-100'">
            <div class="header_button">
                <button class="btn btn-primary" t-on-click="openCustomersKanbanView">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </div>
            <div class="dashboard_item">
                <DashboardItem>
                    Avarage amount of t-shirt by order this month
                    <h1>
                        <t t-esc="stats.statistics.average_quantity"/>
                    </h1>
                </DashboardItem>
                <DashboardItem>
                    Avarage time for an order to go from "new" to "sent" or "cancelled".
                    <h1>
                        <t t-esc="stats.statistics.average_time"/>
                    </h1>
                </DashboardItem>
                <DashboardItem>
                    Number of new order this month
                    <h1>
                        <t t-esc="stats.statistics.nb_new_orders"/>
                    </h1>
                </DashboardItem>
                <DashboardItem>
                    Number of cancelled order this month
                    <h1>
                        <t t-esc="stats.statistics.nb_cancelled_orders"/>
                    </h1>
                </DashboardItem>
                <DashboardItem>
                    Total amount of new order this month
                    <h1>
                        <t t-esc="stats.statistics.total_amount"/>
                    </h1>
                </DashboardItem>
                <DashboardItem size="2">
                    Shirt orders by size
                    <PieChart data="stats.statistics['orders_by_size']" label="'Shirt orders by size'"/>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
