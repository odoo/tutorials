<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100 p-3'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary me-2" t-on-click="openCustomerView">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap gap-3 justify-content-center" t-if="statistics.isReady">
                <DashboardItem>
                    <p class="text-muted text-center mb-2">
                        Average amount of t-shirt by order this month
                    </p>
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.average_quantity"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p class="text-muted text-center mb-2">
                        Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    </p>
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.average_time"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p class="text-muted text-center mb-2">
                        Number of new orders this month
                    </p>
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p class="text-muted text-center mb-2">
                        Number of cancelled orders this month
                    </p>
                    <div class="fs-1 fw-bold text-danger text-center">
                        <t t-esc="statistics.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <p class="text-muted text-center mb-2">
                        Total amount of new orders this month
                    </p>
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.total_amount"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="2">
                    <p class="text-muted text-center mb-2">
                        Shirt orders by size
                    </p>
                    <div class="d-flex justify-content-center">
                        <PieChart data="statistics['orders_by_size']" label="'Shirt orders by size'"/>
                    </div>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
