<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap gap-2 m-2">
                <DashboardItem size="1.5">
                    Average amount of t-shirt by ordet this month
                    <div style="font-size:60px; color: green; font-weight:bold" class="d-flex justify-content-center align-items-center">
                        <t t-out="this.state.rpcResponse.average_quantity"/>
                    </div>
                </DashboardItem>

                <DashboardItem size="2">
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <div style="font-size:60px; color: green; font-weight:bold" class="d-flex justify-content-center align-items-center">
                        <t t-out="this.state.rpcResponse.average_time"/>
                    </div>
                </DashboardItem>

                <DashboardItem size="1">
                    Number of new order this month
                    <div style="font-size:60px; color: green; font-weight:bold" class="d-flex justify-content-center align-items-center">
                        <t t-out="this.state.rpcResponse.nb_new_orders"/>
                    </div>
                </DashboardItem>

                <DashboardItem size="1">
                    Number of Cancelled order this month
                    <div style="font-size:60px; color: green; font-weight:bold" class="d-flex justify-content-center align-items-center">
                        <t t-out="this.state.rpcResponse.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>

                <DashboardItem size="1">
                    Total amount of new order this month
                    <div style="font-size:60px; color: green; font-weight:bold" class="d-flex justify-content-center align-items-center">
                        <t t-out="this.state.rpcResponse.total_amount"/>
                    </div>
                </DashboardItem>

            </div>

        </Layout>
    </t>

</templates>
