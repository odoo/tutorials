<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="display" t-if="stats.isReady">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="viewCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="viewLeads">Leads</button>
            </t>
            <DashboardItem>
                <div>
                    Number of new products this month:
                </div>
                <div class="text-success text-center">
                    <t t-esc="stats.nb_new_orders"/>
                </div>
            </DashboardItem>
            <DashboardItem>
                <div>
                    Total amount of new orders this month:
                </div>
                <div class="text-success text-center">
                    <t t-esc="stats.total_amount"/>
                </div>
            </DashboardItem>
            <DashboardItem>
                <div>
                    Average amount of t-shirt by order this month:
                </div>
                <div class="text-success text-center">
                    <t t-esc="stats.average_quantity"/>
                </div>
            </DashboardItem>
            <DashboardItem>
                <div>
                    Number of cancelled orders this month:
                </div>
                <div class="text-success text-center">
                    <t t-esc="stats.nb_cancelled_orders"/>
                </div>
            </DashboardItem>
            <DashboardItem size="1.5">
                <div>
                    Average time for an order to go from 'new' to 'sent' or 'cancelled':
                </div>
                <div class="text-success text-center">
                    <t t-esc="stats.average_time"/>
                </div>
            </DashboardItem>
            <DashboardItem size="1">
                <div>
                    Shirt orders by size
                </div>
                <div>
                    <PieChart data="stats['orders_by_size']" label="'Shirt orders by size'"/>
                </div>
            </DashboardItem>
        </Layout>
    </t>
</templates>
