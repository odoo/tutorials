<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="onClickCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="onClickLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap">
                <DashBoardItem size="2">
                    <p class="text-center">Average amount of t-shirt by order this month</p>
                    <div class="text-center text-success fw-bold fs-1">
                        <t t-out="stats.average_quantity"/>
                    </div>
                </DashBoardItem>
                <DashBoardItem size="2">
                    <p class="text-center">Average time for an order to go from 'new' to 'sent' or 'cancelled'</p>
                    <div class="text-center text-success fw-bold fs-1">
                        <t t-out="stats.average_time"/>
                    </div>
                </DashBoardItem>
                <DashBoardItem>
                    <p class="text-center">Number of new orders this month</p>
                    <div class="text-center text-success fw-bold fs-1">
                        <t t-out="stats.nb_new_orders"/>
                    </div>
                </DashBoardItem>
                <DashBoardItem>
                    <p class="text-center">Number of cancelled orders this month</p>
                    <div class="text-center text-success fw-bold fs-1">
                        <t t-out="stats.nb_cancelled_orders"/>
                    </div>
                </DashBoardItem>
                <DashBoardItem>
                    <p class="text-center">Total amount of new orders this month</p>
                    <div class="text-center text-success fw-bold fs-1">
                        <t t-out="stats.total_amount"/>
                    </div>
                </DashBoardItem>
                <DashBoardItem>
                    <PieChart data="stats.orders_by_size"/>
                </DashBoardItem>
            </div>
        </Layout>
    </t>

</templates>
