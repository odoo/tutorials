<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel:{}}" className="'o_dashboard h-100'">
        <t t-set-slot="layout-buttons">
            <button class="btn btn-primary" t-on-click="customers_kanban_view">Customers</button>
            <button class="btn btn-primary" t-on-click="open_leads">Leads</button>
        </t>
        <DashboardItem size='1.5'>
            <p>Average amount of t-shirt by order this month</p>
            <h3 class="text-center success"><t t-esc="result.average_quantity"></t></h3>
        </DashboardItem>
        <DashboardItem size='2'>
            <p>Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</p>
            <h3 class="text-center success"><t t-esc="result.average_time"></t></h3>
        </DashboardItem>
        <DashboardItem size='1.5'>
            <p>Number of new orders this month</p>
            <h3 class="text-center success"><t t-esc="result.nb_new_orders"></t></h3>
        </DashboardItem>
        <DashboardItem size='1.5'>
            <p>Number of cancelled orders this month</p>
            <h3 class="text-center success"><t t-esc="result.nb_cancelled_orders"></t></h3>
        </DashboardItem>
        <DashboardItem size='1.5'>
            <p>Total amount of new orders this month</p>
            <h3 class="text-center success"><t t-esc="result.total_amount"></t></h3>
        </DashboardItem>
        </Layout>        
    </t>
</templates>
