<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="display">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomer">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="flex-wrap d-flex">
                <DashboardItem>
                    Average amount of t-shirt by order this month
                    <div class="text-center fw-bold text-success text-strong">
                        <t t-esc="result.average_quantity"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <div class="text-center fw-bold text-success text-strong">
                        <t t-esc="result.average_time"/> 
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of new orders this month
                    <div class="text-center fw-bold text-success text-strong">
                        <t t-esc="result.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of cancelled orders this month
                    <div class="text-center fw-bold text-success text-strong">
                        <t t-esc="result.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Total amount of new orders this month
                    <div class="text-center fw-bold text-success text-strong">
                        <t t-esc="result.total_amount"/>
                    </div>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
