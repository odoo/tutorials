<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout
            t-props="{
            'display': {controlPanel: {}},
            'className': 'o_dashboard h-100',}">
            <t t-set-slot="layout-buttons">
                <button t-on-click=" viewCustomers" class=" btn btn-primary">Customers</button>
                <button t-on-click=" openActivity" class=" btn btn-primary">Leads</button>
            </t>
            <div class="d-flex flex-wrap">
                <DashboardItem>
                    <p>Average amount of t-shirt by order this month</p>
                    <t t-esc="dashboardData.average_quantity"></t>
                </DashboardItem>
                <DashboardItem size="2">
                    <p>Average time for an order to go from new to sent or cancelled</p>
                    <t t-esc="dashboardData.average_time"></t>
                </DashboardItem>
                <DashboardItem>
                    <p>Number of new orders this month</p>
                    <t t-esc="dashboardData.nb_new_orders"></t>
                </DashboardItem>
                <DashboardItem>
                    <p>Number of cancelled orders this month</p>
                    <t t-esc="dashboardData.nb_cancelled_orders"></t>
                </DashboardItem>
                <DashboardItem>
                    <p>Total amount of new orders this month</p>
                    <t t-esc="dashboardData.total_amount"></t>
                </DashboardItem>
                <t t-set="keys" t-value="Object.keys(dashboardData.orders_by_size)" />
                <t t-set="values" t-value="Object.values(dashboardData.orders_by_size)" />

                <DashboardItem>
                    <p>Shirt order by size</p>
                    <PieChart data="values" labels="keys" />
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
