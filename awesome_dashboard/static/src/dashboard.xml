<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">

        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary ms-3" t-on-click="CustomerView">Customers</button>
                <button class="btn btn-primary ms-3" t-on-click="Leads">Leads</button>
            </t>
            <div class="d-flex flex-wrap">
                <DashboardItem >
                    Number of new Orders this month
                    <div class="text-center text-success fs-1 fw-bold">
                        <t t-esc="statistics.nb_new_orders"></t>
                    </div>
                </DashboardItem>


                <DashboardItem>
                    Total Number of new orders
                    <div class="text-center text-success fs-1 fw-bold">
                        <t t-esc="statistics.total_amount"></t>
                    </div>
                </DashboardItem>

                <DashboardItem size="2">
                        Average amount of t-shirt by order this month
                    <div class="text-center text-success fs-1 fw-bold">
                        <t t-esc="statistics.average_quantity"></t>
                    </div>
                </DashboardItem>

                <DashboardItem>
                        Number of cancelled orders this month
                    <div class="text-center text-danger fs-1 fw-bold">
                        <t t-esc="statistics.nb_cancelled_orders"></t>
                    </div>
                </DashboardItem>

                <DashboardItem size="2">
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <div class="text-center text-success fs-1 fw-bold">
                        <t t-esc="statistics.average_time"></t>
                    </div>
                </DashboardItem>
            </div>
            <div>
             <DashboardItem size="2">
                    Shirt orders by size
                    <PieChart data="statistics['orders_by_size']" label="'Shirt orders by size'"/>
                </DashboardItem></div>
        </Layout>
    </t>

</templates>
