<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {}}" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <DashboardItem>
                Number of new orders this month
                <h1 class="text-success" t-esc="this.statistics.nb_new_orders"/>
            </DashboardItem>
            <DashboardItem>
                Total amount of new orders this month
                <h1 class="text-success" t-esc="this.statistics.total_amount"/>
            </DashboardItem>
            <DashboardItem>
                Average amount of t-shirt by order this month
                <h1 class="text-success" t-esc="this.statistics.average_quantity"/>
            </DashboardItem>
            <DashboardItem>
                Number of cancelled orders this month
                <h1 class="text-danger" t-esc="this.statistics.nb_cancelled_orders"/>
            </DashboardItem>
            <DashboardItem>
                Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’
                <h1 class="text-success" t-esc="this.statistics.average_time"/>
            </DashboardItem>
            <DashboardItem size="1.5">
                Shirt orders by size
                <PieChart labels="Object.keys(this.statistics.orders_by_size)"
            data="Object.values(this.statistics.orders_by_size)"/>
            </DashboardItem>
        </Layout>
    </t>

</templates>
