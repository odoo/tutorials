<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout classname="'o_dashboard h-100'" t-props="{'controlPanel': {}}">
            <div class="d-flex align-items-center">
                <button t-on-click="openCustomers" class="btn btn-primary">Customer</button>
                <button t-on-click="openLeads" type="button" class="ms-2 btn btn-primary" title="Leads">Leads</button>
                <h4 class="ms-3">Dashboard</h4>
            </div>
            <div class="d-flex gap-3 pt-3 ml-3" t-if="state.statistics">
                <DashboardItem>
                    Average amount of t-shirt by order this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="state.statistics.average_quantity"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="state.statistics.average_time"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of new orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="state.statistics.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of cancelled orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="state.statistics.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Total amount of new orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="state.statistics.total_amount"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="2">
                    Shirt orders by size
                    <PieChart data="state.statistics['orders_by_size']" label="'Shirt orders by size'"/>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
