<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{controlPanel: {} }">
            <button t-on-click="viewCustomerKanban">Customers</button>
            <button t-on-click="viewLeads">Leads</button>

            <t t-foreach="statistics" t-as="stat" t-key="stat">
                <DashboardItem>
                    <t t-esc="stat"/>
                    <br/>
                    <a class="big-and-green"><t t-esc="statistics[stat]"/></a>
                </DashboardItem>
            </t>
            <PieChart data="statistics['orders_by_size']"/>
        </Layout>
    </t>

</templates>
