<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">

        <Layout className="o_dashboard" display="display">

            <div class="d-flex gap-2">
                <button class="btn btn-primary" t-on-click="openCustomersView">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeadsView">Leads</button>
                <!-- <button t-on-click="rpcClick">RPC</button> -->
            </div>

            <div class="o_dashboard_content p-3">
                <p>Welcome to dashboard</p>
                <DashboardItem size="1">
                    <p>Hi</p>
                </DashboardItem>
                <DashboardItem size="2">
                    <p>Hi</p>
                </DashboardItem>
                <DashboardItem size="1">
                    <div>
                        <t>
                            <div>Average Time</div>
                        </t>
                        <t t-esc="this.state.avg_time"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="1">
                    <div>
                        <t>
                            <div>Cancel Order</div>
                        </t>
                        <t t-esc="this.state.nb_cancel"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="1">
                    <div>
                        <t>
                            <div>New Order</div>
                        </t>
                        <t t-esc="this.state.nb_new"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="1">
                    <div>
                        <t>
                            <div>Total Amount</div>
                        </t>
                        <t t-esc="this.state.tot_amount"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="1">
                    <div>
                        <t>
                            <div>Order By Size</div>
                        </t>
                        <t>M:</t>
                        <t t-esc="this.state.order_by_size['m']"/>
                        <t>;  S:</t>
                        <t t-esc="this.state.order_by_size['s']"/>
                        <t>;  XL:</t>
                        <t t-esc="this.state.order_by_size['xl']"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <PieChart/>
                </DashboardItem>
            </div>
        </Layout>
    </t>

</templates>
