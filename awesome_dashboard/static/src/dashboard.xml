<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{ controlPanel: { breadcrumbs: true } }">
            <t t-set-slot="control-panel-create-button">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary" t-on-click="openCustomers">View Customers</button>
                    <button class="btn btn-info" t-on-click="openLeads">View Leads</button>
                </div>
            </t>
            <div class="d-flex flex-wrap gap-3">
                <DashboardItem>
                    <t t-if="state.stats">
                        <h3 class="text-primary text-center">üì¶ New Orders:</h3>
                        <p class="fw-bold text-center fs-4" t-out="state.stats.nb_new_orders"/>
                    </t>
                </DashboardItem>

                <DashboardItem>
                    <t t-if="state.stats">
                        <h3 class="text-success text-center">üí∞ Total Sales:</h3>
                        <p class="fw-bold text-center fs-4">Rs. <t t-out="state.stats.total_amount"/></p>
                    </t>
                </DashboardItem>

                <DashboardItem>
                    <t t-if="state.stats">
                        <h3 class="text-warning text-center">üëï Avg. T-Shirts per Order:</h3>
                        <p class="fw-bold text-center fs-4" t-out="state.stats.average_quantity"/>
                    </t>
                </DashboardItem>

                <DashboardItem>
                    <t t-if="state.stats">
                        <h3 class="text-danger text-center">‚ùå Cancelled Orders:</h3>
                        <p class="fw-bold text-center fs-4" t-out="state.stats.nb_cancelled_orders"/>
                    </t>
                </DashboardItem>

                <DashboardItem>
                    <t t-if="state.stats">
                        <h3 class="text-info text-center">‚è≥ Avg. Processing Time:</h3>
                        <p class="fw-bold text-center fs-4" t-out="state.stats.average_time"/>
                    </t>
                </DashboardItem>

                <DashboardItem size="2">
                    <h4 class="text-center fw-bold">T-Shirt Sales Distribution</h4>
                    <PieChart sizes="state.sizes" quantities="state.quantities" />
                </DashboardItem>




            </div>
        </Layout>
    </t>

</templates>
