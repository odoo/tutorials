<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{ controlPanel: {} }">
            <header>
                <h1>Hello Dashboard!</h1>
                <t t-set-slot="layout-buttons">
                    <button t-on-click="openActivityCustomers" type="button" class="btn btn-primary" title="Customers">Customers</button>
                    <button t-on-click="openActivityLeads" type="button" class="btn btn-primary" title="Leads">Leads</button>
                </t>
            </header>
            <div class="d-flex flex-wrap">
                <!-- Ici j'ai pas réussi à mettre en place le t t-set-slot pour éviter la répétition.. -->
                <AwesomeDashboardItem size="1.3">
                    <h3 class="text-center">Number of new orders this month</h3>
                    <p class="text-center">
                        <t t-esc="this.result['nb_new_orders']"/>
                    </p>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem size="1.7">
                    <h3 class="text-center">Average amount of t-shirt by order this month</h3>
                    <p class="text-center">
                        <t t-esc="this.result['average_quantity']"/>
                    </p>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem size="1.3">
                    <h3 class="text-center">Number of cancelled orders this month</h3>
                    <p class="text-center">
                        <t t-esc="this.result['nb_cancelled_orders']"/>
                    </p>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem size="1.1">
                    <h3 class="text-center">Total amount of new orders this month</h3>
                    <p class="text-center">
                        <t t-esc="this.result['total_amount']"/>
                    </p>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem size="2.3">
                    <h3 class="text-center">Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</h3>
                    <p class="text-center">
                        <t t-esc="this.result['average_time']"/>
                    </p>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem size="2">
                    <h3 class="text-center">Pie Chart</h3>
                    <PieChart data="this.result['orders_by_size']" label="'My pie label'"></PieChart>
                </AwesomeDashboardItem>
            </div>
        </Layout>
    </t>

</templates>
