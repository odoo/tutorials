<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout 
            display="{controlPanel: {}}"
            className="'o_dashboard h-100'"
        >
            <t t-set-slot="layout-buttons">
                <button class="btn primary-btn" t-on-click="openCustomersKanbanView">Customers</button>
                <button class="btn primary-btn" t-on-click="openCrmLeadsView">Leads</button>
            </t>
            <div>
                <DashboardItem t-foreach="statistics" t-as="statistic" t-key="statistic_index" t-if="statistic != 'orders_by_size'">
                    <t t-set-slot="card-title">
                        <p class="card-title" t-esc="this.statisticsDescription[statistic]"/>
                    </t>
                    <t t-set-slot="card-text">
                        <p class="card-text text-success" t-esc="statistic_value"/>
                    </t>                       
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
