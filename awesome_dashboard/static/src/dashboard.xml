<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {}}" className="'o_dashboard h-100'">
            <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
            <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            <div class="d-flex flex-wrap">
                <AwesomeDashboardItem>
                    Average amount of t-shirt by order this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="result_statistics.average_quantity"/>
                    </div>
                </AwesomeDashboardItem>
                 <AwesomeDashboardItem size="2">
                    Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="result_statistics.average_time"/>
                    </div>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem>
                    Number of new orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="result_statistics.nb_new_orders"/>
                    </div>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem>
                    Number of cancelled orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="result_statistics.nb_cancelled_orders"/>
                    </div>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem>
                    Total amount of new orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="result_statistics.total_amount"/>
                    </div>
                </AwesomeDashboardItem>
                <AwesomeDashboardItem>
                    Shirt orders by size
                    <PieChart data="result_statistics.orders_by_size" label="'Shirt orders by size'"/>
                </AwesomeDashboardItem>
            </div>

        </Layout>
    </t>

</templates>
