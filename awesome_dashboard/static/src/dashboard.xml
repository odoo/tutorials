<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard" >
        <Layout className="'o_dashboard h-100 w-full'" t-props="layoutProps">
            <t t-slot="controlPanel">
            <div class="bg-white py-2">
                <button class="btn btn-primary mx-2" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
                <button class="btn btn-light " >Dashboard</button>
            </div>
            </t>
            <div class="d-flex ">
                <DashboardItem>
                    <p>some content</p>
                </DashboardItem>
                <DashboardItem size="2">
                    <p>I love milk</p>
                </DashboardItem>
                <DashboardItem>
                    <p>some content</p>
                </DashboardItem>
            </div>
            <div class="d-flex  flex-wrap">
                <DashboardItem size="2">
                    <h3>Avg. T-Shirts Per Order</h3>
                    <p class="text-success h1" t-esc="stats.avgTShirtsPerOrder" />
                </DashboardItem>
                <DashboardItem >
                    <h3>Avg. Processing Time (days)</h3>
                    <p class="text-success h1" t-esc="stats.avgProcessingTime" />
                </DashboardItem>
                <DashboardItem size="2">
                    <h3>New Orders This Month</h3>
                    <p class="text-success h1" t-esc="stats.newOrders" />
                </DashboardItem>
                <DashboardItem size="2">
                    <h3>Cancelled Orders</h3>
                    <p class="text-success h1" t-esc="stats.cancelledOrders" />
                </DashboardItem>
                <DashboardItem size="2">
                    <h3>Total Amount This Month</h3>
                    <p class="text-success h1" t-esc="stats.totalAmount" />
                </DashboardItem>
                <DashboardItem size="2">
                    <PieChart t-props="{'sizes': Object.keys(statistics.orders_by_size), 'quantities': Object.values(statistics.orders_by_size)}"/>
                </DashboardItem>
            </div>
        </Layout>
    </t>
    
</templates>
