<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">  
            <t t-set-slot="control-panel-create-button">
                <button type="button" class="btn btn-primary" t-on-click="customerButtonClick">Customer</button>
                <button type="button" class="btn btn-primary" t-on-click="leadsButtonClick">Leads</button>
            </t>

            <DashboardItem title="'Normal'">
                I am normal hey
            </DashboardItem>

            <DashboardItem title="'Big'" size="4">
                I am big yay
            </DashboardItem>



            <DashboardItem title="'Number of new orders this month'" toggle="true">
                <div t-esc="statistics.nb_new_orders" t-att-class="'stat-data'"/>
            </DashboardItem>

            <DashboardItem title="'Total amount of new orders this month'" toggle="true">
                <div t-esc="statistics.total_amount" t-att-class="'stat-data'"/>
            </DashboardItem>

            <DashboardItem title="'Average amount of t-shirt by order this month'" toggle="true">
                <div t-esc="statistics.average_quantity" t-att-class="'stat-data'"/>
            </DashboardItem>

            <DashboardItem title="'Number of cancelled orders this month'" toggle="true">
                <div t-esc="statistics.nb_cancelled_orders" t-att-class="'stat-data'"/>
            </DashboardItem>

            <DashboardItem title="'Average time for an order to go from \'new\' to \'sent\' or \'cancelled\''" toggle="true">
                <div t-esc="statistics.average_time" t-att-class="'stat-data'"/>
            </DashboardItem>



            <DashboardItem title="'Pie Chart'" size="4">
                <PieChart label="'orders_by_size'" data="Object.values(statistics.orders_by_size)" labels="Object.keys(statistics.orders_by_size)'"/>
            </DashboardItem>

        </Layout>
    </t>

</templates>
