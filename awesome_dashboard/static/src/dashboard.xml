<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{ controlPanel: {} }">
            <t t-set-slot="control-panel-always-buttons">
                <div class="o_control_panel">
                    <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                    <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
                </div>
            </t>
            <t t-slot="content">
                <div class="container d-flex flex-wrap">
                    <DashboardItem>
                            <h3>New Orders</h3>
                            <p><t t-esc="stats.nb_new_orders"/> orders this month</p>
                    </DashboardItem>
                   <DashboardItem>
                            <h3>Total Revenue</h3>
                            <p>$<t t-esc="stats.total_amount"/></p>
                    </DashboardItem>
                    <DashboardItem>
                            <h3>Avg T-Shirts per Order</h3>
                            <p><t t-esc="stats.average_quantity"/></p>
                    </DashboardItem>
                    <DashboardItem>
                            <h3>Cancelled Orders</h3>
                            <p><t t-esc="stats.nb_cancelled_orders"/></p>
                    </DashboardItem>
                    <DashboardItem>
                            <h3>Avg Processing Time</h3>
                            <p><t t-esc="stats.average_time"/> days</p>
                    </DashboardItem>
                </div>
            </t>
        </Layout>
    </t>
</templates>
