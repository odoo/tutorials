<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button t-on-click="openCustomers" type="button" class="btn btn-primary" title="Customers">Customers</button>
                <button t-on-click="openLeads" type="button" class="btn btn-primary" title="Leads">Leads</button>
            </t>
            <t t-set-slot="default">
                <DashboardItem size="2"><p>Average amount of t-shirt by order this month</p><h3 class="text-success"><t t-esc="statistics.average_quantity"/></h3></DashboardItem>
                <DashboardItem size="2"><p>Average time for an order to go from 'new' to 'sent' or 'cancelled'</p><h3 class="text-success"><t t-esc="statistics.average_time"/></h3></DashboardItem>
                <DashboardItem size="1"><p>Number of new orders this month</p><h3 class="text-success"><t t-esc="statistics.nb_new_orders"/></h3></DashboardItem>
                <DashboardItem size="1"><p>Number of cancelled orders this month</p><h3 class="text-success"><t t-esc="statistics.nb_cancelled_orders"/></h3></DashboardItem>
                <DashboardItem size="1"><p>Total amount of new orders</p><h3 class="text-success"><t t-esc="statistics.total_amount"/></h3></DashboardItem>
                <DashboardItem size="1"><p>Shirt orders by size</p><PieChart labels="Object.keys(statistics.orders_by_size)" data="Object.values(statistics.orders_by_size)" label="Size "/></DashboardItem>
            </t>
        </Layout>
    </t>

</templates>
