<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="showCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="showLeads">Leads</button>
            </t>
            <DashboardItem>
                Average amount of t-shirt by order this month
                <span class="h1 text-success"><t t-esc="stats.average_quantity" /></span>
            </DashboardItem>
            <DashboardItem>
                Average time for an order to go from 'new' to 'sent' or 'cancelled'
                <span class="h1 text-success"><t t-esc="stats.average_time" class="text-primary"/></span>
            </DashboardItem>
            <DashboardItem>
                Number of new orders this month
                <span class="h1 text-success"><t t-esc="stats.nb_new_orders" class="text-primary"/></span>
            </DashboardItem>
            <DashboardItem>
                Number of cancelled orders this month
                <span class="h1 text-success"><t t-esc="stats.nb_cancelled_orders" class="text-primary"/></span>
            </DashboardItem>
            <DashboardItem>
                Total amount of new orders this month
                <span class="h1 text-success"><t t-esc="stats.total_amount" class="text-primary"/></span>
            </DashboardItem>
        </Layout>
    </t>

</templates>