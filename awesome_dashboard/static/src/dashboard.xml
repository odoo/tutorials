<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
             <t t-set-slot="layout-buttons">
                <button t-on-click="openCustomers" class="btn btn-primary">Customers</button>
                <button t-on-click="openLeads" class="btn btn-primary">Leads</button>
             </t>
             <div class="d-flex flex-wrap gap-1">
                <DashboardItem size="2">
                    <p class="text-center word-wrap-none" style="font-size:19px">Average amount of t-shirt by order this month</p>
                    <div class="d-flex justify-content-center text text-success" style="font-size:30px">
                        <t t-esc="stats.average_quantity"/>
                    </div>
                </DashboardItem>

                <DashboardItem size="2">
                    <p class="text-center word-wrap-none" style="font-size:19px">Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</p>
                    <div class="d-flex justify-content-center text text-success" style="font-size:30px">
                        <t t-esc="stats.average_time"/>
                    </div>
                </DashboardItem>

                <DashboardItem>
                    <p class="text-center" style="font-size:19px">Number of new orders this month</p>
                    <div class="d-flex justify-content-center text text-success" style="font-size:30px">
                        <t t-esc="stats.nb_new_orders"/>
                    </div>
                </DashboardItem>

                 <DashboardItem>
                    <p class="text-center" style="font-size:19px">Number of cancelled orders this month</p>
                    <div class="d-flex justify-content-center text text-success" style="font-size:30px">
                        <t t-esc="stats.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>

                 <DashboardItem>
                    <p class="text-center" style="font-size:19px">Total amount of new orders this month</p>
                    <div class="d-flex justify-content-center text text-success" style="font-size:30px">
                        <t t-esc="stats.total_amount"/>
                    </div>
                </DashboardItem>

                <DashboardItem size="3">
                    <p class="text-center" style="font-size:19px">Shirt orders by size</p>
                    <PieChart t-props="{ data: stats.orders_by_size}"/>
                </DashboardItem>
             </div>
        </Layout>
    </t>

</templates>
