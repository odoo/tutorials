<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{ controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <div class="d-flex gap-1">
                    <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                    <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
                </div>
            </t>
            <div class="d-flex flex-wrap gap-3">
                <DashboardItem>
                    <h4>Number of new orders this month</h4>
                    <p><t t-out="statistics.nb_new_orders"/></p>
                </DashboardItem>
                <DashboardItem size="2">
                    <h4>Average amount of t-shirt by order this month</h4>
                    <p>$ <t t-out="statistics.average_quantity"/></p>
                </DashboardItem>
                <DashboardItem>
                    <h4>Number of cancelled orders this month</h4>
                    <p><t t-out="statistics.nb_cancelled_orders"/></p>
                </DashboardItem>
                <DashboardItem>
                    <h4>Total Amount</h4>
                    <p><t t-out="statistics.total_amount"/></p>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
