<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{ controlPanel:{} }">
            <t t-set-slot="control-panel-always-buttons">
                <div class="o_control_panel d-flex gap-3">
                    <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                    <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
                </div>
            </t>
            <t t-slot="content">
                <div class="dashboard-container d-flex flex-wrap gap-2 mt-3 p-3">
                    <DashboardItem size="1.5">
                        <p>Average amount of t-shirt by order this month</p>
                        <center style="font-size:30px; color:green;"><t t-esc="state.avgQuantity"/></center>
                    </DashboardItem>
                    <DashboardItem size="3">
                        <p>Average time for an order to go "new" to "sent" or "cancelled"</p>
                        <center style="font-size:30px; color:green;"><t t-esc="state.avgTime"/></center>
                    </DashboardItem>    
                    <DashboardItem size="1.5"> 
                        <p>Number of new orders this month</p>
                        <center style="font-size:30px; color:green;"><t t-esc="state.newOrders"/></center>
                    </DashboardItem>
                </div>
                <div class="dashboard-container d-flex flex-wrap gap-2 mt-3 bg-brown p-3">
                    <DashboardItem size="1">
                        <p>Number of cancelled orders this month</p>
                        <center style="font-size:30px; color:green;"><t t-esc="state.cancelledOrders"/></center>
                    </DashboardItem>
                    <DashboardItem size="1">
                        <p>Total amount of new orders this month</p>
                        <center style="font-size:30px; color:green;"><t t-esc="state.totalAmount"/></center>
                    </DashboardItem>
                    <DashboardItem size="2">
                        <PieChart/>
                    </DashboardItem>
                </div>
            </t>
        </Layout>
    </t>
</templates>
