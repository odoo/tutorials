<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <div class="d-flex align-items-center gap-3 px-2 pb-3">
            <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
            <button class="btn btn-primary" t-on-click="openCrmLeadView">Leads</button>
            <h3 class="m-0">Dashboard</h3>
        </div>
        <Layout display="display" className="'o_dashboard h-100'">
            <div class="d-flex flex-column p-3 gap-2">
                <div class="d-flex justify-content-between gap-2">
                    <DashboardItem title="'Average amount of t-shirt by order this month'" value="this.statistics_data.average_quantity" size="3"/>
                    <DashboardItem title="`Average time for an order to go from 'new' to 'sent' of 'cancelled`" value="this.statistics_data.average_time" size="3"/>
                </div>
                <div class="d-flex justify-content-between gap-2">
                    <DashboardItem title="'Number of new orders this month'" value="this.statistics_data.nb_cancelled_orders" size="2"/>
                    <DashboardItem title="'Number of cancelled orders this month'" value="this.statistics_data.nb_new_orders" size="2"/>
                    <DashboardItem title="'Total amount of new orders this month'" value="this.statistics_data.total_amount" size="2"/>
                </div>
                <DashboardItem size="1.5">
                    <div>
                        <h2>Shirts orders by size</h2>
                        <PieChart data="this.statistics_data.orders_by_size" label="'Shirts orders by size'"/>
                    </div>
                </DashboardItem>
            </div>
        </Layout>
    </t>

</templates>
