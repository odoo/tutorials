                <DashboardItem>
                    <p>Average amount of t-shirt by order this month</p>
                    <h1 class="d-flex text-success justify-content-center">
                        <t t-esc="this.statistics.average_quantity" />
                    </h1>
                </DashboardItem>

                <DashboardItem>
                    <p>Average time for an order to go from 'new' to 'sent' or 'cancelled'</p>
                    <h1 class="d-flex text-success justify-content-center">
                        <t t-esc="this.statistics.average_time" />
                    </h1>
                </DashboardItem>

                <DashboardItem>
                    <p>Number of new orders this month</p>
                    <h1 class="d-flex text-success justify-content-center">
                        <t t-esc="this.statistics.nb_new_orders" />
                    </h1>
                </DashboardItem>

                <DashboardItem>
                    <p>Number of cancelled orders this month</p>
                    <h1 class="d-flex text-success justify-content-center">
                        <t t-esc="this.statistics.nb_cancelled_orders" />
                    </h1>
                </DashboardItem>

                <DashboardItem>
                    <p>Total amount of new orders this month</p>
                    <h1 class="d-flex text-success justify-content-center">
                        <t t-esc="this.statistics.total_amount" />
                    </h1>
                </DashboardItem>

                <DashboardItem size="2">
                    <p>Shirt orders by size</p>
                    <Piechart data="this.statistics.orders_by_size"/>
                </DashboardItem>
            </div>
        </Layout>
    </t>

</templates>