<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.dashboard">
        <Dialog title.translate="Dashboard items Configuration">
            <h3>Which cards do you wish to see?</h3>
            <ul style="list-style-type: none; padding-left: 0;">
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <li type="unorderd">
                        <input type="checkbox" t-att-checked="item.isVisible" class="form-check-input" t-att-id="item.id" t-on-click="() => changeVisibility(item.id)"/>
                        <label class="form-check-label" t-att-for="item.id">
                            <h4 class="ms-2">
                                <t t-out="item.description"/>
                            </h4>
                        </label>
                    </li>
                </t>
            </ul>
        </Dialog>
    </t>
</templates>
