<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="display">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap" t-if="dashboardStatisticsServices.isRefresh">
                <DashboardItem>
                    Average amount of t-shirt by order this month
                    <div class="o_dashboard_fields">
                        <t t-esc="dashboardStatisticsServices.average_quantity"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <div class="o_dashboard_fields">
                        <t t-esc="dashboardStatisticsServices.average_time"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of new orders this month
                    <div class="o_dashboard_fields">
                        <t t-esc="dashboardStatisticsServices.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of cancelled orders this month
                    <div class="o_dashboard_fields">
                        <t t-esc="dashboardStatisticsServices.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Total amount of new orders this month
                    <div class="o_dashboard_fields">
                        <t t-esc="dashboardStatisticsServices.total_amount"/>
                    </div>
                </DashboardItem>
                <DashboardItem size="2">
                    Shirt orders by size
                    <PieChart label="'Shirt orders by size'" data="dashboardStatisticsServices['orders_by_size']"/>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
