<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="display">
        <t t-set-slot="layout-buttons" >
            <button class="btn btn-primary btn-sm" t-on-click="openCustomers"> Customers </button>
            <button class="btn btn-primary btn-sm" t-on-click="openLeads"> Leads </button>
        </t>
        <div class="d-flex flex-wrap" t-if="stats.dataReady">
            <DashboardItem>
                Average amount of t-shirt by order this month
                <div class="fs-1 fw-bold text-success text-center">
                    <t t-esc="stats.average_quantity"/>
                </div>
            </DashboardItem>
            <DashboardItem size='2'>
                Average time for an order to go from 'new' to 'sent' or 'cancelled'
                <div class="fs-1 fw-bold text-success text-center">
                    <t t-esc="stats.average_time"/>
                </div>
            </DashboardItem>
            <DashboardItem>
                Number of new orders this month
                <div class="fs-1 fw-bold text-success text-center">
                    <t t-esc="stats.nb_new_orders"/>
                </div>
            </DashboardItem>
            <DashboardItem>
                Number of cancelled orders this month
                <div class="fs-1 fw-bold text-success text-center">
                    <t t-esc="stats.nb_cancelled_orders"/>
                </div>
            </DashboardItem>
            <DashboardItem>
                Total amount of new orders this month
                <div class="fs-1 fw-bold text-success text-center">
                    <t t-esc="stats.total_amount"/>
                </div>
            </DashboardItem>
                <DashboardItem>
                    Shirt orders by size
                    <PieChart data="stats['orders_by_size']" label="'Shirt orders by size'"/>
                </DashboardItem>
        </div>
        </Layout>
    </t>
</templates>
