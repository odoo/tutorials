<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <div class="d-flex align-items-center gap-3 px-2">
            <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
            <button class="btn btn-primary" t-on-click="openCrmLeadView">Leads</button>
            <h3 class="m-0">Dashboard</h3>
            <button class="btn fs-2" t-on-click="openConfiguration"><i class="fa fa-cog"/></button>
        </div>
        <Layout display="display" className="'o_dashboard h-100'">
            <div class="d-grid p-3 gap-2" style="grid-template-columns: repeat(4, 1fr);">
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <DashboardItem size="item.size || 1" t-if="!dialog_state.disabledItems.includes(item.id)">
                        <t t-set="itemProp" t-value="item.props ? item.props(statistics_data) : {'data': statistics_data}"/>
                        <t t-component="item.Component" t-props="itemProp" />
                    </DashboardItem>
                </t>
            </div>
        </Layout>
    </t>

    <t t-name="awesome_dashboard.ConfigurationDialog">
        <Dialog title="'Dashboard items configuration'">
            Which cards do you whish to see ?
            <t t-foreach="this.items" t-as="item" t-key="item.id">
                <CheckBox value="item.enabled" onChange="(ev) => this.onChange(ev, item)">
                    <t t-esc="item.description"/>
                </CheckBox>
            </t>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="onDone">
                    Done
                </button>
            </t>
        </Dialog>
    </t>

</templates>
