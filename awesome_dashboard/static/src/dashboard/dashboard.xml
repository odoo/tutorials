<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
        <t t-name="awesome_dashboard.AwesomeDashboard">
            <Layout display="{ controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                Hello dashboard
                <button class="btn btn-primary" t-on-click="openCustomer">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
                <t t-set-slot="control-panel-additional-actions">
                    <button t-on-click="openConfiguration" class="btn p-0 ms-1 border-0">
                        <i class="fa fa-cog"></i>
                    </button>
                </t>
            </t>

            <div class="d-flex flex-wrap" t-if="statistics.isReady">
                <t t-foreach="items" t-as="item" t-key="item.itemId">
                    <DashboardItem t-if="!state.disabledItems.includes(item.itemId)" size="item.size || 1">
                        <t t-component="item.Component" t-props="item.props ? item.props(statistics) : {'data': statistics}"/>
                    </DashboardItem>
                </t>
            </div>
            </Layout>
        </t>

        <t t-name="awesome_dashboard.DialogBox">
            <Dialog title="'Dashboard Card configuration'">
                Select cards to be displayed
                <t t-foreach="items" t-as="item" t-key="item.itemId">
                    <CheckBox value="item.enabled" onChange="(ev) => this.onChange(ev, item)">
                        <t t-esc="item.description"/>
                    </CheckBox>
                </t>
                <t t-set-slot="footer">
                    <button class="btn btn-primary" t-on-click="done">
                        Done
                    </button>
                </t>
            </Dialog>
        </t>
</templates>
