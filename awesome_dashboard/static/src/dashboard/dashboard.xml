<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

   <t t-name="awesome_dashboard.AwesomeDashboard">
     <Layout class="'o_dashboard h-100'" t-props="layoutProps">
        <t t-slot="controlPanel">
            <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
            <button class="btn btn-secondary" t-on-click="openLeads">Leads</button>
            <button class="btn btn-light" t-on-click="openSettings">Dashboard</button>
        </t>

        <t t-slot="content">
            <t t-set="title">Awesome Dashboard</t>
            <div class="dashboard-container">
                <DashboardItem>
                    <h2>New Orders: <t t-out="statistics.nb_new_orders"/></h2>
                </DashboardItem>
                <DashboardItem size="2">
                    <h2>Total Sales: <t t-out="statistics.nb_cancelled_orders"/></h2>
                </DashboardItem>

                
                <DashboardItem title="'Shirt orders by size'">
                    <PieChart t-props="{'sizes': Object.keys(statistics.orders_by_size), 'quantities': Object.values(statistics.orders_by_size)}"/>
                </DashboardItem>
            </div>
        </t>
    </Layout>
   </t>

</templates>
