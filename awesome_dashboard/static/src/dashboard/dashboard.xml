<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button t-on-click="openCustomers" type="button" class="btn btn-primary" title="Customers">Customers</button>
                <button t-on-click="openLeads" type="button" class="btn btn-primary" title="Leads">Leads</button>
                <button t-on-click="openDialog" type="button" class="btn btn-primary" title="Leads">Config</button>
            </t>
            <t t-set-slot="default">
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <t t-if="enabledCards[item.id]">
                        <DashboardItem size="item.size || 1">
                            <t t-set="itemProp" t-value="item.props ? item.props(statistics) : {'data': statistics}"/>
                            <t t-component="item.Component" t-props="itemProp" />
                        </DashboardItem>
                    </t>
                </t>
            </t>
        </Layout>
    </t>


    <t t-name="awesome_dashboard.configuration_dialog">
        <Dialog title="'Dashboard items configuration'">
            <t t-foreach="props.items" t-as="item" t-key="item.id">
                <div>
                    <label><input type="checkbox" t-ref="{{item.id}}"/><t t-esc="item.description"/></label>
                </div>
            </t>
            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="onDone">
                    Done
                </button>
            </t>
        </Dialog>
    </t>

</templates>
