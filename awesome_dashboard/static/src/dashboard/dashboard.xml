<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <Card>
                Average amount of t-shirt by order this month
                <h1 style="color: var(--green);"><t t-esc="statistics.average_quantity"/></h1>
            </Card>
            <Card>
                Average time for an order to go from 'new' to 'sent' or 'cancelled'
                <h1 style="color: var(--green);"><t t-esc="statistics.average_time"/></h1>
            </Card>
            <Card>
                Number of new orders this month
                <h1 style="color: var(--green);"><t t-esc="statistics.nb_new_orders"/></h1>
            </Card>
            <Card>
                Number of cancelled orders this month
                <h1 style="color: var(--green);"><t t-esc="statistics.nb_cancelled_orders"/></h1>
            </Card>
            <Card>
                Total amount of new orders this month
                <h1 style="color: var(--green);"><t t-esc="statistics.total_amount"/></h1>
            </Card>
            <Card size="2">
                Shirt orders by size
                <PieChart data="statistics.orders_by_size"/>
            </Card>
        </Layout>    
    </t>

</templates>
