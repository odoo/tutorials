<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        
        <Layout className="'o_dashboard h-100'" display="display">
            <t t-set-slot="layout-buttons">
                <button t-on-click="openCustomers" class="btn btn-primary">Customers</button>
                <button t-on-click="openLeads" class="btn btn-primary">Leads</button>
                <button class="btn btn-light" t-on-click="openSettingsDialog">
                    <i class="fa fa-cog"/>
                </button>
            </t>

            <t t-set-slot="default">
                <div class="d-flex flex-wrap justify-content-center">
                    <t t-foreach="visibleItems" t-as="item" t-key="item.id">
                        <div class="p-2" t-att-class="item.props(state.values).title ? 'd-flex justify-content-center' : ''">
                            <DashboardItem size="item.size || 1">
                                <t t-set-slot="component">
                                    <t t-component="item.Component" t-props="item.props(state.values)" />
                                </t>
                            </DashboardItem>
                        </div>
                    </t>
                </div>
            </t>
         </Layout>
    </t>

</templates>
