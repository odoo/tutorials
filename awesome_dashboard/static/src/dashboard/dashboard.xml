<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'" display="{ controlPanel: {} }">
            <t t-set-slot="layout-buttons">
                <button type="button" class="btn btn-primary" t-on-click="opoenCustomers">Customers</button>
                <button type="button" class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <DashboardItem >
                <p>Average amount of t-shirt ordered this month </p>
                <h1 class="text-center text-success" t-esc="result.average_quantity"/>
            </DashboardItem>
            <DashboardItem>
                <p>Average time for an order to go from 'new' to 'sent' or 'cancelled' </p>
                <h1 class="text-center text-success" t-esc="result.average_time"/>
            </DashboardItem>
            <DashboardItem>
                <p>Number of new orders this month </p>
                <h1 class="text-center text-success" t-esc="result.nb_new_orders"/>
            </DashboardItem>
            <DashboardItem >
                <p>Number of cancelled orders this month</p>
                <h1 class="text-center text-success" t-esc="result.nb_cancelled_orders"/>
            </DashboardItem>
            <DashboardItem >
                <p>Total amount of new orders this month </p>
                <h1 class="text-center text-success" t-esc="result.total_amount"/>
            </DashboardItem>
            <DashboardItem size="2">
                <PieChart data="result.orders_by_size"/>
            </DashboardItem>
        </Layout>
    </t>
</templates>
