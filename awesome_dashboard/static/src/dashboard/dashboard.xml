<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel:{}}" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="customers_kanban_view">Customers</button>
                <button class="btn btn-primary" t-on-click="open_leads">Leads</button>
            </t>
            <t t-foreach="items" t-as="item" t-key="item.id">
                <DashboardItem size="item.size || 1">
                    <t t-set="itemProp" t-value="item.props ? item.props(result) : {'data': result}"/>
                    <t t-component="item.Component" t-props="itemProp" />
                </DashboardItem>
            </t>
        </Layout>
    </t>
</templates>
