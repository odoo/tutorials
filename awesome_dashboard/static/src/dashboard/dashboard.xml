<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {}}" className="'o_dashboard h-100'">

             <t t-set-slot="layout-buttons">
                <button t-on-click="openCustomers" class="btn btn-primary">Customers</button>
                <button t-on-click="openLeads" class="btn btn-primary">Leads</button>
             </t>

             <t t-set-slot="control-panel-additional-actions">
                <button t-on-click="openConfig" class="btn p-0 border-0">
                    <i class="fa fa-fw fa-cog"/>
                </button>
             </t>

             <div class="d-flex flex-wrap gap-1">
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <DashboardItem t-if="!state.disabledItems.includes(item.id)" size="item.size || 1">
                        <t t-set="itemProp" t-value="item.props ? item.props(stats) : {'data': stats}"/>
                        <t t-component="item.Component" t-props="itemProp" />
                    </DashboardItem>
                </t>
             </div>
             
        </Layout>
    </t>

</templates>
