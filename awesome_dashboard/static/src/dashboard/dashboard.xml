<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
        <t t-name="awesome_dashboard.AwesomeDashboard">
            <Layout display="{ controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                Hello dashboard
                <button class="btn btn-primary" t-on-click="openCustomer">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>

            <div class="d-flex flex-wrap" t-if="statistics.isReady">
                <DashboardItem>
                    Average time for an order to go from 'new' to 'sent' or 'cancelled'
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.average_time"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of new orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Number of cancelled orders this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.nb_cancelled_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Average amount of t-shirt by order this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.average_quantity"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Orders amount of M size t-shirt by order this month
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.orders_by_size.m"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    Shirt by size
                    <PieChart data="statistics['orders_by_size']" label="'Shirt orders by size'" colors="['red', 'blue', 'yellow']"/>
                </DashboardItem>
            </div>
            </Layout>
        </t>
</templates>
