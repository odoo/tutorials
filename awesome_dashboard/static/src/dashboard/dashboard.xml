<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{ controlPanel: {} }" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="showKanbanCustomersView">Customers</button>
                <button class="btn btn-primary" t-on-click="showLeads">Leads</button>
            </t>

            <t t-set-slot="control-panel-additional-actions">
                <button class="btn fa fa-gear border-0 p-0 ms-1" t-on-click="showSettings"/>
            </t>

            <t t-foreach="items" t-as="item" t-key="item.id">
                <DashboardItem size="item.size || 1">
                    <t t-set="itemProp" t-value="item.props ? item.props(statistics) : {'data': statistics}"/>
                    <t t-component="item.Component" t-props="itemProp" />
                </DashboardItem>
            </t>
        </Layout>
    </t>

</templates>
