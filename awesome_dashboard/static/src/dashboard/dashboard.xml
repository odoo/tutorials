<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'">
            <div class="bg-light">
                <button class="btn btn-primary my-3 mx-2" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary my-3" t-on-click="openLeads">Leads</button>
                <label class="my-3 mx-2">Dashboard</label>
                <button class="btn p-0 ms-1 border-0">
                    <i class="fa fa-cog"></i>
                </button>
            </div>

            <div class="d-flex flex-wrap">
                <t t-foreach="Object.entries(dashboardData)" t-as="item" t-key="item[0]">
                    <t t-set="key" t-value="item[0]"/>
                    <t t-set="value" t-value="item[1]"/>
                    <DashboardItem>
                        <span t-esc="key"/>
                        <br />
                        <t t-if="value.constructor === Object">
                            <t t-set="value" t-value="Object.values(value).reduce((accumulator, currentValue) => (accumulator + currentValue), 0)"/>
                        </t>
                        <span t-esc="value" class="text-success" style="font-size: 2rem;"/>
                    </DashboardItem>
                </t>
            </div>
            <DashboardItem size="2">
                <PieChart data="dashboardData.orders_by_size"/>
            </DashboardItem>
        </Layout>
    </t>

</templates>
