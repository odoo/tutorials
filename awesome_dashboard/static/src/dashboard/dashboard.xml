<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout className="'o_dashboard h-100'">
            <div class="bg-light">
                <button class="btn btn-primary my-3 mx-2" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-primary my-3" t-on-click="openLeads">Leads</button>
                <label class="my-3 mx-2">Dashboard</label>
                <button class="btn p-0 ms-1 border-0">
                    <i class="fa fa-cog"></i>
                </button>
            </div>

            <t t-foreach="items" t-as="item" t-key="item.id">
                <DashboardItem size="item.size || 1">
                    <t t-set="itemProp" t-value="item.props ? item.props(dashboardData) : {'data': dashboardData}"/>
                    <t t-component="item.Component" t-props="itemProp" />
                </DashboardItem>
            </t>
        </Layout>
    </t>

</templates>
