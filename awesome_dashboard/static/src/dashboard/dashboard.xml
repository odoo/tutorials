<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
                <button class="btn btn-secondary" t-on-click="openLeads">Leads</button>
            </t>
            <div class="d-flex flex-wrap">
                <DashboardItem>
                    <h3>No. of new orders (this month)</h3>
                    <div class="fs-1 fw-bold text-success text-center">
                        <t t-esc="statistics.nb_new_orders"/>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <h3>Total amount of new orders (this month)</h3>
                    <div class="fs-1 fw-bold text-success text-center">
                        <p t-out="statistics.total_amount"></p>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <h3>Average amount of t-shirt by order (this month)</h3>
                    <div class="fs-1 fw-bold text-success text-center">
                        <p t-out="statistics.average_quantity"></p>
                    </div>
                </DashboardItem>
                <DashboardItem>
                    <h3>Number of cancelled orders (this month)</h3>
                    <div class="fs-1 fw-bold text-success text-center">
                        <p t-out="statistics.nb_cancelled_orders"></p>
                    </div>
                </DashboardItem>
                <DashboardItem size="2">
                    <h3>Average time for an order to go from ‘new’ to ‘sent’ or ‘cancelled’</h3>
                    <div class="fs-1 fw-bold text-success text-center">
                        <p t-out="statistics.average_time"></p>
                    </div>
                </DashboardItem>
                <DashboardItem size="2">
                    <p class="text-muted text-center mb-2">
                        Shirt orders by size
                    </p>
                    <div class="d-flex justify-content-center">
                        <PieChart data="statistics['orders_by_size']" label="'Shirt orders by size'"/>
                    </div>
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>
