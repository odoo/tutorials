<templates xml:space="preserve">
    <t t-name="awesome_dashboard.dashboard">
        <Layout className="'o_dashboard h-100'" display="display">
            <t t-set-slot="control-panel-additional-actions">
                <button t-on-click="openSettings" class="btn p-0 ms-1 border-0">
                    <i class="fa fa-cog"></i>
                </button>
            </t>
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomerView">
                Customers
                </button>
                <button class="btn btn-primary" t-on-click="openLeads">
                Leads
                </button>
            </t>
            <t t-set-slot="default">
                <h3>
                Hello World!!
                    <br />
                Working Fine!!
                </h3>
                <div>
                    <DashboardItem size="2">
                        some content
                    </DashboardItem>
                </div>
            </t>
        </Layout>
    </t>
</templates>
