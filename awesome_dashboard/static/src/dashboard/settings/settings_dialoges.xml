<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.SettingsDialog">
        <Dialog title="'Dashboard Items Configuration'">
            <div class="d-flex flex-column">
                <p>Which cards do you wish to see?</p>
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" t-att-id="item.id" t-att-checked="!state.hiddenItems.has(item.id)" t-on-click="toggleItem" />
                        <label class="form-check-label" t-att-for="'checkbox-' + item.id">
                            <t t-esc="item.description" />
                        </label>
                    </div>
                </t>
            </div>

            <t t-set-slot="footer">
                <button class="btn btn-primary o-default-button" t-on-click="applySettings">
                    <t>Apply</t>
                </button>
            </t>
        </Dialog>
    </t>
    
</templates>
