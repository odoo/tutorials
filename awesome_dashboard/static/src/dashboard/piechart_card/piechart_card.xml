<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.PieChartCard">
        <div class="card m-2 border-0 shadow-sm rounded" style="width: 18rem;">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary-subtle">
                <h5 class="mb-0 fw-bold text-primary" t-esc="props.title"/>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <PieChart t-props="props.data"/>
            </div>
        </div>
    </t>
</templates>
