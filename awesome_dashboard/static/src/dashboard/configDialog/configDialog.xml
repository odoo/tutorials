<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.ConfigDialog">
        <Dialog title="'Dashboard items configuration'">
            <p>Which cards do you wish to see?</p>
             <t t-foreach="props.items" t-as="item" t-key="item.id">
             <div>
                <input type="checkbox" name="checkbox" 
                    t-att-checked="checkedState[item.id]"
                    t-on-click="() => this.toggleItem(item.id)"/>
                <span class="mx-2"><t t-esc="item.description"/></span>
             </div>
                
            </t>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="done">
                    Done
                </button>
            </t>
        </Dialog>
    </t>

</templates>
