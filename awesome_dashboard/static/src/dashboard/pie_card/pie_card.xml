<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.pie_chart_card">
        <div class="card-body">
            <h5 class="card-title">
                <t t-esc="props.title or 'Default Title'"/>
            </h5>
            <p class="card-text">
                <PieChart data="props.value"/>
            </p>
        </div>
    </t>

</templates>
