<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.DashboardItem">
        <div class="o_dashboard_item" t-att-style="'width: ' + this.cardWidth">
            <div class="o_dashboard_item_header">
                <span t-esc="this.props.title"/>
            </div>
            <div class="o_dashboard_item_body">
                <t t-slot="default"/>
            </div>
        </div>
    </t>
</templates>
