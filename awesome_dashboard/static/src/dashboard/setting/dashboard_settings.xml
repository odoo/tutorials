<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.SettingDialog">
        <Dialog t-props="{'title': 'Dashboard Items Configuration', 'size': 'md'}" t-on-close="props.close">
            <div class="p-3">
                    <t t-foreach="state.items" t-as="item" t-key="item.id">
                        <li class="list-group-item d-flex gap-2 align-items-center">
                            <input type="checkbox" t-att-id="'item-' + item.id"
                                class="form-check-input" t-model="item.enabled"/>
                            <label class="form-check-label" t-att-for="'item-' + item.id">
                                <t t-esc="item.description" />
                            </label>
                        </li>
                    </t>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="applySettings">Apply</button>
            </t>
        </Dialog>
    </t>
</templates>
