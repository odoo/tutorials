<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.NumberCard">
        <div class="card m-2 border-0 shadow-sm rounded">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary-subtle">
                <h5 class="mb-0 fw-bold text-primary" t-esc="props.title"/>
            </div>
            <div class="card-body text-center">
                <h2 class="fs-1 fw-semibold text-success" t-esc="props.value"/>
            </div>
        </div>
    </t>
</templates>
