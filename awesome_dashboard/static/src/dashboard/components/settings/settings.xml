<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.settings">
       <Dialog title="'Dashboard items Configuration'">
            <div class="d-flex flex-column">
                <p>Which cards do you wish to see?</p>
                    <t t-foreach="items" t-as="item" t-key="item.id">
                        <CheckBox value="!state.hiddenItems.has(item.id)" t-on-change="()=> onValueChange(item.id)">
                            <t t-esc="item.description"/>
                        </CheckBox>
                    </t>
            </div>
            <t t-set-slot="footer">
                <button type="button" class="btn btn-primary" t-on-click="btnDone">Done</button>
            </t>
       </Dialog>
    </t>
</templates>
