<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.DashboardItem">
        <div class="card border-black shadow-lg rounded px-3 py-3" t-attf-style="width: {{18*props.size}}rem;">
                <t t-if="props.title and props.value">
                    <h2 class="text-center"><t t-esc="props.title"/></h2>
                    <span class="text-center fs-1 text-primary display-5"><t t-esc="props.value"/></span>
                </t>
                <t t-slot="default"/>
        </div>
    </t>
    
</templates>

