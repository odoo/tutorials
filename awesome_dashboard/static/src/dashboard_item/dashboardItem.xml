<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.item">
        <div class="card d-inline-block m-2" t-attf-style="width: {{9*props.size}}rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <button class="btn btn-link p-0" t-on-click="this.toggle" t-out="props.title"/>
                </h5>

                <t t-slot="default" t-if="!this.state.toggled"/>
            </div>
        </div>
    </t>

</templates>
