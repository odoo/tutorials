<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_fast_order_process</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting help="Fast Order Process, suitable for shops with single and quick cash payment process">
                    <field name="pos_fast_order_process"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
