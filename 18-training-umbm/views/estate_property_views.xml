<odoo>

    <record id="real_estate_view_list" model="ir.ui.view">
        <field name="name">real_estate_view_list</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>

    <record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">real_estate_view_form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="states" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                    <button name="mark_as_sold" type="object" string="Sold"/>
                    <button name="mark_as_canceled" type="object" string="Canceled"/>
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                        <field name="name"/>
                        </h1>
                        <field name="tags_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="estate_property_type"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orentation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page name="Other infos">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesman_id"/>
                            </group>
                        </page>
                        <page name="Offers">
                            <field name="offer_ids" string="Offers"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_offer_view_list" model="ir.ui.view">
        <field name="name">property_offer_view_list</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price"/>
                <field name="partner_id"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check"/>
                <button name="action_close" string="Close" type="object" icon="fa-close"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </list>
        </field>
    </record>

    <record id="property_type_view_form" model="ir.ui.view">
        <field name="name">property_type_view_form</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <form>
                <h1>
                    <field name="name"/>
                </h1>
                <notebook>
                    <page string="Properties">
                        <field name="property_ids">
                            <list>
                                <field name="name"/>
                                <field name="expected_price"/>
                                <field name="states"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="real_estate_view_search" model="ir.ui.view">
        <field name="name">real_estate_view_search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Live Area"/>
                <field name="facades" string="Facades"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_menu_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_type_menu_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate_property_type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_tags_menu_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate_property_tags</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="real_estate_main" name="Real Estate">
        <menuitem id="real_estate_first_level" name="Estate Property">
            <menuitem id="real_estate_action" action="estate_property_menu_action" name="Estate Property"/>
        </menuitem>
        <menuitem id="settings" name="Settings">
            <menuitem id="property_type_action" action="estate_property_type_menu_action" name="Estate Property Type" />
            <menuitem id="property_tags_action" action="estate_property_tags_menu_action" name="Estate Property Tags" />
        </menuitem>
    </menuitem>

</odoo>