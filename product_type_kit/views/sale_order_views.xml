<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_real_estate_auction_automation" model="ir.ui.view">
        <field name="name">view.order.form.inherit.product.type.kit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_id']" position="after">
               <button name="action_open_kit_products" type="object" string="Kit Products" icon="fa-cubes" invisible="(not product_is_kit) or product_state == 'sale'"/>
            </xpath>
        </field>
    </record>
</odoo>
