<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_common_form_inherit_real_estate_auction_automation" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit.product.type.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
               <field name="is_kit" string="Is Kit"/>
               <field
                    name="sub_products_ids"
                    widget="many2many_tags"
                    placeholder="e.g. paint - paint brush"
                    invisible="not is_kit"
                />
            </xpath>
        </field>
    </record>
</odoo>
