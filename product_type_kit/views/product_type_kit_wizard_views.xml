<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_type_kit_wizard_view_form" model="ir.ui.view">
        <field name="name">product.type.kit.wizard.view.form</field>
        <field name="model">product.type.kit.wizard</field>
        <field name="arch" type="xml">
            <form string="Kit Product Details">
                <sheet>
                    <group>
                        <h2>Sub Products</h2>
                        <newline/>
                        <field name="sub_product_ids" nolabel="1">
                            <list editable="bottom" create="0" delete="0">
                                <field name="product_id" required="1" readonly="1" force_save="1"/>
                                <field name="quantity"/>
                                <field name="price"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
