<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="product_template_form_view_inherited" model="ir.ui.view">
    <field name="model">product.template</field>
    <field name="name">product.template.inherited</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//form[@name='Product Template']/sheet[@name='product_form']/notebook[1]/page[@name='general_information']/group[1]/group[@name='group_general']/div[1]" position="after">
          <field name="self_order_description"/>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
