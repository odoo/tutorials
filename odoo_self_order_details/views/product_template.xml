<odoo>
    <record id="view_product_template_form_inherited_self_order" model="ir.ui.view">
        <field name="name">product.template.form.inherit.self.order</field>    
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='pos']/group" position="inside">
                <group string="Self Order Description">
                    <field name="self_order_description" nolabel="1" placeholder="Product description for self order." />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
