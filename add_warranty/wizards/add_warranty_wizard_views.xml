<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_line_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.line.wizard.form</field>
        <field name="model">sale.order.warranty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="order_line_ids">
                        <list editable="bottom" create="false">
                            <field name="product_id"/>
                            <field name="warranty_item"/>
                            <field name="end_date"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Add" class="btn btn-primary" type="object" name="add_warranty_to_products"/>
                    <button special="cancel" string="Discard" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="add_warranty_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Warranty</field>
        <field name="res_model">sale.order.warranty</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
