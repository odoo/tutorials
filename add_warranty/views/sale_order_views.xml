<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_warranty_button_below_so" model="ir.ui.view">
        <field name="name">add.warranty.button.below.so</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//div[@name='so_button_below_order_lines']" position="inside">
                <button string="Add Warranty"
                        name="%(add_warranty_wizard_action)d" 
                        type="action"
                        class="btn btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
