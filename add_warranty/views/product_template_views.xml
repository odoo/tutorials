<?xml version="1.0"?>
<odoo>
    <record id="product_template_form_view_inherit_add_warranty" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.add.warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"></field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='description']" position="after">
                <group name="warranty" string="Warranty">
                    <field name="warranty_available"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
