<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="warranty_configuration_view_list" model="ir.ui.view">
        <field name="name">warranty.configuration.view.list</field>
        <field name="model">warranty.configuration</field>
        <field name="arch" type="xml">
            <list string="Warranty Configuration" editable="bottom">
                <field name="name"/>
                <field name="period"/>
                <field name="product_id" string="Product" context="{'default_type': 'service'}"/>
                <field name="percent" string="Percentage"/>
            </list>
        </field>
    </record>

    <record id="action_warranty_configuration_view" model="ir.actions.act_window">
        <field name="name">Warranty</field>
        <field name="res_model">warranty.configuration</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
