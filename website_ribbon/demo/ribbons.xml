<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Update Sale Ribbon -->
        <record id="website_sale.sale_ribbon" model="product.ribbon">
            <field name="style">badge</field>
            <field name="assign">sale</field>
            <field name="sequence">2</field>
        </record>

        <!-- Update Sold Out Ribbon -->
        <record id="website_sale.sold_out_ribbon" model="product.ribbon">
            <field name="style">ribbon</field>
            <field name="assign">manual</field>
            <field name="sequence">5</field>
        </record>

        <!-- Update Out of Stock Ribbon -->
        <record id="website_sale.out_of_stock_ribbon" model="product.ribbon">
            <field name="style">ribbon</field>
            <field name="sequence">1</field>
            <field name="assign">out_of_stock</field>
        </record>

        <!-- Update New Ribbon -->
        <record id="website_sale.new_ribbon" model="product.ribbon">
            <field name="style">badge</field>
            <field name="assign">new</field>
            <field name="sequence">3</field>
        </record>

    </data>
</odoo>
