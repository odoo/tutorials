<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_property_button_view" model="ir.ui.view">
        <field name="name">Product Property Button View</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//notebook//list" position="attributes">
              <attribute name="readonly">(not line.linked_line_id)</attribute>

            </xpath> -->

            <xpath expr="//notebook//list/field[@name='product_uom_qty']" position="before">
                <button name="action_add_warranty" type="object" class="btn btn-primary" string="kit" invisible="not is_kit"/>
            </xpath>
        </field>
    </record>
    <record id="inherit_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="is_print" string="print in repornt?"/>
            </xpath>
        </field>
    </record>
</odoo>
