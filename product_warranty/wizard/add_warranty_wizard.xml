<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sale_order_add_warranty_button" model="ir.ui.view">
        <field name="name">sale.order.add.warranty.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_discount_wizard']" position="after">
                <button name="action_open_custom_warranty_wizard" type="object" string="Warranty" class="oe_highlight"
                invisible = "show_warranty_button == False" />
            </xpath>
        </field>
    </record>

    <record id="view_add_warranty_wizard" model="ir.ui.view">
        <field name="name">add.warranty.wizard.form</field>
        <field name="model">add.warranty.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Warranty">
                <sheet>
                    <field name="order_id" invisible="1" />
                    <field name="warranty_line_ids">
                        <list editable="bottom" create="False">
                            <field name="product_id" readonly="True" />
                            <field name="order_line_id" column_invisible="True" />
                            <field name="warranty_id" />
                            <field name="end_date"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
