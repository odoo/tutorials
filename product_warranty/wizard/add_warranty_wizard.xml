<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_warranty_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Warranty</field>
        <field name="res_model">add.warranty.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="product_warranty_wizard_form" model="ir.ui.view">
        <field name="name">add.warranty.wizard.form</field>
        <field name="model">add.warranty.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Warranty" nolabel="1">
                <sheet>
                    <group>
                        <field name="warranty_lines" nolabel="1">
                            <list editable="bottom" delete="0" create="0">
                                <field name="product_template" readonly="1"/>
                                <field name="warranty_config" options="{'no_create': True}"/>
                                <field name="date_end" readonly="1"/>
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button string="Apply" name="apply_warranty" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
