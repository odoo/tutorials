<odoo>
    <record id="product_template__view_form" model="ir.ui.view">
        <field name="name">product.template.warranty.inherited.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='description']" position="after">
                    <group string="Warranty" name="warranty">
                        <field name="is_warranty_available"/>
                    </group>
            </xpath>
        </field>
    </record>
</odoo>
