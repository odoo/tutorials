<odoo>
    <record id="warranty_configuration_action" model="ir.actions.act_window">
        <field name="name">Warranty Configuration</field>
        <field name="res_model">warranty.configuration</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="warranty_configuration_list" model="ir.ui.view">
        <field name="name">warranty.configuration.list</field>
        <field name="model">warranty.configuration</field>
        <field name="arch" type="xml"> 
            <list>
                <field name="name"/>
                <field name="product_id"/>
                <field name="percentage"/>
            </list>
        </field>
    </record>
    <record id="warranty_configuration_form" model="ir.ui.view">
        <field name="name">warranty.configuration.form</field>
        <field name="model">warranty.configuration</field>
        <field name="arch" type="xml"> 
            <form>
                <group>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="percentage"/>
                    <field name="warranty_period"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
