<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_view_form" model="ir.ui.view">
        <field name="name">order.view.form.inherit.product.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='so_button_below_order_lines']" position="inside">
                <button name="%(add_product_warranty_action)d" string="Add Warranty" type="action" class="btn btn-primary mb-1"/>
            </xpath>
        </field>
    </record>
</odoo>
