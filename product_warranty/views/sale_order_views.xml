<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sales.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='so_button_below_order_lines']" position="inside">
                <button name="product_warranty.product_warranty_wizard_action" string="Add Warranty" type="action" class="btn btn-secondary fw-bold"/>
            </xpath>
        </field>
    </record>
</odoo>
