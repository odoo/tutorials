<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- warranty config list view -->
    <record id="view_warranty_config_list" model="ir.ui.view">
        <field name="name">warranty.config.list</field>
        <field name="model">product.warranty.config</field>
        <field name="arch" type="xml">
            <list string="Warranty Configuration" editable="bottom">
                <field name="name"/>
                <field name="product_template_id"/>
                <field name="year"/>
                <field name="percentage"/>
            </list>
        </field>
    </record>
    <!-- Action to add warranty config -->
    <record id="action_warranty_config" model="ir.actions.act_window">
        <field name="name">Warranty Configuration</field>
        <field name="res_model">product.warranty.config</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
