<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_template_form_view"
        model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
            ref="product.product_template_form_view" />
        <field name="arch"
            type="xml">

            <xpath expr="//group[@name='sale']"
                position="after">
                <group>
                    <field name="is_warranty" />
                </group>
                <group>
                    <field name="warranty_configuration_ids"
                        invisible="not is_warranty" />

                </group>
            </xpath>
        </field>
    </record>
</odoo>
