<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_warranty" model="ir.ui.view">
        <field name="name">product.template.form.warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//field[@name='product_tag_ids']" position="after">
                <field name="is_warranty_available"/>
            </xpath>
        </field>
    </record>
</odoo>
