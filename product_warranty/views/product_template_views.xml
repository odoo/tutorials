<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="name">product.template.common.view.form.inherit.product.warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[not(@name)]/group[@name='description']" position="after">
                <group string="Warranty" name="warranty">
                    <field colspan="2" name="is_warranty_available" string="Warranty Available"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
