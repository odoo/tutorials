<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_warranty_action" model="ir.actions.act_window">
        <field name="name">product warranty</field>
        <field name="res_model">product.warranty</field>
        <field name="view_mode">list</field>
    </record>

    <!-- list view -->
    <record id="product_warranty_list_view" model="ir.ui.view">
        <field name="name">product.warranty.configuration</field>
        <field name="model">product.warranty</field>
        <field name="arch" type="xml">
            <list string="Warranty" editable="top">
                <field name="name"/>
                <field name="percentage"/>
                <field name="years"/>
                <field name="product_template_id"/>
            </list>
        </field>
    </record>
</odoo>
