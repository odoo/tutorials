<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_warranty_configuration_action" model="ir.actions.act_window">
        <field name="name">Product Warranty Configuration Action</field>
        <field name="res_model">product.warranty.configuration</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="product_warranty_configuration_view_list" model="ir.ui.view">
        <field name="name">product.warranty.configuration.view.list</field>
        <field name="model">product.warranty.configuration</field>
        <field name="arch" type="xml">
            <list string="Product Warranty Configuration" editable="bottom">
                <field name="name" />
                <field name="product_id" context="{'default_type': 'service'}" />
                <field name="duration" />
                <field name="percentage" />
            </list>
        </field>
    </record>
</odoo>
