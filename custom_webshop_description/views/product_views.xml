<odoo>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.website.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='sales']//group[@name='ecom_description']" position="after">
                <group string="Ecommerce Extended Description" name="ecom_ext_description">
                    <field 
                        name="ecommerce_extended_description"
                        colspan="2" 
                        nolabel="1" 
                        placeholder="A detailed,formatted description of product. Use '/' to discover more features."/>
                </group>
            </xpath>

        </field>
    </record>    

</odoo>
