<odoo>
    <record id="view_payment_term_form" model="ir.ui.view">
        <field name="name">account.payment.term.form.inherit.payment.term.discount</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="after">
                <group>
                    <group colspan="2">
                        <button name="action_add_discount_line" type="object" string="+Add" invisible="not early_discount"/>
                    </group>
                    <group invisible="not early_discount">
                        <field name="early_discount_ids" nolabel="1">
                            <list editable="bottom" create='false'>
                                <field name="early_discount"/>
                                <field name="discount_percentage" invisible='not early_discount'/>
                                <field name="discount_days" invisible='not early_discount'/>
                                <field name="early_pay_discount_computation" invisible='not early_discount'/>
                            </list>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record id="account.action_payment_term_form" model="ir.actions.act_window">
        <field name="name">Payment Terms</field>
        <field name="res_model">account.payment.term</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="account.view_payment_term_search"/>
        <field name="domain">[('parent_id', '=', False)]</field>
    </record>
</odoo>
