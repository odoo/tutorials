<odoo>
    <template id="report_invoice_document_inherit_kit" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@name='invoice_line_table']/tbody/t/tr" position="attributes">
            <!-- one move line could belong to multiple order lines and one of those line can have sub-product where sale order has print_in_report checked -->
            <attribute name="t-if">not any(line.sale_line_ids.mapped('kit_line_id')) or (any(line.sale_line_ids.mapped('kit_line_id')) and any(line.sale_line_ids.mapped('order_id.print_in_report')))</attribute>
        </xpath>
    </template>
</odoo>
