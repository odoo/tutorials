<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.product.kit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="print_in_report"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list" position="attributes">
                <attribute name="decoration-warning" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="kit_line_id" column_invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                <button
                    type="object"
                    name="action_edit_sub_products"
                    string="Edit Sub-Products"
                    class="btn btn-secondary border"
                    invisible="not is_kit or parent.state in ['sale', 'cancel'] or parent.locked"
                />
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='name']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='qty_delivered']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='qty_invoiced']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='customer_lead']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_total']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='discount']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='tax_id']" position="attributes">
                <attribute name="readonly" add="kit_line_id" separator="or"/>
            </xpath>
        </field>
    </record>
</odoo>
