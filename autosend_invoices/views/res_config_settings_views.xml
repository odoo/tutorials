<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="autosend_invoices.res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.autosend.invoices</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="invoicing_settings" position="inside">
                <setting id="send_invoice_by_email" company_dependent="1">
                    <field name="autosend_invoices"/>
                    <div class="content-group" invisible="not autosend_invoices">
                        <label for="days_to_send_invoice" class="o_light_label"/>
                        <field name="days_to_send_invoice"/>Days
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
