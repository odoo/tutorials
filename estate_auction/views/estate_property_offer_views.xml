<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="inherit_id" ref="estate.estate_property_offer_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_accept_offer']" position="attributes">
                <attribute name="invisible">status in ['accepted', 'refused'] or sale_type == 'auction'</attribute>
            </xpath>
            <xpath expr="//button[@name='action_refuse_offer']" position="attributes">
                <attribute name="invisible">status in ['accepted', 'refused'] or sale_type == 'auction'</attribute>
            </xpath>
        </field>
    </record>
</odoo>
