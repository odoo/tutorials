<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_view_list_inherit" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list.inherit</field>
        <field name="model">estate.property.offer</field>
        <field name="inherit_id" ref="estate.estate_property_offer_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_accept']" position="attributes">
                <attribute name="invisible" separator="or" add="property_sale_type == 'auction'"/>
            </xpath>

            <xpath expr="//button[@name='action_refuse']" position="attributes">
                <attribute name="invisible" separator="or" add="property_sale_type == 'auction'"/>
            </xpath>
        </field>
    </record>

</odoo>
