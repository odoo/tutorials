<odoo>
    <data>
        <template id="offer_form_template" name="Offer Form">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <!-- Offer Form Card -->
                    <div class="card shadow-lg p-4">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">Add Offer for <t t-esc="property.name"/></h3>
                        </div>
                        <div class="card-body">
                            
                            <t t-if="error">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <t t-esc="error"/>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </t>

                            <form action="/property/offer/submit" method="post" class="needs-validation">
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Your Name:</label>
                                    <input type="text" class="form-control" t-att-value="request.env.user.name"  readonly=""/>
                                    <input type="hidden" name="property_id" t-att-value="property.id"/>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Offer Price:</label>
                                    <input type="number" name="price" class="form-control" placeholder="Enter your offer price" required=""/>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-success px-4">Submit Offer</button>
                                    <a t-att-href="'/property/%d' % property.id" class="btn btn-danger">Cancel</a>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
