<odoo>
    <template id="inherit_estate_property_template" inherit_id="estate.estate_property_template">
        <xpath expr="//select[@name='property_type']" position="after">
            <div class="mb-2">
                <label class="col-form-label fw-bold text-primary" for="selling_method">Auction Type</label>
                <select name="selling_method" class="form-select" onchange="this.form.submit()">
                    <option value="">All</option>
                    <option value="regular" t-att-selected="'regular' == selected_selling_method">
                        Regular</option>
                    <option value="auction" t-att-selected="'auction' == selected_selling_method">
                        Auction</option>
                </select>
            </div>
        </xpath>
    </template>

    <template id="inherit_estate_property_detail_template"
        inherit_id="estate.estate_property_detail_template">
        <xpath expr="//ul[@class='list-unstyled']" position="after">
           
            <div class="alert alert-info col-md-10 m-3" t-if="property_details.auction_end_time">
                    <strong t-if="property_details.state not in ['offer_accepted', 'sold']">Auction Ends In:</strong>
                    <div t-att-data-auction_end_time="property_details.auction_end_time" class="js_auction_timer"></div>
            </div> 
            <div class="mt-3">
                <a t-att-href="'/properties/%d/offer' % property_details.id" class="btn btn-success">
                    Create Offer
                </a>
            </div>
        </xpath>
    </template>

    <template id="create_offer_template" name="Create Offer Form">
      <t t-call="website.layout">
        <div class="container mt-5">
            <h2>Create an Offer for <t t-esc="property_details.name" /></h2>
            <form t-att-action="'/properties/%d/offer/submit' % property_details.id" method="post">
                <div class="mb-3">
                    <label class="form-label">Your Name</label>
                    <input type="text" class="form-control" t-att-value="partner_name" readonly="True"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Offer Amount</label>
                    <input type="number" class="form-control" name="amount" required="True" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a t-att-href="'/properties/%d' % property_details.id" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
      </t>
    </template>

    <template id="offer_success_template" name="Offer Success">
        <t t-call="website.layout">
            <div class="container mt-5 text-center">
                <h2>Congratulations!</h2>
                <p>Your offer has been successfully placed. we will notify you of the results as soon as the auction concludes </p>
                <a href="/properties" class="btn btn-primary">Back to Properties</a>
            </div>
        </t>
    </template>
</odoo>
