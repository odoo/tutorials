<odoo>
    <record id="estate_auction_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.auction.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//h2" position="inside">
                <span class="float-end">
                    <field name="auction_state" widget="auction_state_selection" class="w-100" invisible="sale_type != 'auction'"/>
                </span>
            </xpath>
        </field>
    </record>

    <record id="estate_auction_property_view_form" model="ir.ui.view">
        <field name="name">estate.auction.property.form</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.estate_property_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='offer_ids']" position="attributes">
                <attribute name="readonly">state in ['offer_accepted','sold','cancelled'] or (auction_state not in ['auction'] and sale_type in ['auction'])</attribute>
            </xpath>

            <xpath expr="//*[@name='action_sold']" position="before">
                <button name="action_start_auction" class="btn-primary"
                        string="Start Auction" type="object"
                        invisible="state in ['offer_accepted', 'sold', 'canceled'] or sale_type != 'auction' or auction_state in ['auction']"/>
            </xpath>

            <xpath expr="//div[@id='name_group']" position="replace">
                <div class="pe-0" id="name_group">
                    <h1 class="d-flex justify-content-between align-items-center">
                        <div class="d-flex w-100">
                            <field name="name" widget="" class="o_task_name text-truncate pe-2" placeholder="Property Name..."/>
                        </div>
                        <div class="d-flex justify-content-end o_state_container" style="text-align: -webkit-right;" invisible="sale_type != 'auction'">
                            <field name="auction_state" widget="auction_state_selection" class="o_task_state_widget" />
                        </div>
                    </h1>
                </div>
            </xpath>

            <xpath expr="//div[@id='name_group']/.." position="after">
                <group>
                    <group>
                        <field name="sale_type" widget="radio" nolabel="1" options="{'horizontal': true}"/>
                    </group>
                </group>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Auction Details" invisible="sale_type != 'auction'">
                    <group>
                        <field name="auction_end_time"/>
                        <field name="highest_offer" readonly="1"/>
                        <field name="highest_bidder" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
