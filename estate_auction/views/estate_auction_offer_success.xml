<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate_auction_offer_success" name="Auction Offer Success">
        <t t-call="website.layout">
            <div class="container text-center my-5">
                <h1 class="text-success fw-bold">Congratulations!</h1>
                <p class="lead">Your offer has been successfully placed.</p>
                <p>We will notify you once the auction ends.</p>
                <a href="/properties" class="btn btn-primary mt-3">
                    <i class="fa fa-arrow-left me-2"></i> Back to Listings
                </a>
            </div>
        </t>
    </template>
</odoo>
