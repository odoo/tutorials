<?xml version="1.0" encoding="UTF-8"?>

<odoo>

  <record id="auction_estate_form_view" model="ir.ui.view">
  
     <field name="name">auction.estate.form.view</field>
     <field name="model">estate.property</field>
     <field name="inherit_id" ref="estate.estate_property_view_form"/> 

     <field name="arch" type="xml">

           <xpath expr="//header/button[@name='action_sold']" position="before">
             <button name="action_start_auction" type="object" string="Start Auction" class="btn-primary"
                        invisible="auction_type != 'auction' or auction_started == True"/>
           </xpath>
           <xpath expr="//group[1]/field[@name='tag_ids']" position="after">
                <field name="auction_type" widget="radio"/>
           </xpath>

           <xpath expr="//notebook//page[1]/group" position="after">
               <group invisible="auction_type != 'auction'">
                    <field name="auction_end_time"/>
                    <field name="highest_offer"/>
                    <field name="highest_bidder_id"/>
               </group>
           </xpath> 

     </field>
  </record>
</odoo>
