<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mail_template_offer_accepted" model="mail.template">
        <field name="name">Estate: Offer Accepted</field>
        <field name="model_id" ref="estate.model_estate_property_offer" />
        <field name="subject">Congratulations! Your Offer for {{ object.property_id.name }} Has Been Accepted</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="description">Sent when an offer is accepted</field>
        <field name="body_html" type="html">
            <div style="font-family: Arial, sans-serif; padding: 20px;">
                <h2 style="color: #2E86C1;">Offer Accepted</h2>
                <p>
                    Dear <t t-out="object.partner_id.name" />,
                </p>
                <p>
                    We are pleased to inform you that your offer for the property
                    <strong>
                        <t t-out="object.property_id.name" />
                    </strong>
                    has been accepted!
                </p>
                <p>
                    <strong>Property Details:</strong>
                </p>
                <ul>
                    <li>
                        <strong>Price:</strong> <t t-out="object.price" />
                    </li>
                </ul>
                <p>We will be in touch shortly with the next steps regarding the agreement and paperwork.</p>
                <p>
                    Best regards,
                    <br />
                    The Estate Team
                </p>
            </div>
        </field>
    </record>
    <record id="mail_template_offer_rejected" model="mail.template">
        <field name="name">Estate: Offer Rejected</field>
        <field name="model_id" ref="estate.model_estate_property_offer" />
        <field name="subject">Update on Your Offer for {{ object.property_id.name }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="description">Sent when an offer is rejected</field>
        <field name="body_html" type="html">
            <div style="font-family: Arial, sans-serif; padding: 20px;">
                <h2 style="color: #C0392B;">Offer Rejected</h2>
                <p>
                    Dear <t t-out="object.partner_id.name" />,
                </p>
                <p>
                    We regret to inform you that your offer for the property
                    <strong>
                        <t t-out="object.property_id.name" />
                    </strong>
                    was not accepted.
                </p>
                <p>
                    <strong>Offer Details:</strong>
                </p>
                <ul>
                    <li>
                        <strong>Offer Price:</strong> <t t-out="object.price" />
                    </li>
                </ul>
                <p>We appreciate your interest and encourage you to explore other available properties. Please do not hesitate to reach out if you have any questions.</p>
                <p>
                    Best regards,
                    <br />
                    The Estate Team
                </p>
            </div>
        </field>
    </record>
</odoo>
