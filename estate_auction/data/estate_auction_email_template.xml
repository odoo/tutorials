<odoo>
    <!-- Offer Created Notification -->
    <record id="offer_created_template" model="mail.template">
        <field name="name">New Property Offer</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="email_from">${object.property_id.salesperson_id.email or ''}</field>
        <field name="email_to">${object.property_id.buyer_id.email or ''}</field>
        <field name="subject">New Offer Received for ${object.property_id.name}</field>
        <field name="body_html">
            <![CDATA[
                <p>Hello,</p>
                <p>A new offer of ${object.price} has been placed on <strong>${object.property_id.name}</strong>.</p>
                <p>Offer made by: ${object.buyer_id.name}</p>
                <p>Best regards,</p>
                <p>Odoo Real Estate Team</p>
            ]]>
        </field>
    </record>
    <!-- Offer Accepted Notification -->
    <record id="offer_accepted_template" model="mail.template">
        <field name="name">Offer Accepted</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="email_from">${object.property_id.salesperson_id.email or ''}</field>
        <field name="email_to">${object.buyer_id.email or ''}</field>
        <field name="subject">Your Offer for ${object.property_id.name} Has Been Accepted</field>
        <field name="body_html">
            <![CDATA[
                <p>Congratulations!</p>
                <p>Your offer of ${object.price} for <strong>${object.property_id.name}</strong> has been accepted.</p>
                <p>Best regards,</p>
                <p>Odoo Real Estate Team</p>
            ]]> 
        </field>
    </record>
    <!-- Offer Refused Notification -->
    <record id="offer_refused_template" model="mail.template">
        <field name="name">Offer Refused</field>
        <field name="model_id" ref="model_estate_property_offer"/>
        <field name="email_from">${object.property_id.salesperson_id.email or ''}</field>
        <field name="email_to">${object.buyer_id.email or ''}</field>
        <field name="subject">Your Offer for ${object.property_id.name} Has Been Refused</field>
        <field name="body_html">
            <![CDATA[
                <p>Hello,</p>
                <p>Unfortunately, your offer of ${object.price} for <strong>${object.property_id.name}</strong> has been refused.</p>
                <p>Best regards,</p>
                <p>Odoo Real Estate Team</p>
            ]]>
        </field>
    </record>
</odoo>
