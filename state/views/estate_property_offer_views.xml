<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="New Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers to Real Estate Properties" editable="bottom" decoration-danger="status =='refused'" decoration-success="status == 'accepted'">
                <field name="price" width="200%%"/>
                <field name="partner_id" width="200%%"/>
                <field name="validity" width="200%%"/>
                <field name="date_deadline" width="200%%"/>
                <button name="accepted_offer" type="object" icon="fa-check" width="25%%" invisible="status == 'refused' or status == 'accepted'"/>
                <button name="refused_offer" type="object" icon="fa-times" width="25%%" invisible="status == 'refused' or status == 'accepted'"/>
            </list>
        </field>
    </record>
</odoo>