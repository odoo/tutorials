<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.layout</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>  
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']/setting" position="replace">
                <setting help="Select Layout type displayed on the bill">
                    <div class="content-group mt16">
                        <div class="o_form_group">
                            <div class="o_form_label">
                                <label for="pos_disp_type" string="Receipt Layout" class="o_label"/>
                            </div>
                            <div class="o_form_field">
                                <field name="pos_disp_type" string="Receipt Layout Type"/>
                            </div>
                        </div>
                    </div>
                    <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                        <button name="action_open_receipt_preview_wizard" string="Preview Receipt"
                            type="object" class="oe_link" icon="oi-arrow-right"/>
                    </xpath>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
