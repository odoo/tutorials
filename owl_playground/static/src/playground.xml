<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.playground" owl="1">
        <h3 class="text-center mt-2">Playground Component</h3>
        <div class="d-flex align-items-stretch gap-2 p-2">
            <div class="rounded border bg-light p-2">
                <Counter increment.bind="increment" count="state.count"/>
            </div>
            <div class="flex-grow-1 rounded border bg-light p-2">
                <TodoList list="todo.list" count="todo.count"/> 
            </div>
            <Card list="todo.list">
                <t t-set-slot="title">Done Todos</t>
                <p class="card-text">Please focus on Todo, I'm just a sidekick! xD</p>
            </Card>
        </div>
    </t>

</templates>
