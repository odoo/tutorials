<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
        <p t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
            <input class="form-check-input" type="checkbox" t-att-checked="props.done" t-on-click="onClick"/>
            <t t-esc="props.id"/>.
            <t t-esc="props.description"/> - 
            <t t-esc="props.done"/>  
            <span role= "button" class="fa fa-remove red-button" t-on-click ="onRemove"/>
        </p>
    </t>
</templates>