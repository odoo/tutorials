<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.invoice.line.inherit.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <field name="book_price" column_invisible="parent.move_type != 'out_invoice'" string="Book Price"/>
            </xpath>
        </field>
    </record>
</odoo>
