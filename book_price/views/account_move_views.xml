<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="book_price.view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoice_tab']//list//field[@name='quantity']" position="before">
                <field name="pricelist_price_unit" column_invisible="parent.move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>
