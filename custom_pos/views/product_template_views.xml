<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherit" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="after">
                <group name="group_custom_pricing">
                    <group>
                        <field name="custom_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="min_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
