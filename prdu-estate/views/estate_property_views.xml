<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estates</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
                <field name="property_tag_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>
    
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.offer.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price"/>
                <field name="partner_id"/>
                <button name="action_offer_accept" type="object" string="Accept" icon="fa-check"/>
                <button name="action_offer_refuse" type="object" string="Refuse" icon="fa-cross"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_property_sell" type="object" string="Sell"/>
                    <button name="action_property_cancel" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <field name="property_tag_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="customer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estates">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="Postcode" name="postcode_group" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
    
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="price"/></h1>
                        <h2><field name="partner_id"/></h2>
                        <h2><field name="status"/></h2>
                        <h2><field name="validity"/></h2>
                        <h2><field name="date_deadline"/></h2>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
