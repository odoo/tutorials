<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view_inherit">
        <field name="name">product.template.inventory.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='responsible_id']" position="after">
                <label for="specific_weight" invisible="product_variant_count &gt; 1 and not is_product_variant"/>
                <div class="o_row" name="weight" invisible="product_variant_count &gt; 1 and not is_product_variant">
                    <field name="specific_weight" class="oe_inline"/>
                    <field name="weight_uom_name"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
