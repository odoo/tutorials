<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.deposit.rental</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='rental_sign']" position="after">
                <setting id="rental_deposit_product" name="rental_deposit_product" >
                    <field name="deposit_product_id" placeholder="Select deposit product" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
