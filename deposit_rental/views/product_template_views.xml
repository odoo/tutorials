<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_view_rental" model="ir.ui.view">
        <field name="name">product.template.form.inherit.deposit.rental</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='extra_rental']" position="after">
                <group string="Deposit Rental" name="deposit_rental" invisible="not rent_ok">
                    <field name="require_deposit" />
                    <field name="deposit_amount" widget="monetary" invisible="not require_deposit"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
