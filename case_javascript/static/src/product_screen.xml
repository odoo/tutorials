<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">

    <t t-name="case_javascript.ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension">
        <xpath expr="//ControlButtons" position="after">
            <button
                class="remove-item btn btn-danger btn-lg"
                t-on-click="onRemoveClick"
                t-if="!currentOrder?.is_empty() and pos.get_order()?.uiState.selected_orderline_uuid"
            >
                Remove
            </button>
        </xpath>
    </t>

</templates>