<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="case_javascript.ProductInfoPopup" t-inherit="point_of_sale.ProductInfoPopup" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'section-order')]" position="after">
            <div class="section-logistics text-start">
                <h3 class="section-title">Logistics</h3>
                <div class="section-logistics-body">
                    <table class="table table-borderless w-100 mb-0">
                        <tr>
                            <td>Weight:</td>
                            <td><t t-out="props.info.productInfo.weight"/> <t t-out="props.info.productInfo.weight_uom_name"/></td>
                        </tr>
                        <tr>
                            <td>Volume:</td>
                            <td><t t-out="props.info.productInfo.volume"/> <t t-out="props.info.productInfo.volume_uom_name"/></td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>
    </t>

</templates>