<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_template_view_list_recurring_services" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.cleaning.service</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_details']//div[3]" position="after">
                <field name="recurring_frequency"/>
                <field name="preferred_day" invisible="recurring_frequency!='preferred_day'" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>
