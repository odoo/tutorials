<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="multiple_budgets_wizard_view_form" model="ir.ui.view">
        <field name="name">multiple.budgets.wizard.view.form</field>
        <field name="model">multiple.budgets.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Multiple Budgets">
                <group>
                    <label for="starting_date" string="Duration" />
                    <div class="o_row">
                        <field name="starting_date" class="oe_inline" nolabel="1" />
                        <i class="fa fa-long-arrow-right mx-3" title="to" />
                        <field name="ending_date" class="oe_inline" nolabel="1" />
                    </div>
                    <field name="periods" widget="radio"/>
                </group>
                <group>
                    <field name="analytic_account_plan_ids" widget="many2many_tags" />
                </group>
                <footer>
                    <button string="Create" type="object" name="action_create_monthly_budgets" class="btn-primary" />
                    <button string="Discard" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="multiple_budgets_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Multiple Budgets</field>
        <field name="res_model">multiple.budgets.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
