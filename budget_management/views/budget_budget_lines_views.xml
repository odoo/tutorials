<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="budget_line_action" model="ir.actions.act_window">
        <field name="name">Budget Lines</field>
        <field name="res_model">budget.line</field>
        <field name="view_mode">list,graph,pivot,gantt</field>
        <field name="domain">[('budget_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define New Budget Lines
            </p><p>
                Use options specified in form to create new budget lines
            </p>
        </field>
    </record>

    <record id="budget_line_view_list" model="ir.ui.view">
        <field name="name">budget.line.view.list</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="budget_id" />
                <field name="analytics_account" />
                <field name="budget_amount" />
                <field name="achieved_amount" />
                <field name="achieved_amount_percentage" widget="progressbar" />
                <button type="object" name="action_view_analytic_lines" string="View"></button>
            </list>
        </field>
    </record>

    <record id="budget_line_view_graph" model="ir.ui.view">
        <field name="name">budget.line.view.graph</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <graph string="Budget Lines" sample="1" disable_linking="0" stacked="1">
                <field name="analytics_account" type="row"/>
                <field name="achieved_amount"/>
            </graph>
        </field>
    </record>

    <record id="budget_line_view_pivot" model="ir.ui.view" >
        <field name="name">budget.line.view.pivot</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <pivot string="Budget Lines" sample="1">
                <field name="analytics_account" type="row"/>
                <field name="achieved_amount" operator="+"/>
                <field name="over_budget" operator="+"/>
            </pivot>
        </field>
    </record>

    <record id="budget_line_view_gantt" model="ir.ui.view">
        <field name="name">budget.line.view.gantt</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <gantt string="Budget Lines" date_start="starting_date" date_stop="ending_date" default_group_by="name" color="id">
            </gantt>
        </field>
    </record>

</odoo>
