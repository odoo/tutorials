<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="budget_views_action" model="ir.actions.act_window">
        <field name="name">Budgets</field>
        <field name="res_model">budget.budget</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
        Add Bulk Budgets
            </p>
            <p>
        Click the "NEW" button to get started with creating budgets.
            </p>
        </field>
    </record>


    <record id="budgets_view_kanban" model="ir.ui.view">
        <field name="name">budget.budget.view.kanban</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" action="action_view_budget_lines" type="object" on_create="budget_management.bulk_budget_action">
                <templates>
                    <t t-name="menu">
                        <a role="menuitem" type="open" class="dropdown-item">Configuration</a>
                        <a role="menuitem" type="delete" class="dropdown-item">Delete Budget</a>
                    </t>
                    <t t-name="card">
                        <field name="name" class="fw-bold fs-5"/>
                        <div class="o_row mt-3 ms-3">
                            <span class="fa fa-clock-o me-2" title="Period"></span>
                            <field name="date_from" class="oe_inline" />
                            <i class="fa fa-long-arrow-right mx-2" aria-label="arrow" title="arrow"/>
                            <field name="date_to" class="oe_inline" />
                        </div>
                        <footer class="mt-3 ms-1">
                            <field name="user_id" widget="many2one_avatar_user"/>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <record id="budget_view_form" model="ir.ui.view">
        <field name="name">budget.view.form</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <form string="budget_details_form" create="false">
                <div class="alert alert-warning p-2 mb-3" invisible="warning_message==False" role="alert">
                    <strong>Warning:</strong> One of your budget lines' achieved amount is greater than its budget amount.
                </div>
                <header>
                    <button string="Reset to Draft" name="action_budget_draft" invisible="state == 'draft'" type="object" class="btn-primary"/>
                    <button string="Confirm" name="action_budget_confirm" invisible="state != 'draft'" type="object" class="btn-primary"/>
                    <button string="Revise" name="create_revised_budget" invisible="state != 'confirmed'" type="object" class="btn-secondary"/>
                    <button string="Done" name="action_budget_done" invisible="state != 'confirmed'" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,revised,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Budget Name"></field>
                    </h1>
                    <group>
                        <group>
                            <field name="user_id" widget="many2one_avatar"></field>
                            <field name="revision_id" widget="many2one_avatar" readonly="1"></field>
                        </group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div class="o_row">
                                <field name="date_from" nolabel="1" class="oe_inline" readonly="state != 'draft'"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="to" title="to"/>
                                <field name="date_to" nolabel="1" class="oe_inline" readonly="state != 'draft'"/>
                            </div>
                            <field name="company_id"/>
                            <field name="over_budget" readonly="state != 'draft'"></field>
                        </group>
                    </group>
                    <notebook>
                        <page name="budget_lines" string="Budget Lines">
                            <field name="budget_line_ids"></field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>
