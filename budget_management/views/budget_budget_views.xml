<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="budget_budget_view_form" model="ir.ui.view">
        <field name="name">budget.budget.view.form</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <form string="Budget Form">
                <header>
                    <button string="Reset to draft" type="object"
                        name="action_budget_reset_to_draft"
                        invisible="stage not in ['confirmed'] or revision_id" class="oe_highlight"
                    />
                    <button string="Confirmed" type="object" name="action_budget_to_confirmed"
                        invisible="stage not in ['draft']" class="oe_highlight"
                    />
                    <button string="Revise" type="object" name="action_budget_to_revised"
                        invisible="stage not in ['confirmed'] or revision_id"
                    />
                    <button string="Done" type="object" name="action_budget_to_done"
                        invisible="stage not in ['confirmed'] or revision_id"
                    />
                    <field name="stage" widget="statusbar" options="{'clickable': False}"
                        statusbar_visible="draft,confirmed,done"
                    />
                </header>
                <div class="alert alert-warning w-100 d-flex align-items-center gap-1"
                    role="alert" invisible="not show_warning"
                >
                    <span>Warning: Some budget lines have exceeded their budgeted amounts.</span>
                </div>
                <sheet>
                    <p> Budget Name: </p>
                    <h3>
                        <field name="name" readonly="True" />
                    </h3>
                    <group>
                        <group>
                            <field name="responsible_id" readonly="parent_revision_id" />
                            <field name="revision_id" readonly="True" />
                        </group>
                        <group>
                            <field name="company_id" readonly="parent_revision_id" />
                            <field name="on_over_budget" readonly="parent_revision_id" />
                            <label for="period_start" string="Period" />
                            <div class="o_row">
                                <field name="period_start" class="oe_inline" nolabel="1"
                                    readonly="parent_revision_id" />
                                <i class="fa fa-long-arrow-right mx-3" aria-label="to" title="to" />
                                <field name="period_end" class="oe_inline" nolabel="1"
                                    readonly="parent_revision_id" />
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="budget_lines" string="Budget Lines">
                            <field name="budget_line_ids" readonly="stage not in ['draft']">
                                <list editable="bottom"
                                    decoration-danger="achieved_percentage &gt; budget_amount">
                                    <field name="analytic_account_id" />
                                    <field name="currency_id" column_invisible="1" />
                                    <field name="budget_amount" />
                                    <field name="achieved_amount" />
                                    <field name="achieved_percentage" widget="progressbar"
                                        options="{'max': 100}" />
                                    <button string="view" type="object"
                                        name="action_open_account_analytic_line_list"
                                        class="oe_button_primary"
                                    />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="budget_budget_view_kanban" model="ir.ui.view">
        <field name="name">budget.budget.view.kanban</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <kanban highlight_color="color">
                <header>
                    <button string="Bulk" display="always" type="action"
                        name="%(multiple_budgets_wizard_action)d" />
                </header>
                <templates>
                    <t t-name="menu">
                        <div class="container">
                            <a class="dropdown-item" type="open">Configuration</a>
                            <field name="color" widget="kanban_color_picker" />
                        </div>
                    </t>
                    <t t-name="card">
                        <div class="o_project_kanban_main d-flex align-items-baseline gap-1">
                            <field name="is_favorite" widget="boolean_favorite" nolabel="1" />
                            <div class="min-w-0 pb-4 me-2">
                                <b>
                                    <field name="name" />
                                </b>
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fa fa-clock-o" aria-label="Date" role="img"
                                        title="Date" />
                                    <field name="period_start" widget="daterange"
                                        options="{'end_date_field': 'period_end'}" />
                                </div>
                            </div>
                        </div>
                        <div
                            class="d-flex align-items-center gap-1 position-absolute bottom-0 end-0 pb-1 pe-2">
                            <field name="responsible_id" widget="many2one_avatar_user" class="me-1" />
                            <field name="stage" widget="state_selection" readonly="1" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="budget_budget_action" model="ir.actions.act_window">
        <field name="name">Budget Management</field>
        <field name="res_model">budget.budget</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your budget!</p>
            <h6>
                <i>Use this menu to add budget entries.</i>
            </h6>
        </field>
    </record>
</odoo>
