<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_receipt_layout" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.receipt.layout</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']/setting" position="replace">
                <setting help="Choose layout of your reciept">
                    <field name="pos_receipt_layout"/>
                    <div class="content-group mt16">
                        <button name="action_view_pos_receipt_layout" string="Configure Receipts" type="object" class="oe_link" icon="oi-arrow-right"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
