<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="replace">
                <block title="Bills &amp; Receipts" id="pos_bills_and_receipts_section">
                    <setting id="document_layout_setting" string="Receipt Layout"
                        help="Choose the layout of your receipt">
                        <field name="pos_receipt_layout" readonly="1" />
                        <br />
                        <button name="action_open_receipt_configuration" type="object"
                            string="Configure receipt" class="btn-link" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
