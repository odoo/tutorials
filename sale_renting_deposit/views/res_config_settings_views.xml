<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.renting.deposit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_renting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app/block/setting[@name='rental_delay_costs']" position="after">
                <setting name="rental_deposit" string="Deposit">
                    <label string="Product" for="deposit_product" class="col-lg-3 o_light_label"/>
                    <field name="deposit_product" placeholder="Product for deposit"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
