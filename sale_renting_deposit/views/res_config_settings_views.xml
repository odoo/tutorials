<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sale_renting_deposit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.renting.deposit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_renting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <field name="extra_product" position="after">
                <div class="row mt8">
                    <label string="Deposit" for="deposit_product" class="col-lg-3 o_light_label"/>
                    <field name="deposit_product" placeholder="Product to set as deposit" />
                </div>
            </field>
        </field>
    </record>
</odoo>

