<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.sale.renting.deposit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='extra_rental']" position="inside">
                <field name="is_deposit_required"/>
                <field name="deposit_amount" widget="monetary" invisible="not is_deposit_required"/>
            </xpath>
        </field>
    </record>
</odoo>
