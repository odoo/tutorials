<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="warranty_configuration.view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='order_lines']/div[@name='so_button_below_order_lines']" position="inside">
                <button string="Add Warranty" name="open_warranty_wizard" type="object" class="btn btn-secondary"/>
            </xpath>
        </field>
  </record>
</odoo>
