<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="warranty_configuration.product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='sales']/group/group[@name='extra_info']" position="after">
                <group string="Warranty">
                    <field name="is_warranty_available"/>
                </group>
            </xpath>
        </field>
  </record>
</odoo>
