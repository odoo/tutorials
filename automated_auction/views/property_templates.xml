<odoo>
    <template id="property_details_auction_filter" inherit_id="estate.property_list_template">
        <xpath expr="//select[@name='property_type']" position="after">
            <label class="col-form-label fw-bold text-primary" for="selected_property_auction_type">Property Auction Type</label>
            <select name="selected_property_auction_type" class="form-select" onchange="this.form.submit()">
                <option value="all" t-att-selected="selected_property_auction_type == 'all'">All</option>
                <option value="auction" t-att-selected="selected_property_auction_type == 'auction'">Auction</option>
                <option value="regular" t-att-selected="selected_property_auction_type == 'regular'">Regular</option>
            </select>
        </xpath>
    </template>
    <template id="property_details_auction_template" inherit_id="estate.property_detail_template">
        <xpath expr="//h2[@name='property_name']" position="before">
            <t t-if="property_details.property_auction_type == 'auction'">
                <div class="text-center bg-primary text-white p-3 rounded" id="auction_timer" t-att-data-end-time="property_details.end_time">
                    <t t-if="auction_state == 'in_template'">
                        <span class="fw-bold">Auction is not started yet</span>
                    </t>
                    <t t-elif="auction_state == 'in_auction'">
                        <span class="fw-bold">In Auction</span>
                    </t>
                    <t t-elif="auction_state == 'done'">
                        <span class="fw-bold">Auction Ended</span>
                    </t>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[@name='property_details_only']" position="inside">
            <t t-if="property_details.property_auction_type == 'auction'">
                <t t-if="auction_state == 'in_auction'">
                    <a t-attf-href="/properties/#{property_details.id}/add_offer" class="btn btn-primary">
                        Create Offer
                    </a>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
