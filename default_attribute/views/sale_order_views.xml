<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.zero.stock.blockage</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <page name="customer_signature" position="after">
                <page name="global_info" string="Global Info">
                    <group>
                        <field name="global_info_line_ids" nolabel="1">
                            <list string="Global Info Line" create="0" edit="1" delete="0" editable="bottom" default_group_by="product_category_id">
                                <field name="product_category_id"/>
                                <field name="attribute_id"/>
                                <field name="attribute_value_id" options="{'no_create': True, 'no_edit': True}"/>
                            </list>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
