<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="todo_list_view_list" model="ir.ui.view">
    <field name="name">todo.list.view.list</field>
    <field name="model">todo.list</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="color" widget="color"/>
        <field name="completed"/>
      </list>
    </field>
  </record>

  <record id="todo_list_view_form" model="ir.ui.view">
    <field name="name">todo.list.view.form</field>
    <field name="model">todo.list</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="color" widget="color"/>
            <field name="completed"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_todo_list" model="ir.actions.act_window">
    <field name="name">Todo List</field>
    <field name="res_model">todo.list</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_owl_todo_list_js" model="ir.actions.client">
    <field name="name">Todo List OWL</field>
    <field name="tag">owl.action_todo_list_js</field>
  </record>

  <menuitem id="menu_todo_root" name="OWL Tutorials" sequence="10"/>
  <menuitem id="menu_todo_list" name="Todo List" parent="menu_todo_root" action="action_todo_list"/>
  <menuitem id="menu_todo_list_js" name="Todo List OWL" parent="menu_todo_root" action="action_owl_todo_list_js"/>
</odoo>
