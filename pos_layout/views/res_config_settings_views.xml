<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.layout</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']/setting" position="replace">
                <setting id="receipt_layout" string="Receipt Layout" help="Choose layout of your receipt">
                    <field name="pos_disp_type" colspan="4" string="Receipt Layout"/>
                    <div>
                        <button name="action_open_receipt_preview_wizard" icon="oi-arrow-right" type="object" string="Configure receipt" class="btn-link"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
