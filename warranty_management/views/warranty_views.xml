<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warranty_configuration_list" model="ir.ui.view">
        <field name="name">warranty.configuration.list</field>
        <field name="model">warranty.configuration</field>
        <field name="arch" type="xml">
            <list string="Warranty Configuration" editable="bottom" open_form_view='True'>
                <field name="name"/>
                <field name="product_id"/>
                <field name="extended_years"/>
                <field name="percentage"/>
            </list>
        </field>
    </record>

    <record id="action_warranty_configuration" model="ir.actions.act_window">
        <field name="name">Warranty Configuration</field>
        <field name="res_model">warranty.configuration</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
