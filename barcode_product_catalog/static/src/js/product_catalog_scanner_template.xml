<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="ProductCatalogKanbanControllerCustom" t-inherit="ProductCatalogKanbanController" t-inherit-mode="extension">
        <xpath expr="//t[@t-set-slot='control-panel-navigation-additional']" position="inside">
            <div class="d-flex align-items-center ms-2">
                <button
                    type="button"
                    class="btn btn-outline-primary ms-2"
                    t-on-click="openManualBarcodeDialog">
                    <i class="fa fa-barcode me-1" /> Scan Barcode
                </button>
            </div>
        </xpath>
    </t>
</templates>
