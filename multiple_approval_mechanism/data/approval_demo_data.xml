<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- User Definitions -->
        <record id="user_controlling_manager" model="res.users">
            <field name="name">Controlling Manager</field>
            <field name="login">controlling_manager</field>
            <field name="email">mark.brown23@example.com</field>
            <field name="password">password</field>
            <field name="groups_id" eval="[Command.set([ref('base.group_user'), ref('sales_team.group_sale_salesman_all_leads'), ref('approvals.group_approval_user')])]"/>
        </record>

        <record id="user_regional_manager" model="res.users">
            <field name="name">Regional Manager</field>
            <field name="login">regional_manager</field>
            <field name="email">mark.brown23@example.com</field>
            <field name="password">password</field>
            <field name="groups_id" eval="[Command.set([ref('base.group_user'), ref('sales_team.group_sale_salesman_all_leads'), ref('approvals.group_approval_user')])]"/>
        </record>

        <record id="user_head_division" model="res.users">
            <field name="name">Head of the Division</field>
            <field name="login">head_division</field>
            <field name="password">password</field>
            <field name="email">mark.brown23@example.com</field>
            <field name="groups_id" eval="[Command.set([ref('base.group_user'), ref('sales_team.group_sale_salesman_all_leads'), ref('approvals.group_approval_user')])]"/>
        </record>

        <record id="user_tci_crpo" model="res.users">
            <field name="name">TCI-CRPO</field>
            <field name="login">tci_crpo</field>
            <field name="email">mark.brown23@example.com</field>
            <field name="password">password</field>
            <field name="groups_id" eval="[Command.set([ref('base.group_user'), ref('sales_team.group_sale_salesman_all_leads'), ref('approvals.group_approval_user')])]"/>
        </record>

        <!-- Approval Levels -->
        <record id="approval_category_level_1" model="approval.category">
            <field name="name">Sale Order Approval Level 1</field>
            <field name="from_amount">0</field>
            <field name="to_amount">500000</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="is_sales_approval">True</field>
            <field name="approver_sequence">True</field>
            <field name="approval_minimum">1</field>
            <field name="approver_ids" eval="[
                                                (0, 0, {'user_id': ref('user_controlling_manager')})
                                             ]"/>
        </record>

        <record id="approval_category_level_2" model="approval.category">
            <field name="name">Sale Order Approval Level 2</field>
            <field name="from_amount">500001</field>
            <field name="to_amount">1000000</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="is_sales_approval">True</field>
            <field name="approver_sequence">True</field>
            <field name="approval_minimum">2</field>
            <field name="approver_ids" eval="[
                                                (0, 0, {'user_id': ref('user_controlling_manager')}),
                                                (0, 0, {'user_id': ref('user_regional_manager')})
                                             ]"/>
        </record>

        <record id="approval_category_level_3" model="approval.category">
            <field name="name">Sale Order Approval Level 3</field>
            <field name="from_amount">1000001</field>
            <field name="to_amount">5000000</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="is_sales_approval">True</field>
            <field name="approver_sequence">True</field>
            <field name="approval_minimum">3</field>
            <field name="approver_ids" eval="[
                                                (0, 0, {'user_id': ref('user_controlling_manager')}),
                                                (0, 0, {'user_id': ref('user_regional_manager')}),
                                                (0, 0, {'user_id': ref('user_head_division')})
                                             ]"/>
        </record>

        <record id="approval_category_level_4" model="approval.category">
            <field name="name">Sale Order Approval Level 4</field>
            <field name="from_amount">5000001</field>
            <field name="to_amount">0</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="is_sales_approval">True</field>
            <field name="approver_sequence">True</field>
            <field name="approval_minimum">4</field>
            <field name="approver_ids" eval="[
                                                (0, 0, {'user_id': ref('user_controlling_manager')}),
                                                (0, 0, {'user_id': ref('user_regional_manager')}),
                                                (0, 0, {'user_id': ref('user_head_division')}),
                                                (0, 0, {'user_id': ref('user_tci_crpo')})
                                             ]"/>
        </record>

    </data>
</odoo>
