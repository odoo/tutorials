<odoo>
    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="approval_id" class="oe_inline" readonly="1" invisible="not show_approval_type" />
            </xpath>
            <xpath expr="//button[@id='send_by_email']" position="before">
                <button name="action_sent_for_approval"
                        type="object"
                        string="Send for Approval"
                        class="btn-primary"
                        invisible="needs_approval == False or approval_status == 'approved'
                "/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="after">
                <widget name="web_ribbon" title="Send for Approval" bg_color="text-bg-primary" invisible="approval_status != False"/>
                <widget name="web_ribbon" title="Waiting for Approval" bg_color="text-bg-warning" invisible="approval_status != 'pending'"/>
                <widget name="web_ribbon" title="Quotation Approved" bg_color="text-bg-success" invisible="approval_status != 'approved'"/>
                <widget name="web_ribbon" title="Quotation Not Approved"  bg_color="text-bg-danger" invisible="approval_status != 'refused'"/>
            </xpath>
        </field>
    </record>
</odoo>
