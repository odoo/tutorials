<?xml version="1.0"?>
<odoo>
    <record id="view_order_form_inherited" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="before">
                <field name="book_price"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_inherited" model="ir.ui.view">
        <field name="name">account.move.line.list.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="before">
                <field name="book_price"/>
            </xpath>
        </field>
    </record>
</odoo>
