<odoo>
    <data>
        <record id="view_inventory_wizard_form" model="ir.ui.view">
            <field name="name">inventory.import.wizard.form</field>
            <field name="model">inventory.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Add/Remove Inventory">
                    <sheet>
                        <group>
                           <field name="location_id" invisible="storage_locations_enabled == False" />
                            <field name="file" filename = "file_name"/>
                            <field name ="file_name" invisible ="1"/>
                            <field name="operation" required = "1"/>
                        </group>
                        <footer>
                            <button name="action_import" type="object" string="Import" class="btn btn-primary"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>        
    </data>
</odoo>
