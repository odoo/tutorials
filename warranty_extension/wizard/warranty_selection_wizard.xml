<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warranty_selection_wizard" model="ir.ui.view">
        <field name="name">warranty.selection.wizard.form</field>
        <field name="model">warranty.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Warranties">
                <sheet>
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="warranty_lines">
                            <list editable="bottom">
                                <field name="product_id" readonly="1"/>
                                <field name="warranty_id"/>
                                <field name="end_date" readonly="1"/>
                                <field name="selected"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Add Warranties" name="action_add_warranties" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_warranty_selection_wizard" model="ir.actions.act_window">
        <field name="name">Select Warranties</field>
        <field name="res_model">warranty.selection.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_warranty_selection_wizard"/>
        <field name="target">new</field>
        <field name="context">{'active_id': active_id}</field>
    </record>
</odoo>
