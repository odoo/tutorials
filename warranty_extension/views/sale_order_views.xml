<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_warranty" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_discount_wizard']" position="before">
                <button name="action_warranty_selection_wizard" 
                        type="object" 
                        string="Add Warranty" 
                        class="btn-secondary"
                        invisible="state not in ('draft', 'sent')"
                        groups="sales_team.group_sale_salesman"/>
            </xpath>
        </field>
    </record>
</odoo>
