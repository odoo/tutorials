<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_inherit_form_view" model="ir.ui.view">
        <field name="name">Product Warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='extra_info']" position="inside">
                <group field="Warranty">
                    <field name="has_warranty" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
