<odoo>
    <record id="warranty_view_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <div name="so_button_below_order_lines" position="inside">
                <button
                    string="Add Warranty"
                    name="action_open_warranty_wizard"
                    type="object" class="btn btn-secondary"
                    invisible="not order_line"/>
            </div>
        </field>
    </record>
</odoo>
