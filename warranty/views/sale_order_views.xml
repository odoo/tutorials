<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_discount_wizard']" position="before">
                <button name="%(warranty.action_warranty_wizard)d"
                        string="Add Warranty"
                        type="action"
                        class="btn-secondary"
                        context="{'default_sale_order_id': id}"
                        invisible="has_warranty_product == False" />
            </xpath>
        </field>
    </record>
</odoo>
