<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit_warranty" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='so_button_below_order_lines']" position="inside">
                <button name="open_warranty_wizard" string="Add Warranty" type="object" class="btn btn-secondary"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_list_inherit_warranty" model="ir.ui.view">
        <field name="name">sale.order.view.list.inherit.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//notebook//page//field[@name='order_line']/list/field[@name='discount']" position="before">
                <field name="warranty_end_date" string="End Date" />
            </xpath>
        </field>
    </record>
</odoo>
