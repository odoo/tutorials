<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_warranty_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.warranty.wizard.form</field>
        <field name="model">sale.order.warranty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_id" />
                        <field name="warranty_id" string="Period" />
                        <field name="end_date" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_apply_warranty" type="object" string="Apply" class="btn btn-primary" data-hotkey="a" />
                    <button special="cancel" string="Discard" class="btn btn-secondary" data-hotkey="x" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
