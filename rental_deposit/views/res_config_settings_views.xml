<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_rental" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.rental</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@name='rental_delay_costs']" position="inside">
                <div class="row mt8">
                    <label string="Deposit" for="deposit_product_id" class="col-lg-3 o_light_label"/>
                    <field name="deposit_product_id" placeholder="Product to used for sale order" options="{'no_create': true}" domain="[('require_deposit', '=', True)]"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
