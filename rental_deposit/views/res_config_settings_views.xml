<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_renting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='extra_product']" position="after">
                <div class="row mt8">
                    <label string="Deposit" for="deposit_product_id" class="col-lg-3"/>
                    <field name="deposit_product_id" placeholder="Product for deposit"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
