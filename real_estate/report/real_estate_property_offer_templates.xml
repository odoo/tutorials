<?xml version="1.0"?>
<odoo>
    <template id="real_estate_property_report_template_offer">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-12">
                                <h2 t-field="property.name" />
                                <div>
                                    <strong>Salesman: </strong>
                                    <span t-field="property.salesperson_id" />
                                </div>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/>
                                </div>
                                <div>
                                    <strong>Status: </strong>
                                    <span t-field="property.status"/>
                                </div>
                                <t t-call="real_estate.real_estate_property_report_sub_template_offer" />                                
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="real_estate_property_report_sub_template_offer">
        <table t-if="property.offer_ids" class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')" />
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price" />
                    </td>
                    <td>
                        <span t-field="offer.partner_id" />
                    </td>
                    <td>
                        <span t-field="offer.validity" />
                    </td>
                    <td>
                        <span t-field="offer.date_deadline" />
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="mt-3" t-else="">
            <h4>No offer have been made yet...</h4>
        </div>
    </template>
</odoo>
