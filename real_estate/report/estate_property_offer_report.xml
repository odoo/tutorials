<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_report" model="ir.actions.report">
        <field name="name">Estate Offers Report</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_estate.estate_offer_report</field>
        <field name="report_file">real_estate.estate_offer_report</field>
        <field name="print_report_name">'Property_%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">report</field>
        <field name="domain">[('state','in',['sold'])]</field>
    </record>
    <record id="estate_user_property_report" model="ir.actions.report">
        <field name="name">Estate User Properties</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_estate.estate_user_property</field>
        <field name="report_file">real_estate.estate_user_property</field>
        <field name="print_report_name">'Property_%s' % (object.name)</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
