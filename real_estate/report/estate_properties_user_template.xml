<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_user_estate_properties">
        <t t-foreach='docs' t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div>
                        <h1>
                            <strong>Salesman:</strong>
                            <span t-field="users.name"/>
                        </h1>
                    </div>
                    <t t-if="users.property_ids">
                        <t t-set="property" t-value="users.mapped('property_ids')"/>
                        <t t-foreach="property" t-as="properties">
                            <t t-call="real_estate.report_estate_properties"/>
                        </t>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
