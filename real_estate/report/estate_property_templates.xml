<odoo>
    <template id="property_offers_report">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Current Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <div>
                            <strong>Best Offer: </strong>
                            <span t-field="property.best_price" />
                        </div>
                        
                        <t t-if="property.offer_ids">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Buyer</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="property.offer_ids" t-as="offer">
                                        <td>
                                            <span t-field="offer.price"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.partner_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.status"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <p><em>No offers have been made for this property yet.</em></p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
