<?xml version="1.0"?>
<odoo>
    <template id="user_report_template_offer">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-12" style="">
                                <div>
                                    <h2><strong>Salesman: </strong>
                                    <span t-field="user.name" /></h2>
                                </div>
                                <t t-foreach="user.mapped('property_ids')" t-as="property">
                                    <h2 t-field="property.name" />                                    
                                    <div>
                                        <strong>Expected Price: </strong>
                                        <span t-field="property.expected_price"/>
                                    </div>
                                    <div>
                                        <strong>Status: </strong>
                                        <span t-field="property.status"/>
                                    </div>
                                    <t t-call="real_estate.report_property_offers_sub_template" />
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
