<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_estate_properties">
        <h2>
            <span t-field="properties.name"/>
        </h2>
        <div>
            <strong>Salesman</strong>
            <span t-field="properties.users_id.name"/>
        </div>
        <div>
            <strong>Expected Price</strong>
            <span t-field="properties.expected_price"/>
        </div>
        <div>
            <strong>Status</strong>
            <span t-field="properties.state"/>
        </div>
        <div>
            <t t-if="properties.state=='sold'">
                <strong>!!!Invoice has been already created!!!</strong>
            </t>
        </div>

        <t t-call="real_estate.report_estate_properties_offer"/>
    </template>
</odoo>