<odoo>


<record id="view_estate_add_offer_wizard" model="ir.ui.view">
    <field name="name">estate.add.offer.wizard.form</field>
    <field name="model">estate.add.offer.wizard</field>
    <field name="arch" type="xml">
        <form string="Add Offer">
            <group>
                <field name="property_id" widget="many2many_tags"/>
                <field name="price"/>
                <field name="buyer_id"/>
                <field name="state"/>
            </group>
            <footer>
                <button name="action_make_offer" type="object" string="Make an Offer" class="btn-primary"/>
                <button string="Cancel" special="cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>
<record id="action_estate_add_offer_wizard" model="ir.actions.act_window">
    <field name="name">Add Offer</field>
    <field name="res_model">estate.add.offer.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_estate_add_offer_wizard"/>
    <field name="target">new</field>
</record>
</odoo>