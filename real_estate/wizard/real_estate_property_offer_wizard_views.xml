<?xml version="1.0"?>
<odoo>
    <record id="launch_real_estate_property_offer_wizard" model="ir.actions.act_window">
        <field name="name">Make an Offers</field>
        <field name="res_model">real.estate.property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="launch_real_estate_property_offer_wizard_view_form" model="ir.ui.view">
        <field name="name">Add Offer</field>
        <field name="model">real.estate.property.offer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id" />
                    <field name="price" />
                    <field name="validity" />
                </group>
                <footer>
                    <button name="action_save_offers" type="object" default_focus="1" string="Add Offer" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
