<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="estate_property_agent" model="ir.rule">
            <field name="name">Agent can access own or unassigned properties</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[(4, ref('real_estate.estate_group_user'))]"/>
            <field name="domain_force">[
                '|', ('salesperson_id', '=', user.id),
                     ('salesperson_id', '=', False)
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="estate_property_manager" model="ir.rule">
            <field name="name">Manager can access all properties</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[(4, ref('real_estate.estate_group_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="estate_property_multi_company" model="ir.rule">
            <field name="name">Multi-company restriction on properties</field>
            <field name="model_id" ref="real_estate.model_estate_property"/>
            <field name="domain_force">[
        '|', ('company_id', '=', False),
             ('company_id', 'in', company_ids)
    ]</field>
            <field name="global" eval="True"/>
        </record>

    </data>
</odoo>
