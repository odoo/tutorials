<odoo>
    <!-- Agents can only see their own properties -->
    <record id="estate_agent_rule" model="ir.rule">
        <field name="name">Agent's properties only</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('user_id', '=', user.id),
                 ('user_id', '=', False)
        ]</field>
    </record>

    <!-- Managers can see all properties -->
    <record id="estate_manager_rule" model="ir.rule">
        <field name="name">Managers can see all properties</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[]</field>
    </record>

    
    <data noupdate="1">
        <!-- Record Rule for Real Estate Agents -->
        <record id="estate_agent_rule" model="ir.rule">
            <field name="name">Agent: Access Own Properties</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
            <field name="domain_force">['|', ('salesperson_id', '=', user.id), ('salesperson_id', '=', False)]</field>
        </record>

        <!-- Record Rule for Managers: Can See All Properties -->
        <record id="estate_manager_rule" model="ir.rule">
            <field name="name">Manager: Access All Properties</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>


