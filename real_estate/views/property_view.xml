<?xml version="1.0"?>
<odoo>
    <template id="property_view_template">
        <t t-call="website.layout">
            <div class="container">
                <div class="row mt-5 mb-5">
                    <div class="col-6">
                        <img t-if="property['image']" class="img-fluid" t-att-src="image_data_uri(property['image'])" alt="property['name']" />
                        <img t-else="" class="img-fluid" src="real_estate/static/src/images/card-default.svg" alt="property['name']" />
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

