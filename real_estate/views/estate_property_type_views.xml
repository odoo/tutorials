<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_type_view_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Define a new Property Type</p>
            <p>Create a Propety type and link it to as many properties as needed.</p>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer_view_action)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-list">
                            <div>
                                <field name="offer_count" widget="statinfo" string="Offers" />
                            </div>
                        </button>
                    </div>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name" />
                                    <field name="expected_price" />
                                    <field name="state" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_type_view_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>
</odoo>
