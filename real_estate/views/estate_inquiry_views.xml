<odoo>
    <record id="view_estate_inquiry_list" model="ir.ui.view">
        <field name="name">estate.inquiry.list</field>
        <field name="model">estate.inquiry</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="property_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
    
    <record id="view_estate_inquiry_form" model="ir.ui.view">
        <field name="name">estate.inquiry.form</field>
        <field name="model">estate.inquiry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="message"/>
                        <field name="property_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_estate_inquiry" model="ir.actions.act_window">
        <field name="name">Estate Inquiries</field>
        <field name="res_model">estate.inquiry</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
