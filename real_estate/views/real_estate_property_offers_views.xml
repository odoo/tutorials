<?xml version="1.0"?>
<odoo>
    <data>
        <record id="real_estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offer Action</field>
            <field name="res_model">real.estate.property.offer</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record>
        <!-- oferrs section under property details -->
        <record id="real_estate_property_offer_list" model="ir.ui.view">
            <field name="name">Properties Offer List</field>
            <field name="model">real.estate.property.offer</field>
            <field name="arch" type="xml">
                <list editable="bottom" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_property_offer_accept" title="Accept" type="object" icon="fa-check" invisible="status in('accepted', 'refused')" />
                    <button name="action_property_offer_reject" title="Reject" type="object" icon="fa-times" invisible="status in('accepted', 'refused')" />
                </list>
            </field>
        </record>
        <!-- Property offer form view -->
        <record id="real_estate_property_offer_form" model="ir.ui.view">
            <field name="name">Property Offer Form</field>
            <field name="model">real.estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Properties Under Category">
                    <group>
                        <group>
                            <field name="price" />
                            <field name="validity" />
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="date_deadline" />
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
