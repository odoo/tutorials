<?xml version="1.0"?>
<odoo>
    <data>
        <!-- oferrs section under property details -->
        <record id="real_estate_property_offer_list" model="ir.ui.view">
            <field name="name">Properties Offer List</field>
            <field name="model">real.estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Channel">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_property_offer_accept" title="Accept" type="object" icon="fa-check" />
                    <button name="action_property_offer_reject" title="Reject" type="object" icon="fa-times" />
                    <field name="status" />
                </list>
            </field>
        </record>

        <!-- Property offer form view -->
        <record id="real_estate_property_offer_form" model="ir.ui.view">
            <field name="name">Property Offer Form</field>
            <field name="model">real.estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="price" />
                            <field name="validity" />
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="date_deadline" />
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
