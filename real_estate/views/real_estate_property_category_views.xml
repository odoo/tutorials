<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Category or type action -->
        <record id="real_estate_property_category_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">real.estate.property.category</field>
            <field name="view_mode">list,form</field>
        </record>
        <!-- Category or type list view -->
        <record id="real_estate_property_category_view_list" model="ir.ui.view">
            <field name="name">real.estate.property.category.form</field>
            <field name="model">real.estate.property.category</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle" />
                    <field name="name" />
                    <field name="offer_count" />
                </list>
            </field>
        </record>
        <!-- Category or type form view with stat button -->
        <record id="real_estate_property_under_category_view_form" model="ir.ui.view">
            <field name="name">real.estate.property.under.category</field>
            <field name="model">real.estate.property.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(real_estate_property_offer_action)d" type="action" icon="fa-dollar">
                                <field name="offer_count" string="Offer" widget="statinfo" />
                            </button>
                        </div>
                        <group>
                            <h1>
                                <field name="name" />
                            </h1>
                        </group>
                        <notebook>
                            <page name="Properties">
                                <field name="property_ids">
                                    <list editable="bottom">
                                        <field name="name" />
                                        <field name="expected_price" />
                                        <field name="status" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
