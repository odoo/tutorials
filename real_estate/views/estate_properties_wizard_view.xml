<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">estate.properties.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="wizard_view_form" model="ir.ui.view">
        <field name="name">wizard.form.view</field>
        <field name="model">estate.properties.wizard</field>
        <field name="arch" type="xml">
            <form string="Wizard">
                <group>
                    <field name="price"/>
                    <field name="partner_id" string="Buyer"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_select_offer" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
