<?xml version="1.0"?>
<odoo>
    <!--Estate Property Tag Action -->
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Estate Property Tags</field>
        <field name="res_model">estate.tags</field>
        <field name="view_mode">list,form</field>
    </record>


    <!--Estate
    Tags List View -->
    <record id="estate_proprty_tags_list" model="ir.ui.view">
        <field name="name">Property Tags List View</field>
        <field name="model">estate.tags</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record>

    <!--Estate
    Tags Form View -->
    <record id="view_estate_tags_form" model="ir.ui.view">
        <field name="name">Property Form View</field>
        <field name="model">estate.tags</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" widget="color_picker" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Estate Tags Search View -->
    <record id="estate_tags_search_view" model="ir.ui.view">
        <field name="name">Estate Tags Search View</field>
        <field name="model">estate.tags</field>
        <field name="arch" type="xml">
            <search string="Search Tags">
                <field name="name" string="Name" />
            </search>
        </field>
    </record>
</odoo>
