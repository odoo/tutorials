<odoo>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search.custom</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search">
                <!-- Searchable Field  -->
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="living_area(docs)"/>
                <field name="facades"/>

                <!-- Filters  -->
                <field string="Available"/>


                <!-- Group By -->

            </search>
        </field>
    </record>
</odoo>