<odoo> 

    <record id="action_estate_property_tags" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- list view -->
    <record id="view_estate_property_tag_list" model="ir.ui.view">
        <field name="name">estate.property.tag.list</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="Tag" editable="bottom">
                <field name="name" string="Tag"/>
                <field name="color" string="color"/>
            </list>
        </field>
    </record>

</odoo>
