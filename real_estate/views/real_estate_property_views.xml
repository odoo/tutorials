<?xml version="1.0"?>
<odoo>
    <data>
        <!--creating action for menu name called Properties-->
        <record id="real_estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">real.estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_status': True, 'search_default_current': True}</field>
        </record>
        <!--Changing list view-->
        <record id="real_estate_property_view_list" model="ir.ui.view">
            <field name="name">Properties List</field>
            <field name="model">real.estate.property</field>
            <field name="arch" type="xml">
                <list decoration-success="status in('offer_received', 'offer_accepted')" decoration-bf="status == 'offer_accepted'" decoration-muted="status == 'sold'">
                    <field name="name" />
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    <field name="property_type_id" />
                    <field name="postcode" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="date_availability" optional="hide" />
                </list>
            </field>
        </record>
        <!-- Changing Form view-->
        <record id="real_state_property_view_form" model="ir.ui.view">
            <field name="name">Properties Form</field>
            <field name="model">real.estate.property</field>
            <field name="arch" type="xml">
                <form string="Property Form">
                    <header>
                        <button name="action_property_sold" string="Sold" type="object" invisible="status in('sold', 'cancelled')" />
                        <button name="action_property_cancel" string="Cancel" type="object" invisible="status in('sold', 'cancelled')" />
                        <field name="status" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="status not in('cancelled')"/>
                        <widget name="web_ribbon" title="Sold" bg_color="bg-success" invisible="status not in('sold')"/>
                        <field name="image" widget="image" class="oe_avatar" />
                        <div class="oe_title mb-3">
                            <h1>
                                <field name="name" placeholder="e.g. Cozy Apartment" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                <field name="property_type_id" options="{'no_create': true}" />
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="best_price" />
                                <field name="selling_price" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" invisible="not garden" />
                                    <field name="garden_orientation" invisible="not garden" />
                                    <field name="total_area" />
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" readonly="status in('offer_accepted', 'sold', 'cancelled')" />
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="salesperson_id" />
                                    <field name="company_id" />
                                    <field name="partner_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Creating search view -->
        <record id="real_estate_property_view_search" model="ir.ui.view">
            <field name="name">Properties Search</field>
            <field name="model">real.estate.property</field>
            <field name="arch" type="xml">
                <search string="Property Search">
                    <field name="name" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                    <field name="facades" />
                    <field name="property_type_id" />
                    <separator />
                    <filter string="Available" name="status" domain="['|', ('status','=', 'new'), ('status', '=', 'offer_received')]" />
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                        <filter string="Property Type" name="property_type_id" context="{'group_by':'property_type_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <!-- Creating kanban views -->
        <record id="real_estate_property_view_kanban" model="ir.ui.view">
            <field name="name">real.estate.property.view.kanban</field>
            <field name="model">real.estate.property</field>
            <field name="arch" type="xml">
                <kanban string="Property Kanban" default_group_by="property_type_id" records_draggable="false" group_create="false">
                    <field name="status" />
                    <templates>
                        <t t-name="card">
                            <div>
                                <div class="row mb4" style="min-height: 60px;">
                                    <div class="col-8">
                                        <field name="name" class="fw-bolder" />
                                        <div class="mb-1">
                                            <span>Expected Price: $ </span>
                                            <field name="expected_price" />
                                        </div>
                                        <div class="mb-1" t-if="record.status.raw_value == 'offer_received'">
                                            <span>Best Price: $ </span>
                                            <field name="best_price" />
                                        </div>
                                        <div class="mb-1" t-if="record.status.raw_value == 'offer_accepted' | record.status.raw_value == 'sold'">
                                            <span>Selling Price: $ </span>
                                            <field name="selling_price" />
                                        </div>
                                    </div>
                                    <div class="col-4 text-end">
                                        <field name="image" widget="image" />
                                    </div>
                                </div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
