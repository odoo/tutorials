<?xml version="1.0"?>
<odoo>
    <template id="property_make_offer_template">
        <t t-call="website.layout">
            <div class="container">
                <div class="row mt-5 mb-5">
                    <t t-call="real_estate.property_view_image_template"/>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <t t-call="real_estate.property_offer_submitted_error_template" />
                                <h4 class="card-title">
                                    <t t-out="property['name']" />
                                </h4>
                                <div class="card mt-3">
                                    <div class="card-header">
                                        Make an Offer
                                    </div>
                                    <div class="card-body">
                                        <form class="row g-3" action="/submit_offer" method="post">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <div class="col-12">
                                                <label for="inputAddress" class="form-label">Amount</label>
                                                <input name="price" type="text" class="form-control" required="required" placeholder="Enter amount..." />
                                            </div>
                                            <div class="col-12">
                                                <label for="inputAddress2" class="form-label">Validity</label>
                                                <input name="validity" type="number" class="form-control" required="required" placeholder="Enter validity of offer..." />
                                            </div>
                                            <input type="hidden" name="property_id" t-att-value="property['id']" />
                                            <input type="hidden" name="best_price" t-att-value="property['best_offer']" />
                                            <div class="col-12">
                                                <button type="submit" class="btn btn-primary">Make Offer</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
