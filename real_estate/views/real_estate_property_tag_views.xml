<?xml version="1.0"?>
<odoo>
    <record id="real_estate_property_tag" model="ir.actions.act_window">
        <field name="name">Property Tag</field>
        <field name="res_model">real.estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form View -->
    <record id="real_estate_property_tag_form" model="ir.ui.view">
        <field name="name">real.estate.property.tag.form</field>
        <field name="model">real.estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <group>
                        <h1>
                            <field name="name" string="Name"/>
                        </h1>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
