<odoo>
    <record id="action_gfsi_certificate" model="ir.actions.act_window">
        <field name="name">GFSI certificates</field>
        <field name="res_model">gfsi.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create GFSI certificates here.
            </p>
        </field>
    </record>
    <record id="view_gfsi_certificate_list" model="ir.ui.view">
        <field name="name">gfsi.certificate.list</field>
        <field name="model">gfsi.certificate</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_gfsi_certificate_form" model="ir.ui.view">
        <field name="name">gfsi.certificate.form</field>
        <field name="model">gfsi.certificate</field>
        <field name="arch" type="xml">
            <form string="GFSI certificate">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
