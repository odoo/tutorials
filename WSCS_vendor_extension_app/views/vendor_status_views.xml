<odoo>
    <record id="action_vendor_status" model="ir.actions.act_window">
        <field name="name">Vendor Status</field>
        <field name="res_model">vendor.status</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_vendor_status_list" model="ir.ui.view">
        <field name="name">vendor.status.list</field>
        <field name="model">vendor.status</field>
        <field name="arch" type="xml">
            <list string="Vendor Status">
                <field name="name"/>
                <field name="sequence"/>
                <field name="status_change_user_ids" widget="many2many_tags"/>
                <field name="prevent_po_creation"/>
                <field name="notify_user_ids"/>
            </list>
        </field>
    </record>

    <record id="view_vendor_status_form" model="ir.ui.view">
    <field name="name">vendor.status.form</field>
    <field name="model">vendor.status</field>
    <field name="arch" type="xml">
        <form string="Vendor Status">
            <sheet>
                <group name="group_vendor_status" string="Vendor Status Information" colspan="4">
                    <group>
                        <field name="name" string="Vendor Status Name"/>
                        <field name="sequence" string="Sequence"/>
                    </group>
                    <group>
                        <field name="status_change_user_ids" readonly="status_change_type not in ['certain_users']" string="Status Change Users" widget="many2many_tags"/>
                        <field name="notify_user_ids" string="Notify User" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="prevent_po_creation" string="Prevent PO Creation" />
                    </group>
                </group>
            </sheet>
        </form>
    </field>
    </record>
</odoo>
