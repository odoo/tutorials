<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_product_kit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.product.kit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='product_tooltip']" position="after">
                <field name="has_kit"/>
                <field name="kit_products" widget="many2many_tags" placeholder="Select kit products..." invisible="not has_kit"/>
            </xpath>
        </field>
    </record>

</odoo>
