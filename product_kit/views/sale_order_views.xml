<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_template_id']" position="after">
                <field name="parent_kit_id" column_invisible="1"/>
                <button string="Add Sub Product" name="action_add_sub_products" type="object" invisible="not is_kit or state in ['sale','cancel']"/>
            </xpath>

            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="print_in_report"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='product_id']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='product_template_id']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='product_uom_qty']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='price_unit']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='qty_delivered']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='customer_lead']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='qty_invoiced']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='price_subtotal']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='price_total']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='discount']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]//field[@name='tax_id']" position="attributes">
                <attribute name="readonly" add="(parent_kit_id)" separator="or"/>
            </xpath>

            <xpath expr="//list[1]" position="attributes">
                <attribute name="decoration-warning" add="(parent_kit_id)" separator="or"/>
            </xpath>

        </field>
    </record>
</odoo>
