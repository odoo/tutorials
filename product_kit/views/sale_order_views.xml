<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_id']" position="after">
                <button name="%(product_kit_wizard_action)d" type="action" string="Kit" class="btn btn-primary" invisible="not is_kit or state == 'sale'"/>
            </xpath>
            <xpath expr="//list/field[@name='product_id']" position="attributes">
                <attribute name="readonly">linked_line_id</attribute>
            </xpath>

            <xpath expr="//list/field[@name='product_uom_qty']" position="attributes">
                <attribute name="readonly">linked_line_id</attribute>
            </xpath>
            
            <xpath expr="//list/field[@name='customer_lead']" position="attributes">
                <attribute name="readonly">linked_line_id</attribute>
            </xpath>

            <xpath expr="//list/field[@name='price_unit']" position="attributes">
                <attribute name="readonly">linked_line_id</attribute>
            </xpath>

            <xpath expr="//list/field[@name='tax_id']" position="attributes">
                <attribute name="readonly">linked_line_id</attribute>
            </xpath>

            <xpath expr="//form/sheet//field[@name='payment_term_id']" position="after">
                <field name="print_in_report"/>
            </xpath>
        </field>
    </record>
</odoo>
