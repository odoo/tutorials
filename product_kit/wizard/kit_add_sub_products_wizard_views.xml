<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kit_add_sub_products_wizard_form" model="ir.ui.view">
        <field name="name">kit.add.sub.products.wizard.form</field>
        <field name="model">kit.add.sub.products.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h3>Sub Products</h3>
                    <field name="sub_product_ids">
                        <list editable="bottom" delete="0">
                            <field name="sub_product_id" readonly="order_line_id != False"/>
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="order_line_id" column_invisible="1"/>
                        </list>
                    </field>
                    <footer>
                        <button string="Confirm" class="btn-primary" name="action_confirm_sub_products" type="object"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
