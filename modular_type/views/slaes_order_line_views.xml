<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_modular_type" model="ir.ui.view">
        <field name="name">modular.type.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_id']" position="after">
               <button name="action_open_modualr_type_wizard" context="{'id':id}" type="object" icon="fa-flask" invisible="not has_modular_type"/>
            </xpath>
        </field>
    </record>
</odoo>
